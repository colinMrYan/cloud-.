<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selector_list"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon_img"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/volume_ic_share_volume" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/file_operation_drop_down_img"
        android:layout_toRightOf="@id/icon_img">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?attr/text_color"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_volume_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="111111"
            android:textColor="@color/color_text_common_level_two"
            android:textSize="13sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/file_operation_drop_down_img"
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="30dp"
        android:paddingTop="25dp"
        android:paddingRight="15dp"
        android:paddingBottom="25dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_select_no" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/file_operation_drop_down_img"
        android:layout_marginLeft="14dp"
        android:background="?attr/color_list_divider" />
</RelativeLayout>