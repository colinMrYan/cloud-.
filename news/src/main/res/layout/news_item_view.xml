<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/new_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_tran"
    android:paddingTop="12dp"
    android:paddingBottom="8dp">

    <com.itheima.roundedimageview.RoundedImageView
        android:id="@+id/news_leftImg_img"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        app:riv_border_color="#bbbbbb"
        app:riv_border_width="0.5px"
        app:riv_corner_radius="6dp"
        app:riv_oval="false" />

    <RelativeLayout
        android:id="@+id/news_middleText_layout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignBottom="@id/news_leftImg_img"
        android:layout_toRightOf="@id/news_leftImg_img"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/news_middleUp_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingTop="1dp"
            android:textColor="#203b4f"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/news_middlemid_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#888888"
            android:textSize="13sp" />
    </RelativeLayout>
</RelativeLayout>

