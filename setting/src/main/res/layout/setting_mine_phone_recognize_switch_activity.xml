<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?attr/home_common_bg"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg_1c">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/setting_phone_recognize"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="?attr/home_common_bg">

        <ImageView
            android:id="@+id/phone_display"
            android:src="@drawable/setting_phone_recognize"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="300dp"/>

        <TextView
            android:id="@+id/introduction_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="-20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="?attr/text_color_e1"
            android:textSize="16dp"
            android:text="****"/>

        <TextView
            android:id="@+id/open_overlay_window"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="****"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/setting_permission_selector_state"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/open_phone_read"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="****"
            android:background="@drawable/setting_permission_selector_state"
            android:layout_marginTop="30dp"/>

    </LinearLayout>


</RelativeLayout>