<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_list_card_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:stackHeaderHeight="185dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_top_rectangle_with_radius"
            android:gravity="center_vertical"
            android:paddingLeft="22dp"
            android:textColor="@color/color_text_Anti_White"
            android:textSize="17sp" />
        <ImageView
            android:id="@+id/iv_card_package_qrcode"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_card_package_qrcode"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bottom_rectangle_with_radius"
        android:orientation="vertical"
        android:paddingBottom="17dp"
        android:paddingLeft="22dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="17dp"
            android:text="@string/setting_card_package_taxpayer"
            android:textColor="@color/color_text_help"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_taxpayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_tip"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_help"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_bank_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_tip"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_card_package_address"
            android:textColor="@color/color_text_help"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_tip"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_card_package_phone_number"
            android:textColor="@color/color_text_help"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_tip"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>