<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_list_card_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    app:stackHeaderHeight="185dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_top_rectangle_with_radius"
            android:gravity="center_vertical"
            android:paddingLeft="22dp"
            android:textColor="@color/color_text_Anti_White"
            android:textSize="17sp" />
        <ImageView
            android:id="@+id/iv_card_package_qrcode"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_card_package_qrcode"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_bottom_rectangle_with_radius"
        android:orientation="vertical"
        android:paddingBottom="17dp"
        android:paddingTop="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:id="@+id/tax_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/company_tax_view"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:gravity="top"
                android:layout_gravity="top"
                android:text="@string/setting_card_package_taxpayer"
                android:textColor="@color/color_text_help"
                android:layout_marginRight="24dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/company_tax_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_gravity="top"
                android:textColor="?attr/text_color"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="?attr/color_list_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/company_address_view"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:gravity="top"
                android:layout_gravity="top"
                android:layout_marginRight="24dp"
                android:text="@string/setting_card_package_address"
                android:textColor="@color/color_text_help"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/company_address_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_gravity="top"
                android:textColor="?attr/text_color"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="?attr/color_list_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="11dp"
            android:paddingBottom="11dp">

            <TextView
                android:id="@+id/link_phone_view"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:gravity="top"
                android:layout_gravity="top"
                android:layout_marginRight="24dp"
                android:text="@string/setting_card_package_phone_number"
                android:textColor="@color/color_text_help"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/link_phone_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_gravity="top"
                android:textColor="@color/color_text_link"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="?attr/color_list_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bank_view"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginRight="24dp"
                android:gravity="top"
                android:layout_gravity="top"
                android:text="@string/setting_card_package_bank"
                android:textColor="@color/color_text_help"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_gravity="top"
                android:textColor="?attr/text_color"
                android:textSize="16sp" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="?attr/color_list_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="11dp"
            android:paddingBottom="11dp">

            <TextView
                android:id="@+id/bank_account_view"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginRight="24dp"
                android:gravity="top"
                android:layout_gravity="top"
                android:text="@string/setting_card_package_bank_account"
                android:textColor="@color/color_text_help"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/bank_account_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_gravity="top"
                android:textColor="?attr/text_color"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="?attr/color_list_divider" />

<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:background="@drawable/shape_bottom_rectangle_with_radius"/>-->
    </LinearLayout>

</LinearLayout>