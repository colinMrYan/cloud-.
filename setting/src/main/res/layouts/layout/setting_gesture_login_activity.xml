<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/home_common_bg"
    android:orientation="vertical">

    <com.inspur.emmcloud.baselib.widget.CircleTextImageView
        android:id="@+id/gesture_login_user_head_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="67dp" />

    <TextView
        android:id="@+id/gestrue_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="?attr/text_color_e1"
        android:textSize="@dimen/content_title_textsize" />

    <TextView
        android:id="@+id/gesture_code_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/setting_gesture_code_tips"
        android:textColor="#777777"
        android:textSize="12dp"
        android:visibility="invisible" />


    <com.inspur.emmcloud.setting.widget.LockPatternView
        android:id="@+id/lockPatternView"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lockPatternView">

        <Button
            android:id="@+id/forget_gesture_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#00000000"
            android:focusable="false"
            android:padding="20dp"
            android:text="@string/setting_forgetpwd"
            android:textColor="@color/color_text_link"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_use_finger_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/setting_ic_finger_print_btn"
            android:drawablePadding="5dp"
            android:focusable="false"
            android:onClick="onClick"
            android:padding="20dp"
            android:text="@string/setting_safe_center_use_finger_print_unlock"
            android:textColor="@color/color_text_link"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>