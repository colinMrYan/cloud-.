<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/wallet_bottom_rectangle_with_shade"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/transparent">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitCenter"
            android:src="?attr/ic_wallet_back_btn" />

        <ImageView
            android:id="@+id/tv_set"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClick"
            android:padding="17dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_wallet_setting" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_card_package"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_card_package_icon"
            android:layout_width="81dp"
            android:layout_height="79dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_card_package" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/img_card_package_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_card_package_welcome"
                android:textColor="?attr/text_color_e1"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tv_digest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_card_package_collect"
                android:textColor="@color/color_text_tip"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

    <com.inspur.emmcloud.setting.widget.cardstack.RxCardStackView
        android:id="@+id/stackview_card_package"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_header"
        android:clipToPadding="false"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="110dp" />

</RelativeLayout>