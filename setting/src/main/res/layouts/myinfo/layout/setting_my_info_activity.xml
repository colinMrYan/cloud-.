<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?attr/design3_color_ne16"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/design3_common_header_height"
        android:background="?attr/text_ll_color_nor">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:paddingRight="12dp"
            android:paddingBottom="10dp"
            android:src="?attr/design3_common_header_back_without_blue" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_photo"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="8dp"
                android:background="?attr/design3_selector_list"
                android:onClick="onClick"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/user_info_head"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01" />

                <com.inspur.emmcloud.baselib.widget.ImageViewRound
                    android:id="@+id/iv_photo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="4dp"
                    android:layout_toStartOf="@+id/iv_head_arrow"
                    android:onClick="onClick" />

                <ImageView
                    android:id="@+id/iv_head_arrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="?attr/design3_icon_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="?attr/design3_color_ne13"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/user_info_name"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:text="@string/not_set"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te02" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="?attr/design3_color_ne06" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_employee_no"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/design3_color_ne13"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/tv_employee_no_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_user_worker_num"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01" />

                <TextView
                    android:id="@+id/tv_employee_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:text="@string/not_set"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te02" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_phone"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="?attr/design3_color_ne13"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/tv_phone_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_phone_num"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:text="@string/not_set"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te02" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="?attr/design3_color_ne06" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_office_phone"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/design3_color_ne13"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/tv_office_phone_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/user_telephone"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01" />

                <TextView
                    android:id="@+id/tv_office_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:text="@string/not_set"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te02" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="?attr/design3_color_ne06" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_mail"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/design3_color_ne13"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/tv_mail_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/work_mail"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01" />

                <TextView
                    android:id="@+id/tv_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:text="@string/not_set"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te02" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_enterprise"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="?attr/design3_color_ne13"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/tv_enterprise_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_user_company_info"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01" />

                <TextView
                    android:id="@+id/tv_enterprise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:text="@string/not_set"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te02" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="?attr/design3_color_ne06" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_department"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/design3_color_ne13"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/tv_department_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/user_depart_info_text"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01" />

                <TextView
                    android:id="@+id/tv_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:text="@string/not_set"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te02" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>