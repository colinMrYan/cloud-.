<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/design3_color_ne16"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <com.inspur.emmcloud.baselib.widget.common.CommonHeaderView
        android:id="@+id/hv_common"
        android:layout_width="match_parent"
        android:layout_height="@dimen/design3_common_header_height"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hv_common">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_setting_account_safe"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="?attr/design3_selector_list"
                android:onClick="onClick"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/tv_setting_account_safe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_safe_center"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="?attr/design3_icon_arrow" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_language"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="?attr/design3_selector_list"
                android:onClick="onClick"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/settings_language"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01" />

                <TextView
                    android:id="@+id/tv_setting_language_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/iv_setting_language_arrow"
                    android:text="@string/follow_system"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te02" />

                <ImageView
                    android:id="@+id/iv_setting_language_arrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="?attr/design3_icon_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="?attr/design3_color_ne06" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_switch_theme"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/design3_selector_list"
                android:onClick="onClick"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_mine_theme_switch"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01" />

                <TextView
                    android:id="@+id/tv_setting_theme_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/tv_setting_switch_theme_arrow"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te02" />

                <ImageView
                    android:id="@+id/tv_setting_switch_theme_arrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="?attr/design3_icon_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="?attr/design3_color_ne06" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/font_size_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/design3_selector_list"
                android:onClick="onClick"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/tv_font_size_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/caring_switch"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01" />


                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="?attr/design3_icon_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="?attr/design3_color_ne06" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_setting_switch_tablayout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/design3_selector_list"
                android:onClick="onClick"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_mine_tab_layout"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01" />


                <TextView
                    android:id="@+id/tv_setting_tab_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/tv_setting_switch_tab_arrow"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te02" />

                <ImageView
                    android:id="@+id/tv_setting_switch_tab_arrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="?attr/design3_icon_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/tv_setting_tab_name"
                    android:background="?attr/design3_color_ne06" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_notification_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/design3_selector_list"
                android:onClick="onClick"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/tv_setting_notification_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/notification_setting_title"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="?attr/design3_icon_arrow" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/phone_recognize_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="?attr/design3_selector_list"
                android:onClick="onClick"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/tv_setting_phone_recognize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_phone_recognize"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="?attr/design3_icon_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="?attr/design3_color_ne06" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_voice_2_word"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/design3_selector_list"
                android:paddingLeft="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_setting_voice_2_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/voice_word_setting"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_view_setting_voice_2_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    app:thumbTint="@color/white"
                    app:track="@drawable/selector_switch_track" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="?attr/design3_selector_list"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/tv_setting_native_rotate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/native_page_auto_rotate"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_view_setting_native_rotate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    app:thumbTint="@color/white"
                    app:track="@drawable/selector_switch_track" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="?attr/design3_color_ne06" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/design3_selector_list"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/tv_setting_web_rotate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/web_app_auto_rotate"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_view_setting_web_rotate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    app:thumbTint="@color/white"
                    app:track="@drawable/selector_switch_track" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="?attr/design3_color_ne06" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/use_webkit"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/design3_selector_list"
                android:onClick="onClick"
                android:paddingLeft="16dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="?attr/design3_icon_arrow" />

                <TextView
                    android:id="@+id/tv_setting_use_webview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/settings_use_webkit"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_self_start"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/design3_selector_list"
                android:onClick="onClick"
                android:paddingLeft="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_setting_self_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="自启动选项"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_view_setting_self_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    app:thumbTint="@color/white"
                    app:track="@drawable/selector_switch_track" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_experience_upgrade"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="?attr/design3_selector_list"
                android:paddingLeft="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_setting_experience_upgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_join_experience_plan"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_view_setting_experience_upgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    app:thumbTint="@color/white"
                    app:track="@drawable/selector_switch_track" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/clear_cache_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="?attr/design3_selector_list"
                android:onClick="onClick"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/tv_setting_clear_cache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/settings_clear_cache"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01" />


                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="?attr/design3_icon_arrow" />

            </RelativeLayout>

            <TextView
                android:id="@+id/bt_setting_signout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/design3_selector_list"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/quit_check"
                android:textAppearance="@style/TextAppearance.M3.Fs04"
                android:textColor="?attr/design3_color_te01" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>