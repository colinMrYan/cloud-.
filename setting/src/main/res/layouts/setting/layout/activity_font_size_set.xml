<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?attr/content_bg"
    android:fitsSystemWindows="true"
    tools:ignore="ResourceName">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg_1c">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/setting_font_size_set"
            android:textColor="?attr/header_text_color_e1"
            android:textSize="@dimen/header_textsize" />

        <TextView
            android:id="@+id/font_size_set_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:padding="5dp"
            android:text="@string/confirm"
            android:textColor="?attr/header_button_text_color_e1"

            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

    <com.inspur.emmcloud.setting.widget.TextRatingBar
        android:id="@+id/text_rating_bar"
        android:paddingTop="24dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_alignParentBottom="true"
        android:background="?attr/text_ll_color_nor"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header"
        android:layout_above="@id/text_rating_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.inspur.emmcloud.baselib.widget.CircleTextImageView
                android:id="@+id/font_set_head1"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="12dp"
                android:layout_alignParentEnd="true"
                 />

            <com.inspur.emmcloud.basemodule.widget.bubble.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/bl_card1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:bl_arrowDirection="right"
                app:bl_arrowHeight="10dp"
                app:bl_arrowPosition="16dp"
                app:bl_arrowWidth="4.5dp"
                app:bl_cornersRadius="8dp"
                app:bl_strokeColor="?attr/color_stroke_46_aa"
                app:bl_bubbleColor="@color/bg_my_card"
                android:layout_toLeftOf="@id/font_set_head1"
                android:layout_marginLeft="50dp"
                app:bl_strokeWidth="0.5px">

                <TextView
                    android:id="@+id/font_set_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:lineSpacingMultiplier="1.2"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:textColor="#FFF"
                    android:text="@string/setting_font_size_tip1"/>
            </com.inspur.emmcloud.basemodule.widget.bubble.BubbleLayout>

            <com.inspur.emmcloud.baselib.widget.CircleTextImageView
                android:id="@+id/font_set_head2"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="4dp"
                android:layout_below="@id/bl_card1"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_launcher"
                />

            <com.inspur.emmcloud.basemodule.widget.bubble.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/bl_card2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bl_card1"
                android:layout_marginTop="24dp"
                android:layout_marginRight="50dp"
                app:bl_arrowDirection="left"
                app:bl_arrowHeight="10dp"
                app:bl_arrowPosition="16dp"
                app:bl_arrowWidth="4.5dp"
                app:bl_cornersRadius="8dp"
                app:bl_bubbleColor="?attr/bubble_bg_color"
                app:bl_strokeColor="?attr/color_stroke_46_aa"
                android:layout_toRightOf="@id/font_set_head2"
                app:bl_strokeWidth="0.5px">

                <TextView
                    android:id="@+id/font_set_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:lineSpacingMultiplier="1.2"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:textColor="?attr/text_color"
                    android:text="@string/setting_font_size_tip2"/>
            </com.inspur.emmcloud.basemodule.widget.bubble.BubbleLayout>

            <com.inspur.emmcloud.baselib.widget.CircleTextImageView
                android:id="@+id/font_set_head3"
                android:layout_below="@id/bl_card2"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="4dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_launcher"
                />

            <com.inspur.emmcloud.basemodule.widget.bubble.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/bl_card3"
                android:layout_below="@id/bl_card2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"

                app:bl_arrowDirection="left"
                app:bl_arrowHeight="10dp"
                app:bl_arrowPosition="16dp"
                app:bl_arrowWidth="4.5dp"
                app:bl_cornersRadius="8dp"
                app:bl_strokeColor="?attr/color_stroke_46_aa"
                app:bl_bubbleColor="?attr/bubble_bg_color"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="12dp"
                android:layout_toRightOf="@id/font_set_head3"
                app:bl_strokeWidth="0.5px">

                <TextView
                    android:id="@+id/font_set_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:lineSpacingMultiplier="1.2"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:textColor="?attr/text_color"
                    android:text="@string/setting_font_size_tip3"/>
            </com.inspur.emmcloud.basemodule.widget.bubble.BubbleLayout>


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>