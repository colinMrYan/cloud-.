<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/setting_safe_center_gesture"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header"
        android:background="?attr/header_bg"
        android:orientation="vertical"
        android:paddingBottom="38dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="131dp"
            android:layout_height="213dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="41dp"
            android:src="@drawable/gesture_code_img" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:maxLines="3"
            android:paddingLeft="37dp"
            android:paddingRight="37dp"
            android:text="@string/setting_create_gesture_guid"
            android:textColor="?attr/text_color"
            android:textSize="16sp" />

        <com.inspur.emmcloud.baselib.widget.roundbutton.CustomRoundButton
            android:id="@+id/bt_create_gesture"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:elevation="1dp"
            android:gravity="center"
            android:text="@string/setting_create_gesture_code"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:cus_backgroundColor="#36A5F6"
            app:cus_borderWidth="0dp"
            app:cus_isRadiusAdjustBounds="true" />
    </RelativeLayout>


</RelativeLayout>