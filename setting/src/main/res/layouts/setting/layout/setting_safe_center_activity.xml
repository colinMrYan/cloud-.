<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/setting_safe_center"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_header"
        android:background="@color/content_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/rl_password_modify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_password_modify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="11dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="11dp"
                    android:text="@string/modify_password"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <ImageView
                    style="@style/arrow_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_arrow_right" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5px"
                    android:layout_below="@id/tv_password_modify"
                    android:layout_marginLeft="16dp"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_password_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_password_reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="11dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="11dp"
                    android:text="@string/modify_reset_password"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <ImageView
                    style="@style/arrow_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_arrow_right" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5px"
                    android:layout_below="@id/tv_password_reset"
                    android:layout_marginLeft="16dp"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_setting_safe_gesture_face"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_layout_selector"
            android:onClick="onClick"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/tv_setting_safe_gesture_face"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="11dp"
                android:paddingTop="11dp"
                android:text="@string/setting_safe_gesture_face"
                android:textColor="#333333"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_arrow_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_below="@+id/tv_setting_safe_gesture_face"
                android:background="@color/color_list_divider" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_setting_face_unlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_layout_selector"
            android:onClick="onClick"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/tv_setting_face_unlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="11dp"
                android:paddingTop="11dp"
                android:text="@string/setting_safe_face_id_unlock"
                android:textColor="#333333"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_arrow_right" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/color_list_divider" />

        <LinearLayout
            android:id="@+id/rl_device_manager"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/v_line"
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="@color/color_list_divider" />

            <RelativeLayout
                android:id="@+id/rl_setting_safe_account_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/tv_setting_safe_account_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="@string/settings_device_manager"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="@color/color_list_divider" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>