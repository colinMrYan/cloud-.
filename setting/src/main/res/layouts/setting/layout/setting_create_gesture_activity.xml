<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/content_bg_level_two"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_force_gesture_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="70dp"
        android:text="@string/setting_gesture_force_set"
        android:textColor="@color/grey_a5a5a5"
        android:textSize="16sp" />

    <com.inspur.emmcloud.setting.widget.LockPatternIndicator
        android:id="@+id/lockPatterIndicator"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp" />


    <TextView
        android:id="@+id/gesture_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/setting_create_gesture_default"
        android:textColor="@color/grey_a5a5a5"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <com.inspur.emmcloud.setting.widget.LockPatternView
            android:id="@+id/lockPatternView"
            android:layout_width="270dp"
            android:layout_height="270dp" />

        <Button
            android:id="@+id/gesture_reset_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:padding="20dp"
            android:text="@string/setting_create_gesture_reset"
            android:textColor="@color/grey_a5a5a5"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>