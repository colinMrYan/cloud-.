<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?attr/design3_color_ne13"
    android:fitsSystemWindows="true">

    <com.inspur.emmcloud.baselib.widget.common.CommonHeaderView
        android:id="@+id/hv_common"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hv_common">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_header_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <com.inspur.emmcloud.baselib.widget.ImageViewRound
                    android:id="@+id/iv_logo"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/tv_app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textAppearance="@style/TextAppearance.M3.Fs02"
                    android:textColor="?attr/design3_color_te01" />

                <TextView
                    android:id="@+id/tv_app_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="40dp"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_header_image"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_welcome"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="?attr/design3_selector_list"
                    android:onClick="onClick"
                    android:paddingLeft="16dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="?attr/design3_color_ne06" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/setting_about_welcome_text"
                        android:textAppearance="@style/TextAppearance.M3.Fs04"
                        android:textColor="?attr/design3_color_te01" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:src="?attr/design3_icon_arrow" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_protocol"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="?attr/design3_selector_list"
                    android:onClick="onClick"
                    android:paddingLeft="16dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="?attr/design3_color_ne06" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/setting_about_protocol_text"
                        android:textAppearance="@style/TextAppearance.M3.Fs04"
                        android:textColor="?attr/design3_color_te01" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:src="?attr/design3_icon_arrow" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="?attr/design3_selector_list"
                    android:onClick="onClick"
                    android:paddingLeft="16dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="?attr/color_list_divider" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/setting_about_privacy_text"
                        android:textAppearance="@style/TextAppearance.M3.Fs04"
                        android:textColor="?attr/design3_color_te01" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:src="?attr/design3_icon_arrow" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_check_update"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="?attr/design3_selector_list"
                    android:onClick="onClick"
                    android:paddingLeft="16dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="?attr/color_list_divider" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/setting_check_update_text"
                        android:textAppearance="@style/TextAppearance.M3.Fs04"
                        android:textColor="?attr/design3_color_te01" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:src="?attr/design3_icon_arrow" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_invite_friends"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="?attr/design3_selector_list"
                    android:onClick="onClick"
                    android:paddingLeft="16dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="?attr/color_list_divider" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/setting_invite_friends_text"
                        android:textAppearance="@style/TextAppearance.M3.Fs04"
                        android:textColor="?attr/design3_color_te01" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:src="?attr/design3_icon_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:background="?attr/color_list_divider" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>