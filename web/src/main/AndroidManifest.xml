<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inspur.emmcloud.web">

    <application>
        <activity
            android:name=".ui.ImpActivity"
            android:configChanges="orientation|screenSize"
            android:resizeableActivity="true" />
        <activity
            android:name=".plugin.barcode.scan.CaptureActivity"
            android:resizeableActivity="true"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:supportsRtl="true" />
        <activity
            android:name=".plugin.barcode.decoder.PreviewDecodeActivity"
            android:resizeableActivity="true"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:supportsRtl="true" />

        <activity
            android:name=".plugin.photo.ImageGalleryActivity"
            android:label="@string/app_name"
            android:resizeableActivity="true"
            android:screenOrientation="portrait" />

        <activity
            android:name=".plugin.file.FileBrowerAppActivity"
            android:resizeableActivity="true" />

        <activity
            android:name=".plugin.filetransfer.TextFileShowActivity"
            android:resizeableActivity="true" />

        <activity
            android:name=".plugin.filetransfer.filemanager.FileManagerActivity"
            android:resizeableActivity="true" />
        <activity
            android:name=".plugin.barcode.ScanResultActivity"
            android:launchMode="singleTask"
            android:resizeableActivity="true"
            android:screenOrientation="portrait" />
    </application>


</manifest>