<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inspur.emmcloud.web">

    <application>
        <activity
            android:name=".ui.ImpActivity"
            android:configChanges="orientation|screenSize"
            android:resizeableActivity="true">
        </activity>
        <activity
            android:name=".plugin.barcode.scan.CaptureActivity"
            android:resizeableActivity="true"
            android:screenOrientation="behind"
            android:stateNotNeeded="true"
            android:supportsRtl="true" />
        <activity
            android:name=".plugin.barcode.decoder.PreviewDecodeActivity"
            android:resizeableActivity="true"
            android:screenOrientation="behind"
            android:stateNotNeeded="true"
            android:supportsRtl="true" />
        <activity
            android:name=".plugin.barcode.alidecoder.ALiScanActivity"
            android:resizeableActivity="true"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:supportsRtl="true" />
        <activity
            android:name=".plugin.photo.ImageGalleryActivity"
            android:label="@string/app_name"
            android:resizeableActivity="true"
            android:screenOrientation="behind" />

        <activity
            android:name=".plugin.filetransfer.TextFileShowActivity"
            android:resizeableActivity="true" />

        <activity
            android:name=".plugin.filetransfer.filemanager.FileManagerActivity"
            android:screenOrientation="portrait"
            android:resizeableActivity="true" />
        <activity
            android:name=".plugin.barcode.ScanResultActivity"
            android:launchMode="singleTask"
            android:resizeableActivity="true"
            android:screenOrientation="behind" />
        <activity
            android:name=".plugin.screenshot.ScreenShotActivity"
            android:launchMode="singleTask"
            android:resizeableActivity="true"
            android:screenOrientation="behind"
            android:theme="@style/AppTheme_Transparent" />
        <activity
            android:name=".ui.WebFileDownloadActivity"
            android:screenOrientation="behind"
            android:resizeableActivity="true" />

        <!-- 高德定位需要的服务 -->
        <service android:name="com.amap.api.location.APSService"></service>

        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="6fec0bde62bb59a08712ac15d02f8774" />

    </application>
</manifest>