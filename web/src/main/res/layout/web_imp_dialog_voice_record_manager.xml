<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="250dp"
    android:background="@drawable/bg_record_dialog"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_recorder"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_recorder_volume_level_v1"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_recorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_recorder"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:background="@color/grey_a5a5a5"
        android:textColor="@color/color_text_Anti_White"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_recorder"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:background="@color/grey_a5a5a5"
        android:padding="10dp"
        android:text="@string/button_cancel"
        android:textColor="@color/color_text_Anti_White"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_recorder"
        android:layout_alignParentRight="true"
        android:background="@color/grey_a5a5a5"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:text="@string/share_upload_volume"
        android:textColor="@color/color_text_Anti_White"
        android:textSize="13sp" />

</RelativeLayout>