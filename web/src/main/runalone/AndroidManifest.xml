<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inspur.emmcloud.web">

    <application
        android:name=".runalone.application.WebApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".runalone.ui.WebTestMainActivity"
            android:launchMode="singleTask"
            android:resizeableActivity="true"
            android:screenOrientation="behind">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ImpActivity"
            android:configChanges="orientation|screenSize"
            android:resizeableActivity="true">
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="*/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".plugin.barcode.scan.CaptureActivity"
            android:resizeableActivity="true"
            android:screenOrientation="behind"
            android:stateNotNeeded="true"
            android:supportsRtl="true" />
        <activity
            android:name=".plugin.barcode.decoder.PreviewDecodeActivity"
            android:resizeableActivity="true"
            android:screenOrientation="behind"
            android:stateNotNeeded="true"
            android:supportsRtl="true" />
        <activity
            android:name=".plugin.barcode.alidecoder.ALiScanActivity"
            android:resizeableActivity="true"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:supportsRtl="true" />
        <activity
            android:name=".plugin.photo.ImageGalleryActivity"
            android:label="@string/app_name"
            android:resizeableActivity="true"
            android:screenOrientation="behind" />


        <activity
            android:name=".plugin.filetransfer.TextFileShowActivity"
            android:resizeableActivity="true" />

        <activity
            android:name=".plugin.filetransfer.filemanager.FileManagerActivity"
            android:screenOrientation="portrait"
            android:resizeableActivity="true" />
        <activity
            android:name=".plugin.barcode.ScanResultActivity"
            android:launchMode="singleTask"
            android:resizeableActivity="true"
            android:screenOrientation="behind" />
        <activity
            android:name=".plugin.screenshot.ScreenShotActivity"
            android:launchMode="singleTask"
            android:resizeableActivity="true"
            android:screenOrientation="behind"
            android:theme="@style/AppTheme_Transparent" />
    </application>
</manifest>