<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp">
    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_mail_folder_expand" />
    <ImageView
        android:id="@+id/iv_folder_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_arrow" />

    <TextView
        android:id="@+id/tv_folder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_folder_icon"
        android:textColor="#666666"
        android:textSize="17sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_below="@id/iv_folder_icon"
        android:background="#c8c7cc"></View>
</RelativeLayout>