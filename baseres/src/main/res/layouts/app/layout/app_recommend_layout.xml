<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.inspur.emmcloud.widget.MySwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/content_bg"
        android:scrollbars="vertical">

        <com.inspur.emmcloud.widget.NoHorScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_ads_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:visibility="gone">

                    <com.inspur.emmcloud.widget.AdsViewPager
                        android:id="@+id/avp_ads"
                        android:layout_width="wrap_content"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="60dp"
                        android:clipChildren="false" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/avp_ads"
                        android:background="#C8C7CC" />
                </RelativeLayout>

                <com.inspur.emmcloud.widget.ScrollViewWithListView
                    android:id="@+id/svwwlv_apps"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/rl_ads_app"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:overScrollMode="never"></com.inspur.emmcloud.widget.ScrollViewWithListView>
            </RelativeLayout>
        </com.inspur.emmcloud.widget.NoHorScrollView>

    </com.inspur.emmcloud.widget.MySwipeRefreshLayout>

    <com.inspur.emmcloud.widget.CircularProgress
        android:id="@+id/circle_progress"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        app:borderWidth="2dp" />

</RelativeLayout>