<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true"
        android:background="?attr/header_bg">


        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/webex_meeting_info"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />
        <ImageView
            android:id="@+id/option_img"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="15dp"
            android:scaleType="centerInside"
            android:src="?attr/ic_header_option" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:visibility="gone">
            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:onClick="onClick"
                android:paddingLeft="13dp"
                android:paddingRight="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_webex_meeting_delete"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/iv_delete"
                android:clickable="true"
                android:onClick="onClick"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_webex_meeting_share" />
        </RelativeLayout>


    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/rl_header"
    android:background="@color/content_bg">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingBottom="14dp"
                android:paddingTop="14dp">
                <com.inspur.emmcloud.widget.CircleTextImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_person_default" />

                <Button
                    android:id="@+id/bt_function"
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:onClick="onClick"
                    android:padding="0dp"
                    android:textColor="#999999"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/tv_name_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/bt_function"
                    android:layout_toRightOf="@id/iv_photo"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textColor="#333333"
                    android:textSize="17sp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/content_bg"></View>

            <LinearLayout
                android:id="@+id/ll_meeting_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="10dp"
                    android:text="@string/webex_host"
                    android:textColor="#999999"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="7dp"
                    android:textColor="#333333"
                    android:textSize="17sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_list_divider_tran"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/webex_when"
                    android:textColor="#999999"
                    android:textSize="15sp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp">
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="#333333"
                        android:textSize="17sp" />
                    <TextView
                        android:id="@+id/tv_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_time"
                        android:layout_marginLeft="20dp"
                        android:paddingTop="7dp"
                        android:textColor="#4A90E2"
                        android:textSize="17sp" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_list_divider_tran"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/webex_meeting_number"
                    android:textColor="#999999"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_meeting_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="7dp"
                    android:textColor="#333333"
                    android:textSize="17sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_list_divider_tran"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/webex_meeting_password"
                    android:textColor="#999999"
                    android:textIsSelectable="true"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_meeting_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="7dp"
                    android:textColor="#333333"
                    android:textSize="17sp" />
                <RelativeLayout
                    android:id="@+id/rl_host_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <View
                        android:id="@+id/v_line"
                        android:layout_width="match_parent"
                        android:layout_height="0.5px"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/color_list_divider_tran"></View>

                    <TextView
                        android:id="@+id/tv_tip_host_key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/v_line"
                        android:layout_marginLeft="20dp"
                        android:text="@string/webex_host_password"
                        android:textColor="#999999"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_host_key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_tip_host_key"
                        android:layout_marginLeft="20dp"
                        android:paddingTop="7dp"
                        android:textColor="#333333"
                        android:textSize="17sp" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>


</RelativeLayout>