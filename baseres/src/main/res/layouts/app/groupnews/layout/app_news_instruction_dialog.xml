<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:paddingBottom="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_news_instruction_dialog"
            android:orientation="vertical">
            <TextView
                android:id="@+id/news_instruction_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="7dp"
                android:paddingTop="12dp"
                android:text="@string/news_instructions"
                android:textColor="@color/app_dialog_title_color"
                android:textSize="@dimen/bigger_textsize"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/content_border" />

            <EditText
                android:id="@+id/news_instrcution_text"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="7dp"
                android:background="@null"
                android:hint="@string/news_please_instruction"
                android:maxLines="4"
                android:textColor="@color/app_dialog_title_color"
                android:textSize="@dimen/header_textsize" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/content_border" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <Button
                    android:id="@+id/cancel_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/cancel"
                    android:textColor="@color/app_dialog_title_color"
                    android:textSize="@dimen/header_textsize" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@color/content_border" />

                <Button
                    android:id="@+id/ok_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/feed_back_upload"
                    android:textColor="@color/app_dialog_update_color"
                    android:textSize="@dimen/header_textsize" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>