<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_header_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corner_part_top"
    android:paddingBottom="14dp"
    android:paddingLeft="14dp"
    android:paddingRight="5dp"
    android:paddingTop="14dp">

    <ImageView
        android:id="@+id/card_icon_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/card_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/card_icon_img"
        android:textColor="#3CBAFF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/card_sub_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/card_title_text"
        android:gravity="bottom"
        android:paddingLeft="10dp"
        android:textColor="#3CBAFF"
        android:textSize="12sp" />

    <com.inspur.emmcloud.widget.CircleTextImageView
        android:id="@+id/card_red_point"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="21dp"
        android:background="@drawable/shape_work_small_red_point" />

    <ImageView
        android:id="@+id/card_right_arrow_img"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/right_arrow" />
</RelativeLayout>