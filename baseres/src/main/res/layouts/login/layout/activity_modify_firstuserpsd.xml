<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg" >

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/modify_password"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />
        
        
        <TextView
            android:id="@+id/headerright_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:clickable="true"
            android:onClick="onClick"
            android:text="@string/modify_jump"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_function_textsize" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_header"
        android:layout_marginTop="10dp" >
        
        <TextView 
            android:id="@+id/modify_welcom_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/modify_welcom_user_cloud"
            android:textColor="#FF536B7D"
            android:textSize="@dimen/header_textsize"/>
        
        <TextView 
            android:id="@+id/modify_content_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/modify_welcom_txt"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/modify_first_use"
            android:textColor="#FF536B7D"
            android:textSize="@dimen/content_normal_textsize"/>
        
        

        <View
            android:id="@+id/modifyuserpsd_line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/modify_content_txt"
            android:layout_marginTop="12dp"
            android:background="#dadadd" />

        <RelativeLayout
            android:id="@+id/modifyuserpsd_new_layout"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_below="@id/modifyuserpsd_line1"
            android:background="@color/white" >
<!-- 
            <TextView
                android:id="@+id/modifyuserpsd_new_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="27"
                android:gravity="center"
                android:text="@string/modify_new_password"
                android:textColor="#333333"
                android:textSize="@dimen/content_normal_textsize" >
            </TextView>
            
            android:layout_toRightOf="@id/modifyuserpsd_new_text"
 -->
            <com.inspur.emmcloud.widget.ClearEditText
                android:id="@+id/modifyuserpsd_new_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                
                android:background="@null"
                android:hint="@string/modify_input_code"
                android:maxLength="11"
                android:paddingBottom="13dp"
                android:paddingLeft="15dp"
                android:paddingRight="13dp"
                android:paddingTop="10dp"
                android:password="true"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="@dimen/content_title_textsize" >
            </com.inspur.emmcloud.widget.ClearEditText>
        </RelativeLayout>

        <View
            android:id="@+id/modifyuserpsd_line2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/modifyuserpsd_new_layout"
            android:background="#dadadd" />

        <RelativeLayout
            android:id="@+id/modifyuserpsd_confirm_layout"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_below="@id/modifyuserpsd_line2"
            android:background="@color/white" >
<!-- 
            <TextView
                android:id="@+id/modifyuserpsd_confirm_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="27"
                android:gravity="center"
                android:text="@string/modify_input_again"
                android:textColor="#333333"
                android:textSize="@dimen/content_normal_textsize" >
            </TextView>
             android:layout_toRightOf="@id/modifyuserpsd_confirm_text"
 -->
            <com.inspur.emmcloud.widget.ClearEditText
                android:id="@+id/modifyuserpsd_confirm_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:background="@null"
                android:hint="@string/confirm_password"
                android:maxLength="11"
                android:paddingBottom="13dp"
                android:paddingLeft="15dp"
                android:paddingRight="13dp"
                android:paddingTop="10dp"
                android:password="true"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="@dimen/content_title_textsize" >
            </com.inspur.emmcloud.widget.ClearEditText>
        </RelativeLayout>

        <Button
            android:id="@+id/modifyuserpsd_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/modifyuserpsd_confirm_layout"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/selector_modifypsd_btn"
            android:onClick="onClick"
            android:text="@string/save"
            android:textColor="#ffffff"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

</RelativeLayout>