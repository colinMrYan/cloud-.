<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/channel_background_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/find_news_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_layout_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="14dp"
        android:paddingLeft="13dp"
        android:paddingRight="14dp"
        android:paddingTop="11dp" >

        <ImageView
            android:id="@+id/find_news_logo"
            android:layout_width="96dp"
            android:layout_height="66dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:id="@+id/find_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/find_news_logo"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/find_news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#FF444444"
                android:textSize="@dimen/button_textsize"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
                 <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#A5A5A5"
                android:textSize="@dimen/content_moresmaller_textsize" />
                  <TextView
                android:id="@+id/find_news_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textColor="#A5A5A5"
                android:textSize="@dimen/content_moresmaller_textsize" />
            </LinearLayout>

           
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>