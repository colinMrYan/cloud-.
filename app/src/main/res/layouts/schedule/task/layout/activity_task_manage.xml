<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/schedule_task_project_manager"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

        <ImageButton
            android:id="@+id/ibt_add"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="5dp"
            android:paddingRight="16dp"
            android:scaleType="centerInside"
            android:src="?attr/ic_add" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_task_manage_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header"
        android:layout_marginBottom="100dp"
        android:background="#FFFFFF"
        android:dividerHeight="0.5px"
        android:paddingLeft="16dp"></ListView>

    <com.inspur.emmcloud.widget.roundbutton.CustomRoundButton
        android:id="@+id/bt_add_tags"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="45dp"
        android:elevation="1dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/schedule_task_project_manager_add"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        app:cus_backgroundColor="#36A5F6"
        app:cus_borderWidth="0dp"
        app:cus_isRadiusAdjustBounds="true" />
</RelativeLayout>