<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="15dp">
     <ImageView
         android:id="@+id/iv_attachemnt_img"
         android:layout_width="48dp"
         android:layout_height="48dp"
         android:layout_centerVertical="true"
         android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tv_add_attachment_name"
        android:text="文件名称及后缀"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:singleLine="true"
        android:layout_toRightOf="@id/iv_attachemnt_img"
        android:layout_toLeftOf="@+id/iv_delete_attachemnt"
        android:paddingTop="4dp"
        android:textColor="#333333"
        android:layout_marginRight="20dp"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/tv_attachemnt_upload_state"
        android:layout_below="@id/tv_add_attachment_name"
        android:layout_toRightOf="@id/iv_attachemnt_img"
        android:layout_toLeftOf="@+id/iv_delete_attachemnt"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="2dp"
        android:text="已上传"
        android:textSize="13sp"
        android:singleLine="true"
        android:textColor="#888888"
        android:layout_marginRight="20dp"/>
    <ImageView
        android:id="@+id/iv_delete_attachemnt"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="21.2dp"
        android:layout_height="21.2dp"
        android:src="@drawable/icon_receiver_delete"/>
</RelativeLayout>