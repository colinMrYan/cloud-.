<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="10dp"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:paddingLeft="16dp"
            android:layout_toLeftOf="@+id/rl_status"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF333333"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/rl_status"
            android:paddingRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerVertical="true"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/iv_status_point"
                android:layout_centerVertical="true"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="10dp" />
            <TextView
                android:id="@+id/tv_status"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_status_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_people_num"
            android:paddingLeft="16dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_people_num"
                android:layout_centerVertical="true"
                android:layout_width="15dp"
                android:layout_height="17dp"
                android:src="@drawable/ic_schedule_meeting_room_people"
                android:layout_marginRight="4dp" />
            <TextView
                android:id="@+id/tv_people_num"
                android:textSize="16sp"
                android:textColor="#94AFC4"
                android:layout_toRightOf="@id/iv_people_num"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_equipment"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/rl_people_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></LinearLayout>
        <LinearLayout
            android:id="@+id/ll_day_status"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></LinearLayout>
    </RelativeLayout>


 <View
     android:id="@+id/view_divider"
     android:background="@color/content_bg"
     android:layout_width="match_parent"
     android:layout_height="10dp"></View>
</LinearLayout>