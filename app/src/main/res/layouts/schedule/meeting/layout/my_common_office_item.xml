<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/office_expand_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/text_layout_selector"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/my_common_office_building"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="5dp"
        android:textColor="#999999"
        android:textSize="@dimen/content_moresmaller_textsize" />
    <TextView
        android:id="@+id/my_common_office_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_common_office_building"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#FF444444"
        android:textSize="@dimen/content_title_textsize" />


    <LinearLayout
        android:id="@+id/meetting_meettingoffice_layout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/my_common_office_selected_img"
            android:layout_width="13dp"
            android:layout_height="match_parent"
            
            android:layout_gravity="center_vertical"
            android:layout_marginRight="17dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/icon_mession_checkmark"
            android:visibility="visible"
             />
         <ImageView
            android:id="@+id/my_common_office_handle"
            android:layout_width="40dp"
            android:layout_height="match_parent"
             android:layout_gravity="center_vertical"
             android:layout_marginRight="17dp"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
             android:paddingTop="20dp"
            android:src="@drawable/icon_my_common_office_order_handle"
             android:visibility="visible"
             />
    </LinearLayout>

</RelativeLayout>