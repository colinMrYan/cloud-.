<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_meeting_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:gravity="center"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_schedule_search"
        android:text="搜索会议"
        android:textColor="#888888"
        android:textSize="13sp"
        />
    <com.inspur.emmcloud.widget.MySwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:background="@color/content_bg"
        android:layout_below="@id/tv_meeting_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_meeting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </com.inspur.emmcloud.widget.MySwipeRefreshLayout>

</RelativeLayout>