    <RelativeLayout
        android:id="@+id/rl_meeting_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/bg_task_search">

        <com.inspur.emmcloud.widget.ClearEditText
            android:id="@+id/ev_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:hint="@string/schedule_meeting_search"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:background="@drawable/bg_schedule_search"
            android:gravity="center"
            android:textColor="#333333"
            android:imeOptions="actionSearch"
            android:textSize="13sp">
            <requestFocus />
        </com.inspur.emmcloud.widget.ClearEditText>
    </RelativeLayout>
    <com.inspur.emmcloud.widget.MySwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_below="@id/rl_meeting_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/lv_view_meeting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"/>
    </com.inspur.emmcloud.widget.MySwipeRefreshLayout>
    <RelativeLayout
        android:id="@+id/rl_meeting_list_default"
        android:layout_below="@id/rl_meeting_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/content_bg">
        <ImageView
            android:id="@+id/iv_meeting_list_view_default"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_meeting_default"/>
        <TextView
            android:text="@string/schedule_meeting_no_meeting_today"
            android:layout_below="@id/iv_meeting_list_view_default"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="30dp"
            android:textSize="16sp"
            android:textColor="#999999"
            android:singleLine="true"/>
    </RelativeLayout>
</RelativeLayout>