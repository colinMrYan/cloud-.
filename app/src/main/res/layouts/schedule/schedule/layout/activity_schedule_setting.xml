<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="@color/content_bg"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:padding="11dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn"/>
        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="设置"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_all_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header">
        <com.inspur.emmcloud.widget.ScrollViewWithListView
            android:id="@+id/scrollview_list_calendars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#FFC8C7CC"
            android:dividerHeight="0.5dp"
            android:background="#FFFFFF"
            android:paddingLeft="16dp">
        </com.inspur.emmcloud.widget.ScrollViewWithListView>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_divide_groups"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/rl_all_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#999999"
        android:layout_marginLeft="16dp"
        android:text="分组"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_divide_groups"
        android:paddingLeft="16dp"
        android:background="#FFFFFF">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_quarter"
                android:onClick="onClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="11dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="季度"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:paddingTop="12dp"
                    android:paddingBottom="10dp"/>
                <ImageView
                    android:id="@+id/iv_quarter_tip"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"

                    android:layout_width="16dp"
                    android:layout_height="16dp" />
            </RelativeLayout>
            <View
                android:id="@+id/v_after_quarter"
                android:layout_below="@id/rl_quarter"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#DDDDDD"/>
            <RelativeLayout
                android:id="@+id/rl_month"
                android:layout_below="@id/v_after_quarter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="11dp"
                android:onClick="onClick">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月度"
                    android:paddingTop="12dp"
                    android:paddingBottom="10dp"
                    android:textColor="#333333"
                    android:textSize="16sp"/>
                <ImageView
                    android:id="@+id/iv_month_tip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"

                    android:scaleType="centerCrop"
                    android:layout_marginRight="4dp"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
            </RelativeLayout>
            <View
                android:id="@+id/v_after_month"
                android:layout_below="@id/rl_month"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#DDDDDD"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>