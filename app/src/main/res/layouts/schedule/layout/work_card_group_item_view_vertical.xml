<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <View
        android:id="@+id/top_blank_view"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="18dp">

        <RelativeLayout
            android:id="@+id/group_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corner_part_top"
            android:paddingBottom="15dp"
            android:paddingLeft="14dp"
            android:paddingRight="15.9dp"
            android:paddingTop="12dp">

            <ImageView
                android:id="@+id/group_icon_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/group_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/group_icon_img"
                android:textColor="#94AFC4"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/work_right_img"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_right" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/work_add_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="17dp"
                android:paddingRight="12dp">

                <ImageView
                    android:id="@+id/add_img"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_add" />

                <TextView
                    android:id="@+id/work_add_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/add_img"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingRight="20dp"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_below="@id/add_img"
                    android:layout_toRightOf="@id/add_img"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>

            <com.inspur.emmcloud.widget.ScrollViewWithListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#00000000"
                android:dividerHeight="0dp"
                android:listSelector="#00000000">

            </com.inspur.emmcloud.widget.ScrollViewWithListView>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/bottom_blank_view"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>