<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg">

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout_schedule"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            app:tabTextAppearance="@style/ScheduleTabLayoutTextStyle"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            app:tabTextColor="#888888"
            app:tabSelectedTextColor="#333333"
            />
        <ImageButton
            android:id="@+id/ibt_add"
            android:layout_width="42dp"
            android:layout_marginRight="6dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:tint="?attr/header_text_color"
            android:scaleType="centerInside"
            android:src="@drawable/ic_add" />
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="58dp"
            android:textColor="?attr/header_text_color"
            android:layout_centerVertical="true"
            />
        <ImageButton
            android:id="@+id/ibt_today"
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:layout_marginRight="58dp"
            android:layout_alignParentRight="true"
            android:tint="?attr/header_text_color"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_schedule_today" />




    </RelativeLayout>
    <com.inspur.emmcloud.widget.CustomScrollViewPager
        android:id="@+id/view_pager_all_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
