<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/content_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/settings"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

    </RelativeLayout>


    <ScrollView
        android:id="@+id/sv_view_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_calendar_list_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/calendar"
                android:textColor="#999999"
                android:textSize="13sp"
                android:paddingLeft="16dp"/>


            <com.inspur.emmcloud.widget.ScrollViewWithListView
                android:id="@+id/listview_list_calendars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_calendar_list_tip"
                android:background="#FFFFFF"
                android:divider="@color/color_list_divider"
                android:paddingLeft="16dp"
                android:dividerHeight="0.5px"></com.inspur.emmcloud.widget.ScrollViewWithListView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginLeft="16dp"
                android:layout_below="@+id/listview_list_calendars"
                android:background="@color/color_list_divider"/>

            <TextView
                android:id="@+id/tv_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/listview_list_calendars"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/schedule_setting_view"
                android:textColor="#999999"
                android:textSize="13sp"
                android:paddingLeft="16dp"/>

            <RelativeLayout
                android:id="@+id/rl_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_view"
                android:paddingLeft="16dp"
                android:paddingRight="15dp"
                android:background="#FFFFFF"
                android:onClick="onClick">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="10dp"
                    android:paddingTop="12dp"
                    android:text="@string/schedule_setting_list_view"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_list_view_select"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_select_yes" />
            </RelativeLayout>

            <View
                android:id="@+id/v_after_list_view"
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_below="@id/rl_list_view"
                android:background="#DDDDDD"
                android:layout_marginLeft="16dp"/>

            <RelativeLayout
                android:id="@+id/rl_day_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v_after_list_view"
                android:background="#FFFFFF"
                android:paddingLeft="16dp"
                android:paddingRight="15dp"
                android:onClick="onClick">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="10dp"
                    android:paddingTop="12dp"
                    android:text="@string/schedule_setting_day_view"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_day_view_select"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_select_yes" />
            </RelativeLayout>

            <View
                android:id="@+id/v_after_day_view"
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_below="@id/rl_day_view"
                android:background="#DDDDDD"
                android:layout_marginLeft="16dp"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>