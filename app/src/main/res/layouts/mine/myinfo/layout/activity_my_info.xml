<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <!-- android:background="@color/white" -->

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/shape_header_bg">

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/user_info_my_info"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

        <TextView
            android:id="@+id/switch_enterprese_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/switch_enterprise"
            android:textColor="?attr/header_text_color"
            android:textSize="16sp"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/rl_header"
        android:background="@color/content_bg"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <!-- android:visibility="gone" -->

        <LinearLayout
            android:id="@+id/myinfo_personinfo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/myinfo_userhead_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick"
                android:paddingLeft="12dp">

                <TextView
                    android:id="@+id/myinfo_userheadtext_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/user_info_head"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/myinfo_userheadlayout_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="15dp">

                    <com.inspur.emmcloud.widget.CircleTextImageView
                        android:id="@+id/myinfo_userheadimg_img"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp" />
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_name_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/v_head_line"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5px"
                    android:layout_marginLeft="10dp"
                    android:background="@color/color_list_divider" />
                <RelativeLayout
                    android:id="@+id/myinfo_username_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_layout_selector"
                    android:layout_below="@id/v_head_line"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/myinfo_usernametext_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/user_info_name"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/myinfo_usernamelayout_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="15dp">

                        <TextView
                            android:id="@+id/myinfo_username_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp"
                            android:textColor="@color/onekey_content_text"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/myinfo_usernamearrow_img"
                            style="@style/arrow_right"
                            android:src="@drawable/icon_arrow_right"
                            android:visibility="gone" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_worknum_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <View
                    android:id="@+id/v_workernum_top_Liner"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5px"
                    android:layout_marginLeft="10dp"
                    android:background="@color/color_list_divider"/>
                <RelativeLayout
                    android:id="@+id/rl_myinfo_worknum_main"
                    android:layout_below="@id/v_workernum_top_Liner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_layout_selector"
                    android:paddingBottom="10dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tv_myinfo_worknum_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/user_worker_num"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/ll_myinfo_worknum_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="15dp">

                        <TextView
                            android:id="@+id/tv_myinfo_worknum_rewrite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp"
                            android:textColor="@color/onekey_content_text"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/iv_myinfo_worknumarrow"
                            style="@style/arrow_right"
                            android:src="@drawable/icon_arrow_right"
                            android:visibility="gone" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                 android:id="@+id/rl_depart_all"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:visibility="gone">
                 <View
                     android:id="@+id/v_userdepart_topliner"
                     android:layout_width="fill_parent"
                     android:layout_height="0.5px"
                     android:layout_marginLeft="10dp"
                     android:background="@color/color_list_divider"/>
                 <RelativeLayout
                     android:id="@+id/myinfo_userdepart_layout"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:background="@drawable/text_layout_selector"
                     android:layout_below="@id/v_userdepart_topliner"
                     android:paddingBottom="10dp"
                     android:paddingLeft="12dp"
                     android:paddingTop="10dp">

                     <TextView
                         android:id="@+id/myinfo_userdeparttext_text"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentLeft="true"
                         android:layout_centerVertical="true"
                         android:text="@string/user_depart"
                         android:textSize="16sp" />

                     <LinearLayout
                         android:id="@+id/myinfo_userdepartlayout_layout"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentRight="true"
                         android:gravity="center_vertical"
                         android:orientation="horizontal"
                         android:paddingRight="15dp">

                         <TextView
                             android:id="@+id/myinfo_userdepart_text"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:paddingRight="10dp"
                             android:textColor="@color/onekey_content_text"
                             android:textSize="16sp" />

                         <ImageView
                             android:id="@+id/myinfo_userdepartarrow_img"
                             style="@style/arrow_right"
                             android:src="@drawable/icon_arrow_right"
                             android:visibility="gone" />
                     </LinearLayout>
                 </RelativeLayout>
             </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_usermail_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/v_usermail_topliner"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5px"
                    android:layout_marginLeft="10dp"
                    android:background="@color/color_list_divider" />
                <RelativeLayout
                    android:id="@+id/myinfo_usermail_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_layout_selector"
                    android:layout_below="@id/v_usermail_topliner"
                    android:paddingBottom="10dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/myinfo_usermailtext_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/mail"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/myinfo_usermaillayout_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="15dp">

                        <TextView
                            android:id="@+id/myinfo_usermail_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp"
                            android:textColor="@color/onekey_content_text"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/myinfo_usermailarrow_img"
                            style="@style/arrow_right"
                            android:src="@drawable/icon_arrow_right"
                            android:visibility="gone" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_userphone_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/v_userphone_topliner"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5px"
                    android:layout_marginLeft="10dp"
                    android:background="@color/color_list_divider" />
                <RelativeLayout
                    android:id="@+id/myinfo_userphone_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_layout_selector"
                    android:layout_below="@id/v_userphone_topliner"
                    android:paddingBottom="10dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/myinfo_userphonetext_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/user_info_phone_number"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/myinfo_userphonelayout_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="15dp">

                        <TextView
                            android:id="@+id/myinfo_userphone_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp"
                            android:textColor="@color/onekey_content_text"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/myinfo_userphonearrow_img"
                            style="@style/arrow_right"
                            android:src="@drawable/icon_arrow_right"
                            android:visibility="gone" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_usertelephone_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <View
                    android:id="@+id/v_telphone_topliner"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5px"
                    android:layout_marginLeft="10dp"
                    android:background="@color/color_list_divider" />
                <RelativeLayout
                    android:id="@+id/rl_myinfo_telphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/v_telphone_topliner"
                    android:background="@drawable/text_layout_selector"
                    android:paddingBottom="10dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tv_myinfo_telphone_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/user_telephone"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/ll_myinfo_telphone_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="15dp">

                        <TextView
                            android:id="@+id/tv_myinfo_telphone_rewrite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp"
                            android:textColor="@color/onekey_content_text"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/iv_myinfo_telphonearrow"
                            style="@style/arrow_right"
                            android:src="@drawable/icon_arrow_right"
                            android:visibility="gone" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5px"
                android:background="@color/color_list_divider" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/myinfo_sexandt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5px"
                android:background="@color/color_list_divider" />

            <RelativeLayout
                android:id="@+id/myinfo_usersex_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_layout_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/myinfo_usersextext_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/user_info_sex"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/myinfo_usersexlayout_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/myinfo_usersex_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="@string/not_set"
                        android:textColor="@color/onekey_content_text"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/myinfo_usersexarrow_img"
                        style="@style/arrow_right"
                        android:src="@drawable/icon_arrow_right"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5px"
                android:layout_marginLeft="10dp"
                android:background="@color/color_list_divider" />

            <RelativeLayout
                android:id="@+id/myinfo_usercode_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_layout_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/myinfo_usercode_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/user_qr_code"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/myinfo_usercodelayout_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="15dp">

                    <ImageView
                        android:id="@+id/myinfo_usercode_img"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/code" />

                    <ImageView
                        android:id="@+id/myinfo_usercodearrow_img"
                        style="@style/arrow_right"
                        android:src="@drawable/icon_arrow_right"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/myinfo_usercompany_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_layout_selector">

            <TextView
                android:id="@+id/myinfo_usercompony_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:text="@string/user_company_info"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/myinfo_usercompanylayout_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/myinfo_usercompony_text"
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/myinfo_usercompanytext_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:text="@string/user_info_organ"
                    android:textColor="@color/onekey_content_text"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/myinfo_usercompanyarrow_img"
                    style="@style/arrow_right"
                    android:src="@drawable/icon_arrow_right"
                    android:visibility="gone" />
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/myinfo_modifypsd_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_layout_selector"
            android:onClick="onClick"
            android:visibility="gone">
            <TextView
                android:id="@+id/myinfo_modifypsd_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:text="@string/modify_password"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/myinfo_modifypsdarrow_img"
                style="@style/arrow_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dp"
                android:src="@drawable/icon_arrow_right"
                android:visibility="visible" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5px"
                android:layout_below="@id/myinfo_modifypsd_text"
                android:background="@color/color_list_divider" />
        </RelativeLayout>

        <!-- 隐藏重置密码和下面的线 -->
        <RelativeLayout
            android:id="@+id/myinfo_reset_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_layout_selector"
            android:onClick="onClick"
            android:visibility="gone">

            <TextView
                android:id="@+id/myinfo_reset_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:text="@string/modify_reset_password"
                android:textSize="16sp" />

            <ImageView
                style="@style/arrow_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dp"
                android:src="@drawable/icon_arrow_right"
                android:visibility="visible" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>