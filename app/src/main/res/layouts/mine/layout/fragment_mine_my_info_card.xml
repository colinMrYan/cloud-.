                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_photo_default" />
            </RelativeLayout>

