<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:fitsSystemWindows="true" >

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/content_bg" >

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:padding="11dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back_btn_black" />
        <ImageView
            android:id="@+id/tv_set"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:padding="17dp"
            android:src="@drawable/icon_card_package_set"
            android:onClick="onClick"
            android:clickable="true"
 />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rl_card_package"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_below="@id/header_layout">
        <ImageView
            android:id="@+id/img_card_package_icon"
            android:layout_width="81dp"
            android:layout_height="79dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_card_package"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/img_card_package_icon">
            <TextView
                android:id="@+id/tv_name_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="#ff333333"
                android:text="@string/card_package_welcome"
                />
            <TextView
                android:id="@+id/tv_digest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#ff666666"
                android:text="@string/card_package_collect"
                />
        </LinearLayout>
    </RelativeLayout>
    <com.inspur.emmcloud.widget.cardstack.RxCardStackView
        android:id="@+id/stackview_card_package"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout"
        android:clipToPadding="false"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="132dp"/>

</RelativeLayout>