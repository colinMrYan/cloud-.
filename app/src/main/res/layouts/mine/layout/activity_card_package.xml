<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true" >

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_bg" >

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/card_package_listtext"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rl_card_package"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/header_layout">
        <ImageView
            android:id="@+id/img_card_package_icon"
            android:layout_width="81dp"
            android:layout_height="79dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="42dp"
            android:src="@drawable/icon_card_package"/>
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="25dp"
            android:textSize="19sp"
            android:textColor="#ff333333"
            android:text="欢迎使用卡包"
            android:layout_toRightOf="@id/img_card_package_icon"/>
        <TextView
            android:id="@+id/txt_digest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_title"
            android:textSize="16sp"
            android:layout_marginLeft="25dp"
            android:textColor="#ff666666"
            android:text="将您常用信息卡片归集一处"
            android:layout_toRightOf="@id/img_card_package_icon"/>

    </RelativeLayout>

    <com.inspur.emmcloud.widget.cardstack.RxCardStackView
        android:id="@+id/stackview_card_package"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout"
        android:clipToPadding="false"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="132dp"/>


    
</RelativeLayout>