<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_bg">

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/mine"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout"
        android:background="@color/content_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/more_userhead_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_layout_selector">

            <!-- 细线 -->

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_list_divider" />

            <com.inspur.emmcloud.widget.CircleImageView
                android:id="@+id/more_head_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/icon_photo_default" />

            <LinearLayout
                android:id="@+id/more_head_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@+id/more_head_right_arrow_img"
                android:layout_toRightOf="@id/more_head_img"
                android:background="@drawable/text_layout_selector"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/more_head_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/content_title_textsize" />

                <TextView
                    android:id="@+id/more_head_enterprise_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:textColor="#4f89a2" />
            </LinearLayout>


            <ImageView
                android:id="@+id/more_head_right_arrow_img"
                style="@style/arrow_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_arrow_right" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/color_list_divider" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_list_divider" />

        <RelativeLayout
            android:id="@+id/more_set_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_layout_selector"
            android:clickable="true">

            <ImageView
                android:id="@+id/more_set_img"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:padding="0.5dp"
                android:src="@drawable/icon_set" />

            <TextView
                android:id="@+id/more_set_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/more_set_img"
                android:text="@string/settings"
                android:textSize="@dimen/content_normal_textsize" />

            <ImageView
                android:id="@+id/more_set_arrow_img"
                style="@style/arrow_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_arrow_right" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/color_list_divider" />


        <RelativeLayout
            android:id="@+id/more_feedback_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_layout_selector"
            android:visibility="gone"
            android:clickable="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_list_divider" />

            <ImageView
                android:id="@+id/more_feedback_img"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:padding="0.5dp"
                android:src="@drawable/icon_help" />

            <TextView
                android:id="@+id/more_feedback_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/more_feedback_img"
                android:text="@string/more_feedback"
                android:textSize="@dimen/content_normal_textsize" />

            <ImageView
                android:id="@+id/more_help_arrow_img"
                style="@style/arrow_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_arrow_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/more_feedback_img"
                android:background="@color/color_list_divider" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/customer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-0.5dp"
            android:visibility="gone"
            android:background="@drawable/text_layout_selector"
            android:clickable="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_list_divider" />

            <ImageView
                android:id="@+id/customer_img"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:padding="0.5dp"
                android:src="@drawable/ic_customer" />

            <TextView
                android:id="@+id/customer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/customer_img"
                android:text="@string/app_customer"
                android:textSize="@dimen/content_normal_textsize" />

            <ImageView
                android:id="@+id/customer_arrowImg"
                style="@style/arrow_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_arrow_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/customer_img"
                android:background="@color/color_list_divider" />
        </RelativeLayout>

        <View
            android:id="@+id/blank_layout"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>


        <RelativeLayout
            android:id="@+id/scan_login_desktop_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_layout_selector"
            android:clickable="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/scan_login_desktop_img"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:padding="0.5dp"
                android:src="@drawable/icon_home" />

            <TextView
                android:id="@+id/scan_login_desktop_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/scan_login_desktop_img"
                android:text="扫一扫登录桌面版"
                android:textSize="@dimen/content_normal_textsize" />

            <ImageView
                android:id="@+id/scan_login_desktop_arrowImg"
                style="@style/arrow_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_arrow_right" />
        </RelativeLayout>


        <!-- 细线 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_list_divider" />


        <RelativeLayout
            android:id="@+id/about_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_layout_selector"
            android:clickable="true">

            <com.inspur.emmcloud.widget.CircleImageView
                android:id="@+id/about_img"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:padding="0.5dp"
                android:src="@drawable/icon_circle_logo" />


            <TextView
                android:id="@+id/about_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/about_img"
                android:text="@string/about_text"
                android:textSize="@dimen/content_normal_textsize" />

            <ImageView
                android:id="@+id/about_arrowImg"
                style="@style/arrow_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_arrow_right" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_list_divider" />

    </LinearLayout>

</RelativeLayout>