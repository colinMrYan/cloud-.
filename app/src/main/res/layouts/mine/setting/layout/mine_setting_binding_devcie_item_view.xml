<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_layout_selector"
                android:paddingLeft="20dp">

    <RelativeLayout
        android:layout_toLeftOf="@id/img"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/current_device_text"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/device_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#333333"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/device_last_use_time_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="9dp"
                android:paddingTop="3dp"
                android:textColor="#999999"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/current_device_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:visibility="gone"
            android:text="@string/current_device"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:textColor="#0F7BCA"
            android:textSize="14sp"/>
    </RelativeLayout>


    <ImageView
        android:id="@id/img"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/icon_arrow_right"
        />
</RelativeLayout>