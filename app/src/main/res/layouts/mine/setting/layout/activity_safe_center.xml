<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/setting_safe_center"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_header"
        android:background="@color/content_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_setting_safe_gesture_face"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_layout_selector"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:onClick="onClick">

            <TextView
                android:id="@+id/tv_setting_safe_gesture_face"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="11dp"
                android:paddingTop="11dp"
                android:text="@string/setting_safe_gesture_face"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_arrow_right" />
            <View
                android:layout_width="match_parent"
                android:layout_below="@+id/tv_setting_safe_gesture_face"
                android:layout_height="0.5px"
                android:background="@color/color_list_divider" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_setting_safe_account_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_layout_selector"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:onClick="onClick">

            <TextView
                android:id="@+id/tv_setting_safe_account_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="11dp"
                android:paddingTop="11dp"
                android:text="@string/setting_safe_center"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_arrow_right" />
            <View
                android:layout_width="match_parent"
                android:layout_below="@id/tv_setting_safe_account_device"
                android:layout_height="0.5px"
                android:background="@color/color_list_divider" />
        </RelativeLayout>







    </LinearLayout>


</RelativeLayout>