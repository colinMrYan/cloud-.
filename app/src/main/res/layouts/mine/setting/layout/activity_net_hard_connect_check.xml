<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_bg">

        <RelativeLayout
            android:id="@+id/rl_back_net_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/net_diagnosis_hard_detail_title"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

  <RelativeLayout
      android:layout_below="@id/header_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <TextView
          android:id="@+id/tv_checking_hard_detail_title"
          android:layout_marginTop="20dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:textSize="17dp"
          android:textColor="#FF333333"
          android:text="@string/net_diagnosis_hard_detail_content"/>
      <TextView
          android:id="@+id/tv_checking_hard_detail_frist"
          android:layout_below="@id/tv_checking_hard_detail_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:paddingRight="20dp"
          android:textSize="15dp"
          android:textColor="#FF666666"
          android:layout_marginTop="30dp"
          android:text="@string/net_diagnosis_hard_detail_content_frist"/>
      <TextView
          android:id="@+id/tv_checking_hard_detail_second"
          android:layout_below="@id/tv_checking_hard_detail_frist"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:layout_marginTop="25dp"
          android:paddingRight="20dp"
          android:textColor="#FF666666"
          android:textSize="15dp"
          android:text="@string/net_diagnosis_hard_detail_content_second"/>

      <TextView
          android:id="@+id/tv_show_system_hard_setting"
          android:layout_below="@id/tv_checking_hard_detail_second"
          android:layout_width="180dp"
          android:layout_height="wrap_content"
          android:text="@string/net_diagnosis_hard_detail_setting"
          android:layout_centerHorizontal="true"
          android:gravity="center"
          android:textColor="#0F7BCA"
          android:textSize="17sp"
          android:paddingTop="10dp"
          android:paddingBottom="10dp"
          android:layout_marginTop="90dp"
          android:onClick="onClick"
          android:background="@drawable/bg_net_setting_tip"></TextView>
  </RelativeLayout>



</RelativeLayout>