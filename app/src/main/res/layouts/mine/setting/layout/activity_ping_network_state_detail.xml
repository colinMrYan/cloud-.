<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <!-- android:background="@color/white" -->

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_bg">

        <RelativeLayout
            android:id="@+id/rl_back_net_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="网络诊断"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_textsize" />

        <TextView
            android:id="@+id/switch_enterprese_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/switch_enterprise"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/header_layout"
        android:background="@color/content_bg"
        android:orientation="vertical"
        android:paddingTop="10dp">
        <RelativeLayout
          android:id="@+id/rl_check_hard_device"
          android:layout_width="match_parent"
          android:layout_height="90dp"
          android:onClick="onClick">
          <TextView
              android:id="@+id/tv_check_hard_title"
              android:layout_width="wrap_content"
              android:layout_height="35dp"
              android:layout_alignParentTop="true"
              android:text="检测网络硬件链接"
              android:textColor="@color/black"
              android:textSize="17dp"
              android:padding="7dp"/>

          <TextView
              android:id="@+id/tv_check_hard_contanct"
              android:layout_alignParentBottom="true"
              android:layout_width="wrap_content"
              android:layout_height="55dp"
              android:text="当前检查项目包含：设置硬件是否存在故障，设置硬件链接状态是否通畅，设置是否有链接wifi,4G,LTE等"
              android:textColor="@color/header_bg"
              android:textSize="14dp"
              android:paddingTop="7dp"
              android:paddingLeft="7dp"
              android:paddingRight="40dp"/>

            <ImageView
                android:id="@+id/iv_hard_checking"
                android:background="@color/cal_green"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>

      </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_check_wifi_state"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:onClick="onClick">
            <TextView
                android:id="@+id/tv_check_wifi_title"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:text="检测wifi路由状态"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:padding="7dp"/>
            <TextView
                android:id="@+id/tv_check_wifi_contanct"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="当前检查项目包含：链接到的wifi是否有验证需求，如果有需要先验证此wifi才可继续访问"
                android:textColor="@color/header_bg"
                android:textSize="14dp"
                android:paddingTop="7dp"
                android:paddingLeft="7dp"
                android:paddingRight="40dp"/>
            <ImageView
                android:id="@+id/iv_wifi_checking"
                android:background="@color/cal_green"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_check_dns_state"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:onClick="onClick">
            <TextView
                android:id="@+id/tv_check_dns_title"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:text="检测DNS服务器状态"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:padding="7dp"/>
            <TextView
                android:id="@+id/tv_check_dns_contanct"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="当前检查项目包含：DNS服务是否有故障"
                android:textColor="@color/header_bg"
                android:textSize="14dp"
                android:paddingTop="7dp"
                android:paddingLeft="7dp"
                android:paddingRight="40dp"/>
            <ImageView
                android:id="@+id/iv_dns_checking"
                android:background="@color/cal_green"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>