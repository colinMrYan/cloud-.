<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_bg">

        <RelativeLayout
            android:id="@+id/rl_back_net_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/net_diagnosis_title"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/header_layout"
        android:background="@color/content_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_checking_hard_state"
            android:onClick="onClick">
            <RelativeLayout
                android:id="@+id/rl_checking_hard_logs"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/iv_hard_device_log"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/ic_netchecking_hard_device"/>

                <ImageView
                    android:id="@+id/iv_hard_state_log"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="66dp"
                    android:visibility="gone"
                    android:background="@drawable/ic_netchecking_ok"/>
                <com.qmuiteam.qmui.widget.QMUILoadingView
                    android:id="@+id/qv_checking_hard_loading"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="66dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_toRightOf="@id/rl_checking_hard_logs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="30dp"
                    android:textColor="#0F7BCA"
                    android:textSize="17dp"
                    android:text="@string/net_diagnosis_hard_link_title"></TextView>
                <TextView
                    android:id="@+id/tv_checking_hard_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="64dp"
                    android:textColor="#666666"
                    android:textSize="15dp"
                    android:text="@string/net_diagnosis_hard_link_conent"></TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tv_checking_hard_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_checking_portal_state"
            android:layout_below="@+id/rl_checking_hard_state"
            android:onClick="onClick">

            <RelativeLayout
                android:id="@+id/rl_checking_portal_logs"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/iv_portal_device_log"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/ic_netchecking_route"/>

                <ImageView
                    android:id="@+id/iv_portal_state_log"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="66dp"
                    android:visibility="gone"
                    android:background="@drawable/ic_netchecking_ok"/>
                <com.qmuiteam.qmui.widget.QMUILoadingView
                    android:id="@+id/qv_checking_portal_loading"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="66dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_toRightOf="@id/rl_checking_portal_logs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="30dp"
                    android:textColor="#0F7BCA"
                    android:textSize="17dp"
                    android:text="@string/net_diagnosis_wifi_link_title"></TextView>
                <TextView
                    android:id="@+id/tv_checking_portal_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="64dp"
                    android:textColor="#666666"
                    android:textSize="15dp"
                    android:text="@string/net_diagnosis_wifi_link_conent"></TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tv_checking_portal_content"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_checking_dns_state"
            android:layout_below="@+id/rl_checking_portal_state"
            android:onClick="onClick">

            <RelativeLayout
                android:id="@+id/rl_checking_dns_logs"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/iv_dns_device_log"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/ic_netchecking_dns_sever"/>

                <ImageView
                    android:id="@+id/iv_dns_state_log"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="66dp"
                    android:visibility="gone"
                    android:background="@drawable/ic_netchecking_ok"/>
                <com.qmuiteam.qmui.widget.QMUILoadingView
                    android:id="@+id/qv_checking_dns_loading"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="66dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_toRightOf="@id/rl_checking_dns_logs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="30dp"
                    android:textColor="#0F7BCA"
                    android:textSize="17dp"
                    android:text="@string/net_diagnosis_dns_link_title"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_checking_dns_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="64dp"
                    android:textColor="#666666"
                    android:textSize="15dp"
                    android:text="@string/net_diagnosis_dns_link_conent"></TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tv_checking_dns_content"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>