<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_bg">

        <RelativeLayout
            android:id="@+id/rl_back_net_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/net_diagnosis_title"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/header_layout"
        android:background="@color/content_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="157dp"
            android:id="@+id/rl_checking_hard_state">
            <RelativeLayout
                android:id="@+id/rl_checking_hard_logs"
                android:layout_width="87dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_hard_device_log"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="34dp"
                    android:layout_marginLeft="28dp"
                    android:layout_width="25dp"
                    android:layout_height="42dp" />
                <ImageView
                    android:id="@+id/iv_hard_state_log"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="66dp"
                    android:layout_marginLeft="48dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_toRightOf="@id/rl_checking_hard_logs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="30dp"
                    android:text="@string/net_diagnosis_hard_link_title"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="64dp"
                    android:text="@string/net_diagnosis_hard_link_conent"></TextView>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5px"
                    android:layout_marginLeft="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rl_checking_portal_state"
            android:layout_width="match_parent"
            android:layout_height="157dp"
            android:layout_below="@id/rl_checking_hard_state">
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rl_checking_dns_state"
            android:layout_below="@id/rl_checking_portal_state"
            android:layout_width="match_parent"
            android:layout_height="157dp">
        </RelativeLayout>
        
        
    </RelativeLayout>



    


</RelativeLayout>