<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/shape_header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:padding="11dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back_btn_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/settings"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/rl_header"
        android:background="@color/content_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_setting_account_safe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_layout_selector"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:onClick="onClick">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="@string/setting_safe_center"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/icon_arrow_right" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:background="@color/color_list_divider" />
                <RelativeLayout
                    android:id="@+id/rl_setting_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_layout_selector"
                    android:onClick="onClick"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingBottom="11dp"
                        android:paddingTop="11dp"
                        android:text="@string/settings_language"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_setting_language_flag"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:layout_toLeftOf="@+id/tv_setting_language_name"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/tv_setting_language_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_toLeftOf="@+id/iv_setting_language_arrow"
                        android:gravity="right"
                        android:paddingBottom="11dp"
                        android:paddingTop="11dp"
                        android:text="@string/follow_system"
                        android:textColor="@color/set_protected"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_setting_language_arrow"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:src="@drawable/icon_arrow_right" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:background="@color/color_list_divider" />
                <RelativeLayout
                    android:id="@+id/rl_setting_switch_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/text_layout_selector"
                    android:onClick="onClick"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingBottom="11dp"
                        android:paddingTop="11dp"
                        android:text="切换皮肤"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/tv_setting_theme_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_toLeftOf="@+id/tv_setting_switch_theme_arrow"
                        android:gravity="right"
                        android:paddingBottom="11dp"
                        android:paddingTop="11dp"
                        android:visibility="gone"
                        android:textColor="@color/set_protected"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/tv_setting_switch_theme_arrow"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:src="@drawable/icon_arrow_right" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:background="@color/color_list_divider" />

                <RelativeLayout
                    android:id="@+id/clear_cache_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_layout_selector"
                    android:onClick="onClick"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp">

                    <TextView
                        android:id="@+id/clear_cache_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingBottom="11dp"
                        android:paddingTop="11dp"
                        android:text="@string/settings_clear_cache"
                        android:textSize="16sp" />


                    <ImageView
                        android:id="@+id/clear_cache_img"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:src="@drawable/icon_arrow_right" />
                </RelativeLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="@color/color_list_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:background="@drawable/text_layout_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="@string/web_app_auto_rotate"
                    android:textSize="16sp" />

                <com.inspur.emmcloud.widget.SwitchView
                    android:id="@+id/web_auto_rotate_switch"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="@color/color_list_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:background="@drawable/text_layout_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="@string/run_background"
                    android:textSize="16sp" />

                <com.inspur.emmcloud.widget.SwitchView
                    android:id="@+id/background_run_switch"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="@color/color_list_divider" />

            <RelativeLayout
                android:id="@+id/rl_voice_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingLeft="16dp"
                android:background="@drawable/text_layout_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="@string/voice_word_setting"
                    android:textSize="16sp" />

                <com.inspur.emmcloud.widget.SwitchView
                    android:id="@+id/switch_voice_word"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp" />
            </RelativeLayout>


            <View
                android:id="@+id/v_voice_word_line"
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:visibility="gone"
                android:background="@color/color_list_divider" />
            <RelativeLayout
                android:id="@+id/rl_experience_upgrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingLeft="16dp"
                android:background="@drawable/text_layout_selector">

                <TextView
                    android:id="@+id/tv_experience_upgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="@string/setting_join_experience_plan"
                    android:textSize="16sp" />

                <com.inspur.emmcloud.widget.SwitchView
                    android:id="@+id/sw_experience_upgrade"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp" />
                <View
                    android:id="@+id/v_experience_upgrade"
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_below="@id/tv_experience_upgrade"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>



        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_setting_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_layout_selector"
            android:onClick="onClick">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/quit_check"
                android:textColor="@color/set_textColor"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>