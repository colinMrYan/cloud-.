<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_bg">

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/settings"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout"
        android:background="@color/content_bg"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <RelativeLayout
            android:id="@+id/setting_gesture_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_layout_selector"
            android:onClick="onClick">

            <TextView
                android:id="@+id/setting_gesture_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:paddingBottom="11dp"
                android:paddingTop="11dp"
                android:text="@string/setting_safe_center"
                android:textSize="@dimen/content_normal_textsize" />

            <ImageView
                android:id="@+id/about_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_arrow_right" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/msg_languagechg_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick"
                android:paddingLeft="12dp">

                <TextView
                    android:id="@+id/msg_languagechg_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="@string/settings_language"
                    android:textSize="@dimen/content_normal_textsize" />

                <ImageView
                    android:id="@+id/msg_language_flag_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/msg_languagechg_result_text"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/msg_languagechg_result_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@+id/msg_languagechg_img"
                    android:gravity="right"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="@string/follow_system"
                    android:textColor="@color/set_protected"
                    android:textSize="@dimen/content_normal_textsize" />

                <ImageView
                    android:id="@+id/msg_languagechg_img"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="@color/color_list_divider" />

            <RelativeLayout
                android:id="@+id/clear_cache_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick"
                android:paddingLeft="12dp">

                <TextView
                    android:id="@+id/clear_cache_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="@string/settings_clear_cache"
                    android:textSize="@dimen/content_normal_textsize" />


                <ImageView
                    android:id="@+id/clear_cache_img"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_arrow_right" />
            </RelativeLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/color_list_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_layout_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:paddingBottom="11dp"
                android:paddingTop="11dp"
                android:text="@string/web_app_auto_rotate"
                android:textSize="@dimen/content_normal_textsize" />

            <com.inspur.emmcloud.widget.SwitchView
                android:id="@+id/web_auto_rotate_switch"
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/color_list_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_layout_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:paddingBottom="11dp"
                android:paddingTop="11dp"
                android:text="@string/run_background"
                android:textSize="@dimen/content_normal_textsize" />

            <com.inspur.emmcloud.widget.SwitchView
                android:id="@+id/background_run_switch"
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/color_list_divider" />

        <RelativeLayout
            android:id="@+id/rl_voice_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/text_layout_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:paddingBottom="11dp"
                android:paddingTop="11dp"
                android:text="@string/voice_word_setting"
                android:textSize="@dimen/content_normal_textsize" />

            <com.inspur.emmcloud.widget.SwitchView
                android:id="@+id/switch_voice_word"
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp" />
        </RelativeLayout>


        <View
            android:id="@+id/v_voice_word_line"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:visibility="gone"
            android:background="@color/color_list_divider" />

        <RelativeLayout
            android:id="@+id/signout_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_layout_selector"
            android:onClick="onClick">

            <TextView
                android:id="@+id/signout_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:paddingBottom="11dp"
                android:paddingTop="11dp"
                android:text="@string/quit_check"
                android:textColor="@color/set_textColor"
                android:textSize="@dimen/content_normal_textsize" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>