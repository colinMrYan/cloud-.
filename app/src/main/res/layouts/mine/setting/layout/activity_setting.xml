<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/shape_header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/settings"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_header"
        android:background="@color/content_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_setting_account_safe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/tv_setting_account_safe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="@string/setting_safe_center"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/icon_arrow_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_below="@+id/tv_setting_account_safe"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="@string/settings_language"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_setting_language_flag"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/tv_setting_language_name"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_setting_language_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@+id/iv_setting_language_arrow"
                    android:gravity="right"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="@string/follow_system"
                    android:textColor="#888888"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_setting_language_arrow"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/icon_arrow_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_below="@id/tv_setting_language_name"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_switch_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="@string/mine_theme_switch"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_setting_theme_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@+id/tv_setting_switch_theme_arrow"
                    android:gravity="right"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:textColor="#888888"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/tv_setting_switch_theme_arrow"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/icon_arrow_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_below="@id/tv_setting_theme_name"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/clear_cache_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/tv_setting_clear_cache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="@string/settings_clear_cache"
                    android:textSize="16sp" />


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/icon_arrow_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_below="@id/tv_setting_clear_cache"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_layout_selector"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/tv_setting_web_rotate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="@string/web_app_auto_rotate"
                    android:textSize="16sp" />

                <com.inspur.emmcloud.widget.SwitchView
                    android:id="@+id/switch_view_setting_web_rotate"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_below="@id/tv_setting_web_rotate"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_voice_2_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_layout_selector"
                android:paddingLeft="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_setting_voice_2_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="@string/voice_word_setting"
                    android:textSize="16sp" />

                <com.inspur.emmcloud.widget.SwitchView
                    android:id="@+id/switch_view_setting_voice_2_word"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_below="@id/tv_setting_voice_2_word"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/text_layout_selector"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/tv_setting_run_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="@string/run_background"
                    android:textSize="16sp" />

                <com.inspur.emmcloud.widget.SwitchView
                    android:id="@+id/switch_view_setting_run_background"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_below="@id/tv_setting_run_background"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_setting_experience_upgrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_layout_selector"
                android:paddingLeft="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_setting_experience_upgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="@string/setting_join_experience_plan"
                    android:textSize="16sp" />

                <com.inspur.emmcloud.widget.SwitchView
                    android:id="@+id/switch_view_setting_experience_upgrade"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp" />

                <View
                    android:id="@+id/v_experience_upgrade"
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_below="@id/tv_setting_experience_upgrade"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>

        </LinearLayout>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/bt_setting_signout"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="45dp"
            android:elevation="1dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/quit_check"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            app:qmui_backgroundColor="#36A5F6"
            app:qmui_borderWidth="0dp"
            app:qmui_isRadiusAdjustBounds="true"

            />

    </RelativeLayout>


</RelativeLayout>