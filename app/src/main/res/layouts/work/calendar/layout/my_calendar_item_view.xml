<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingRight="18dp" >

    <View
        android:id="@+id/calendar_color_view"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp"
        />

    <TextView
        android:id="@+id/calendar_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/calendar_color_view"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="#FF333333"
        android:textSize="@dimen/content_title_textsize" />

    <com.inspur.emmcloud.widget.SwitchView
        android:id="@+id/calendar_status_switch"
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp" >
    </com.inspur.emmcloud.widget.SwitchView>

</RelativeLayout>