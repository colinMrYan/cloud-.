<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg" >

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:padding="11dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/add_event"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

        <TextView
            android:id="@+id/add_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/add"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_header"
        android:background="@color/content_bg"
        android:scrollbars="@null" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#FFCDCDCD" />

            <EditText
                android:id="@+id/title_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="@string/calendar_please_input_title"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:singleLine="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#FFCDCDCD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:background="@color/white"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#FFCDCDCD" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingBottom="10dp"
                        android:paddingLeft="14dp"
                        android:paddingTop="10dp"
                        android:text="@string/all_day"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/content_title_textsize" />

                    <com.inspur.emmcloud.widget.SwitchView
                        android:id="@+id/all_day_switch"
                        android:layout_width="37dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                         >
                    </com.inspur.emmcloud.widget.SwitchView>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="14dp"
                    android:background="#FFCDCDCD" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="10dp"
                    android:paddingLeft="14dp"
                    android:paddingTop="10dp"
                    android:text="@string/meeting_start_time"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/content_title_textsize" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="14dp"
                    android:background="#FFCDCDCD" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/start_date_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:onClick="onClick" >

                        <TextView
                            android:id="@+id/start_date_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:text="2016年6月13日"
                            android:textColor="#FF333333"
                            android:textSize="@dimen/content_title_textsize" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="8dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="18dp"
                            android:layout_toRightOf="@id/start_date_text"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_arrow_down" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/start_time_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40dp"
                        android:layout_toRightOf="@id/start_date_layout"
                        android:onClick="onClick" >

                        <TextView
                            android:id="@+id/start_time_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:text="16:37"
                            android:textColor="#FF333333"
                            android:textSize="@dimen/content_title_textsize" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="8dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="18dp"
                            android:layout_toRightOf="@id/start_time_text"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_arrow_down" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="14dp"
                    android:background="#FFCDCDCD" />

                <TextView
                    android:id="@+id/end_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="10dp"
                    android:paddingLeft="14dp"
                    android:paddingTop="10dp"
                    android:text="@string/meeting_end_time"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/content_title_textsize" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="14dp"
                    android:background="#FFCDCDCD" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/end_date_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:onClick="onClick" >

                        <TextView
                            android:id="@+id/end_date_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:text="2016年6月13日"
                            android:textColor="#FF333333"
                            android:textSize="@dimen/content_title_textsize" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="8dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="18dp"
                            android:layout_toRightOf="@id/end_date_text"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_arrow_down" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/end_time_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40dp"
                        android:layout_toRightOf="@id/start_date_layout"
                        android:onClick="onClick" >

                        <TextView
                            android:id="@+id/end_time_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:text="16:37"
                            android:textColor="#FF333333"
                            android:textSize="@dimen/content_title_textsize" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="8dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="18dp"
                            android:layout_toRightOf="@id/end_time_text"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_arrow_down" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="14dp"
                    android:background="#FFCDCDCD" />

                <RelativeLayout
                    android:id="@+id/repeat_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:paddingRight="18dp"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/repeat_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingBottom="10dp"
                        android:paddingLeft="14dp"
                        android:paddingTop="10dp"
                        android:text="@string/repeat"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/content_title_textsize" />

                    <ImageView
                        android:id="@+id/repeat_arrow_img"
                        style="@style/arrow_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_right" />

                    <TextView
                        android:id="@+id/repeat_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toLeftOf="@id/repeat_arrow_img"
                        android:layout_toRightOf="@id/repeat_title"
                        android:gravity="right"
                        android:paddingBottom="10dp"
                        android:paddingRight="8dp"
                        android:paddingTop="10dp"
                        android:text="@string/never"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/content_title_textsize" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="14dp"
                    android:background="#FFCDCDCD"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/cal_type_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:paddingRight="18dp" >

                    <TextView
                        android:id="@+id/cal_type_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingBottom="10dp"
                        android:paddingLeft="14dp"
                        android:paddingTop="10dp"
                        android:text="@string/calendar"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/content_title_textsize" />

                    <ImageView
                        android:id="@+id/cal_type_arrow_img"
                        style="@style/arrow_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_right" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/cal_type_arrow_img"
                        android:layout_toRightOf="@id/cal_type_title"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal" >

                        <com.inspur.emmcloud.widget.CircleTextImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/calendar_img"
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginRight="9dp"
                            app:citv_text_color="@android:color/white"
                            app:citv_text_size="@dimen/content_smaller_textsize" />

                        <TextView
                            android:id="@+id/cal_type_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:paddingRight="8dp"
                            android:paddingTop="10dp"
                            android:textColor="#FF333333"
                            android:textSize="@dimen/content_title_textsize" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#FFCDCDCD" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="15dp" >

                <RelativeLayout
                    android:id="@+id/remark_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/remark_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingTop="10dp"
                        android:text="@string/remark"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/content_title_textsize" />

                    <EditText
                        android:id="@+id/remark_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/remark_title"
                        android:background="@null"
                        android:hint="@string/meeting_room_booking_notice_edit"
                        android:minLines="3"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/content_title_textsize" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#FFCDCDCD" />

                <RelativeLayout
                    android:id="@+id/alert_layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:paddingRight="18dp" >

                    <TextView
                        android:id="@+id/alert_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="@string/alert"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/content_title_textsize" />

                    <ImageView
                        android:id="@+id/alert_arrow_img"
                        style="@style/arrow_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_right" />

                    <TextView
                        android:id="@+id/alert_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toLeftOf="@id/alert_arrow_img"
                        android:layout_toRightOf="@id/alert_title"
                        android:gravity="right"
                        android:paddingBottom="10dp"
                        android:paddingRight="8dp"
                        android:paddingTop="10dp"
                        android:text="@string/never"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/content_title_textsize" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>