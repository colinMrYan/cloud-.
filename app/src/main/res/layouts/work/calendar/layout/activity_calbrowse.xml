<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf1f4"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <!-- android:background="@drawable/icon_work" -->

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/shape_header_bg" >

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:padding="11dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back_btn_black" />

        <TextView
            android:id="@+id/cal_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ibt_back"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

        
    </RelativeLayout>

    <com.inspur.emmcloud.widget.WeekDayView
        android:id="@+id/cal_weekdayview"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/rl_header" />

    <com.inspur.emmcloud.widget.calendarlistview.DayPickerView
        android:id="@+id/pickerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/add_event_text"
        android:layout_below="@id/cal_weekdayview" >
        
    </com.inspur.emmcloud.widget.calendarlistview.DayPickerView>

    <TextView
        android:id="@+id/add_event_text"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:background="#FFD6D6D6"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/add_event"
        android:textColor="#FF0F7BCA"
        android:textSize="@dimen/button_textsize" >
    </TextView>

</RelativeLayout>