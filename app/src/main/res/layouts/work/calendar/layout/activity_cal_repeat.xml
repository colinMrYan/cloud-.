<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/shape_header_bg" >

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/repeat"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout"
        android:layout_marginTop="20dp"
        android:background="@color/content_bg"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#FFCDCDCD" />

        <RelativeLayout
            android:id="@+id/no_layout"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="14dp" >

            <ImageView
                android:id="@+id/no_selected_img"
                android:layout_width="13dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
               android:visibility="invisible"
                android:src="@drawable/icon_contact_selected" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/no_selected_img"
                android:paddingBottom="10dp"
                android:paddingLeft="17dp"
                android:paddingTop="10dp"
                android:text="@string/never"
                android:textColor="#FF333333"
                android:textSize="@dimen/content_title_textsize" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="14dp"
            android:background="#FFCDCDCD" />

        <RelativeLayout
            android:id="@+id/every_day_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:onClick="onClick"
            android:paddingLeft="14dp" >

            <ImageView
                android:id="@+id/every_day_selected_img"
                android:layout_width="13dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:visibility="invisible"
                android:src="@drawable/icon_contact_selected" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/every_day_selected_img"
                android:paddingBottom="10dp"
                android:paddingLeft="17dp"
                android:paddingTop="10dp"
                android:text="@string/every_day"
                android:textColor="#FF333333"
                android:textSize="@dimen/content_title_textsize" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="14dp"
            android:background="#FFCDCDCD" />

        <RelativeLayout
            android:id="@+id/every_week_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:onClick="onClick"
            android:paddingLeft="14dp" >

            <ImageView
                android:id="@+id/every_week_selected_img"
                android:layout_width="13dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
               android:visibility="invisible"
                android:src="@drawable/icon_contact_selected" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/every_week_selected_img"
                android:paddingBottom="10dp"
                android:paddingLeft="17dp"
                android:paddingTop="10dp"
                android:text="@string/weekly"
                android:textColor="#FF333333"
                android:textSize="@dimen/content_title_textsize" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:onClick="onClick"
            android:layout_marginLeft="14dp"
            android:background="#FFCDCDCD" />

        <RelativeLayout
            android:id="@+id/every_month_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:onClick="onClick"
            android:paddingLeft="14dp" >

            <ImageView
                android:id="@+id/every_month_selected_img"
                android:layout_width="13dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:visibility="invisible"
                android:src="@drawable/icon_contact_selected" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/every_month_selected_img"
                android:paddingBottom="10dp"
                android:paddingLeft="17dp"
                android:paddingTop="10dp"
                android:text="@string/monthly"
                android:textColor="#FF333333"
                android:textSize="@dimen/content_title_textsize" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="14dp"
            android:background="#FFCDCDCD" />

        <RelativeLayout
            android:id="@+id/every_year_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:onClick="onClick"
            android:paddingLeft="14dp" >

            <ImageView
                android:id="@+id/every_year_selected_img"
                android:layout_width="13dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
               android:visibility="invisible"
                android:src="@drawable/icon_contact_selected" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/every_year_selected_img"
                android:paddingBottom="10dp"
                android:paddingLeft="17dp"
                android:paddingTop="10dp"
                android:text="@string/calendar_every_year"
                android:textColor="#FF333333"
                android:textSize="@dimen/content_title_textsize" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#FFCDCDCD" />
    </LinearLayout>

</RelativeLayout>