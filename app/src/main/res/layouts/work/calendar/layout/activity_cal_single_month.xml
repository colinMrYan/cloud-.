<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf1f4"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <!-- android:background="@drawable/icon_work" -->

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/shape_header_bg" >

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/cal_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/back_layout"
            android:text="2016"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

    </RelativeLayout>

    <com.inspur.emmcloud.widget.WeekDayView
        android:id="@+id/cal_weekdayview"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/rl_header" />

<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/add_event_text"
        android:layout_below="@id/cal_weekdayview" >

        <RelativeLayout
            android:id="@+id/cal_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </RelativeLayout>
        <View 
            android:background="#FFCDCDCD"
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_below="@id/cal_layout"
            />
        
    </RelativeLayout>

    <TextView
        android:id="@+id/add_event_text"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:background="#FFD6D6D6"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/add_event"
        android:textColor="#FF0F7BCA"
        android:textSize="@dimen/button_textsize" >
    </TextView>

</RelativeLayout>