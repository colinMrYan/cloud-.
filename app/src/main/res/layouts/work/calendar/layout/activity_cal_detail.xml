<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true" >

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg" >

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:padding="11dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/calendar_detail"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

        <ImageView
            android:id="@+id/address_list_img"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_ios_export" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/header_image_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_header"
        android:background="@color/content_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:textColor="#FF4A90E2"
            android:textSize="@dimen/content_title_textsize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="14dp"
                android:paddingRight="16dp" >

                <TextView
                    android:id="@+id/organizer_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/remark"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/content_title_textsize" />

                <ImageView
                    android:id="@+id/organizer_arrowImg"
                    style="@style/arrow_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_right" />

                <TextView
                    android:id="@+id/organizer_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/organizer_arrowImg"
                    android:layout_toRightOf="@+id/organizer_title"
                    android:gravity="right"
                    android:paddingBottom="10dp"
                    android:paddingRight="7dp"
                    android:paddingTop="10dp"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/content_title_textsize" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="14dp"
                android:background="#FFC8C7CC" >
            </View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="14dp"
                android:paddingRight="16dp" >

                <TextView
                    android:id="@+id/circle_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/cycle"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/content_title_textsize" />

                <ImageView
                    android:id="@+id/circle_arrowImg"
                    style="@style/arrow_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_right" />

                <TextView
                    android:id="@+id/circle_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/circle_arrowImg"
                    android:layout_toRightOf="@+id/circle_title"
                    android:gravity="right"
                    android:paddingBottom="10dp"
                    android:paddingRight="7dp"
                    android:paddingTop="10dp"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/content_title_textsize" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="14dp"
                android:background="#FFC8C7CC" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="14dp"
                android:paddingTop="10dp"
                android:text="@string/remark"
                android:textColor="#FF333333"
                android:textSize="@dimen/content_title_textsize" />

            <com.inspur.emmcloud.widget.ClearEditText
                android:id="@+id/note_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="top"
                android:hint="@string/please_input_remark"
                android:minLines="4"
                android:paddingBottom="10dp"
                android:paddingLeft="14dp"
                android:paddingTop="10dp"
                android:textColor="#FF333333"
                android:textSize="@dimen/content_title_textsize" >
            </com.inspur.emmcloud.widget.ClearEditText>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="14dp"
                android:background="#FFC8C7CC" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="14dp"
                android:paddingRight="16dp" >

                <TextView
                    android:id="@+id/reminder_circle_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/alert_cycle"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/content_title_textsize" />

                <ImageView
                    android:id="@+id/reminder_circle_arrowImg"
                    style="@style/arrow_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_right" />

                <TextView
                    android:id="@+id/reminder_circle_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/reminder_circle_arrowImg"
                    android:layout_toRightOf="@+id/reminder_circle_title"
                    android:gravity="right"
                    android:paddingBottom="10dp"
                    android:paddingRight="7dp"
                    android:paddingTop="10dp"
                    android:textSize="@dimen/content_title_textsize" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>