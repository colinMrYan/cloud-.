<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf1f4"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <!-- android:background="@drawable/icon_work" -->

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/shape_header_bg" >

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:padding="11dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back_btn_black" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/work_calendar_text"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

        <LinearLayout
            android:id="@+id/cal_choose_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/add_event_img"
                 android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="17dp"
                android:paddingBottom="17dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:onClick="onClick"
                android:src="@drawable/ic_add" />

            <ImageView
                android:id="@+id/cal_config_img"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="11dp"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_config"  />
        </LinearLayout>
    </RelativeLayout>

    <com.inspur.emmcloud.widget.MySwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:background="@color/content_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_header" >
        <ExpandableListView
            android:id="@+id/expandable_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/color_list_divider"
            android:dividerHeight="0.5dp"
            android:listSelector="#00000000" />
    </com.inspur.emmcloud.widget.MySwipeRefreshLayout>

</RelativeLayout>