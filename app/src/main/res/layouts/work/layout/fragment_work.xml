<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/header_bg">


        <RelativeLayout
            android:id="@+id/work_header_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height">

            <ImageView
                android:id="@+id/iv_work_config2"
                android:layout_width="43dp"
                android:layout_height="@dimen/header_height"
                android:paddingRight="16dp"
                android:paddingLeft="5dp"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="?attr/ic_config" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="@string/work"
                android:textColor="?attr/header_text_color"
                android:textSize="@dimen/header_textsize_big"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/calendar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="14dp"
            android:paddingLeft="14dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/work_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:paddingLeft="2dp"
                android:textColor="?attr/header_text_color"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_work_config"
                android:layout_width="43dp"
                android:layout_height="@dimen/header_height"
                android:paddingRight="16dp"
                android:paddingLeft="5dp"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="?attr/ic_config" />
            <TextView
                android:id="@+id/work_chinesedate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/work_date_text"
                android:clickable="true"
                android:textColor="?attr/header_text_color"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/work_festvaldate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/work_chinesedate_text"
                android:layout_alignParentRight="true"
                android:paddingRight="17dp"
                android:textColor="?attr/header_text_color"
                android:textSize="14sp"
                android:visibility="invisible" />

        </RelativeLayout>
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_header"
        android:background="@color/content_bg">

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#00000000"
            android:dividerHeight="0dp"
            android:listSelector="#00000000"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scrollbars="none" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:id="@+id/rl_no_work_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_header"
        android:layout_centerInParent="true"
        android:background="#00000000"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_no_work_content"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_no_work_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_no_work_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="18dp"
            android:text="@string/no_work_content"
            android:textColor="#999999"
            android:textSize="16sp" />
    </RelativeLayout>
</RelativeLayout>