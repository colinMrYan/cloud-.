<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@android:color/white">

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout_schedule"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            app:tabTextAppearance="@style/ScheduleTabLayoutTextStyle"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            app:tabTextColor="#888888"
            app:tabSelectedTextColor="#333333"
            />

        <Button
            android:id="@+id/bt_today"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/ibt_add"
            android:text="30"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:paddingTop="1dp"
            android:gravity="center"
            android:textColor="#444444"
            android:scaleType="centerInside"
            android:background="@drawable/ic_schedule_today" />

        <ImageButton
            android:id="@+id/ibt_add"
            android:layout_width="42dp"
            android:layout_marginRight="6dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scaleType="centerInside"
            android:src="?attr/ic_add" />


    </RelativeLayout>
    <com.inspur.emmcloud.widget.CustomScrollViewPager
        android:id="@+id/view_pager_all_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
