<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/shape_header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:padding="11dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back_btn_black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/settings"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header"
        android:background="@color/white"
        android:paddingLeft="14dp">

        <TextView
            android:id="@+id/date_text"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/open_switch"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/work_info_text"
            android:paddingRight="25dp"
            android:textColor="#333333"
            android:textSize="17sp" />

        <com.inspur.emmcloud.widget.SwitchView
            android:id="@+id/date_open_switch"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="55dp"></com.inspur.emmcloud.widget.SwitchView>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/date_text"
            android:background="@color/color_list_divider"></View>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/date_layout"
        >
        <com.inspur.emmcloud.widget.dragsortlistview.DragSortListView
            android:id="@+id/work_setting_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#00000000"
            android:dividerHeight="0.5dp"
            android:listSelector="#00000000"/>
    </RelativeLayout>



</RelativeLayout>