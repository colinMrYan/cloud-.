<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    tools:context="com.inspur.emmcloud.MainActivity"
    tools:ignore="RtlHardcoded,HardcodedText,RtlSymmetry,SmallSp">
    <RelativeLayout
        android:id="@+id/rl_tool"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg">

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/work_schedule"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize_big" />

        <ImageView
            android:id="@+id/iv_schedule_function_list"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:scaleType="centerInside"
            android:src="?attr/ic_add" />
    </RelativeLayout>

    <EditText
        android:id="@+id/ev_schedule_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_schedule_search"
        android:gravity="center"
        android:textSize="13sp"
        android:hint="@string/work_search_hint"/>

    <com.inspur.emmcloud.widget.calendarview.CalendarLayout
        android:id="@+id/calendar_layout_schedule"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        app:default_status="shrink"
        app:calendar_content_view_id="@+id/ll_date_and_arrow">

        <com.inspur.emmcloud.widget.calendarview.CalendarView
            android:id="@+id/calendar_view_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            app:calendar_padding="10dp"
            app:current_month_text_color="#333333"
            app:current_month_lunar_text_color="#999999"
            app:lunar_text_size="8sp"
            app:min_year="1900"
            app:max_year="2099"
            app:other_month_text_color="#999999"
            app:other_month_lunar_text_color="#999999"
            app:scheme_text="假"
            app:scheme_text_color="#333"
            app:scheme_theme_color="#128c4b"
            app:selected_lunar_text_color="#FFFFFF"
            app:selected_text_color="#FFFFFF"
            app:selected_theme_color="#36A5F6"
            app:week_background="#F8F9FB"
            app:week_text_color="#999999"
            app:week_start_with="sun"
            app:week_view_scrollable="true"
            app:year_view_day_text_color="#333333"
            app:year_view_day_text_size="8sp"
            app:year_view_month_text_color="#ff0000"
            app:year_view_month_text_size="15sp"
            app:month_view_show_mode="mode_all"
            app:year_view_scheme_color="#f17706"
            app:calendar_height="36dp"
            />
        <LinearLayout
            android:id="@+id/ll_date_and_arrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_schedule_arrow"
                android:layout_width="28.4dp"
                android:layout_height="28.4dp"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_schedule_down"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_work_today_left_arrow_bg"
                    android:gravity="center"
                    android:layout_marginLeft="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/white"
                    android:text="今"/>
                <TextView
                    android:id="@+id/tv_schedule_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:paddingLeft="15dp"
                    android:paddingBottom="11dp"
                    />
            </LinearLayout>

            <!--<com.inspur.emmcloud.widget.calendarview.group.GroupRecyclerView-->
                <!--android:id="@+id/recycler_view"-->
                <!--app:group_background="@color/content_background"-->
                <!--app:group_center="false"-->
                <!--app:group_height="42dp"-->
                <!--app:group_has_header="false"-->
                <!--app:group_padding_left="16dp"-->
                <!--app:group_padding_right="16dp"-->
                <!--app:group_text_size="14sp"-->
                <!--app:group_text_color="#555555"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@color/content_background" />-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/content_background">
                <ListView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="#00000000"
                    android:dividerHeight="0dp"
                    android:listSelector="#00000000"
                    android:fadingEdge="none"
                    android:overScrollMode="never"

                    android:background="@color/content_background"
                    android:scrollbars="none" />
                <RelativeLayout
                    android:id="@+id/rl_no_work_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/rl_header"
                    android:layout_centerInParent="true"
                    android:background="#00000000"
                    android:gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_no_work_content"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_no_work_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_no_work_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="30dp"
                        android:layout_marginTop="18dp"
                        android:text="@string/no_work_content"
                        android:textColor="#999999"
                        android:textSize="16sp" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </com.inspur.emmcloud.widget.calendarview.CalendarLayout>
</LinearLayout>
