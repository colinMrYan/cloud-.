<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ecf1f4"
    android:fitsSystemWindows="true" >

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape_header_bg" >

        <TextView
            android:id="@+id/meeting_booking_cirform_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="20dp"
            android:text="@string/ok"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/meeting_booking_title"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/meetting_booking_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_layout"
        android:scrollbars="none" >

        <RelativeLayout
            android:id="@+id/meetting_booking_outlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_layout" >

            <RelativeLayout
                android:id="@+id/work_topic_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/text_layout_selector" >

                <!-- 点击变色android:background="@drawable/text_layout_selector" -->

                <TextView
                    android:id="@+id/meetting_topic_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="@string/meeting_topic_title"
                    android:textColor="#203b4f"
                    android:textSize="@dimen/content_title_textsize" />

                <LinearLayout
                    android:id="@+id/meetting_content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/meetting_topic_text"
                    android:orientation="horizontal"
                    android:paddingLeft="25dp" >

                    <EditText
                        android:id="@+id/meeting_booking_content_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/meetting_topic_text"
                        android:background="@null"
                        android:clickable="true"
                        android:gravity="center_vertical|right"
                        android:layout_gravity="right"
                        android:hint="@string/meeting_room_booking_topic"
                        android:paddingRight="25dp"
                        android:singleLine="true"
                        android:textSize="@dimen/content_title_textsize" />
                </LinearLayout>

                <View
                    android:id="@+id/work_bottom_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/meeting_booking_room_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/work_topic_layout"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick" >

                <!-- 点击变色android:background="@drawable/text_layout_selector" -->

                <TextView
                    android:id="@+id/meetting_room_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="@string/meeting_place"
                    android:textColor="#203b4f"
                    android:textSize="@dimen/content_title_textsize" />

                <LinearLayout
                    android:id="@+id/meetting_room_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:layout_toLeftOf="@+id/meetting_roomdetail_img"
                    android:layout_toRightOf="@id/meetting_room_text"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/meeting_booking_room_name_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:clickable="true"
                        android:gravity="right"
                        android:onClick="onClick"
                        android:paddingRight="5dp"
                        android:textSize="@dimen/content_title_textsize" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/meetting_roomdetail_img"
                    android:layout_width="8dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/icon_arrow_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/work_time_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/meeting_booking_room_layout"
                android:layout_marginTop="20dp"
                android:background="@drawable/text_layout_selector" >

                <!-- 点击变色android:background="@drawable/text_layout_selector" -->

                <TextView
                    android:id="@+id/meetting_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="@string/meeting_start_time"
                    android:textColor="#203b4f"
                    android:textSize="@dimen/content_title_textsize" />

                <TextView
                    android:id="@+id/meetting_fromto_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/meetting_time_text"
                    android:clickable="true"
                    android:gravity="right"
                    android:onClick="onClick"
                    android:visibility="gone"
                    android:paddingRight="15dp"
                    android:text="@string/please_click_choosing_time"
                    android:textColor="#c7c7cd"
                    android:textSize="@dimen/content_title_textsize" />

                <LinearLayout
                    android:id="@+id/meetting_time_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="31dp"
                    android:orientation="horizontal"
                     >

                    <TextView
                        android:id="@+id/meetting_from_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:paddingLeft="10dp"
                        android:text="@string/meeting_from"
                        android:visibility="gone"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/meeting_booking_begin_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:paddingLeft="10dp"
                        android:text="@string/meeting_start_time"
                        android:textColor="#ff24abe9"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/meetting_to_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:paddingLeft="10dp"
                        android:text="@string/meeting_to"
                        android:visibility="gone"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/meetting_endtime_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:paddingLeft="10dp"
                        android:text="@string/meeting_end_time"
                        android:textColor="#ff24abe9"
                        android:textSize="17sp"
                        android:visibility="gone" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_list_divider" />

                <TextView
                    android:id="@+id/meeting_booking_time_content_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="148dp"
                    android:background="@null"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:text="@string/meeting_choosing_date"
                    android:textColor="#ff24abe9"
                    android:textSize="17sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/work_end_time_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/work_time_layout"
                android:background="@drawable/text_layout_selector" >

                <!-- 点击变色android:background="@drawable/text_layout_selector" -->

                <TextView
                    android:id="@+id/meeting_end_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="@string/meeting_end_time"
                    android:textColor="#203b4f"
                    android:textSize="@dimen/content_title_textsize" />

                <TextView 
                    android:id="@+id/meeting_booking_end_time_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="148dp"
                    android:onClick="onClick"
                    android:clickable="true"
                    android:text="@string/meeting_choosing_date"
                    android:textColor="#ff24abe9"
                    android:textSize="@dimen/content_title_textsize"/>
                
                <TextView 
                    android:id="@+id/meeting_booking_end_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="31dp"
                    android:text="@string/meeting_end_time"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:textColor="#ff24abe9"
                    android:textSize="@dimen/content_title_textsize"/>
                

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/meeting_booking_member_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/work_end_time_layout"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick"
                android:paddingRight="5dp" >

                <!-- 点击变色android:background="@drawable/text_layout_selector" -->

                <TextView
                    android:id="@+id/meetting_member_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="@string/meeting_members"
                    android:textColor="#203b4f"
                    android:textSize="@dimen/content_title_textsize" />

                <LinearLayout
                    android:id="@+id/meeting_booking_member_content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/work_mem_img"
                    android:layout_toRightOf="@id/meetting_member_text"
                    android:gravity="right"
                    android:onClick="onClick"
                    android:orientation="horizontal"
                    android:paddingRight="5dp" >

                    <!-- 会议成员先不让点击 -->

                    <com.inspur.emmcloud.widget.CircleTextImageView
                        android:id="@+id/meeting_booking_member_head_img1"
                        android:layout_width="33.5dp"
                        android:layout_height="33.5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_launcher"
                        android:visibility="gone" />

                    <com.inspur.emmcloud.widget.CircleTextImageView
                        android:id="@+id/meeting_booking_member_head_img2"
                        android:layout_width="33.5dp"
                        android:layout_height="33.5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_launcher"
                        android:visibility="gone" />

                    <com.inspur.emmcloud.widget.CircleTextImageView
                        android:id="@+id/meeting_booking_member_head_img3"
                        android:layout_width="33.5dp"
                        android:layout_height="33.5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_launcher"
                        android:visibility="gone" />

                    <com.inspur.emmcloud.widget.CircleTextImageView
                        android:id="@+id/meeting_booking_member_head_img4"
                        android:layout_width="33.5dp"
                        android:layout_height="33.5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_launcher"
                        android:visibility="gone" />

                    <com.inspur.emmcloud.widget.CircleTextImageView
                        android:id="@+id/meeting_booking_member_head_img5"
                        android:layout_width="33.5dp"
                        android:layout_height="33.5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_launcher"
                        android:visibility="gone" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/work_mem_img"
                    android:layout_width="8dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/icon_arrow_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/meeting_booking_log_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/meeting_booking_member_layout"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick"
                android:paddingRight="5dp"
                android:visibility="gone" >

                <!-- 点击变色android:background="@drawable/text_layout_selector" -->

                <TextView
                    android:id="@+id/meeting_booking_log_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="@string/meeting_log"
                    android:textColor="#203b4f"
                    android:textSize="@dimen/content_title_textsize" />

                <LinearLayout
                    android:id="@+id/meeting_booking_member_log_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/meetting_memberlog_img"
                    android:layout_toRightOf="@id/meeting_booking_log_text"
                    android:gravity="right"
                    android:onClick="onClick"
                    android:orientation="horizontal"
                    android:paddingRight="5dp" >

                    <!-- 会议成员先不让点击 -->

                    <com.inspur.emmcloud.widget.CircleTextImageView
                        android:id="@+id/mession_memhead_img"
                        android:layout_width="33.5dp"
                        android:layout_height="33.5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_launcher"
                        android:visibility="gone" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/meetting_memberlog_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/icon_arrow_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="#33000000" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/meetting_agenda_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/meeting_booking_log_layout"
                android:layout_marginTop="20dp"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/meetting_agenda_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="@string/meeting_ageda"
                    android:textColor="#203b4f"
                    android:textSize="@dimen/header_textsize"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/meetting_agenda_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/icon_arrow_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="#33000000" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/meetting_doc_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/meetting_agenda_layout"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/meetting_doc_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="@string/docunment"
                    android:textColor="#203b4f"
                    android:textSize="@dimen/header_textsize"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/meetting_doc_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/icon_arrow_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="#33000000" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/meetting_summary_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/meetting_doc_layout"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/meetting_summary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="@string/meeting_summary"
                    android:textColor="#203b4f"
                    android:textSize="@dimen/header_textsize"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/meetting_summary_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/icon_arrow_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="#33000000" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/work_notice_layout"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_below="@id/meetting_summary_layout"
                android:layout_marginTop="20dp"
                android:background="@drawable/text_layout_selector" >

                <!-- 点击变色android:background="@drawable/text_layout_selector" -->

                <TextView
                    android:id="@+id/meetting_notice_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:text="@string/remark"
                    android:textColor="#203b4f"
                    android:textSize="@dimen/content_title_textsize" />

                <LinearLayout
                    android:id="@+id/meetting_notice_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/meetting_notice_text"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp" >

                    <EditText
                        android:id="@+id/meeting_booking_notice_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:clickable="true"
                        android:hint="@string/meeting_room_booking_notice_edit"
                        android:minLines="3"
                        android:paddingBottom="15dp"
                        android:paddingTop="7dp"
                        android:textSize="@dimen/header_textsize" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>