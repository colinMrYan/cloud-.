<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/text_layout_selector"
    tools:context=".MainActivity" >

    <View
        android:id="@+id/work_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/color_list_divider" />



    <LinearLayout
        android:id="@+id/meetting_nowstate_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="65dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/meeting_room_list_now_state_img"
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/icon_meeting_busy" />
    </LinearLayout>

    <TextView
        android:id="@+id/meeting_room_list_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:text="@string/meeting_room_number"
        android:layout_toLeftOf="@id/meetting_nowstate_layout"
        android:layout_alignParentLeft="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#929292"
        android:textSize="21sp" />
    <!-- android:textColor="#24ABE9" -->

    <LinearLayout
        android:id="@+id/meetting_daystate_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/meetting_nowstate_layout"
        android:orientation="horizontal"
        android:layout_marginRight="65dp"
        android:paddingTop="8dp" >

        <!-- android:paddingRight="40dp" -->

        <ImageView
            android:id="@+id/meeting_room_list_today_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/icon_meeting_empty" />

        <ImageView
            android:id="@+id/meeting_room_list_tommrow_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/icon_meeting_half" />

        <ImageView
            android:id="@+id/meeting_room_list_after_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="3dp"
            android:visibility="gone"
            android:src="@drawable/icon_meeting_full" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/meetting_equipment_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/meeting_room_list_number_text"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp" >

        <ImageView
            android:id="@+id/meetting_member_img"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/icon_meeting_people" />

        <TextView
            android:id="@+id/meeting_room_list_members_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:text="@string/meetting_members_num"
            android:textColor="#203b4f"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/meeting_room_list_equipment_img"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="16.6dp"
            android:src="@drawable/icon_meeting_projector"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/meeting_room_list_whiteboard_img"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/icon_white_board"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/meeting_room_list_phone_img"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/icon_meeting_phone"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/meeting_room_list_wifi_img"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/icon_meeting_wifi"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/meeting_room_list_next_img"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:src="@drawable/icon_meeting_right" />

</RelativeLayout>