<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ecf1f4"
    android:fitsSystemWindows="true" >

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/shape_header_bg" >

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/meeting_room_booking_detail"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

        <ImageView
            android:id="@+id/meetting_headhistory_img"
            android:layout_width="45dp"
            android:layout_height="43dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:src="@drawable/icon_meettingadd"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_header"
        android:background="@color/content_bg" >

        <RelativeLayout
            android:id="@+id/meettingsofroom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <ImageView
                android:id="@+id/meetting_listdate_img"
                android:layout_width="35dp"
                android:layout_height="23dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_meettinglistmon"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/meettingofroom_up_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/meetting_listdate_img"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/meeting_room_detail_location_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:gravity="right"
                    android:text="203"
                    android:textColor="#666666"
                    android:textSize="@dimen/header_textsize" />

                <TextView
                    android:id="@+id/meeting_room_detail_flour_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/meeting_room_detail_location_text"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:gravity="bottom"
                    android:text="11:00-12:00"
                    android:textColor="#555555"
                    android:textSize="21sp" />
            </RelativeLayout>

            <View
                android:id="@+id/meettingofroom_card_line"
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_below="@id/meettingofroom_up_layout"
                android:background="@color/color_list_divider"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/meettingofroom_people_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_below="@id/meettingofroom_up_layout"
                android:paddingLeft="3dp"
                android:paddingTop="3dp"
                android:src="@drawable/icon_meeting_people" />

            <TextView
                android:id="@+id/meeting_room_detail_topic_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/meettingofroom_up_layout"
                android:layout_toRightOf="@id/meettingofroom_people_icon"
                android:paddingBottom="5dp"
                android:paddingLeft="3dp"
                android:paddingTop="3dp"
                android:text="@string/remark"
                android:textColor="#8e8e8e"
                android:textSize="@dimen/content_smaller_textsize" />

            <ImageView
                android:id="@+id/meeting_room_detail_projector_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_below="@id/meettingofroom_up_layout"
                android:layout_marginLeft="16.6dp"
                android:layout_toRightOf="@id/meeting_room_detail_topic_text"
                android:paddingTop="3dp"
                android:src="@drawable/icon_meeting_projector"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/meettingofroom_video_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_below="@id/meettingofroom_up_layout"
                android:layout_toRightOf="@id/meeting_room_detail_projector_icon"
                android:paddingLeft="3dp"
                android:paddingTop="3dp"
                android:src="@drawable/icon_meeting_video"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/meeting_room_detail_wifi_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_below="@id/meettingofroom_up_layout"
                android:layout_toRightOf="@id/meettingofroom_video_icon"
                android:paddingLeft="3dp"
                android:paddingTop="3dp"
                android:src="@drawable/icon_meeting_wifi"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/meeting_room_detail_phone_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_below="@id/meettingofroom_up_layout"
                android:layout_toRightOf="@id/meeting_room_detail_wifi_icon"
                android:paddingLeft="3dp"
                android:paddingTop="3dp"
                android:src="@drawable/icon_meeting_phone"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_below="@id/meettingsofroom_layout"
            android:background="@color/color_list_divider" />

        <RelativeLayout
            android:id="@+id/date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view1"
            android:background="@color/white" >

            <RelativeLayout
                android:id="@+id/meeting_room_detail_before_day_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:onClick="onClick"
                android:paddingLeft="13dp"
                android:paddingRight="10dp" >

                <ImageView
                    android:id="@+id/before_day_img"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/btn_bue_left_arrow" />

                <TextView
                    android:id="@+id/before_day_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/before_day_img"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/meeting_day_before"
                    android:textColor="#0F7BCA"
                    android:textSize="14sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/meeting_room_detail_this_day_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingBottom="10dp"
                android:paddingLeft="13dp"
                android:paddingTop="10dp"
                android:textColor="#333333"
                android:textSize="17sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/meeting_room_detail_after_day_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:paddingRight="13dp" >

                <TextView
                    android:id="@+id/after_day_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/meeting_day_after"
                    android:textColor="#0F7BCA"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/after_day_img"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/after_day_text"
                    android:src="@drawable/btn_bue_right_arrow" />
            </RelativeLayout>
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/date_layout"
            android:background="@color/content_bg"
            android:paddingTop="5dp" />
    </RelativeLayout>

</RelativeLayout>