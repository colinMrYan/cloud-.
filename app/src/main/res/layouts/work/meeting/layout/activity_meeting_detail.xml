<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ecf1f4"
    android:fitsSystemWindows="true" >

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true"
        android:background="@color/header_bg" >

        <TextView
            android:id="@+id/meetting_bookingcirform_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="20dp"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="@dimen/header_textsize"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/meeting_booking_detail"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_textsize" />

        <ImageView
            android:id="@+id/meeting_detail_more_img"
            android:layout_width="57dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="20dp"
            android:paddingRight="17dp"
            android:paddingTop="3dp"
            android:src="@drawable/icon_meeting_more" />

        <TextView
            android:id="@+id/meeting_detail_cancel_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingTop="13dp"
            android:text="@string/cancel"
            android:textColor="#3BF1F8"
            android:textSize="17sp"
            android:visibility="gone" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/meetting_booking_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_layout"
        android:scrollbars="none" >

        <RelativeLayout
            android:id="@+id/meetting_booking_outlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_layout" >

            <RelativeLayout
                android:id="@+id/work_topic_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/text_layout_selector" >

                <!-- 点击变色android:background="@drawable/text_layout_selector" -->

                <TextView
                    android:id="@+id/meetting_topic_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="@string/meeting_topic_title"
                    android:textColor="#203b4f"
                    android:textSize="@dimen/content_title_textsize" />

                <LinearLayout
                    android:id="@+id/meetting_content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="31dp"
                    android:gravity="right"
                    android:layout_toRightOf="@id/meetting_topic_text"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/meeting_detail_content_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/meetting_topic_text"
                        android:background="@null"
                        android:ellipsize="end"
                        android:enabled="false"
                        android:gravity="left"
                        android:singleLine="false"
                        android:textColor="#333333"
                        android:textSize="@dimen/content_title_textsize" />
                </LinearLayout>

                <View
                    android:id="@+id/work_bottom_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/meeting_detail_room_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/work_topic_layout"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick" >

                <!-- 点击变色android:background="@drawable/text_layout_selector" -->

                <TextView
                    android:id="@+id/meetting_room_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="@string/meeting_place"
                    android:textColor="#203b4f"
                    android:textSize="@dimen/content_title_textsize" />

                <LinearLayout
                    android:id="@+id/meeting_detail_room_name_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/meetting_room_text"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="31dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/meeting_detail_room_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@null"
                        android:clickable="true"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:onClick="onClick"
                        android:textSize="@dimen/content_title_textsize" />
                </LinearLayout>

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/icon_arrow_right" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/work_time_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/meeting_detail_room_layout"
                android:layout_marginTop="20dp"
                android:background="@drawable/text_layout_selector" >

                <!-- 点击变色android:background="@drawable/text_layout_selector" -->

                <TextView
                    android:id="@+id/meetting_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="@string/meeting_start_time"
                    android:textColor="#203b4f"
                    android:textSize="@dimen/content_title_textsize" />

                <TextView
                    android:id="@+id/meeting_detail_begin_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="148dp"
                    android:background="@null"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:text="@string/meeting_choosing_date"
                    android:textColor="#ff24abe9"
                    android:textSize="@dimen/content_title_textsize" />

                <LinearLayout
                    android:id="@+id/meetting_time_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="31dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/meeting_detail_begin_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:text="@string/meeting_choosing_date"
                        android:textColor="#ff24abe9"
                        android:textSize="@dimen/content_title_textsize" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/work_end_time_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/work_time_layout"
                android:background="@drawable/text_layout_selector" >

                <!-- 点击变色android:background="@drawable/text_layout_selector" -->

                <TextView
                    android:id="@+id/meeting_end_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="@string/meeting_end_time"
                    android:textColor="#203b4f"
                    android:textSize="@dimen/content_title_textsize" />

                <TextView
                    android:id="@+id/meeting_detail_end_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="148dp"
                    android:background="@null"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:text="@string/meeting_choosing_date"
                    android:textColor="#ff24abe9"
                    android:textSize="@dimen/content_title_textsize" />

                <LinearLayout
                    android:id="@+id/meeting_end_time_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="31dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/meeting_detail_end_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:text="@string/meeting_choosing_date"
                        android:textColor="#ff24abe9"
                        android:textSize="@dimen/content_title_textsize" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/meeting_detail_member_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/work_end_time_layout"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick" >

                <!-- 点击变色android:background="@drawable/text_layout_selector" -->

                <TextView
                    android:id="@+id/meetting_member_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="@string/meeting_members"
                    android:textColor="#203b4f"
                    android:textSize="@dimen/content_title_textsize" /> 
                    <!-- 
                    <RelativeLayout 
                        android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">
                    <com.inspur.emmcloud.widget.HorizontalListView
                    android:id="@+id/meeting_head_images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     />
                    </RelativeLayout>
                 -->
 
                <LinearLayout
                    android:id="@+id/meeting_detail_member_content_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="31dp"
                    android:onClick="onClick"
                    android:orientation="horizontal" >

                    <!-- 会议成员先不让点击 -->
                    
                    
                    
                    
                    <com.inspur.emmcloud.widget.CircleTextImageView
                        android:id="@+id/meeting_detail_member_head_img1"
                        android:layout_width="33.5dp"
                        android:layout_height="33.5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_launcher"
                        android:visibility="gone" />
                    <com.inspur.emmcloud.widget.CircleTextImageView
                        android:id="@+id/meeting_detail_member_head_img2"
                        android:layout_width="33.5dp"
                        android:layout_height="33.5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_launcher"
                        android:visibility="gone" />
                    <com.inspur.emmcloud.widget.CircleTextImageView
                        android:id="@+id/meeting_detail_member_head_img3"
                        android:layout_width="33.5dp"
                        android:layout_height="33.5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_launcher"
                        android:visibility="gone" />
                    <com.inspur.emmcloud.widget.CircleTextImageView
                        android:id="@+id/meeting_detail_member_head_img4"
                        android:layout_width="33.5dp"
                        android:layout_height="33.5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_launcher"
                        android:visibility="gone" />
                    <com.inspur.emmcloud.widget.CircleTextImageView
                        android:id="@+id/meeting_detail_member_head_img5"
                        android:layout_width="33.5dp"
                        android:layout_height="33.5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_launcher"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/meetting_membercontent_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/meetting_topic_text"
                        android:background="@null"
                        android:editable="false"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:maxLines="1"
                        android:onClick="onClick"
                        android:textSize="@dimen/header_textsize" />
                </LinearLayout>

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/icon_arrow_right" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/work_log_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/meeting_detail_member_layout"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick"
                android:visibility="gone" >

                <!-- 点击变色android:background="@drawable/text_layout_selector" -->

                <TextView
                    android:id="@+id/meetting_log_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="@string/meeting_log"
                    android:textColor="#203b4f"
                    android:textSize="@dimen/content_title_textsize" />

                <LinearLayout
                    android:id="@+id/meetting_memberlog_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="260dp"
                    android:layout_toRightOf="@id/meetting_log_text"
                    android:onClick="onClick"
                    android:orientation="horizontal" >

                    <!-- 会议成员先不让点击 -->

                    <com.inspur.emmcloud.widget.CircleTextImageView
                        android:id="@+id/mession_memhead_img"
                        android:layout_width="33.5dp"
                        android:layout_height="33.5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_launcher"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/meeting_detial_member_log_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/meetting_topic_text"
                        android:layout_marginLeft="35dp"
                        android:background="@null"
                        android:editable="false"
                        android:focusable="false"
                        android:onClick="onClick"
                        android:textSize="@dimen/header_textsize" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/meetting_agenda_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/work_log_layout"
                android:layout_marginTop="20dp"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/meetting_agenda_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="@string/meeting_ageda"
                    android:textColor="#203b4f"
                    android:textSize="@dimen/content_title_textsize" />

                <ImageView
                    android:id="@+id/meetting_agenda_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/icon_arrow_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/meetting_doc_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/meetting_agenda_layout"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/meetting_doc_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="@string/docunment"
                    android:textColor="#203b4f"
                    android:textSize="@dimen/content_title_textsize" />

                <ImageView
                    android:id="@+id/meetting_doc_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/icon_arrow_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/meetting_summary_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/meetting_doc_layout"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/meetting_summary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="@string/meeting_summary"
                    android:textColor="#203b4f"
                    android:textSize="@dimen/content_title_textsize"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/meetting_summary_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/icon_arrow_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/work_notice_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/meetting_summary_layout"
                android:layout_marginTop="20dp"
                android:background="@drawable/text_layout_selector" >

                <!-- 点击变色android:background="@drawable/text_layout_selector" -->

                <TextView
                    android:id="@+id/meetting_notice_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="11dp"
                    android:text="@string/remark"
                    android:textColor="#203b4f"
                    android:textSize="@dimen/content_title_textsize" />

                <LinearLayout
                    android:id="@+id/meetting_notice_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/meetting_notice_text"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp" >

                    <EditText
                        android:id="@+id/meeting_notice_name_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:enabled="false"
                        android:minLines="3"
                        android:paddingBottom="15dp"
                        android:paddingTop="7dp"
                        android:textColor="#333333"
                        android:textSize="@dimen/content_title_textsize" />
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/meeting_detail_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:onClick="onClick"
        android:text="@string/meeting_detail_save"
        android:textColor="#4A90E2"
        android:textSize="17sp"
        android:visibility="gone" />

</RelativeLayout>