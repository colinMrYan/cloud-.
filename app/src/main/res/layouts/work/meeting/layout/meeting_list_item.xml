<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/work_expand_layout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/work_epandinner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/meettinglist_layout_selector"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <ImageView
            android:id="@+id/meeting_list_date_img"
            android:layout_width="35dp"
            android:layout_height="23dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_meettinglistmon"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/meetting_listtime_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/meeting_list_date_img" >

            <TextView
                android:id="@+id/meeting_list_duration_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="5dp"
                android:text="11:00-12:00"
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/meeting_list_room_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="203"
                android:textColor="#999999"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/meeting_list_topic_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/meetting_listtime_layout"
            android:layout_below="@id/meetting_listtime_layout"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/meeting_list_topic"
            android:textColor="#203b4f"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/meeting_list_notice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/meeting_list_topic_text"
            android:layout_below="@id/meeting_list_topic_text"
            android:paddingBottom="18dp"
            android:paddingTop="8dp"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="@string/remark"
            android:textColor="#FFA5A5A5" />
    </RelativeLayout>

    <View
        android:id="@+id/meetting_card_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="17dp"
        android:layout_below="@id/work_epandinner_layout"
        android:background="#22000000" />

</RelativeLayout>