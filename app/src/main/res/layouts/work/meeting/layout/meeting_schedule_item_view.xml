<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:paddingLeft="22dp"
    android:paddingRight="22dp" >

    <LinearLayout
        android:id="@+id/meeting_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="31dp"
        android:background="@drawable/shape_round_layout"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="33dp" >

            <TextView
                android:id="@+id/meeting_time_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="13dp"
                android:textColor="#333333"
                android:gravity="center_vertical"
                android:textSize="@dimen/content_title_textsize" />

            <TextView
                android:id="@+id/meeting_order_name_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                 android:gravity="center_vertical"
                android:paddingRight="13dp"
                android:textColor="#333333"
                android:textSize="@dimen/content_title_textsize" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/color_list_divider"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="66dp" >

            <TextView
                android:id="@+id/meeting_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:textColor="#333333"
                android:textSize="@dimen/content_title_textsize" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <View
            android:layout_width="1dp"
            android:layout_height="49dp"
            android:background="#999999" />

        <ImageView
            android:id="@+id/point_img"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:src="@drawable/icon_grey_point" />

        <View
            android:layout_width="1dp"
            android:layout_height="49dp"
            android:background="#999999" />
    </LinearLayout>

</RelativeLayout>