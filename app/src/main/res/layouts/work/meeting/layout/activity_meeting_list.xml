<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="#ecf1f4" >

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/shape_header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:padding="11dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back_btn_black" />


        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/meeting"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />
        
        
         <ImageView
            android:id="@+id/meeting_list_add_img"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
             android:onClick="onClick"
            android:scaleType="centerInside"
            android:src="@drawable/icon_add" />
         <ImageView
            android:id="@+id/meeting_list_history_img"
           android:layout_width="47dp"
            android:layout_height="match_parent"
             android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/meeting_list_add_img"
            android:clickable="true"
            android:onClick="onClick"
            android:scaleType="centerInside"
            android:src="@drawable/icon_meeting_history" />
    </RelativeLayout>
    


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/content_bg"
        android:layout_below="@id/rl_header" >


        <ExpandableListView
             android:id="@+id/expandable_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:listSelector="#00000000" />

    </android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout
        android:id="@+id/meeting_list_out_layout"
        android:visibility="gone"
        android:gravity="center"
        android:layout_below="@id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_no_meeting" />

        <Button
            android:id="@+id/meeting_list_btn"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_find_friends"
            android:enabled="true"
            android:onClick="onClick"
            android:text="@string/meeting_add_meeting"
            android:textColor="#107BCB"
            android:textSize="18sp" >
        </Button>
    </LinearLayout>

 
 
 
 
</RelativeLayout>