<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:segmentcontrol="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/content_bg"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/meeting_booking_detail"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

        <ImageView
            android:id="@+id/iv_meeting_detail_more"
            android:layout_width="38dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingRight="16dp"
            android:src="@drawable/iocn_organizational_structure_detail" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@id/rl_header">

        <RelativeLayout
            android:id="@+id/rl_meeting_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/iv_title_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/icon_username" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_title_icon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_meeting_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="召开供应链产品专题研讨会"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_meeting_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="时间：5月16日 周四 10:00 - 11:30"
                    android:textColor="#333333"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_meeting_remind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="提醒：提前30分钟"
                    android:textColor="#333333"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_meeting_distribution"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我分配的"
                        android:textColor="#339EEC"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="12dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="#D8D8D8" />

                    <TextView
                        android:id="@+id/tv_meeting_create"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5月15日 9:00 创建"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_meeting_attendee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_below="@id/rl_meeting_title"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_attendee_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/icon_username" />

            <TextView
                android:id="@+id/tv_attendee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="12dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_attendee_icon"
                android:text="参会人:张三等6人" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_arrow_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_alignLeft="@id/tv_attendee"
                android:layout_below="@id/tv_attendee"
                android:background="#DDDDDD" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_meeting_record_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_below="@id/rl_meeting_attendee">

            <ImageView
                android:id="@+id/iv_record_holder_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/icon_username" />

            <TextView
                android:id="@+id/tv_meeting_record_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="12dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_record_holder_icon"
                android:text="会议记录人:李萍" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_arrow_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_alignLeft="@id/tv_meeting_record_holder"
                android:layout_below="@id/tv_meeting_record_holder"
                android:background="#DDDDDD" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_meeting_conference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_below="@id/rl_meeting_record_holder">

            <ImageView
                android:id="@+id/iv_conference_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/icon_username" />

            <TextView
                android:id="@+id/tv_meeting_conference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="12dp"
                android:layout_toRightOf="@+id/iv_conference_icon"
                android:text="会议联络人:李萍" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_arrow_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_alignLeft="@id/tv_meeting_conference"
                android:layout_below="@id/tv_meeting_conference"
                android:background="#DDDDDD" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_meeting_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_meeting_conference">

            <ImageView
                android:id="@+id/iv_note_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignTop="@id/tv_meeting_note"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/icon_username" />

            <TextView
                android:id="@+id/tv_meeting_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="30dp"
                android:layout_toRightOf="@+id/iv_note_icon"
                android:text="着装要求：男士要求着深色正装，白色衬衣，佩戴领带，女士要求尽量正装出席" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_below="@id/tv_meeting_note"
                android:layout_alignLeft="@id/tv_meeting_note"
                android:background="#DDDDDD" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_meeting_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_below="@id/rl_meeting_note">

            <ImageView
                android:id="@+id/iv_sign_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/icon_username" />

            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="12dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_sign_icon"
                android:text="会议签到" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_arrow_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_below="@id/tv_sign"
                android:layout_alignLeft="@id/tv_sign"
                android:background="#DDDDDD" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_meeting_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_below="@+id/rl_meeting_sign">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#37A3F3"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="14dp"
                android:layout_centerInParent="true"
                android:text="十 添加会议纪要"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>