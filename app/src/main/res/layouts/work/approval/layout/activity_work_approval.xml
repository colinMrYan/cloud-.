<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/shape_header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:padding="11dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back_btn_black" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/work_approval_head_text"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

        <ImageView
            android:id="@+id/work_approval_set"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="18dp"
            android:paddingRight="17dp"
            android:paddingTop="18dp"
            android:src="@drawable/icon_work_approval_set" />
    </RelativeLayout>

    <com.inspur.emmcloud.widget.MySwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header"
        android:background="@color/white">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/work_all_approval_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"/>
    </com.inspur.emmcloud.widget.MySwipeRefreshLayout>

</RelativeLayout>