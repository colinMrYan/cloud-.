<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/shape_header_bg">
        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:padding="11dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/disk"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

        <ImageView
            android:id="@+id/work_approval_set_order_img"
            android:layout_width="39dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:paddingLeft="7dp"
            android:paddingRight="13dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_my_common_office_order" />

        <TextView
            android:id="@+id/work_approval_set_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:gravity="center"
            android:paddingRight="13dp"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_function_textsize"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:text="@string/ok"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header"
        android:background="@color/white" >
        <com.inspur.emmcloud.widget.dragsortlistview.DragSortListView
            android:id="@+id/work_approval_set_sort_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:choiceMode="multipleChoice"
            android:divider="#33000000"
            android:listSelector="#00000000"/>
        <ImageView
            android:id="@+id/work_approval_set_empty_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:src="@drawable/no_office_space"
            android:visibility="gone" />
    </RelativeLayout>


</RelativeLayout>