<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:segmentcontrol="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true" >

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg_color" >

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/settings"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

        <TextView
            android:id="@+id/mession_settiing_txt"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:onClick="onClick"
            android:gravity="center_vertical"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize"
             />
    </RelativeLayout>

    <TextView
        android:id="@+id/mession_order_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/mession_set_order"
        android:textColor="#FF666666"
        android:textSize="@dimen/content_normal_textsize" />

    <ListView
        android:id="@+id/mession_set_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode ="singleChoice"
        android:layout_below="@id/mession_order_text"
        android:divider="@null" />
    
    <ListView
        android:id="@+id/mession_setorder_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode ="singleChoice"
        android:layout_below="@id/mession_set_list"
        android:divider="@null" />

    <TextView
        android:id="@+id/mession_clean_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mession_setorder_list"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/mession_set_filter"
        android:textColor="#FF666666"
        android:textSize="@dimen/content_normal_textsize" />

    <RelativeLayout
        android:id="@+id/mession_tag_layout"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_below="@id/mession_clean_text"
        android:background="#FFFFFFFF" >

        <com.inspur.emmcloud.widget.tag.TagListView
            xmlns:f="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mession_tagview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/common_margin"
            android:paddingLeft="@dimen/common_margin"
            android:paddingRight="@dimen/common_margin"
            android:paddingTop="16.0dip"
            f:horizontalSpacing="@dimen/tag_horizontal_spacing"
            f:orientation="horizontal"
            f:verticalSpacing="@dimen/tag_vertical_spacing" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mession_manage_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:clickable="true"
        android:layout_below="@id/mession_tag_layout"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_layout_selector" >

        <View
            android:id="@+id/work_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33000000" />

        <TextView
            android:id="@+id/mession_set_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/work_bottom_line"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/mession_manage_tag"
            android:textSize="@dimen/content_title_textsize" />

        <LinearLayout
            android:id="@+id/mession_messionstate_layout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/mession_ring_img"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/right_arrow" />
        </LinearLayout>
        
        <View
            android:id="@+id/mession_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#33000000" />
    </RelativeLayout>
    
    
        <RelativeLayout
        android:id="@+id/mession_finish_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:clickable="true"
        android:onClick="onClick"
        android:layout_below="@id/mession_manage_layout"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_layout_selector" >

        <View
            android:id="@+id/work_finishbottom_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33000000" />

        <TextView
            android:id="@+id/mession_finish_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/work_finishbottom_line"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/mession_set_has_finished"
            android:textSize="@dimen/content_title_textsize" />

        <LinearLayout
            android:id="@+id/mession_messionfinishstate_layout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/mession_finishring_img"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/right_arrow" />
        </LinearLayout>
        
        <View
            android:id="@+id/mession_finishbottom_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#33000000" />
    </RelativeLayout>

</RelativeLayout>