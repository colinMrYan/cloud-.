<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:segmentcontrol="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true" >

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/shape_header_bg">

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/mession_add_tag"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

        <TextView
            android:id="@+id/mession_settiing_txt"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:onClick="onClick"
            android:clickable="true"
            android:gravity="center_vertical"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize"
            android:text="@string/save" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mession_tagname_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/header_layout"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_layout_selector"
        android:clickable="true" >

        <View
            android:id="@+id/work_up_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33000000" />

        <EditText
            android:id="@+id/mession_tagname_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/work_up_line"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:hint="@string/mession_full_tag"
            android:background="@null"
            android:textColor="#FF4A90E2"
            android:textSize="@dimen/content_title_textsize" />



        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#33000000" />
    </RelativeLayout>

    <TextView
        android:id="@+id/mession_order_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mession_tagname_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/mession_color_tag"
        android:textColor="#FF666666"
        android:textSize="@dimen/content_normal_textsize" />

    <ListView
        android:id="@+id/mession_tag_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        android:layout_below="@id/mession_order_text"
        android:divider="@null" />

    <RelativeLayout
        android:id="@+id/mession_manage_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/mession_tag_list"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_layout_selector"
        android:clickable="true" >

        <View
            android:id="@+id/work_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33000000" />

        <TextView
            android:id="@+id/mession_set_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/work_bottom_line"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/mession_delete_the_tag"
            android:textColor="#FFFE3824"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/content_title_textsize" />



        <View
            android:id="@+id/mession_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#33000000" />
    </RelativeLayout>

</RelativeLayout>