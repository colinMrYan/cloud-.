<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    tools:context="com.inspur.emmcloud.MainActivity"
    tools:ignore="RtlHardcoded,HardcodedText,RtlSymmetry,SmallSp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/iv_task_no_result"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_task_default"/>

        <TextView
            android:id="@+id/tv_no_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_task_no_result"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/content_title_textsize"
            android:text="@string/schedule_task_no_task_today"
            android:textColor="#666666"/>

        <com.inspur.emmcloud.widget.MySwipeRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <ListView
                android:id="@+id/lv_task"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dividerHeight="0.5px"
                android:divider="@color/color_list_divider"
                 />
        </com.inspur.emmcloud.widget.MySwipeRefreshLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_no_search_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/segment_control"
        android:layout_marginBottom="100dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone" >

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_login_btn_nor"
            android:onClick="onClick"
            android:text="@string/mession_reset"
            android:textColor="#ffffff"
            android:textSize="18sp" >
        </Button>

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_login_btn_nor"
            android:onClick="onClick"
            android:text="@string/mession_cancel"
            android:textColor="#ffffff"
            android:textSize="18sp" >
        </Button>
    </LinearLayout>
</RelativeLayout>
