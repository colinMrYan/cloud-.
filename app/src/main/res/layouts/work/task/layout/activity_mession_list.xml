<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:segmentcontrol="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/shape_header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:padding="11dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back_btn_black" />
        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/mession_list"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

        <ImageView
            android:id="@+id/mession_settiing_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="13dp"
            android:paddingLeft="12dp"
            android:paddingRight="15dp"
            android:paddingTop="13dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_config" />
    </RelativeLayout>

    <com.inspur.emmcloud.widget.SegmentControl
        android:id="@+id/segment_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:textSize="13sp"
        segmentcontrol:cornerRadius="5dip"
        segmentcontrol:direction="horizon"
        segmentcontrol:horizonGap="30dip"
        segmentcontrol:selectedBackgroundColors="#FF0F7BCA"
        segmentcontrol:selectedIndex="0"
        segmentcontrol:texts="@string/mession_types"
        segmentcontrol:verticalGap="8dip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/segment_control"
        android:layout_marginTop="8dp"
        android:layout_weight="1" >

        <com.inspur.emmcloud.widget.MySwipeRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <ListView
                android:id="@+id/mession_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dividerHeight="0.5dp"
                android:divider="@color/color_list_divider"
                android:transcriptMode="normal" />

        </com.inspur.emmcloud.widget.MySwipeRefreshLayout>


        <TextView
            android:id="@+id/mession_no_result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/content_title_textsize"
            android:text="@string/work_notask_text"
            android:textColor="@color/grey_line_color"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/nosearch_result_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/segment_control"
        android:layout_marginBottom="100dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone" >

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_login_btn_nor"
            android:onClick="onClick"
            android:text="@string/mession_reset"
            android:textColor="#ffffff"
            android:textSize="18sp" >
        </Button>

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_login_btn_nor"
            android:onClick="onClick"
            android:text="@string/mession_cancel"
            android:textColor="#ffffff"
            android:textSize="18sp" >
        </Button>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mession_add_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@drawable/text_layout_selector"
        android:clickable="false" >

        <EditText
            android:id="@+id/mession_add_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:hint="@string/mession_add_mession"
            android:textSize="@dimen/content_title_textsize" />

        <ImageView
            android:id="@+id/mession_add_img"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:onClick="onClick"
            android:src="@drawable/icon_mession_add_task" />
    </RelativeLayout>

</LinearLayout>