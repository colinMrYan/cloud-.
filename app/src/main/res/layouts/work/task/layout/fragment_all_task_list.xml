<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    tools:context="com.inspur.emmcloud.MainActivity"
    tools:ignore="RtlHardcoded,HardcodedText,RtlSymmetry,SmallSp">
    <RelativeLayout
        android:id="@+id/rl_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="?attr/header_bg">

        <TextView
            android:id="@+id/tv_schedule_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="全部"/>

        <View
            android:id="@+id/v_schedule_line"
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/tv_schedule_all"
            android:layout_centerVertical="true"
            android:background="#333333"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_schedule_task"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/v_schedule_line"
            app:tabGravity="fill"
            app:tabMode="scrollable"
            app:tabTextAppearance="@style/ScheduleTaskTabLayoutTextStyle"
            app:tabTextColor="#333333"
            app:tabSelectedTextColor="#333333"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_tab_layout"
         >
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_calendar_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </RelativeLayout>

</RelativeLayout>
