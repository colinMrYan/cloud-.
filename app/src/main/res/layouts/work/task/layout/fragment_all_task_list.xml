<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    tools:context="com.inspur.emmcloud.MainActivity"
    tools:ignore="RtlHardcoded,HardcodedText,RtlSymmetry,SmallSp">
    <RelativeLayout
        android:id="@+id/rl_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#F8F9FB">

        <RelativeLayout
            android:id="@+id/rl_all_task"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:paddingLeft="16dp">
            <TextView
                android:id="@+id/tv_schedule_all"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/work_task_all"/>
            <View
                android:id="@+id/v_all_task"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_alignLeft="@id/tv_schedule_all"
                android:layout_alignRight="@id/tv_schedule_all"
                android:background="#36A5F6"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>


        <View
            android:id="@+id/v_schedule_line"
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/rl_all_task"
            android:layout_centerVertical="true"
            android:background="#333333"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_schedule_task"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/v_schedule_line"
            app:tabGravity="fill"
            app:tabMode="scrollable"
            app:tabTextAppearance="@style/ScheduleTaskTabLayoutTextStyle"
            app:tabTextColor="#333333"
            app:tabSelectedTextColor="#333333"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_below="@id/rl_tab_layout"
        android:background="#F2F2F2"
         >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:background="@drawable/bg_task_search">
            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="6dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_task_search" />

            <com.inspur.emmcloud.widget.ClearEditText
                android:id="@+id/ev_search"
                android:layout_toRightOf="@id/iv_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:hint="@string/search"
                android:background="@null"
                android:textColor="#333333"
                android:imeOptions="actionSearch"
                android:textSize="13sp">
                <requestFocus />
            </com.inspur.emmcloud.widget.ClearEditText>
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_search_layout"
         >
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_calendar_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"/>


    </RelativeLayout>

</RelativeLayout>
