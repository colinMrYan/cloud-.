<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/starred_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.inspur.emmcloud.widget.SquareLayout
        android:id="@+id/square_layout"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

       <com.inspur.emmcloud.widget.CircleTextImageView
        android:id="@+id/member_head_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />
    </com.inspur.emmcloud.widget.SquareLayout>
    

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/square_layout"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textColor="#FF333333"
        android:textSize="@dimen/content_smaller_textsize" />

</RelativeLayout>