<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/shape_header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:padding="11dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back_btn_black" />

        <ImageView
            android:id="@+id/iv_config"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:paddingRight="16dp"
            android:paddingLeft="5dp"
            android:onClick="onClick"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="?attr/ic_config" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@id/iv_config"
            android:layout_toRightOf="@id/ibt_back"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/robot_photo_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:visibility="gone"
            />
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/content_bg"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.inspur.emmcloud.widget.RecycleViewForSizeChange
                android:id="@+id/msg_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="beforeDescendants"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:listSelector="#00000000"
                android:scrollbarStyle="insideInset"
                android:scrollbars="none" />

        </RelativeLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

    <com.inspur.emmcloud.widget.ECMChatInputMenu
        android:id="@+id/chat_input_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.inspur.emmcloud.widget.ECMChatInputMenu>

</LinearLayout>