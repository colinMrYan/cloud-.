<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_member_select_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:focusable="false"
        android:focusableInTouchMode="false" >

        <com.inspur.emmcloud.widget.CircleTextImageView
            android:id="@+id/img_user_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_member_selected"
            android:layout_toRightOf="@id/img_user_head"
            android:ellipsize="end"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:singleLine="true"
            android:textColor="#030303"
            android:textSize="@dimen/content_title_textsize" />

        <ImageView
            android:id="@+id/img_member_selected"
            android:layout_width="53dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:padding="16dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="60dp"
            android:background="@color/color_list_divider_tran" />
    </RelativeLayout>

</LinearLayout>