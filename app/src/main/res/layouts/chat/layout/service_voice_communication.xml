<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_voice_communication_round"
    >

    <ImageButton
        android:id="@+id/img_btn_voice_window"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="27dp"
        android:clickable="false"
        android:layout_centerHorizontal="true"
        android:background="@drawable/icon_void_commucation_back"
        />
    <Chronometer
        android:id="@+id/chronometer_voice_communication_time"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_btn_voice_window"
        android:layout_marginTop="8dp"
        android:textColor="#0F7BCA"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
