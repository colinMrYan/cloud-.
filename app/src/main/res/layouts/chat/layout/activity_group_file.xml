<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true" >

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/shape_header_bg" >

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back_btn_black" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/login_group_file"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_order_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header"
        android:background="#ffffff"
        >

        <TextView
            android:id="@+id/tv_order_by_name_asc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_volume_menu_drop_down"
            android:onClick="onClick"
            android:padding="12dp"
            android:text="@string/clouddriver_sort_by_name_asc"
            android:textColor="#666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_filter_by_file_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawableRight="@drawable/ic_volume_menu_drop_down"
            android:onClick="onClick"
            android:padding="12dp"
            android:text="@string/file_type"
            android:textColor="#666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_multi_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:onClick="onClick"
            android:padding="12dp"
            android:text="@string/clouddriver_multi_select"
            android:textColor="#666666"
            android:textSize="15sp" />

        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/tv_order_by_name_asc"
            android:background="@color/color_list_divider" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_order_by"
        android:background="#FFECEFF3" >

        <ListView
            android:id="@+id/lv_file"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="0dp"
            android:divider="@null"
            >
        </ListView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_no_channel_file"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_below="@id/rl_order_by"
        android:background="#00000000"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_no_channel_file"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_no_work_content" />

        <TextView
            android:layout_below="@id/iv_no_channel_file"
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="@string/no_channel_file"
            android:textColor="#999999"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
</RelativeLayout>