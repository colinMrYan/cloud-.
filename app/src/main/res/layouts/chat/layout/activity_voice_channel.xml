<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/content_bg">

    </RelativeLayout>

    <!--<Button-->
        <!--android:id="@+id/btn_add_member"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/header_layout"-->
        <!--android:onClick="onClick"-->
        <!--android:text="打开选择人员界面" />-->
    <LinearLayout
        android:id="@+id/ll_voice_communication_invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/header_layout">
        <com.inspur.emmcloud.widget.CircleTextImageView
            android:id="@+id/img_user_head"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/icon_hung_up"
             />
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="21dp"
            android:textColor="#333333"
            android:text="周祥国"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_invite_voice_communication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:textColor="#333333"
            android:text="@string/voice_communication_invite_you"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_voice_communication_invite_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_layout"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_voice_communication_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:overScrollMode="never" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_voice_communication_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/recyclerview_voice_communication_first"
            android:overScrollMode="never"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_voice_communication_memebers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_above="@id/tv_voice_communication_state"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="#333333"
            android:text="@string/voice_communication_members"
            android:layout_gravity="center_horizontal"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_voice_communication_memebers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:overScrollMode="never"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_voice_communication_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/tv_voice_communication_time"
        android:textColor="#333333"
        android:textSize="16sp"
        android:text="当前通话质量不佳"/>
    <!--<TextView-->
        <!--android:id="@+id/tv_voice_communication_time"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_above="@id/ll_voice_communication_function_group"-->
        <!--android:layout_marginBottom="38dp"-->
        <!--android:textColor="#333333"-->
        <!--android:textSize="16sp"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:text="00:02"/>-->

    <Chronometer
        android:id="@+id/tv_voice_communication_time"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_voice_communication_function_group"
        android:layout_marginBottom="38dp"
        android:textColor="#333333"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:text="Chronometer" />

    <LinearLayout
        android:id="@+id/ll_voice_communication_function_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/rl_voice_communication_operate"
        android:layout_marginBottom="35dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_an_excuse"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:padding="2dp"
                android:onClick="onClick"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_excuse_unselected"/>
            <TextView
                android:id="@+id/tv_an_excuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#333333"
                android:text="@string/voice_communication_excuse"
                android:textSize="13sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_hands_free"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:padding="2dp"
                android:onClick="onClick"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_hands_free_unselected"/>
            <TextView
                android:id="@+id/tv_hands_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#333333"
                android:text="@string/voice_communication_hands_free"
                android:textSize="13sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_mute"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:padding="2dp"
                android:onClick="onClick"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_mute_unselcected"/>
            <TextView
                android:id="@+id/tv_mute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#333333"
                android:text="静音"
                android:textSize="13sp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_tran_video"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:padding="2dp"
                android:onClick="onClick"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_trans_video"/>
            <TextView
                android:id="@+id/tv_tran_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#333333"
                android:text="@string/voice_communication_tran_video"
                android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_voice_communication_operate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true">

        <com.inspur.emmcloud.widget.CircleTextImageView
            android:id="@+id/img_hung_up"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:onClick="onClick"
            android:src="@drawable/icon_hung_up"
            />

        <com.inspur.emmcloud.widget.CircleTextImageView
            android:id="@+id/img_answer_the_phone"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginLeft="100dp"
            android:visibility="gone"
            android:onClick="onClick"
            android:layout_toRightOf="@id/img_hung_up"
            android:src="@drawable/icon_answer_the_phone"
            />
    </RelativeLayout>


</RelativeLayout>