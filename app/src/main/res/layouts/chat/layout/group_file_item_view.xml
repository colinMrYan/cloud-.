<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/file_img"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/icon_file_word" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18.5dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/file_img"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="13dp" >

        <TextView
            android:id="@+id/tv_file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#FF444444"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" >

            <TextView
                android:id="@+id/tv_file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#FFA9A9A9"
                android:textSize="@dimen/content_small_textsize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_file_size"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/file_owner_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="6dp"
                    android:textColor="#FF444444"
                    android:textSize="@dimen/content_small_textsize" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="6dp"
                    android:text="@string/upload_at"
                    android:textColor="#FF444444"
                    android:textSize="@dimen/content_small_textsize" />

                <TextView
                    android:id="@+id/file_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-4-26"
                    android:textColor="#FF444444"
                    android:textSize="@dimen/content_small_textsize" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <com.inspur.emmcloud.widget.HorizontalProgressBarWithNumber
        android:id="@+id/file_download_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="25dp" />

</RelativeLayout>