<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.inspur.emmcloud.widget.CircleTextImageView
        android:id="@+id/img_voice_communication_member_head"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_app_default"
        />
    <TextView
        android:id="@+id/tv_invite_voice_communication_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:layout_below="@id/img_voice_communication_member_head"/>
    <ImageView
        android:id="@+id/img_voice_signal"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignBottom="@id/img_voice_communication_member_head"
        android:layout_alignRight="@id/img_voice_communication_member_head"
        />
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi_voice_communication"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        app:indicatorColor="#ffffff"
        app:indicatorName="BallPulseIndicator" />
</RelativeLayout>