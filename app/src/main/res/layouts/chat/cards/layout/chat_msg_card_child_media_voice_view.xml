<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_corrected_speech_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="6dp"
        android:textColor="#0F7BCA"
        android:textSize="15sp"
        android:visibility="gone"
        android:text="@string/corrected_word_input"
         />

    <com.qmuiteam.qmui.widget.QMUILoadingView
        android:id="@+id/qlv_downloading_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:color="#666666"
        android:visibility="gone"
        app:qmui_loading_view_size="18dp" />

    <TextView
        android:id="@+id/tv_duration_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="6dp"
        android:textColor="#3f3f3f"
        android:textSize="15sp"
        android:visibility="gone" />

    <com.inspur.emmcloud.widget.bubble.BubbleLayout
        android:id="@+id/bl_voice"
        app:bl_arrowDirection="right"
        app:bl_arrowHeight="10dp"
        app:bl_arrowPosition="16dp"
        app:bl_cornersRadius="8dp"
        app:bl_arrowWidth="4.5dp"
        app:bl_strokeColor="#AAAAAA"
        app:bl_strokeWidth="0.5px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            >

            <View
                android:id="@+id/v_voice_anim_left"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_chat_msg_card_voice_left_level_3" />
            <TextView
                android:id="@+id/tv_voice_card_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="210dp"
                android:minWidth="55dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/v_voice_anim_left"
                android:paddingLeft="10dp" />

            <View
                android:id="@+id/v_voice_anim_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                android:layout_toRightOf="@id/tv_voice_card_word"
                android:layout_marginTop="11dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_chat_msg_card_voice_left_level_3" />
        </RelativeLayout>
    </com.inspur.emmcloud.widget.bubble.BubbleLayout>

    <TextView
        android:id="@+id/tv_duration_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="3"
        android:paddingLeft="6dp"
        android:textColor="#3f3f3f"
        android:textSize="15sp"
        android:visibility="gone" />

    <com.qmuiteam.qmui.widget.QMUILoadingView
        android:id="@+id/qlv_downloading_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:color="#ffffff"
        android:visibility="gone"
        app:qmui_loading_view_size="18dp" />
</LinearLayout>