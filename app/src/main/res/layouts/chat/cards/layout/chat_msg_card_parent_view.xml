<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="7dp"
    android:paddingTop="7dp">

    <TextView
        android:id="@+id/send_time_text"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_chat_msg_time"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textSize="@dimen/content_smaller_textsize" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_time_text">

        <com.inspur.emmcloud.widget.CircleTextImageView
            android:id="@+id/sender_photo_img"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="10dp" />

        <View
            android:id="@+id/sender_photo_right_view"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="17dp"
            android:layout_toLeftOf="@id/sender_photo_right_view"
            android:layout_toRightOf="@id/sender_photo_img">

            <TextView
                android:id="@+id/news_comment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/comment"
                android:textColor="#1596d2"
                android:textSize="@dimen/content_normal_textsize"
                android:visibility="gone" />

            <TextView
                android:id="@+id/sender_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="5dp"
                android:maxLines="1"
                android:textColor="#666666"
                android:textSize="@dimen/content_normal_textsize" />

            <RelativeLayout
                android:id="@+id/card_parent_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sender_name_text">

                <ImageView
                    android:id="@+id/refreshing_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="14dp"
                    android:scaleType="fitXY"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/card_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/refreshing_img"
                    android:background="@color/white"></RelativeLayout>

                <View
                    android:id="@+id/card_cover_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/card_layout"
                    android:layout_alignLeft="@id/card_layout"
                    android:layout_alignRight="@id/card_layout"
                    android:layout_alignTop="@id/card_layout"
                    android:layout_toRightOf="@id/refreshing_img"
                    android:background="@drawable/ic_chat_msg_img_cover_arrow_left" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>