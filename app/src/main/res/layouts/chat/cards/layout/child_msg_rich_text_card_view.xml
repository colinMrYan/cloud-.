<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/channel_background_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="12dp" >

        <com.inspur.emmcloud.widget.CircleTextImageView
            android:id="@+id/sender_photo_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
             />

        <RelativeLayout
            android:id="@+id/name_time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/sender_photo_img"
            android:layout_toRightOf="@id/sender_photo_img" >

            <TextView
                android:id="@+id/send_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:singleLine="true"
                android:layout_toRightOf="@+id/sender_name_text"
                android:text="@string/five_minite_ago"
                android:textColor="@color/msg_sendtime_color"
                android:textSize="@dimen/content_smaller_textsize" />
            
            <!-- android:textColor="#4f87a2" android:layout_alignParentRight="true"-->

            <TextView
                android:id="@+id/sender_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/msg_name_color"
                android:textSize="@dimen/content_smaller_textsize" />
            <!-- android:layout_toLeftOf="@+id/send_time_text" -->
        </RelativeLayout>

        <TextView
            android:id="@+id/content_rich_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_time_layout"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/sender_photo_img"
            android:textIsSelectable="true"
            android:textColor="@color/black"
            android:textSize="@dimen/content_title_textsize" />
    </RelativeLayout>


</LinearLayout>