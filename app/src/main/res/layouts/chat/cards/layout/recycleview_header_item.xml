<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFDEDE">
    <ImageView
        android:id="@+id/iv_net_no_used"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:background="@drawable/ic_netchecking_error_log"/>
    <TextView
        android:id="@+id/tv_net_state_mes"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/iv_net_no_used"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:text="@string/net_connected_error"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:paddingTop="9dp"
        android:paddingBottom="10dp"
        android:textColor="#665758"
        android:paddingRight="30dp"/>
    <ImageView
        android:id="@+id/iv_net_error_right_arrow"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="11dp"
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:scaleType="centerCrop"
        android:background="@drawable/icon_contact_right_arrow"/>
</RelativeLayout>