<?xml version="1.0" encoding="utf-8"?>
<com.cpiz.android.bubbleview.BubbleRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bl_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:bl_arrowDirection="right"
    app:bl_arrowHeight="10dp"
    app:bl_arrowPosition="16dp"
    app:bl_cornersRadius="8dp"
    app:bl_arrowWidth="4.5dp"
    app:bl_strokeColor="#AAAAAA"
    app:bl_strokeWidth="0.5px">
<RelativeLayout
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></RelativeLayout>
    <com.inspur.emmcloud.widget.CircleTextImageView
        android:id="@+id/channel_unknown_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_photo_default" />

    <TextView
        android:id="@+id/channel_unknown_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/channel_unknown_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
         android:paddingBottom="20dp"
        android:text="@string/channel_unknown_text"
        android:textColor="@color/msg_content_color"
        android:textSize="@dimen/content_title_textsize" />

</com.cpiz.android.bubbleview.BubbleRelativeLayout>