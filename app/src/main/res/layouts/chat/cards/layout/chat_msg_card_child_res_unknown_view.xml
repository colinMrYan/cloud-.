<?xml version="1.0" encoding="utf-8"?>
<com.cpiz.android.bubbleview.BubbleRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/brl_card"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    app:bb_arrowPosDelta="21dp"
    app:bb_arrowPosPolicy="SelfBegin"
    app:bb_borderColor="#bbbbbb"
    app:bb_cornerRadius="4dp"
    app:bb_fillColor="#ffffff"
   >

    <com.inspur.emmcloud.widget.CircleTextImageView
        android:id="@+id/channel_unknown_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_photo_default" />

    <TextView
        android:id="@+id/channel_unknown_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/channel_unknown_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
         android:paddingBottom="20dp"
        android:text="@string/channel_unknown_text"
        android:textColor="@color/msg_content_color"
        android:textSize="@dimen/content_title_textsize" />

</com.cpiz.android.bubbleview.BubbleRelativeLayout>