<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_card_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
   >


    <ImageView
        android:id="@+id/news_card_content_img"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
       />

    <RelativeLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/news_card_content_img"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/news_card_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingTop="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:maxLines="2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/news_card_digest_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_card_title_text"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="3"
             android:textColor="#999999"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>