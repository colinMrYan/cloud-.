<?xml version="1.0" encoding="utf-8"?>
<com.inspur.emmcloud.widget.bubble.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bl_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:bl_arrowDirection="right"
    app:bl_arrowHeight="10dp"
    app:bl_arrowPosition="16dp"
    app:bl_cornersRadius="8dp"
    app:bl_arrowWidth="4.5dp"
    app:bl_strokeColor="#AAAAAA"
    app:bl_strokeWidth="0.5px">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/comment_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/comment_hallcomment_text"
            android:textColor="#8f8e94"
            android:textSize="@dimen/content_smaller_textsize" />

        <com.inspur.emmcloud.widget.TextViewWithSpan
            android:id="@+id/comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:layout_below="@id/comment_title_text"
            android:paddingTop="8dp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>
</com.inspur.emmcloud.widget.bubble.BubbleLayout>