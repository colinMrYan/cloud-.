<?xml version="1.0" encoding="utf-8"?>
<com.cpiz.android.bubbleview.BubbleRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:id="@+id/brl_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:bb_arrowPosDelta="21dp"
    app:bb_arrowPosPolicy="SelfBegin"
    app:bb_borderColor="#bbbbbb"
    app:bb_cornerRadius="4dp"
    >
    <TextView
        android:id="@+id/comment_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60dp"
        android:text="@string/comment_hallcomment_text"
        android:textColor="#8f8e94"
        android:textSize="@dimen/content_smaller_textsize" />

    <com.inspur.emmcloud.widget.TextViewWithSpan
        android:id="@+id/comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60dp"
        android:layout_below="@id/comment_title_text"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#000000"
        android:textSize="16sp" />
</com.cpiz.android.bubbleview.BubbleRelativeLayout>