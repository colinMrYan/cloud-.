<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
<RelativeLayout
    android:id="@+id/card_layout"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/comment_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60dp"
        android:text="@string/comment_hallcomment_text"
        android:textColor="#8f8e94"
        android:textSize="@dimen/content_smaller_textsize" />

    <com.inspur.emmcloud.widget.TextViewWithSpan
        android:id="@+id/comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60dp"
        android:layout_below="@id/comment_title_text"
        android:paddingTop="10dp"
        android:textColor="#000000"
        android:textSize="@dimen/content_title_textsize" />
</RelativeLayout>


</RelativeLayout>