<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.itheima.roundedimageview.RoundedImageView
        android:id="@+id/content_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:riv_border_color="#cccccc"
        app:riv_border_width="0.5px"
        app:riv_corner_radius="6dp"
        app:riv_oval="false" />

    <com.inspur.emmcloud.widget.CustomLoadingView
        android:id="@+id/qlv_downloading_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:color="#999999"
        app:cus_loading_view_size="22dp" />

    <TextView
        android:id="@+id/long_img_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/content_img"
        android:layout_alignRight="@+id/content_img"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:background="#26000000"
        android:padding="5dp"
        android:text="@string/long_img"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:visibility="gone" />

</RelativeLayout>