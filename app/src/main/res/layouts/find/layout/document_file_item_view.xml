<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/file_img"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:adjustViewBounds="true"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_file_word" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18.5dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/file_img"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="#FF444444"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <com.inspur.emmcloud.widget.HorizontalProgressBarWithNumber
        android:id="@+id/file_download_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
       />

</RelativeLayout>