<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/more_cardpackage_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >

    <RelativeLayout
        android:id="@+id/analysis_item_layout"
        android:background="@drawable/text_layout_selector"
        android:layout_marginTop="10dp"
        
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height" >

        <TextView
            android:id="@+id/analysis_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="@string/card_package_listtext"
            android:textSize="@dimen/header_textsize" />

        <ImageView
            android:id="@+id/analysis_item_arrowImg"
            style="@style/arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_arrow_right" />
    </RelativeLayout>

</RelativeLayout>