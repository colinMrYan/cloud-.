<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/more_cardpackage_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true" >

    <RelativeLayout
        android:id="@+id/travel_item_layout"
        android:background="@drawable/text_layout_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

       <ImageView 
           android:id="@+id/travel_img"
           android:layout_width="48dp"
           android:layout_height="48dp"
           android:layout_centerVertical="true"
           android:src="@drawable/icon_type_train"
           android:layout_marginTop="15dp"
           android:layout_marginLeft="18dp"/>
       
       <LinearLayout 
           android:id="@+id/travel_content_layout"
           android:layout_width="200dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:layout_toRightOf="@id/travel_img"
           android:orientation="vertical"
           android:layout_marginLeft="18dp">
           <TextView
               android:id="@+id/travel_expert_text"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="@dimen/button_textsize"
               android:text="本月差旅达人"/>
           <TextView
               android:id="@+id/travel_date_text"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="@dimen/button_textsize"
               android:text="2016/5/12"
               />
       </LinearLayout>
       
       <TextView 
           android:id="@+id/travel_orgin_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/button_textsize"
           android:layout_alignParentRight="true"
           android:layout_marginRight="15dp"
           android:layout_alignBottom="@id/travel_content_layout"
           android:text="浪潮国际"/>
       
    </RelativeLayout>

</RelativeLayout>