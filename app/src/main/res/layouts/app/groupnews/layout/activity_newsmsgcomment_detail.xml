<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" 
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true"
        android:background="?attr/header_bg" >

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/detail"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>
     <com.inspur.emmcloud.widget.pullableview.PullToRefreshLayout
        android:id="@+id/refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/post_comment_layout"
        android:layout_below="@id/rl_header"
        android:background="@color/content_bg" >

        <include layout="@layout/pull_refresh_head" />
        <!-- 支持所有实现Pullable接口的View -->

        <com.inspur.emmcloud.widget.pullableview.PullableScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:horizontalSpacing="16dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="4"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:scrollbars="@null"
            android:stretchMode="columnWidth"
            android:verticalSpacing="3dp" />

        <include layout="@layout/pull_load_more" />
    </com.inspur.emmcloud.widget.pullableview.PullToRefreshLayout>
    

    <LinearLayout
        android:id="@+id/post_comment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FAFAFA"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp" >

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="5dp"
                android:background="@color/grey_line_color" />

            <ImageView
                android:id="@+id/add_comment_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/comment_edit"
                android:layout_below="@id/line"
                android:clickable="true"
                android:onClick="onClick"
                android:padding="6dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_add_comment_btn"
                android:visibility="gone" />

            <EditText
                android:id="@+id/comment_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/post_comment_btn"
                android:layout_toRightOf="@id/add_comment_img"
                android:background="@drawable/bg_corner"
                android:hint="@string/comment_text"
                android:maxLines="5"
                android:paddingBottom="7dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="7dp"
                android:textSize="@dimen/content_normal_textsize" >
            </EditText>

            <Button
                android:id="@+id/post_comment_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignBottom="@id/comment_edit"
                android:layout_alignParentRight="true"
                android:layout_below="@id/line"
                android:background="@null"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/send"
                android:textColor="@drawable/seclector_search_btn_text"
                android:textSize="@dimen/content_title_textsize" >
            </Button>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/add_item_layout"
            android:layout_width="match_parent"
            android:layout_height="549px"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="25dp"
            android:visibility="gone" >

            <GridView
                android:id="@+id/add_item_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@android:color/transparent"
                android:numColumns="4"
                android:paddingTop="8dp"
                android:stretchMode="columnWidth" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>