    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/new_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#09ffffff"
        android:paddingBottom="6dp"
        android:paddingTop="12dp" >
        <ImageView
            android:id="@+id/news_leftImg_img"
            android:layout_width="75dp"
            android:layout_height="62dp"
            android:scaleType="centerInside"
            android:background="@drawable/shape_news_corner"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <RelativeLayout
            android:id="@+id/news_middleText_layout"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_alignBottom="@id/news_leftImg_img"
            android:layout_toRightOf="@id/news_leftImg_img"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/news_middleUp_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingTop="1dp"
                android:maxLines="2"
                android:textColor="#203b4f"
                android:textSize="16sp" />
            <TextView 
                android:id="@+id/news_middlemid_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#9999"
                android:textSize="12sp"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </RelativeLayout>

