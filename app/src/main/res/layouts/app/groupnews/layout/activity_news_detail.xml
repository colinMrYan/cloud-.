<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true" >

    <!-- 页面头部       新闻详情 -->

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/shape_header_bg" >

        <RelativeLayout
            android:id="@+id/news_back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/news_group_news"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

        <com.inspur.emmcloud.widget.MyScrollView 
        android:id="@+id/news_content_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_header"
        android:paddingBottom="50dp">
    
    <LinearLayout
        android:id="@+id/news_detail_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/rl_header"
        android:padding="10dp" >

        
        <TextView 
            android:id="@+id/news_centertitle_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#203b4f"
            android:textSize="@dimen/bigger_textsize"/>
        <TextView 
            android:id="@+id/news_timetitle_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="#4f87a2"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:textSize="@dimen/content_small_textsize"/>
        
        <TextView 
            android:id="@+id/news_contentup_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:textColor="#203b4f"
            android:textSize="@dimen/content_normal_textsize"/>
        
    </LinearLayout>
    </com.inspur.emmcloud.widget.MyScrollView>
    <LinearLayout
        android:id="@+id/news_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentBottom="true"
        android:background="#ffffff" >

        
        <ImageView
            android:id="@+id/news_bottomArrow_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_left"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <RelativeLayout
            android:id="@+id/news_share_layout"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="wrap_content" >

            <View
                android:id="@+id/news_bottomleftline_view"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="#33c8c8c8"
                 />

            <LinearLayout 
                android:id="@+id/newsdetail_bottomleft_layout"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                
            
            <Button
                android:id="@+id/newsdetail_bottomleft_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/share"
                android:layout_centerInParent="true"
                 />
            
            <TextView 
                android:id="@+id/newsdetail_bottomleft_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="62"
                android:layout_toRightOf="@id/newsdetail_bottomleft_btn"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"/>
            </LinearLayout>
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/news_comment_layout"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="wrap_content" >

            <View
                android:id="@+id/news_bottommiddleline_view"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="#33c8c8c8"
                 />

            <LinearLayout 
                android:id="@+id/newsdetail_bottommiddle_layout"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
            <Button
                android:id="@+id/newsdetail_bottommiddle_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/comment"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                 />
            
            <TextView 
                android:id="@+id/newsdetail_bottommiddle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36"
                android:paddingLeft="10dp"
                android:layout_toRightOf="@id/newsdetail_bottommiddle_btn"
                android:layout_centerVertical="true"/>
            </LinearLayout>
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/news_good_layout"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="wrap_content" >

            <View
                android:id="@+id/news_bottomrightline_view"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="#33c8c8c8"
                 />

            <LinearLayout 
                android:id="@+id/newsdetail_bottomright_layout"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
            <Button
                android:id="@+id/newsdetail_bottomright_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/good"
                android:layout_centerInParent="true"
                 />
            
            <TextView 
                android:id="@+id/newsdetail_bottomright_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="87"
                android:paddingLeft="10dp"
                android:layout_toRightOf="@id/newsdetail_bottomright_btn"
                android:layout_centerVertical="true"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    
</RelativeLayout>