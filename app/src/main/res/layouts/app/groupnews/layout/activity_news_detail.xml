<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- 页面头部       新闻详情 -->

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg" >

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/news_group_news"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

        <com.inspur.emmcloud.widget.MyScrollView 
        android:id="@+id/news_content_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_header"
        android:paddingBottom="50dp">
    
    <LinearLayout
        android:id="@+id/news_detail_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header"
        android:orientation="vertical"
        android:padding="10dp" >

        
        <TextView 
            android:id="@+id/news_centertitle_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#203b4f"
            android:textSize="@dimen/bigger_textsize"/>
        <TextView 
            android:id="@+id/news_timetitle_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingBottom="15dp"
            android:paddingTop="10dp"
            android:textColor="#4f87a2"
            android:textSize="@dimen/content_small_textsize"/>
        
        <TextView 
            android:id="@+id/news_contentup_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:textColor="#203b4f"
            android:textSize="@dimen/content_normal_textsize"/>
        
    </LinearLayout>
    </com.inspur.emmcloud.widget.MyScrollView>
    <LinearLayout
        android:id="@+id/news_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentBottom="true"
        android:background="#ffffff" >

        
        <ImageView
            android:id="@+id/news_bottomArrow_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/arrow_left" />

        <RelativeLayout
            android:id="@+id/news_share_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <View
                android:id="@+id/news_bottomleftline_view"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="#33c8c8c8"
                 />

            <LinearLayout 
                android:id="@+id/newsdetail_bottomleft_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                
            
            <Button
                android:id="@+id/newsdetail_bottomleft_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/share"
                 />
            
            <TextView 
                android:id="@+id/newsdetail_bottomleft_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/newsdetail_bottomleft_btn"
                android:paddingLeft="10dp"
                android:text="62" />
            </LinearLayout>
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/news_comment_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <View
                android:id="@+id/news_bottommiddleline_view"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="#33c8c8c8"
                 />

            <LinearLayout 
                android:id="@+id/newsdetail_bottommiddle_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
            <Button
                android:id="@+id/newsdetail_bottommiddle_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/comment"
                 />
            
            <TextView 
                android:id="@+id/newsdetail_bottommiddle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/newsdetail_bottommiddle_btn"
                android:paddingLeft="10dp"
                android:text="36" />
            </LinearLayout>
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/news_good_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <View
                android:id="@+id/news_bottomrightline_view"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="#33c8c8c8"
                 />

            <LinearLayout 
                android:id="@+id/newsdetail_bottomright_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
            <Button
                android:id="@+id/newsdetail_bottomright_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/good"
                 />
            
            <TextView 
                android:id="@+id/newsdetail_bottomright_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/newsdetail_bottomright_btn"
                android:paddingLeft="10dp"
                android:text="87" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    
</RelativeLayout>