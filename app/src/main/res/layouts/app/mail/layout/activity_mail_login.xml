<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageButton
        android:id="@+id/ibt_back"
        android:layout_width="40dp"
        android:layout_height="@dimen/header_height"
        android:onClick="onClick"
        android:paddingLeft="15dp"
        android:paddingRight="13dp"
        android:scaleType="centerInside"
        android:src="@drawable/icon_blue_arrow_left" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="220dp"
            android:layout_height="56dp"
            android:layout_marginTop="87dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_mail_login_logo" />

        <com.inspur.emmcloud.widget.ClearEditText
            android:id="@+id/et_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="@null"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="60dp"
            android:hint="@string/mail"
            android:singleLine="true" />

        <View
            android:background="#C8C7CC"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"></View>
        <RelativeLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.inspur.emmcloud.widget.ClearEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_toLeftOf="@+id/iv_password_visible"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@null"
                android:hint="@string/password"
                android:singleLine="true" />
            <ImageView
                android:id="@+id/iv_password_visible"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/et_password"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/et_password"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:onClick="onClick"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:src="@drawable/icon_no_see_pw" />
        </RelativeLayout>

        <View
            android:background="#C8C7CC"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"></View>

        <Button
            android:id="@+id/bt_login"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:text="@string/login"
            android:background="@drawable/bg_login_btn_unable"
            android:enabled="false"
            android:textColor="@color/white"
             />
    </LinearLayout>

</RelativeLayout>