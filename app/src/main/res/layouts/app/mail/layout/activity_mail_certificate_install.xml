<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <!-- 头部-->
    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/shape_header_bg">
        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:padding="11dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="证书导入"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

        <TextView
            android:id="@+id/tv_install_certificate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="15dp"
            android:text="安装"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_function_textsize"/>
    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!-- 安装指南-->
            <RelativeLayout
                android:id="@+id/rl_install_order"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_installed_cer_tip_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:textSize="14sp"
                    android:text="安装指南"
                    android:textColor="#333333"/>

                <TextView
                    android:id="@+id/tv_installed_tip1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/tv_installed_cer_tip_title"
                    android:paddingTop="4dp"
                    android:text="1、首先将证书导入到手机（ios可以通过其他邮箱将pfx证书或者p12证书以附件形式发送到本邮箱，然后将此证书附件下载）"
                    android:textColor="#666666" />
                <TextView
                    android:id="@+id/tv_installed_tip2"
                    android:paddingTop="2dp"
                    android:layout_below="@id/tv_installed_tip1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:text="2、点击右下角的安装证书进行安装"/>
            </RelativeLayout>

            <!-- 已安证书详情-->
            <RelativeLayout
                android:id="@+id/rl_installed_certificate"
                android:visibility="gone"
                android:layout_below="@id/rl_install_order"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:id="@+id/tv_installed_cer_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:text="已安装证书"/>
                <RelativeLayout
                    android:id="@+id/rl_installed_content"
                    android:layout_below="@id/tv_installed_cer_tip"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ll_installed_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_certificate_content"
                        android:layout_alignParentTop="true">
                        <RelativeLayout
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_installed_cer_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="证书1.pfx" />
                            <TextView
                                android:id="@+id/tv_cer_use_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="使用中"
                                android:textColor="#4A90E2"
                                android:textSize="14sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_cer_owner_tip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#666666"
                                android:text="颁发给：" />
                            <TextView
                                android:id="@+id/tv_installed_cer_owner_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="90dp"
                                android:text="李宝超"
                                android:textColor="#666666"
                                android:textSize="14sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_cer_issuer_tip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#666666 "
                                android:text="颁发者：" />
                            <TextView
                                android:id="@+id/tv_installed_cer_issuer_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="90dp"
                                android:text="使用中"
                                android:textColor="#666666 "
                                android:textSize="14sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_installed_cer_final_data_tip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#666666 "
                                android:text="有效期至：" />
                            <TextView
                                android:id="@+id/tv_installed_cer_final_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="90dp"
                                android:text="2023-03-12 18:08:00"
                                android:textColor="#666666 "
                                android:textSize="14sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <View
                                android:id="@+id/v_topline1"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#C8C7CC">
                            </View>
                            <TextView
                                android:id="@+id/tv_encryption_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"
                                android:textColor="#333333"
                                android:textSize="14sp"
                                android:text="加密发送邮件的内容和附件" />
                            <com.inspur.emmcloud.widget.SwitchView
                                android:id="@+id/switchview_encryption_action"
                                android:layout_width="31dp"
                                android:layout_height="51dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:textColor="#666666 "
                                android:textSize="14sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <View
                                android:id="@+id/v_topline2"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#C8C7CC">
                            </View>
                            <TextView
                                android:id="@+id/tv_signature_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"
                                android:textColor="#333333"
                                android:textSize="14sp"
                                android:text="加签发送邮件的内容和附件" />
                            <com.inspur.emmcloud.widget.SwitchView
                                android:id="@+id/switchview_signature_action"
                                android:layout_width="31dp"
                                android:layout_height="51dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:textColor="#666666 "
                                android:textSize="14sp" />
                        </RelativeLayout>

                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>

            <!-- 替换证书-->
            <LinearLayout
                android:id="@+id/ll_new_cer"
                android:visibility="gone"
                android:layout_below="@id/rl_installed_certificate"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingTop="12dp"
                android:paddingLeft="8dp"
                android:paddingBottom="5dp"
                android:orientation="vertical"
                android:background="@drawable/bg_certificate_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_new_cer_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="证书1.pfx" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">
                    <TextView
                        android:id="@+id/tv_new_cer_owner_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:text="颁发给："/>
                    <TextView
                        android:id="@+id/tv_new_cer_ower_name"
                        android:layout_marginLeft="98dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:text="李宝超"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">
                    <TextView
                        android:id="@+id/tv_new_cer_issuer_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:text="颁发者："/>
                    <TextView
                        android:id="@+id/tv_new_cer_issuer_name"
                        android:layout_marginLeft="98dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:text="浪潮"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">
                    <TextView
                        android:id="@+id/tv_new_cer_final_data_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:text="有效期至："/>
                    <TextView
                        android:id="@+id/tv_new_cer_final_data"
                        android:layout_marginLeft="98dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:text="2023-03-12 18:09:11"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>