<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:background="?attr/header_bg_color">

            <ImageButton
                android:id="@+id/ibt_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:onClick="onClick"
                android:paddingLeft="15dp"
                android:paddingRight="13dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_mail_forward"
                    android:visibility="gone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_mail_header_forward"
                    android:onClick="onClick" />

                <Button
                    android:id="@+id/bt_mail_reply_all"
                    android:visibility="gone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_mail_header_replay_all"
                    android:onClick="onClick" />

                <Button
                    android:id="@+id/bt_mail_tab"
                    android:visibility="gone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_mail_tab"
                    android:onClick="onClick"/>

                <Button
                    android:id="@+id/bt_mail_delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_mail_trash_can"
                    android:onClick="onClick" />
            </LinearLayout>
        </RelativeLayout>

        <com.qmuiteam.qmui.widget.QMUIObservableScrollView
            android:id="@+id/sv_slide_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/rl_header"
            android:background="#ffffff">
                <RelativeLayout
                    android:id="@+id/rl_mail_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_mail_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f9f9f9"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingTop="15dp">

                            <RelativeLayout
                                android:id="@+id/rl_flag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:paddingTop="1dp">

                                <ImageView
                                    android:id="@+id/iv_flag_encrypt"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginRight="5dp"
                                    android:src="@drawable/ic_mail_flag_encrypt_yes" />

                                <ImageView
                                    android:id="@+id/iv_flag_sign"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_toRightOf="@id/iv_flag_encrypt"
                                    android:src="@drawable/ic_mail_flag_sign_yes" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/tv_topic"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:layout_toLeftOf="@id/rl_flag"
                                android:textColor="#333333"
                                android:textSize="17sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:paddingLeft="15dp"
                            android:paddingTop="10dp">

                            <TextView
                                android:id="@+id/tv_mail_send_time_tips"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="发送人:"
                                android:text="日&#12288;期:"
                                android:textColor="#666666"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/tv_mail_send_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/tv_mail_send_time_tips"
                                android:textColor="#666666"
                                android:textSize="14dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_mail_sender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingTop="10dp">

                            <TextView
                                android:id="@+id/tv_mail_sender_tips"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="发送人:"
                                android:text="发送人:"
                                android:textColor="#666666"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/tv_mail_sender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/tv_mail_sender_tips"
                                android:textColor="#666666"
                                android:textSize="14dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_mail_receiver"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingTop="9dp">

                            <TextView
                                android:id="@+id/tv_mail_receiver_expand"
                                android:layout_width="wrap_content"
                                android:layout_height="21dp"
                                android:layout_alignBottom="@+id/rl_receiver"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical"
                                android:onClick="onClick"
                                android:paddingLeft="10dp"
                                android:paddingRight="15dp"
                                android:text="展开"
                                android:textColor="#FF4A90E2"
                                android:textSize="14dp" />

                            <RelativeLayout
                                android:id="@+id/rl_receiver"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@id/tv_mail_receiver_expand">

                                <RelativeLayout
                                    android:id="@+id/rl_receiver_collapse"
                                    android:layout_width="match_parent"
                                    android:layout_height="21dp">

                                    <TextView
                                        android:id="@+id/tv_mail_receiver_tips"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="10dp"
                                        android:gravity="center_vertical"
                                        android:hint="发送人:"
                                        android:text="收件人:"
                                        android:textColor="#666666"
                                        android:textSize="14dp" />

                                    <TextView
                                        android:id="@+id/tv_mail_receiver_collapse"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_toRightOf="@id/tv_mail_receiver_tips"
                                        android:ellipsize="end"
                                        android:gravity="center_vertical"
                                        android:singleLine="true"
                                        android:textColor="#666666" />
                                </RelativeLayout>

                                <com.inspur.emmcloud.widget.FlowLayout
                                    android:id="@+id/fl_mail_receiver_expand"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone" />
                            </RelativeLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_mail_cc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingTop="9dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_mail_cc_expand"
                                android:layout_width="wrap_content"
                                android:layout_height="21dp"
                                android:layout_alignBottom="@+id/rl_cc"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical"
                                android:onClick="onClick"
                                android:paddingLeft="10dp"
                                android:paddingRight="15dp"
                                android:text="展开"
                                android:textColor="#FF4A90E2"
                                android:textSize="14dp" />

                            <RelativeLayout
                                android:id="@+id/rl_cc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@id/tv_mail_cc_expand">

                                <RelativeLayout
                                    android:id="@+id/rl_cc_collapse"
                                    android:layout_width="match_parent"
                                    android:layout_height="21dp">

                                    <TextView
                                        android:id="@+id/tv_mail_cc_tips"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="10dp"
                                        android:gravity="center_vertical"
                                        android:hint="发送人:"
                                        android:text="抄送人:"
                                        android:textColor="#666666"
                                        android:textSize="14dp" />

                                    <TextView
                                        android:id="@+id/tv_mail_cc_collapse"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_toRightOf="@id/tv_mail_cc_tips"
                                        android:ellipsize="end"
                                        android:gravity="center_vertical"
                                        android:singleLine="true"
                                        android:textColor="#666666" />
                                </RelativeLayout>

                                <com.inspur.emmcloud.widget.FlowLayout
                                    android:id="@+id/fl_mail_cc_expand"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5px"
                            android:layout_marginTop="12dp"
                            android:background="#C8C7CC"></View>
                    </LinearLayout>

                    <com.inspur.emmcloud.widget.ScrollViewWithListView
                        android:id="@+id/lv_attachment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_mail_header"
                        android:divider="#00000000"></com.inspur.emmcloud.widget.ScrollViewWithListView>

                    <com.inspur.emmcloud.widget.NoScrollWebView
                        android:id="@+id/wv_content"
                        android:layout_below="@id/lv_attachment"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:paddingBottom="200dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </com.inspur.emmcloud.widget.NoScrollWebView>
                    <ProgressBar
                        android:id="@+id/progress_bar_load"
                        style="@android:style/Widget.ProgressBar"
                        android:layout_marginTop="120dp"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_below="@id/ll_mail_header"
                        android:layout_centerHorizontal="true"
                        android:indeterminateDrawable="@drawable/react_native_ios_progress"
                        android:indeterminateDuration="1000" />
                    <LinearLayout
                        android:id="@+id/rl_decrypt_fail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lv_attachment"
                        android:layout_marginBottom="30dp"
                        android:visibility="gone"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="20dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="12dp"
                            android:text="本邮件为加密邮件，您的邮箱账号未安装任何数字证书，请先进行数字证书安装，再查看邮件！"
                            android:textColor="#666666" />


                        <TextView
                            android:id="@+id/tv_install_cert"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="onClick"
                            android:padding="25dp"
                            android:text="@string/mail_install_cert"
                            android:textColor="#FF4A90E2"
                            android:textSize="16sp" />
                    </LinearLayout>
                </RelativeLayout>



        </com.qmuiteam.qmui.widget.QMUIObservableScrollView>

        <RelativeLayout
            android:id="@+id/rl_send_about"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:background="#F9F9F9"
            android:layout_height="54dp">
            <RelativeLayout
                android:id="@+id/rl_reply"
                android:onClick="onClick"
                android:layout_toLeftOf="@id/rl_reply_all"
                android:layout_marginRight="56dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_reply"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/icon_mail_reply"/>
                <TextView
                    android:layout_below="@id/iv_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp"
                    android:text="回复"/>
            </RelativeLayout>

            <RelativeLayout
          android:id="@+id/rl_reply_all"
          android:layout_centerHorizontal="true"
          android:onClick="onClick"
          android:layout_width="wrap_content"
          android:layout_height="match_parent">
          <ImageView
              android:id="@+id/iv_reply_all"
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:layout_centerHorizontal="true"
              android:background="@drawable/icon_mail_reply_all"/>
          <TextView
              android:layout_below="@id/iv_reply_all"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="4dp"
              android:textColor="#333333"
              android:textSize="12sp"
              android:text="回复全部"/>
      </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_forward"
                android:onClick="onClick"
                android:layout_toRightOf="@id/rl_reply_all"
                android:layout_marginLeft="65dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_forward"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/icon_mail_forward"/>
                <TextView
                    android:layout_below="@id/iv_forward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:text="转发"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>

