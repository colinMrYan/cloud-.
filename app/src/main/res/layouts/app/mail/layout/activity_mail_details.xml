<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:background="?attr/header_bg_color">

            <ImageButton
                android:id="@+id/ibt_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:scaleType="centerInside"
                android:paddingRight="13dp"
                android:layout_centerVertical="true"
                android:onClick="onClick"
                android:src="@drawable/selector_back_btn"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_mail_forward"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_mail_header_forward"
                    android:onClick="onClick" />

                <Button
                    android:id="@+id/bt_mail_reply_all"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_mail_header_replay_all"
                    android:onClick="onClick" />

                <Button
                    android:id="@+id/bt_mail_reply"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_mail_header_replay"
                    android:onClick="onClick" />

                <Button
                    android:id="@+id/bt_mail_delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_mail_header_delete"
                    android:onClick="onClick" />
            </LinearLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_header"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/content_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp">

                    <RelativeLayout
                        android:id="@+id/rl_flag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingTop="1dp">

                        <ImageView
                            android:id="@+id/iv_flag_encrypt"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ic_mail_flag_encrypt_yes" />

                        <ImageView
                            android:id="@+id/iv_flag_sign"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginRight="15dp"
                            android:layout_toRightOf="@id/iv_flag_encrypt"
                            android:src="@drawable/ic_mail_flag_sign_yes" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_topic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@id/rl_flag"
                        android:text="副经理速度快解放了快速的减肥了开始就浪费就立刻"
                        android:textColor="#333333"
                        android:textSize="17sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_mail_send_time_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:text="发送时间："
                        android:hint="发送时间："
                        android:textColor="#666666"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_mail_send_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_mail_send_time_tips"
                        android:layout_marginLeft="20dp"
                        android:text="2018-12-18 15:45:11"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_mail_sender"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_mail_sender_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:text="发送人："
                        android:hint="发送时间："
                        android:textColor="#666666"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_mail_sender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_mail_sender_tips"
                        android:layout_marginLeft="20dp"
                        android:text="技术与质量管理部"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_mail_receiver"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_mail_receiver_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:text="收件人："
                        android:hint="发送时间："
                        android:textColor="#666666"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_mail_receiver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_mail_receiver_tips"
                        android:layout_marginLeft="20dp"
                        android:text="Jason Chen(陈明超)"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_mail_receiver_open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="15dp"
                        android:paddingLeft="10dp"
                        android:onClick="onClick"
                        android:text="展开"
                        android:textColor="#FF4A90E2"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_mail_cc"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_mail_cc_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:text="抄送人："
                        android:hint="发送时间："
                        android:textColor="#666666"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_mail_cc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_mail_cc_tips"
                        android:layout_marginLeft="20dp"
                        android:text="Jason Chen(陈明超)"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_mail_cc_open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="15dp"
                        android:paddingLeft="10dp"
                        android:text="展开"
                        android:onClick="onClick"
                        android:textColor="#FF4A90E2"
                        android:textSize="14sp" />
                </RelativeLayout>
                <View
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="#C8C7CC"
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"></View>

            </LinearLayout>



        </ScrollView>

    </RelativeLayout>
</RelativeLayout>

