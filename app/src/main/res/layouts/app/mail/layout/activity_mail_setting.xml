<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <!-- 头部-->
    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_bg">

        <RelativeLayout
            android:id="@+id/rl_setting_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="设置"
            android:paddingLeft="5dp"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_textsize" />

        <TextView
            android:id="@+id/tv_save_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </RelativeLayout>

    <!-- body -->
    <RelativeLayout
        android:layout_below="@id/rl_header"
        android:paddingLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_setting_mail_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/tv_mail_setting_address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingLeft="4dp"
                android:text="邮箱"
                android:textColor="#333333"/>
            <TextView
                android:id="@+id/tv_setting_mail_address"
                android:layout_below="@id/tv_mail_setting_address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="libaochao@inspur.com"
                android:paddingLeft="4dp"
                android:textColor="#666666"
                android:textSize="16sp"/>
            <View
                android:layout_below="@id/tv_setting_mail_address"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:background="#C8C7CC"
                android:layout_height="@dimen/qmui_list_divider_height"></View>
        </RelativeLayout>

        <!-- 密码 -->
        <RelativeLayout
            android:id="@+id/rl_setting_mail_password"
            android:layout_below="@id/rl_setting_mail_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/tv_mail_setting_password_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:text="密码"
                android:textSize="16sp"
                android:textColor="#333333"/>
            <RelativeLayout
                android:id="@+id/rl_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:layout_below="@id/tv_mail_setting_password_title">
                <TextView
                    android:id="@+id/tv_setting_mail_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="*********"
                    android:textColor="#666666"
                    android:textSize="16sp"/> 
                <ImageButton
                    android:id="@+id/ibt_mail_setting_password"
                    android:layout_alignParentRight="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:onClick="onClick"
                    android:layout_marginRight="11dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_mail_password_no"
                    android:padding="5dp"/>
            </RelativeLayout>
            <View
                android:layout_below="@id/rl_password"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:background="#C8C7CC"
                android:layout_height="@dimen/qmui_list_divider_height"></View>
        </RelativeLayout>

        <!-- 证书管理 -->
        <RelativeLayout
            android:id="@+id/rl_setting_mail_certificate"
            android:layout_below="@id/rl_setting_mail_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/tv_mail_setting_certificate_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:text="证书"
                android:textSize="16sp"
                android:textColor="#333333"/>
            <RelativeLayout
                android:id="@+id/rl_certificate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:layout_below="@id/tv_mail_setting_certificate_title">
                <TextView
                    android:id="@+id/tv_setting_mail_certificate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="证书管理"
                    android:textColor="#666666"
                    android:textSize="16sp"/>
                <ImageButton
                    android:id="@+id/ibt_mail_setting_certificate"
                    android:onClick="onClick"
                    android:layout_alignParentRight="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_mail_certificate_manager"
                    android:layout_marginRight="11dp"
                    android:scaleType="fitXY"
                    android:padding="5dp"/>
            </RelativeLayout>
            <View
                android:layout_below="@id/rl_certificate"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:background="#C8C7CC"
                android:layout_height="@dimen/qmui_list_divider_height"></View>
        </RelativeLayout>

        <!-- 证书管理 -->
        <RelativeLayout
            android:id="@+id/rl_setting_mail_account"
            android:layout_below="@id/rl_setting_mail_certificate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/tv_mail_setting_account_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号"
                android:textSize="16sp"
                android:paddingLeft="4dp"
                android:textColor="#333333"/>
            <RelativeLayout
                android:id="@+id/rl_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:layout_below="@id/tv_mail_setting_account_title">
                <TextView
                    android:id="@+id/tv_setting_mail_account_delect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:onClick="onClick"
                    android:text="删除账号"
                    android:textColor="#FF0000 "
                    android:textSize="16sp"/>
            </RelativeLayout>
            <View
                android:layout_below="@id/rl_account"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:background="#C8C7CC"
                android:layout_height="@dimen/qmui_list_divider_height"></View>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>