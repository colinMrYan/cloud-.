<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.inspur.emmcloud.widget.CircleTextImageView
        android:id="@+id/iv_mail_sender_photo"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/icon_person_default"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="8dp"
         />

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_mail_sender_photo">

        <TextView
            android:id="@+id/tv_sender_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/rl_flag"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="云服务集团"
            android:textColor="#333333"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/rl_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/iv_flag_encrypt"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_mail_flag_encrypt_yes" />

            <ImageView
                android:id="@+id/iv_flag_sign"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_toRightOf="@id/iv_flag_encrypt"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_mail_flag_sign_yes" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_top"
        android:layout_marginBottom="12dp"
        android:layout_toRightOf="@id/iv_mail_sender_photo"
        android:layout_marginTop="4dp">
        <TextView
            android:id="@+id/tv_time"
            android:textSize="13sp"
            android:text="10月30日"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_topic"
            android:text="浪潮云+项目发版测试报告（Android版2.7.4）"
            android:lines="2"
            android:ellipsize="end"
            android:textSize="13sp"
            android:layout_toLeftOf="@id/tv_time"
            android:layout_marginRight="15dp"
            android:textColor="#666666"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</RelativeLayout>