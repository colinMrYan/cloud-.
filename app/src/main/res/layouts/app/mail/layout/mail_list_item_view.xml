    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp">

        <View
            android:id="@+id/v_unread"
            android:background="@drawable/ic_mail_unread"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/v_unread"
            android:layout_toLeftOf="@+id/rl_flag"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/rl_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/iv_flag_encrypt"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_mail_flag_encrypt_yes" />

            <ImageView
                android:id="@+id/iv_flag_sign"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/iv_flag_encrypt"
                android:src="@drawable/ic_mail_flag_sign_yes" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_top"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:hint="1月1日"
            android:gravity="right"
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_topic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_time"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="#666666"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_below="@id/rl_bottom"
        android:layout_marginLeft="15dp"
        android:background="#C8C7CC"></View>
</RelativeLayout>