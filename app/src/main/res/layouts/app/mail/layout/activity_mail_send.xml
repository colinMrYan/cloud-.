<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <!-- 头部-->
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_bg">

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="写邮件"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_textsize" />

        <TextView
            android:id="@+id/tv_send_mail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="发送"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:layout_below="@id/header_layout">

            <!-- 邮件收件人-->
            <RelativeLayout
                android:id="@+id/rl_recipients_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rl_recipient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:id="@+id/tv_recipient_tip"
                        android:text="收件人："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="15sp"/>
                    <com.inspur.emmcloud.widget.RichEdit
                        android:id="@+id/re_recipient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_recipient_tip"
                        android:layout_toLeftOf="@id/iv_recipients"
                        android:background="@null"
                        android:textSize="15sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp" />
                    <ImageView
                        android:id="@+id/iv_recipients"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:onClick="onClick"
                        android:background="@drawable/icon_mail_add_contacts"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_height="0.5sp"
                    android:background="#C8C7CC"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@id/rl_recipient"></View>
            </RelativeLayout>

            <!-- 邮件抄送人-->
            <RelativeLayout
                android:id="@+id/rl_cc_all"
                android:layout_below="@id/rl_recipients_all"
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rl_cc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:id="@+id/tv_cc_tip"
                        android:text="抄送人："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="16sp"/>
                    <com.inspur.emmcloud.widget.RichEdit
                        android:id="@+id/re_cc_recipient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/iv_cc_recipients"
                        android:layout_toRightOf="@id/tv_cc_tip"
                        android:background="@null"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp" />

                    <ImageView
                        android:id="@+id/iv_cc_recipients"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:onClick="onClick"
                        android:background="@drawable/icon_mail_add_contacts"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5sp"
                    android:background="#C8C7CC"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@id/rl_cc"></View>
            </RelativeLayout>

            <!-- 邮件发件人-->
            <RelativeLayout
                android:id="@+id/rl_sender_all"
                android:layout_below="@id/rl_cc_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:visibility="gone">
                <RelativeLayout
                    android:id="@+id/rl_sender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:id="@+id/tv_sender_tip"
                        android:text="发件人："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="16sp"/>
                    <EditText
                        android:id="@+id/et_sender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/iv_senders"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/icon_mail_add_contacts"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="0.5sp"
                    android:background="#C8C7CC"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_below="@id/rl_sender"></View>
            </RelativeLayout>

            <!-- 邮件主题-->
            <RelativeLayout
                android:id="@+id/rl_sender_theme_all"
                android:layout_below="@id/rl_sender_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp">
                <RelativeLayout
                    android:id="@+id/rl_sender_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:id="@+id/tv_theme_tip"
                        android:text="主题："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="16sp"/>
                    <EditText
                        android:id="@+id/et_sender_theme"
                        android:layout_toRightOf="@id/tv_theme_tip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:background="@null"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/iv_senders_theme"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:onClick="onClick"
                        android:background="@drawable/icon_mail_add_contacts"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5sp"
                    android:background="#C8C7CC"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_below="@id/rl_sender_theme"></View>
            </RelativeLayout>

            <!-- 邮件内容编写-->
            <RelativeLayout
                android:id="@+id/rl_send_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_sender_theme_all"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <EditText
                    android:id="@+id/et_send_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_send_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:id="@+id/et_send_conten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="点击添加签名"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>