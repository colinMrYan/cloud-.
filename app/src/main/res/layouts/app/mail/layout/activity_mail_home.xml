<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.inspur.emmcloud.widget.sildemenu.LeftDrawerLayout
        android:id="@+id/ldl_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_height"
                android:background="?attr/header_bg_color">
                <ImageButton
                    android:id="@+id/ibt_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:onClick="onClick"
                    android:src="@drawable/icon_mail_back"
                    android:layout_marginLeft="11dp"
                    android:scaleType="fitXY"/>

                <ImageButton
                    android:id="@+id/ibt_setting"
                    android:layout_marginLeft="11dp"
                    android:layout_toRightOf="@id/ibt_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:onClick="onClick"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_mail_side_lip" />

                <TextView
                    android:id="@+id/tv_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="?attr/header_text_color"
                    android:textSize="@dimen/header_textsize" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true">

                    <Button
                        android:id="@+id/bt_mail_add"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/icon_mail_write"
                        android:onClick="onClick" />

                    <Button
                        android:id="@+id/bt_mail_setting"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/bt_mail_add"
                        android:background="@drawable/icon_mail_setting"
                        android:onClick="onClick" />
                </RelativeLayout>
            </RelativeLayout>

                <com.inspur.emmcloud.widget.MySwipeRefreshLayout
                    android:id="@+id/srl_refresh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/rl_header"
                    android:background="@color/content_bg">
                    <ListView
                        android:id="@+id/lv_mail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@null"
                        android:dividerHeight="0dp" />
                </com.inspur.emmcloud.widget.MySwipeRefreshLayout>

            <RelativeLayout
                android:id="@+id/rl_home_long_click"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:background="#F9F9F9"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rl_no_read"
                    android:onClick="onClick"
                    android:layout_toLeftOf="@id/rl_delete_select_item"
                    android:layout_marginRight="56dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_reply"
                        android:layout_width="30dp"
                        android:layout_height="34dp"
                        android:paddingTop="4dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/icon_mail_reply"/>
                    <TextView
                        android:layout_below="@id/iv_reply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp"
                        android:text="未读"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_delete_select_item"
                    android:layout_centerHorizontal="true"
                    android:onClick="onClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_reply_all"
                        android:layout_width="30dp"
                        android:layout_height="34dp"
                        android:paddingTop="4dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/icon_mail_reply_all"/>
                    <TextView
                        android:layout_below="@id/iv_reply_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        android:text="删除"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_forward"
                    android:onClick="onClick"
                    android:layout_toRightOf="@id/rl_delete_select_item"
                    android:layout_marginLeft="65dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_forward"
                        android:layout_width="30dp"
                        android:layout_height="34dp"
                        android:paddingTop="4dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/icon_mail_forward"/>
                    <TextView
                        android:layout_below="@id/iv_forward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        android:text="移动"/>
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/v_shadow"
                android:onClick="onClick"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/rl_header">
            </View>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fm_container_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>
    </com.inspur.emmcloud.widget.sildemenu.LeftDrawerLayout>
</RelativeLayout>

