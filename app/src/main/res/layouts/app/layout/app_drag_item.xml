<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF" >

    <TextView
        android:id="@+id/app_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="14dp"
        android:paddingTop="6dp"
        android:text="@string/work"
        android:textColor="#999999" />

    <com.inspur.emmcloud.widget.draggrid.DragGridView
        android:id="@+id/app_list_draggrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_title_text"
        android:layout_centerHorizontal="true"
        android:paddingBottom="4dp"
        android:paddingTop="15dp"
        android:verticalSpacing="8dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:scrollbars="vertical" />

    <View
        android:id="@+id/v_applist_devid"
        android:layout_below="@id/app_list_draggrid"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#efefef"/>
</RelativeLayout>