<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="12dp"
        android:layout_height="8dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="21dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/message_popwindow_list_arrow_white" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_arrow"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_message_pop_round_blue_layout">

        <TextView
            android:id="@+id/tv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ll_common_app_switch"
            android:layout_alignRight="@+id/ll_common_app_switch"
            android:paddingBottom="11dp"
            android:paddingLeft="10dp"
            android:paddingRight="11dp"
            android:paddingTop="11dp"
            android:clickable="true"
            android:text="@string/app_sort_order"
            android:textColor="?attr/header_text_color"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_common_app_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_order"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:paddingBottom="11dp"
                android:paddingTop="11dp"
                android:clickable="false"
                android:text="@string/app_commonly_use"
                android:textColor="?attr/header_text_color"
                android:textSize="16sp" />

            <com.inspur.emmcloud.widget.SwitchView
                android:id="@+id/switch_view_common_app"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                 />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_alignLeft="@id/ll_common_app_switch"
            android:layout_alignRight="@id/ll_common_app_switch"
            android:layout_below="@id/tv_order"
            android:background="#e3e3e3" />
    </RelativeLayout>
</RelativeLayout>
