<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF" >

    <TextView
        android:id="@+id/app_center_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="6dp"
        android:text="@string/work"
        android:textColor="#333333"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/app_center_more_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="13dp"
        android:paddingTop="6dp"
        android:text="@string/app_center_more_apps"
        android:textColor="#999999"
        android:textSize="13sp" />

    <com.inspur.emmcloud.widget.draggrid.DragGridView
        android:id="@+id/app_list_draggrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_center_title_text"
        android:layout_centerHorizontal="true"
        android:listSelector="@android:color/transparent"
        android:numColumns="4"
        android:paddingBottom="4dp"
        android:paddingTop="10dp"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="8dp"
         />

</RelativeLayout>