<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="3dp">

    <com.inspur.emmcloud.widget.ImageViewRound
        android:id="@+id/icon_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:src="@drawable/ic_app_default" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_image"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:lines="2"
        android:paddingTop="4dp"
        android:textColor="@color/text_black"
        android:textSize="@dimen/content_smaller_textsize" />

    <ImageView
        android:id="@+id/delete_markview_text"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/app_delete"
        android:visibility="gone" />

    <TextView
        android:id="@+id/unhandled_badges_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dp"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:visibility="gone"
        />

</RelativeLayout>