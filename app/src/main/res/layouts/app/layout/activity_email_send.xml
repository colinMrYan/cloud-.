<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_bg">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="44dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingLeft="12dp"
                android:paddingRight="17dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />

        <TextView
            android:id="@+id/header_text"
            android:layout_toRightOf="@id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="写邮件"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_textsize" />

        <ImageView
            android:id="@+id/iv_send_email"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="18dp"
            android:paddingRight="17dp"
            android:paddingTop="18dp"
            android:src="@drawable/icon_work_approval_set" />
        <ImageView
            android:id="@+id/iv_add_attachment"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingBottom="18dp"
            android:paddingRight="30dp"
            android:paddingTop="18dp"
            android:layout_toLeftOf="@id/iv_send_email"
            android:src="@drawable/icon_work_approval_set" />
        <ImageView
            android:id="@+id/iv_email_send_setting"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingBottom="18dp"
            android:paddingRight="13dp"
            android:paddingTop="18dp"
            android:layout_toLeftOf="@id/iv_add_attachment"
            android:src="@drawable/icon_work_approval_set" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_layout">

        <RelativeLayout
            android:id="@+id/rl_send_to_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_to_emails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:id="@+id/tv_recipient_tip"
                    android:text="至："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/et_recipient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/iv_recipients"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5sp"
                android:background="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@id/rl_to_emails"></View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_copy_to_all"
            android:layout_below="@id/rl_send_to_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_copy_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:id="@+id/tv_copy_to_tip"
                    android:text="抄送："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/et_copy_to_recipient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/iv_copy_to_recipients"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5sp"
                android:background="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@id/rl_copy_to"></View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sender_all"
            android:layout_below="@id/rl_copy_to_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_sender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:id="@+id/tv_sender_tip"
                    android:text="发件人："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/et_sender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/iv_senders"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5sp"
                android:background="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@id/rl_sender"></View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sender_theme_all"
            android:layout_below="@id/rl_sender_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_sender_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:id="@+id/tv_theme_tip"
                    android:text="主题："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/et_sender_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/iv_senders_theme"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5sp"
                android:background="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@id/rl_sender_theme"></View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_send_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_sender_theme_all"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <EditText
                android:id="@+id/et_send_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_signature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_send_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:id="@+id/et_send_conten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点击添加签名"
                android:textSize="20sp"
                android:layout_centerVertical="true"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>