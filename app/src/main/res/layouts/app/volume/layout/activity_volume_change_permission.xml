<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height">

        <RelativeLayout
            android:id="@+id/common_header_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/header_bg">

            <RelativeLayout
                android:id="@+id/back_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:onClick="onClick"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:paddingRight="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_back_btn" />
            </RelativeLayout>

            <TextView
                android:id="@+id/header_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="100dp"
                android:paddingRight="100dp"
                android:textColor="@color/header_text"
                android:textSize="@dimen/header_textsize"
                android:text=""/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/content_bg"
        android:layout_below="@id/header_layout">
        <TextView
            android:id="@+id/volume_permission_manager_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="12dp"
            android:text="@string/volume_file_permission"
            android:textColor="#99999999"/>

        <LinearLayout
            android:layout_below="@id/volume_permission_manager_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#33333333"/>
            <RelativeLayout
                android:id="@+id/volume_read_write_permission_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#ffffffff">
                <TextView
                    android:id="@+id/volume_read_write_permission_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    />

                <com.inspur.emmcloud.widget.SwitchView
                    android:id="@+id/volume_read_write_permission_switch"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#33333333"
                android:layout_marginLeft="12dp"/>
            <RelativeLayout
                android:id="@+id/volume_read_permission_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#ffffffff">
                <TextView
                    android:id="@+id/volume_read_permission_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    />

                <com.inspur.emmcloud.widget.SwitchView
                    android:id="@+id/volume_read_permission_switch"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#33333333"/>
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
