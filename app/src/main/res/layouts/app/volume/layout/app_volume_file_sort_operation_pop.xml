<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fafafa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/sort_by_name_up_layout"
        android:onClick="onClick"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sort_by_name_up_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:text="@string/sort_by_name_asc"
            android:textColor="#666666"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/sort_by_name_up_select_img"
            android:src="@drawable/icon_contact_selected"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:layout_width="13dp"
            android:layout_height="13dp">

        </ImageView>
    </RelativeLayout>
    <View
        android:background="@color/color_list_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:id="@+id/sort_by_name_down_layout"
        android:onClick="onClick"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sort_by_name_down_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:text="@string/sort_by_name_dasc"
            android:textColor="#666666"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/sort_by_name_down_select_img"
            android:src="@drawable/icon_contact_selected"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:layout_width="13dp"
            android:layout_height="13dp">

        </ImageView>
    </RelativeLayout>
    <View
        android:background="@color/color_list_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:id="@+id/sort_by_time_up_layout"
        android:onClick="onClick"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sort_by_time_up_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:text="@string/sort_by_time_asc"
            android:textColor="#666666"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/sort_by_time_up_select_img"
            android:src="@drawable/icon_contact_selected"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:layout_width="13dp"
            android:layout_height="13dp">

        </ImageView>
    </RelativeLayout>
    
    <View
        android:background="@color/color_list_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:id="@+id/sort_by_time_down_layout"
        android:onClick="onClick"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sort_by_time_down_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:text="@string/sort_by_time_dasc"
            android:textColor="#666666"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/sort_by_time_down_select_img"
            android:src="@drawable/icon_contact_selected"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:layout_width="13dp"
            android:layout_height="13dp">

        </ImageView>
    </RelativeLayout>

</LinearLayout>