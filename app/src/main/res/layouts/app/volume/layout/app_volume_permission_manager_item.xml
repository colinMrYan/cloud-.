<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/volume_group_rl"
    android:layout_width="wrap_content"
    android:background="@color/white"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/volume_group_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:paddingLeft="12dp"
        android:textSize="17sp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/volume_group_permission_tv"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:textSize="17sp"
        android:layout_marginRight="40dp"
        />

    <ImageView
        android:id="@+id/volume_group_arrow_img"
        style="@style/arrow_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon_arrow_right" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_list_divider" />
