<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon_img"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_volume_share_volume" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/file_operation_drop_down_img"
        android:layout_toRightOf="@id/icon_img"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#333333"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/file_operation_drop_down_img"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="2dp"
        android:paddingTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_volume_file_operation_drop_down" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/file_operation_drop_down_img"
        android:layout_marginLeft="14dp"
        android:background="@color/color_list_divider" />
</RelativeLayout>