<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/file_select_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_select_no" />

    <ImageView
        android:id="@+id/file_type_img"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/file_select_img"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/file_operation_drop_down_img"
            android:layout_width="50dp"
            android:layout_height="76dp"
            android:layout_centerVertical="true"
            android:paddingBottom="20dp"
            android:paddingLeft="13dp"
            android:paddingRight="2dp"
            android:paddingTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_volume_file_operation_drop_down"
            android:visibility="gone" />

        <TextView
            android:id="@+id/upload_cancel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="15dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="15dp"
            android:text="@string/upload_cancel"
            android:textColor="#2586CD"
            android:textSize="15sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/right_layout"
        android:layout_toRightOf="@id/file_type_img">

        <TextView
            android:id="@+id/tv_file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="17sp" />

        <RelativeLayout
            android:id="@+id/file_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_file_name"
            android:visibility="gone">

            <TextView
                android:id="@+id/file_time_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#8f8e94"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_file_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@id/file_time_text"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#8f8e94"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/file_upload_status_layout"
            android:layout_below="@id/tv_file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/upload_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:max="100"
                android:visibility="gone"
                android:progressDrawable="@drawable/bg_volume_file_download_progressbar" />

            <TextView
                android:id="@+id/upload_status_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#8f8e94"
                android:textSize="15sp"
                 />
        </RelativeLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/file_type_img"
        android:layout_marginLeft="26dp"
        android:background="@color/color_list_divider" />
</RelativeLayout>