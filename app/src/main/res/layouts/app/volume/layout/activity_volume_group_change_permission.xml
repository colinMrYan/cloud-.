<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height">

        <RelativeLayout
            android:id="@+id/common_header_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_header_bg">

            <RelativeLayout
                android:id="@+id/back_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:onClick="onClick"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:paddingRight="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_back_btn" />
            </RelativeLayout>

            <TextView
                android:id="@+id/header_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="100dp"
                android:paddingRight="100dp"
                android:textColor="?attr/header_text_color"
                android:textSize="@dimen/header_textsize"
                android:text=""/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/content_bg"
        android:layout_below="@id/rl_header">
        <TextView
            android:id="@+id/tv_volume_permission_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="12dp"
            android:text="@string/clouddriver_file_permission_manager"
            android:textColor="#99999999"/>

        <LinearLayout
            android:layout_below="@id/tv_volume_permission_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#33333333"/>
            <RelativeLayout
                android:id="@+id/rl_volume_read_write_permission"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#ffffffff">
                <TextView
                    android:id="@+id/tv_volume_write_permission"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:textSize="17sp"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    />

                <com.inspur.emmcloud.widget.SwitchView
                    android:id="@+id/swv_volume_write_permission"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#33333333"
                android:layout_marginLeft="12dp"/>
            <RelativeLayout
                android:id="@+id/rl_volume_read_permission"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#ffffffff">
                <TextView
                    android:id="@+id/tv_volume_read_permission"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:textSize="17sp"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    />

                <com.inspur.emmcloud.widget.SwitchView
                    android:id="@+id/swv_volume_read_permission"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#33333333"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
