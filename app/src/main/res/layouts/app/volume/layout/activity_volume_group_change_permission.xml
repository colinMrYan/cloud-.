<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height">

        <RelativeLayout
            android:id="@+id/common_header_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/header_bg">

            <ImageButton
                android:id="@+id/ibt_back"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:onClick="onClick"
                android:padding="11dp"
                android:scaleType="fitXY"
                android:src="?attr/ic_back_btn" />


            <TextView
                android:id="@+id/header_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="100dp"
                android:paddingRight="100dp"
                android:text=""
                android:textColor="?attr/header_text_color"
                android:textSize="@dimen/header_textsize" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_header"
        android:background="@color/content_bg">

        <TextView
            android:id="@+id/tv_volume_permission_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="5dp"
            android:text="@string/clouddriver_file_permission_manager"
            android:textColor="#99999999" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_volume_permission_manager"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#33333333" />

            <RelativeLayout
                android:id="@+id/rl_volume_read_write_permission"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#ffffffff">

                <TextView
                    android:id="@+id/tv_volume_write_permission"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:textSize="17sp" />

                <com.inspur.emmcloud.widget.SwitchView
                    android:id="@+id/swv_volume_write_permission"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:background="#33333333" />

            <RelativeLayout
                android:id="@+id/rl_volume_read_permission"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#ffffffff">

                <TextView
                    android:id="@+id/tv_volume_read_permission"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:textSize="17sp" />

                <com.inspur.emmcloud.widget.SwitchView
                    android:id="@+id/swv_volume_read_permission"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#33333333" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
