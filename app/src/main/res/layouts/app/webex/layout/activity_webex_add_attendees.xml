<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true"
        android:background="@color/header_bg">

        <TextView
            android:id="@+id/tv_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/header_textsize" />

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="添加受邀者"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>



        <ScrollView
            android:layout_below="@id/rl_header"
            android:background="@color/content_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.inspur.emmcloud.widget.ScrollViewWithListView
                    android:id="@+id/lv_attendees"
                    android:divider="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.inspur.emmcloud.widget.ScrollViewWithListView>
                <RelativeLayout
                    android:background="@color/white"
                    android:layout_below="@id/lv_attendees"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_add_attendees"
                        android:src="@drawable/ic_webex_add_attendees"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:onClick="onClick"
                        android:scaleType="fitXY"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                    <EditText
                        android:id="@+id/et_add_attendees"
                        android:background="@null"
                        android:textSize="17sp"
                        android:paddingTop="11dp"
                        android:paddingBottom="11dp"
                        android:hint="请输入受邀者的电子邮箱地址"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/iv_add_attendees"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <View
                        android:background="@color/color_list_divider"
                        android:layout_below="@id/et_add_attendees"
                        android:layout_width="match_parent"
                        android:layout_height="0.5px"></View>
                </RelativeLayout>

            </RelativeLayout>

        </ScrollView>



</RelativeLayout>