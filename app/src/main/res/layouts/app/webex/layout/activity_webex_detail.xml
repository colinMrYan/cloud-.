<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true"
        android:background="@color/header_bg">


        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/meeting_info"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_textsize" />
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClick"
            android:visibility="gone"
            android:paddingLeft="13dp"
            android:paddingRight="14dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_webex_meeting_delete" />
    </RelativeLayout>

<RelativeLayout
    android:layout_below="@id/rl_header"
    android:background="@color/content_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:paddingTop="14dp"
            android:paddingBottom="14dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.inspur.emmcloud.widget.CircleTextImageView
                android:id="@+id/iv_photo"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_person_default"
                android:layout_centerVertical="true"
                android:layout_width="42dp"
                android:layout_height="42dp" />

            <Button
                android:id="@+id/bt_function"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:minHeight="0dp"
                android:padding="0dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:onClick="onClick"
                android:textColor="#999999"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/tv_title"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="17sp"
                android:textColor="#333333"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_photo"
                android:layout_toLeftOf="@id/bt_function"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="@color/content_bg"
            android:layout_width="match_parent"
            android:layout_height="10dp"></View>
        <TextView
            android:text="@string/webex_host"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:paddingTop="10dp"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_owner"
            android:layout_marginLeft="20dp"
            android:paddingTop="7dp"
            android:textSize="17sp"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/color_list_divider_tran"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5px"></View>

        <TextView
            android:text="@string/webex_when"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:paddingTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_time"
                android:layout_marginLeft="20dp"
                android:textSize="17sp"
                android:textColor="#333333"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_toLeftOf="@+id/tv_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_duration"
                android:layout_marginLeft="10dp"
                android:paddingRight="10dp"
                android:layout_alignParentRight="true"
                android:textSize="17sp"
                android:textColor="#4A90E2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="@color/color_list_divider_tran"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5px"></View>

        <TextView
            android:text="@string/webex_meeting_number"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_meeting_id"
            android:layout_marginLeft="20dp"
            android:paddingTop="7dp"
            android:textSize="17sp"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/color_list_divider_tran"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5px"></View>

        <TextView
            android:text="@string/webex_meeting_password"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_meeting_password"
            android:layout_marginLeft="20dp"
            android:paddingTop="7dp"
            android:textSize="17sp"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/rl_host_key"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@color/color_list_divider_tran"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/v_line"
                android:layout_width="match_parent"
                android:layout_height="0.5px"></View>

            <TextView
                android:id="@+id/tv_tip_host_key"
                android:text="@string/webex_host_password"
                android:layout_below="@id/v_line"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_host_key"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/tv_tip_host_key"
                android:paddingTop="7dp"
                android:textSize="17sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>


</RelativeLayout>