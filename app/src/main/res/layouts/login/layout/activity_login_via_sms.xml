<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:paddingLeft="27dp"
    android:paddingRight="30dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/login_captchas_login"
        android:textColor="#FF333333"
        android:textSize="26sp" />
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="160dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
           >

            <com.inspur.emmcloud.widget.ClearEditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/app_edittext_clear"
                android:paddingRight="12dp"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                android:hint="@string/login_please_input_phone_num"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="16sp"
                android:theme="@style/MyEditText" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_captcha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleDrawable="@drawable/app_edittext_eye_selector"
            app:passwordToggleEnabled="true"
            >
            <EditText
                android:id="@+id/et_captcha"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:hint="@string/login_please_input_captchas"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:textSize="16sp"
                android:theme="@style/MyEditText" />


        </android.support.design.widget.TextInputLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_login_via_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingLeft="4dp"
                android:onClick="onClick"
                android:paddingBottom="15dp"
                android:paddingTop="10dp"
                android:text="@string/login_sms"
                android:textColor="#36A5F6"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:onClick="onClick"
                android:paddingBottom="15dp"
                android:paddingTop="10dp"
                android:text="@string/login_forget_password"
                android:textColor="#36A5F6"
                android:textSize="13sp" />
        </RelativeLayout>


        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_login_btn_unable"
            android:enabled="false"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>
</RelativeLayout>


