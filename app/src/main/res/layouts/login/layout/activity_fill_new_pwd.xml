<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true" >

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_bg" >

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/set_pwd"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/header_layout"
        android:background="@color/content_bg"
        android:orientation="vertical"
        android:paddingTop="30dp" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d9dddf" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical" >

            

            <EditText
                android:id="@+id/new_password_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/phone_num_text"
                android:background="@null"
                android:password="true"
                android:hint="@string/modify_input_code"
                android:paddingBottom="13dp"
                android:paddingRight="13dp"
                android:paddingLeft="18dp"
                android:paddingTop="13dp"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="@dimen/content_normal_textsize" >
            </EditText>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#d9dddf" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >


            <RelativeLayout
                android:id="@+id/captchas_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" >

                

                <EditText
                    android:id="@+id/confirm_new_password_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/captchas_text"
                    android:background="@null"
                    android:password="true"
                    android:hint="@string/confirm_password"
                    android:paddingBottom="13dp"
                    android:paddingRight="13dp"
                    android:paddingLeft="18dp"
                    android:paddingTop="13dp"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textSize="@dimen/content_normal_textsize" >
                </EditText>
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d9dddf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="100" >

            <Button
                android:id="@+id/modify_password_confirm_btn"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="90"
                android:background="@drawable/selector_login_btn"
                android:onClick="onClick"
                android:text="@string/confirm"
                android:textColor="#ffffff"
                android:textSize="18sp" >
            </Button>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>