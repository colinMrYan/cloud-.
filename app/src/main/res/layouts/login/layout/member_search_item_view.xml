<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_list"
        android:focusable="false"
        android:focusableInTouchMode="false" >


        <com.inspur.emmcloud.widget.CircleTextImageView
            android:id="@+id/img_photo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            ></com.inspur.emmcloud.widget.CircleTextImageView>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/selected_img"
            android:layout_toRightOf="@id/img_photo"
            android:ellipsize="end"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:singleLine="true"
            android:textColor="#444444"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/arrow_img"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:src="@drawable/icon_contact_right_arrow"
            android:visibility="gone" />
"

        <ImageView
            android:id="@+id/selected_img"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="16dp"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_contact_selected"
            android:visibility="invisible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="61dp"
            android:background="@color/color_list_divider" />
    </RelativeLayout>

</LinearLayout>