<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true">

    <ImageButton
        android:id="@+id/ibt_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:onClick="onClick"
        android:padding="11dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back_btn_white" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:paddingLeft="27dp"
        android:paddingRight="30dp"
        android:text="@string/modify_reset_password"
        android:textColor="#FF333333"
        android:textSize="26sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="155dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="27dp"
        android:paddingRight="30dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_password_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleDrawable="@drawable/app_edittext_eye_selector"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/et_password_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/modify_input_code"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:paddingBottom="17dp"
                android:paddingTop="17dp"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="15sp"
                android:theme="@style/MyEditText" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleDrawable="@drawable/app_edittext_eye_selector"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/et_password_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:hint="@string/confirm_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingBottom="17dp"
                android:paddingTop="17dp"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="15sp"
                android:theme="@style/MyEditText" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/modify_password_invalid"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/bg_login_btn_unable"
            android:enabled="false"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>


