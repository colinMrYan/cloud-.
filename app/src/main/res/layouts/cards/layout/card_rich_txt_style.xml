<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <View
        android:id="@+id/top_blank_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:id="@+id/card_background_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner_fill_white_no_border"
        android:orientation="vertical"
        android:paddingBottom="10dp">
        <!--android:foreground="?attr/selectableItemBackground"-->
        <include layout="@layout/card_header_layout" />

        <include layout="@layout/card_empty_add_layout" />

        <TextView
            android:id="@+id/card_rich_txt_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"/>

        <!--<br.tiagohm.markdownview.MarkdownView-->
            <!--android:id="@+id/card_rich_txt_text"-->
            <!--app:escapeHtml="false"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:gravity="center_horizontal"/>-->
        <include layout="@layout/card_footer_layout" />
    </LinearLayout>

    <View
        android:id="@+id/bottom_blank_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
</LinearLayout>