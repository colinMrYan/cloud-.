<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <View
        android:id="@+id/top_blank_view"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner_fill_white_no_border"
        android:orientation="vertical"
        android:paddingBottom="18dp">

        <include layout="@layout/card_header_layout" />

        <include layout="@layout/card_empty_add_layout" />

        <!--<com.inspur.emmcloud.widget.ScrollViewWithListView-->
            <!--android:id="@+id/list"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:divider="#00000000"-->
            <!--android:dividerHeight="0dp"-->
            <!--android:listSelector="#00000000" />-->
        <com.inspur.emmcloud.widget.CloudPlusRecycleView
            android:id="@+id/vertical_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:overScrollMode="never"
            android:scrollbars="none" />

        <include layout="@layout/card_footer_layout" />
    </LinearLayout>

    <View
        android:id="@+id/bottom_blank_view"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>