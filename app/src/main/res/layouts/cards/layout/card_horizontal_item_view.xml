<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_horizontal_item_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/card_vertical_num_txt"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/card_vertical_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/card_vertical_num_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/card_vertical_num_txt"
        android:layout_alignLeft="@id/card_vertical_num_txt"
        android:layout_alignRight="@id/card_vertical_num_txt"
        android:maxLines="2"
        android:maxEms="4"
        android:ellipsize="end"
        android:textSize="13sp"/>
</RelativeLayout>