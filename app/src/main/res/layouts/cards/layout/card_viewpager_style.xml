<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <View
        android:id="@+id/top_blank_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:id="@+id/card_background_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner_fill_white_no_border"
        android:orientation="vertical"
        android:paddingBottom="10dp">
<!--android:foreground="?attr/selectableItemBackground"-->
        <include layout="@layout/card_header_layout" />

        <include layout="@layout/card_empty_add_layout" />

        <com.inspur.emmcloud.widget.ECMBoundBackViewPager
            android:id="@+id/card_viewpager_list"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:overScrollMode="never"
            />

        <include layout="@layout/card_footer_layout" />
    </LinearLayout>

    <View
        android:id="@+id/bottom_blank_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
</LinearLayout>
