<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_bg">

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            >

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/header_textsize" />

        <TextView
            android:id="@+id/ok_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/ok"
            android:textColor="#ffffff"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout"
        android:background="@color/content_bg">

        <View
            android:id="@+id/view0"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_list_divider" />

        <com.inspur.emmcloud.widget.MaxHightScrollView
            android:id="@+id/search_edit_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view0"
            android:background="@color/white"
            android:paddingLeft="12dp"
            android:paddingRight="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.inspur.emmcloud.widget.FlowLayout
                    android:id="@+id/flowlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical" />
            </RelativeLayout>
        </com.inspur.emmcloud.widget.MaxHightScrollView>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/search_edit_layout"
            android:background="@color/color_list_divider" />

        <RelativeLayout
            android:id="@+id/origin_all_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/view1"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/open_group_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:background="#efeff4">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/open_title_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_list_divider" />

                <ListView
                    android:id="@+id/open_first_group_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:dividerHeight="0dp"
                    android:divider="#00000000"></ListView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/origin_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/orgin_first_group_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_list_divider" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:background="#efeff4">

                        <TextView
                            android:id="@+id/title_all_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/all"
                            android:textColor="#8f8e94"
                            android:textSize="@dimen/content_title_textsize" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_list_divider" />

                    <RelativeLayout
                        android:id="@+id/struct_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:onClick="onClick">

                        <com.inspur.emmcloud.widget.CircleImageView
                            android:id="@+id/struct_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/icon_company" />

                        <TextView
                            android:id="@+id/text_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/struct_img"
                            android:paddingBottom="14dp"
                            android:paddingTop="14dp"
                            android:text="@string/origanization_struct"
                            android:textColor="#030303"
                            android:textSize="@dimen/content_title_textsize" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="60dp"
                        android:background="@color/color_list_divider" />

                    <RelativeLayout
                        android:id="@+id/channel_group_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:onClick="onClick">

                        <com.inspur.emmcloud.widget.CircleImageView
                            android:id="@+id/channel_group_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/icon_group" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/channel_group_img"
                            android:paddingBottom="13dp"
                            android:paddingTop="13dp"
                            android:text="@string/channel_group"
                            android:textColor="#030303"
                            android:textSize="@dimen/content_title_textsize" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/orgin_second_group_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_list_divider" />

                    <TextView
                        android:id="@+id/second_title_text"
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:background="#efeff4"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#8f8e94"
                        android:textSize="@dimen/content_title_textsize" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_list_divider" />

                    <ListView
                        android:id="@+id/second_group_list"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.0"
                        android:dividerHeight="0dp"
                        android:divider="#00000000"></ListView>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <com.inspur.emmcloud.widget.NoHorScrollView
            android:id="@+id/pop_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/view1"
            android:background="#f4f4f4"
            android:scrollbars="none"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/pop_third_group_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:background="#efeff4">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/pop_third_title_list"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/pop_third_group_more_text"></android.support.v7.widget.RecyclerView>

                        <TextView
                            android:id="@+id/pop_third_group_more_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:onClick="onClick"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/more"
                            android:textColor="#0F7BCA"
                            android:textSize="@dimen/content_title_textsize"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_list_divider" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:background="#F4F4F4"
                                android:gravity="center"
                                android:text="@string/no_search_term"
                                android:textColor="#030303"
                                android:textSize="@dimen/content_title_textsize" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/color_list_divider" />
                        </LinearLayout>

                        <ListView
                            android:id="@+id/pop_third_group_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:dividerHeight="0dp"
                            android:divider="#00000000"></ListView>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pop_second_group_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_list_divider" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:background="#efeff4">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/pop_second_title_list"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/pop_second_group_more_text"></android.support.v7.widget.RecyclerView>

                        <TextView
                            android:id="@+id/pop_second_group_more_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:onClick="onClick"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/more"
                            android:textColor="#0F7BCA"
                            android:textSize="@dimen/content_title_textsize"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_list_divider" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:background="#F4F4F4"
                                android:gravity="center"
                                android:text="@string/no_search_term"
                                android:textColor="#030303"
                                android:textSize="@dimen/content_title_textsize" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/color_list_divider" />
                        </LinearLayout>

                        <ListView
                            android:id="@+id/pop_second_group_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:dividerHeight="0dp"
                            android:divider="#00000000"></ListView>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </com.inspur.emmcloud.widget.NoHorScrollView>
    </RelativeLayout>

</RelativeLayout>