<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/content_bg"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:padding="11dp"
            android:layout_height="44dp"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back_btn_black" />

        <com.inspur.emmcloud.widget.CircleTextImageView
            android:id="@+id/img_photo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="45dp"
            android:layout_centerHorizontal="true"
            android:onClick="onClick"
            android:src="@drawable/icon_photo_default" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_photo"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/content_normal_textsize" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <LinearLayout
            android:id="@+id/department_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="8dp"
                android:paddingTop="10dp"
                android:text="@string/user_function_introduction"
                android:textColor="#333333"
                android:textSize="@dimen/header_textsize" />

            <TextView
                android:id="@+id/function_introduction_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:textColor="#333333"
                android:textIsSelectable="true"
                android:textSize="@dimen/content_title_textsize" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_list_divider" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="8dp"
                android:paddingTop="10dp"
                android:text="@string/user_service_and_support"
                android:textColor="#333333"
                android:textIsSelectable="true"
                android:textSize="@dimen/content_title_textsize" />

            <TextView
                android:id="@+id/support_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:textColor="#333333"
                android:textIsSelectable="true"
                android:textSize="@dimen/content_title_textsize" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_list_divider" />

        <RelativeLayout
            android:id="@+id/support_top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/channel_set_top"
                android:textColor="#FF333333"
                android:textSize="@dimen/content_title_textsize" />

            <com.inspur.emmcloud.widget.SwitchView
                android:id="@+id/sv_stick"
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"></com.inspur.emmcloud.widget.SwitchView>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>