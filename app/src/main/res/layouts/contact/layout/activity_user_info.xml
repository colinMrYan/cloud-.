<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_header_bg"
        android:paddingBottom="10dp"
        android:paddingTop="5dp">

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back_btn_black" />
        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_user_summary"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_below="@id/back_layout"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="35dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:id="@+id/ll_mobile_contact_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="9dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_mobile_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_user_phone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_number"
                        android:textColor="#36A5F6"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mobile_sms"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_user_sms" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_sms"
                        android:textColor="#36A5F6"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mobile_email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_user_phone_email" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_email"
                        android:textColor="#36A5F6"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <com.inspur.emmcloud.widget.CircleTextImageView
            android:id="@+id/iv_user_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/back_layout"
            android:layout_centerHorizontal="true"
            android:elevation="10dp"
            android:onClick="onClick"
            android:src="@drawable/icon_photo_default" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_user_photo"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp"
            android:elevation="10dp"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_user_duty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:elevation="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <LinearLayout
            android:id="@+id/ll_employee_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="8dp"
                android:paddingTop="10dp"
                android:text="@string/user_employee_num"
                android:textColor="#999999"
                android:textSize="@dimen/content_normal_textsize" />

            <TextView
                android:id="@+id/tv_employee_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:textColor="#333333"
                android:textIsSelectable="true"
                android:textSize="@dimen/content_title_textsize" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_list_divider" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_user_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_user_depart"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignTop="@id/tv_department"
                    android:layout_marginRight="19.3dp"
                    android:layout_marginTop="3dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_organizational_structure" />

                <TextView
                    android:id="@+id/tv_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_user_depart"
                    android:text="@string/user_depart"
                    android:textColor="#999999"
                    android:textSize="@dimen/content_small_textsize" />

                <TextView
                    android:id="@+id/tv_user_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_department"
                    android:layout_toRightOf="@id/iv_user_depart"
                    android:paddingBottom="7dp"
                    android:textColor="#333333"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/button_textsize" />

                <ImageView
                    android:id="@+id/iv_user_depart_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:onClick="onClick"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"
                    android:src="@drawable/iocn_organizational_structure_detail"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/tv_user_department"
                    android:layout_toRightOf="@id/iv_user_depart"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_user_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_user_mail"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="19.3dp"
                    android:layout_marginTop="15dp"
                    android:onClick="onClick"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_user_email" />

                <TextView
                    android:id="@+id/tv_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/iv_user_mail"
                    android:text="@string/mail"
                    android:textColor="#999999"
                    android:textSize="@dimen/content_normal_textsize" />

                <TextView
                    android:id="@+id/tv_user_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_mail"
                    android:layout_toRightOf="@id/iv_user_mail"
                    android:paddingBottom="7dp"
                    android:textColor="#333333"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/content_title_textsize" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/tv_user_mail"
                    android:layout_toRightOf="@id/iv_user_mail"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_user_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_mobile_phone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="19.3dp"
                android:layout_marginTop="15dp"
                android:onClick="onClick"
                android:scaleType="fitXY"
                android:src="@drawable/icon_user_phone_num" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/iv_mobile_phone"
                android:text="@string/user_info_phone_number"
                android:textColor="#999999"
                android:textSize="@dimen/content_normal_textsize" />

            <TextView
                android:id="@+id/tv_user_phone_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_phone"
                android:layout_toRightOf="@id/iv_mobile_phone"
                android:paddingBottom="7dp"
                android:textColor="#333333"
                android:textIsSelectable="true"
                android:textSize="@dimen/content_title_textsize" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tv_user_phone_num"
                android:layout_toRightOf="@id/iv_mobile_phone"
                android:background="@color/color_list_divider" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_user_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_user_telephone"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="19.3dp"
                    android:layout_marginTop="15dp"
                    android:onClick="onClick"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_landline" />
                <TextView
                    android:id="@+id/tv_telephone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/iv_user_telephone"
                    android:text="@string/user_telephone"
                    android:textColor="#999999"
                    android:textSize="@dimen/content_normal_textsize" />

                <TextView
                    android:id="@+id/tv_user_telephone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_telephone"
                    android:layout_toRightOf="@id/iv_user_telephone"
                    android:paddingBottom="7dp"
                    android:textColor="#333333"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/content_title_textsize" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/tv_user_telephone"
                    android:layout_toRightOf="@id/iv_user_telephone"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_start_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="38dp">

        <TextView
            android:id="@+id/iv_start_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="88dp"
            android:layout_marginRight="87dp"
            android:background="@drawable/bg_user_new_chat"
            android:gravity="center_horizontal"
            android:onClick="onClick"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            android:text="@string/user_new_chat"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>