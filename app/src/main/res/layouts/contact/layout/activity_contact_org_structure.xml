<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.inspur.emmcloud.ui.contact.ContactOrgStructureActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/content_bg"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_org_Structure_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:background="@color/header_bg">

            <RelativeLayout
                android:id="@+id/rl_org_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:onClick="onClick"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <ImageView

                    android:id="@+id/iv_back_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:paddingRight="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_back_btn" />
            </RelativeLayout>

            <TextView

                android:id="@+id/tv_org_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/depart_info_text"
                android:textColor="@color/header_text"
                android:textSize="@dimen/header_textsize" />

        </RelativeLayout>

        <ListView
            android:id="@+id/lv_org_structure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_org_Structure_header"
            android:layout_marginTop="20dp"
            android:divider="@null">

        </ListView>

    </RelativeLayout>

</LinearLayout>
