<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/shape_header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:padding="11dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back_btn_black" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_show_files"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_file_list"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <ImageView
            android:id="@+id/img_file_icon"
            android:layout_width="150dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/view_line_channel"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rl_show_files"
        android:layout_marginLeft="20dp"
        android:background="@color/color_list_divider" />

    <RelativeLayout
        android:id="@+id/rl_channel_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:onClick="onClick"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/rl_show_files">

        <ImageView
            android:id="@+id/img_channel_share_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_share_to_channel" />

        <TextView
            android:id="@+id/tv_channel_share_to_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_to_channel"
            android:paddingLeft="12dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:layout_toRightOf="@id/img_channel_share_icon" />

        <ImageView
            android:id="@+id/img_channel_arrow_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
             />
    </RelativeLayout>
    <View
        android:id="@+id/view_line_volume"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rl_channel_share"
        android:layout_marginLeft="20dp"
        android:background="@color/color_list_divider" />
    <RelativeLayout
        android:id="@+id/rl_volume_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:paddingTop="10dp"
        android:onClick="onClick"
        android:paddingBottom="10dp"
        android:layout_below="@id/rl_channel_share">

        <ImageView
            android:id="@+id/img_volume_share_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_app_default" />

        <TextView
            android:id="@+id/tv_volume_share_to_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_upload_volume"
            android:paddingLeft="12dp"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_volume_share_icon" />

        <ImageView
            android:id="@+id/img_arrow_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
             />
    </RelativeLayout>
    <View
        android:id="@+id/view_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rl_volume_share"
        android:background="@color/color_list_divider" />

</RelativeLayout>