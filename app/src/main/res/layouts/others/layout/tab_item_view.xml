<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        android:paddingTop="7dp">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/selector_tab_net_unknown_btn"
            android:focusable="false"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@drawable/seclector_footer_text"
            android:textSize="10sp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/layout"
        android:paddingBottom="4dp"
        android:paddingLeft="5dp"
        android:paddingRight="3dp"
        android:paddingTop="3dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tips_new_message"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="@dimen/content_moresmaller_textsize" />
    </RelativeLayout>

    <View
        android:id="@+id/v_badge"
        android:background="@drawable/bg_tips_new_message"
        android:layout_alignRight="@id/layout"
        android:layout_marginTop="4.5dp"
        android:layout_marginRight="9dp"
        android:layout_width="10dp"
        android:visibility="gone"
        android:layout_height="10dp"></View>

</RelativeLayout>