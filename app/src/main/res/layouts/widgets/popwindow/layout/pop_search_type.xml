<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_search_type_layout"
    android:orientation="vertical"
    android:paddingTop="10dp" >

    <RelativeLayout
        android:id="@+id/search_all_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:paddingLeft="19dp"
        android:paddingRight="17dp" >

        <ImageView
            android:id="@+id/search_all_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_search_all" />
        <TextView 
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/search_all_img"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/all"
            android:textColor="@color/white"
            android:textSize="15sp"
            />
    </RelativeLayout>
    <View 
          android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="#3895d9"
        />
       <RelativeLayout
        android:id="@+id/search_contact_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:paddingLeft="19dp"
        android:paddingRight="17dp" >

        <ImageView
            android:id="@+id/search_contact_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_search_contact" />
        <TextView 
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/search_contact_img"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/find_search_contacts"
            android:textColor="@color/white"
            android:textSize="15sp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="#3895d9"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/search_chat_history_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:paddingLeft="19dp"
        android:paddingRight="17dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/search_chat_history_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_search_chat_history" />
        <TextView 
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/search_chat_history_img"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/find_search_chat_history"
            android:textColor="@color/white"
            android:textSize="15sp"
            />
    </RelativeLayout>
    <View 
          android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="#3895d9"
        />
       <RelativeLayout
        android:id="@+id/search_news_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:paddingLeft="19dp"
        android:paddingRight="17dp" >

        <ImageView
            android:id="@+id/search_news_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_search_news" />
        <TextView 
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/search_news_img"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/find_search_news"
            android:textColor="@color/white"
            android:textSize="15sp"
            />
    </RelativeLayout>

</LinearLayout>