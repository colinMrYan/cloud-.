<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="12dp"
        android:layout_height="8dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/message_popwindow_list_arrow_white" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_arrow"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_message_pop_round_blue_layout">


        <RelativeLayout
            android:id="@+id/rl_attendees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingTop="12dp">

            <ImageView
                android:id="@+id/iv_attendees"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_webex_meeting_attendees"
                android:tint="@color/header_text_black" />

            <TextView
                android:id="@+id/tv_attendees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/iv_attendees"
                android:background="@color/transparent"
                android:clickable="false"
                android:paddingRight="30dp"
                android:text="@string/webex_participant"
                android:textColor="@color/header_text_black"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_alignLeft="@id/rl_attendees"
            android:layout_alignRight="@id/rl_attendees"
            android:layout_below="@id/rl_attendees"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#e3e3e3" />

        <RelativeLayout
            android:id="@+id/rl_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/rl_attendees"
            android:layout_alignRight="@id/rl_attendees"
            android:layout_below="@id/rl_attendees"
            android:onClick="onClick"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingTop="12dp">

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_webex_meeting_share"
                android:tint="@color/header_text_black" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/iv_share"
                android:background="@color/transparent"
                android:clickable="false"
                android:paddingRight="6dp"
                android:text="@string/share"
                android:textColor="@color/header_text_black"
                android:textSize="16sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/rl_attendees"
            android:layout_alignRight="@id/rl_attendees"
            android:layout_below="@id/rl_share"
            android:onClick="onClick"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp">

            <View
                android:id="@+id/v_line_delete"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/message_create_group_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="15dp"
                android:background="#e3e3e3" />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/v_line_delete"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_webex_meeting_delete"
                android:tint="@color/header_text_black" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/v_line_delete"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/iv_delete"
                android:background="@color/transparent"
                android:clickable="false"
                android:paddingRight="6dp"
                android:text="@string/delete"
                android:textColor="@color/header_text_black"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
