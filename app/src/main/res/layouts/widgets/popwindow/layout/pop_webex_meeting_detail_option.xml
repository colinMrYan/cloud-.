<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_arrow"
        android:layout_width="12dp"
        android:layout_height="8dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/message_popwindow_list_arrow" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/img_arrow"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_message_pop_round_blue_layout">


        <RelativeLayout
            android:id="@+id/rl_attendees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:paddingBottom="10dp"
            android:paddingLeft="11dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/iv_attendees"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_webex_meeting_attendees" />

            <TextView
                android:id="@+id/tv_attendees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/iv_attendees"
                android:background="@color/transparent"
                android:clickable="false"
                android:paddingRight="30dp"
                android:text="@string/webex_participant"
                android:textColor="#ffffff"
                android:textSize="@dimen/content_normal_textsize" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_alignLeft="@id/rl_attendees"
            android:layout_alignRight="@id/rl_attendees"
            android:layout_below="@id/rl_attendees"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#3895D9" />

        <RelativeLayout
            android:id="@+id/rl_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_alignLeft="@id/rl_attendees"
            android:layout_alignRight="@id/rl_attendees"
            android:layout_below="@id/rl_attendees"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingLeft="11dp"
            android:paddingTop="9dp">

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_webex_meeting_share" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/iv_share"
                android:background="@color/transparent"
                android:clickable="false"
                android:paddingRight="6dp"
                android:text="@string/share"
                android:textColor="#ffffff"
                android:textSize="@dimen/content_normal_textsize" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_alignLeft="@id/rl_attendees"
            android:layout_alignRight="@id/rl_attendees"
            android:layout_below="@id/rl_share"
            android:orientation="horizontal"
            android:paddingBottom="11dp"
            android:paddingLeft="11dp">

            <View
                android:id="@+id/v_line_delete"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/message_create_group_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="11dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#3895D9" />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_below="@id/v_line_delete"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_webex_meeting_delete" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/v_line_delete"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/iv_delete"
                android:background="@color/transparent"
                android:clickable="false"
                android:paddingRight="6dp"
                android:text="@string/delete"
                android:textColor="#ffffff"
                android:textSize="@dimen/content_normal_textsize" />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
