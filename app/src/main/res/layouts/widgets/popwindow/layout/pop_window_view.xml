<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="125dp"
        android:layout_height="82dp"
        android:layout_marginRight="9dp"
        android:background="@drawable/pop_window_view"
        android:orientation="vertical" >

        <RelativeLayout 
            android:id="@+id/meeting_change_layout"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="17dp"
            >
            <ImageView 
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_meeting_change"/>
            <Button
            android:id="@+id/meeting_change_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#333333"
            android:clickable="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="@string/meeting_change"
            android:background="@color/transparent"
            android:textSize="14sp" />
        </RelativeLayout>
        
        <RelativeLayout 
            android:id="@+id/meeting_cancel_layout"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="17dp"
            android:layout_below="@id/meeting_change_layout"
            android:orientation="horizontal">
            <ImageView 
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_meeting_cancle"/>
            <Button
            android:id="@+id/meeting_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
                android:textColor="#333333"
            android:clickable="false"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:text="@string/meeting_cancel"
            android:background="@color/transparent"
            android:textSize="14sp" />
        </RelativeLayout>
        
    </RelativeLayout>

</LinearLayout>