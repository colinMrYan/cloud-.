<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/meeting_room_filter_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#552e2e2e"
    android:clickable="true"
    android:onClick="onClick"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="170dp" >

        <LinearLayout
            android:id="@+id/meeting_room_filter_outside_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f4f4f4"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#f4f4f4" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:text="@string/meeting_time"
                    android:textColor="#999999"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#ffffff"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:text="@string/only_free"
                    android:textColor="#555555"
                    android:textSize="17sp" />

                <com.inspur.emmcloud.widget.SwitchView
                    android:id="@+id/meeting_room_filter_swtich_btn"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_alignParentBottom="true"
                android:background="@color/color_list_divider" />

            <RelativeLayout
                android:id="@+id/meeting_time_filter_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#ffffff" >

                <TextView
                    android:id="@+id/meeting_room_filter_from_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:text="--/--/--/--/--"
                    android:textColor="#0F7BCA"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/meeting_room_filter_from_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/meeting_room_filter_from_date_text"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:text=""
                    android:textColor="#0F7BCA"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/meeting_room_filter_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="@string/meeting_search_to"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/meeting_room_filter_end_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:textColor="#0F7BCA"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/meeting_room_filter_end_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:layout_toLeftOf="@id/meeting_room_filter_end_time_text"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:text="--/--/--/--/--"
                    android:textColor="#0F7BCA"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="@color/color_list_divider" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="34dp"
                android:background="@color/color_list_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="#ffffff" >

                    <Button
                        android:id="@+id/meeting_room_filter_cancel_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="center"
                        android:onClick="onClick"
                        android:text="@string/meeting_reset"
                        android:textColor="#999999"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_list_divider" />
                </RelativeLayout>

                <View
                    android:layout_width="0.5px"
                    android:layout_height="44dp"
                    android:background="@color/color_list_divider" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="#ffffff" >

                    <Button
                        android:id="@+id/meeting_room_filter_confirm_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="center"
                        android:onClick="onClick"
                        android:text="@string/ok"
                        android:textColor="#0F7BCA"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_list_divider" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>