<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <!--android:background="@drawable/message_popwindow_list"-->
    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="12dp"
        android:layout_height="8dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/message_popwindow_list_arrow_white" />

    <RelativeLayout
        android:id="@+id/rl_schedule_popwindow_outsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_arrow"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_message_pop_round_blue_layout">


        <RelativeLayout
            android:id="@+id/rl_schedule_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="11dp">

            <ImageView
                android:id="@+id/iv_schedule_calendar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_schedule_add_calendar" />

            <TextView
                android:id="@+id/tv_schedule_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@id/iv_schedule_calendar"
                android:background="@color/transparent"
                android:clickable="false"
                android:text="@string/work_calendar_text"
                android:textColor="?attr/header_text_color"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_alignLeft="@id/rl_schedule_calendar"
            android:layout_alignRight="@id/rl_schedule_calendar"
            android:layout_below="@id/rl_schedule_calendar"
            android:layout_centerHorizontal="true"
            android:background="#E3E3E3" />

        <RelativeLayout
            android:id="@+id/rl_schedule_mission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_schedule_calendar"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="11dp">

            <ImageView
                android:id="@+id/iv_schedule_mission"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_schedule_add_task" />

            <TextView
                android:id="@+id/tv_schedule_mission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@id/iv_schedule_mission"
                android:background="@color/transparent"
                android:clickable="false"
                android:text="@string/work_task_text"
                android:textColor="?attr/header_text_color"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_alignLeft="@id/rl_schedule_calendar"
            android:layout_alignRight="@id/rl_schedule_calendar"
            android:layout_below="@id/rl_schedule_mission"
            android:layout_centerHorizontal="true"
            android:background="#E3E3E3" />

        <RelativeLayout
            android:id="@+id/rl_schedule_meeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_schedule_mission"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="11dp">

            <ImageView
                android:id="@+id/iv_schedule_meeting"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_schedule_add_meeting_room" />

            <TextView
                android:id="@+id/tv_schedule_meeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@id/iv_schedule_meeting"
                android:background="@color/transparent"
                android:clickable="false"
                android:text="@string/work_meeting_text"
                android:textColor="?attr/header_text_color"
                android:textSize="16sp" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
