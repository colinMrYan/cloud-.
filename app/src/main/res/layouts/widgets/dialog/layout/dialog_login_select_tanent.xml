<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:background="@drawable/bg_corner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="@string/select_enterprise"
        android:textColor="#333333"
        android:padding="10dp"
        android:textSize="18sp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.inspur.emmcloud.widget.MaxHightListView
        android:id="@+id/enterprise_list"
        android:listSelector="#00000000"
        android:scrollbars="vertical"
        android:focusable="true"
        android:scrollbarFadeDuration="1500"
        android:scrollbarStyle="outsideOverlay"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:scrollbarThumbVertical="@color/grey_b2b2b2"
        android:scrollbarSize="4dp"
        android:dividerHeight="0dp"
        android:divider="#00000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.inspur.emmcloud.widget.MaxHightListView>
    <View
        android:background="@color/color_list_divider"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="0.6dp">
    </View>
    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#333333"
            android:padding="10dp"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/auto_select_enterprise"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.inspur.emmcloud.widget.SwitchView
            android:id="@+id/auto_select_switch"
            android:layout_width="37dp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" >
        </com.inspur.emmcloud.widget.SwitchView>

    </RelativeLayout>
</LinearLayout>