<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="5dp"
        >

        <TextView
            android:id="@+id/tv_permission_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_centerHorizontal="true"
            android:textColor="#3E4A59"
            android:textSize="17sp"
            android:text="@string/permission_open_cloud_plus"/>

        <TextView
            android:id="@+id/tv_permission_dialog_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="236dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_permission_dialog_title"
            android:layout_marginTop="20dp"
            android:textColor="#3E4A59"
            android:textSize="14sp"
            android:text="@string/permission_necessary_permission"/>
        <LinearLayout
            android:id="@+id/ll_permission_necessary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_below="@id/tv_permission_dialog_summary"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/ll_permission_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_permission_dialog_phone"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/icon_permission_phone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:text="@string/permission_phone_permission"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_permission_call_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_permission_dialog_call_phone"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_permission_call_phone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:text="@string/permission_phone_permission"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_permission_storage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_permission_dialog_storage"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/icon_permission_storage"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:text="@string/permission_storage_permission"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_next_step"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="17sp"
            android:layout_centerInParent="true"
            android:elevation="4dp"
            android:layout_marginTop="31dp"
            android:layout_below="@id/ll_permission_necessary"
            android:gravity="center"
            android:background="@drawable/bg_half_circle"
            android:textColor="@color/white"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="@string/permission_next"/>
    </RelativeLayout>


</LinearLayout>