<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="240dp"
    android:gravity="center"
    android:layout_height="match_parent">

    <DatePicker
        android:id="@+id/datePicker_no_head"
        android:theme="@style/DateTimePickerDateTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:calendarViewShown="false" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="#eeeeee"></View>
    <RelativeLayout
        android:id="@+id/rl_select_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="onClick">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="35dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/header_function_textsize"
            android:text="24:00"
            android:textColor="#36A5F6"></TextView>

        <ImageView
            android:id="@+id/iv_time"
            android:layout_width="20dp"
            android:layout_height="54dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="23dp"
            android:paddingBottom="17dp"
            android:paddingTop="17dp"
            android:src="@drawable/ic_mail_arrow" />
        <View
            android:id="@+id/v_time_bottom_line"
            android:layout_below="@id/iv_time"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="#eeeeee"></View>
    </RelativeLayout>
</LinearLayout>
