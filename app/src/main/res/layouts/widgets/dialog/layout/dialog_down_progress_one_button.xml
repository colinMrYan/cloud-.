<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="5dp"
        >

        <TextView
            android:id="@+id/tv_permission_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:textColor="#3E4A59"
            android:textSize="17sp"
            android:text="@string/cloud_plus_update"/>

        <ProgressBar
            android:id="@+id/progress_bar_apk_download"
            android:layout_width="198dp"
            android:layout_height="6dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:max="100"
            style="@style/StyleProgressBarMini"
            android:layout_below="@id/tv_permission_dialog_title"/>

        <TextView
            android:id="@+id/tv_num_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_permission_dialog_title"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="15dp"
            android:textSize="13sp"
            android:layout_toRightOf="@id/progress_bar_apk_download"/>

        <TextView
            android:id="@+id/tv_num_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_alignLeft="@id/progress_bar_apk_download"
            android:layout_below="@id/progress_bar_apk_download"
            android:textColor="#3E4A59"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_downloading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_num_progress"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="#3E4A59"
            android:text="@string/downloading_package"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="17sp"
            android:layout_centerInParent="true"
            android:elevation="4dp"
            android:layout_marginTop="48dp"
            android:layout_below="@id/tv_downloading"
            android:gravity="center"
            android:background="@drawable/bg_half_circle"
            android:textColor="@color/white"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="@string/cancel"/>
    </RelativeLayout>


</LinearLayout>