<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/userhead_dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/take_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="#ffffff"
        android:padding="20dp"
        android:text="@string/take_camera"
        android:gravity="center_horizontal"
        android:textColor="@drawable/backlayout_text_seclector"
        android:textSize="@dimen/header_textsize" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/content_border" />

    <TextView
        android:id="@+id/mobile_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="20dp"
        android:text="@string/gallery"
       android:gravity="center_horizontal"
        android:textColor="@drawable/backlayout_text_seclector"
        android:textSize="@dimen/header_textsize" />

</LinearLayout>

