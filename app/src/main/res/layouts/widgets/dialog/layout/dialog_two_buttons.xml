<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_upgrade_dialog"
            android:orientation="vertical">
            <TextView
                android:id="@+id/app_update_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/bigger_textsize"
                android:gravity="center_horizontal"
                android:textColor="@color/app_dialog_title_color"
                android:paddingTop="23dp"
                />
            <TextView
                android:id="@+id/app_update_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_title_textsize"
                android:paddingTop="17dp"
                android:gravity="center_horizontal"
                android:textColor="@color/app_dialog_sub_title_color"
                />
            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:adjustViewBounds="true"
                android:maxHeight="310dp"
                android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
                android:fadeScrollbars="false"
                android:scrollbarStyle="insideInset"
                android:scrollbarSize="4dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:lineSpacingMultiplier="1.1"
                android:textColor="@color/app_dialog_title_color"
                android:textSize="@dimen/header_textsize" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/content_border" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <Button
                    android:id="@+id/cancel_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/cancel"
                    android:textColor="@color/app_dialog_title_color"
                    android:textSize="@dimen/header_function_textsize" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/content_border" />

                <Button
                    android:id="@+id/ok_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/ok"
                    android:textColor="@color/app_dialog_update_color"
                    android:textSize="@dimen/header_function_textsize" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/icon_aircraft"
            android:layout_width="67dp"
            android:layout_height="80dp"
            android:layout_marginLeft="17dp"
            android:src="@drawable/icon_aircraft"
            />
    </RelativeLayout>
 
</LinearLayout>