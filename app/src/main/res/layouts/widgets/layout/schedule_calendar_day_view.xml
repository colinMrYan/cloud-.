<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_time_hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ll_time_hour"
        android:layout_alignTop="@+id/ll_time_hour"
        android:layout_marginLeft="30dp"></RelativeLayout>
    <RelativeLayout
        android:id="@+id/tl_current_time_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_point"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_schedule_event_time_circel"></ImageView>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_point"
            android:background="#36A5F6"></View>
    </RelativeLayout>
</RelativeLayout>