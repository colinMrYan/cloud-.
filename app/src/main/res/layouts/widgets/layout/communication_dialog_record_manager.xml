<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_record_dialog"
    android:orientation="vertical"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/iv_recorder"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_recorder_volume_level_v1"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_recorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_recorder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:text="@string/slide_up_to_cancel"
        android:textColor="#ffffffff"
        android:textSize="13sp" />

</RelativeLayout>