<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <Button
        android:id="@+id/share"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/share" />

    <Button
        android:id="@+id/send_character"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_character"
        android:visibility="gone" />

    <Button
        android:id="@+id/send_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_photo"
        android:visibility="gone" />

    <Button
        android:id="@+id/send_url_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_url_photo"
        android:visibility="gone" />

    <Button
        android:id="@+id/send_take_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_take_photo"
        android:visibility="gone" />

    <Button
        android:id="@+id/send_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_music"
        android:visibility="gone" />

</LinearLayout>