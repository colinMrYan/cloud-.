<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <com.inspur.imp.plugin.camera.mycamera.FocusSurfaceView
        android:id="@+id/preview_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:visibility="visible"
        app:focus_frame_can_change="true"
        app:focus_frame_color="@android:color/transparent"
        app:focus_frame_stroke_weight="0dp"
        app:focus_guide_color="@android:color/holo_green_dark"
        app:focus_guide_show_mode="not_show"
        app:focus_guide_stroke_weight="1dp"
        app:focus_handle_color="@android:color/white"
        app:focus_handle_show_mode="show_always"
        app:focus_handle_size="5dp"
        app:focus_min_frame_size="50dp"
        app:focus_overlay_color="#86000000"
        app:focus_set_max_initial_frame_scale="true"
        app:focus_touch_padding="8dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <ImageButton
            android:id="@+id/close_camera_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:onClick="onClick"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="4dp"
            android:paddingTop="6dp"
            android:scaleType="fitXY"
            android:src="@drawable/plugin_cemera_btn_close_camera" />

        <ImageButton
            android:id="@+id/camera_light_switch_btn"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:background="@null"
            android:onClick="onClick"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="5dp"
            android:paddingTop="7dp"
            android:scaleType="fitXY"
            android:src="@drawable/plugin_cemera_btn_camera_light_on" />

        <ImageButton
            android:id="@+id/switch_camera_btn"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:onClick="onClick"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="5dp"
            android:paddingTop="7dp"
            android:scaleType="fitXY"
            android:src="@drawable/plugin_cemera_btn_camera_facing_switch" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/set_radio_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:paddingLeft="10dp"
        android:layout_marginBottom="80dp"
        android:background="#99000000"
        android:visibility="gone"
        android:scrollbars="none"></android.support.v7.widget.RecyclerView>
    <Button
        android:id="@+id/take_bt"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|center"
        android:onClick="onClick"
        android:layout_marginBottom="10dp"
        android:background="@drawable/plugin_camera_take_picture_btn" />

    <RelativeLayout
        android:id="@+id/rl_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_retry"
                android:background="@drawable/plugin_camera_take_picture_preview_back"
                android:onClick="onClick"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <Button
                android:id="@+id/btn_edit"
                android:onClick="onClick"
                android:background="@drawable/plugin_camera_take_picture_preview_edit"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <Button
                android:id="@+id/btn_complete"
                android:onClick="onClick"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/plugin_camera_take_picture_preview_complete"
                android:layout_width="60dp"
                android:layout_height="60dp" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>