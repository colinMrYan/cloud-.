<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_bg">

        <ImageView
            android:id="@+id/contact_list_img"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:paddingLeft="12dp"
            android:paddingRight="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_people_btn" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/communicate"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_textsize" />

        <ImageView
            android:id="@+id/address_list_img"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_add" />
        <!--android:src="@drawable/selector_people_btn"-->
    </RelativeLayout>


    <com.inspur.emmcloud.widget.pullableview.PullToRefreshLayout
        android:id="@+id/refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout"
        android:background="@color/content_bg">

        <include layout="@layout/pull_refresh_head" />
        <!-- 支持所有实现Pullable接口的View -->

        <com.inspur.emmcloud.widget.pullableview.PullableListView
            android:id="@+id/msg_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp" />

        <include layout="@layout/pull_load_more" />
    </com.inspur.emmcloud.widget.pullableview.PullToRefreshLayout>

    <LinearLayout
        android:id="@+id/no_chat_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_below="@id/header_layout"
        android:background="#00000000"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/no_chat_img"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_no_chat" />

        <Button
            android:id="@+id/find_friends_btn"
            android:layout_below="@id/no_chat_img"
            android:layout_marginTop="62dp"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="@string/find_your_friends"
            android:textColor="#107BCB"
            android:textSize="@dimen/button_textsize"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_find_friends" />
    </LinearLayout>
</RelativeLayout>
