<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true" >

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_bg" >

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/modify_user_info"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/header_layout"
        android:layout_marginTop="10dp" >

        <Button
            android:id="@+id/get_modifyinfo_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:gravity="center"
            android:hint="@string/resend_code"
            
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="@string/modify_modify"
            android:textColor="@color/login_btn_nor"
            android:textSize="@dimen/content_normal_textsize" />

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/modifyinfo_layout"
            android:layout_alignTop="@+id/modifyinfo_layout"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/get_modifyinfo_btn"
            android:background="#d9dddf" />

        <RelativeLayout
            android:id="@+id/modifyinfo_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/view" >

            <TextView
                android:id="@+id/modifyinfo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="27"
                android:gravity="center"
                android:text="@string/modify_user_info"
                android:textColor="#333333"
                android:textSize="@dimen/content_normal_textsize" >
            </TextView>

            <com.inspur.emmcloud.widget.ClearEditText
                android:id="@+id/modifyinfo_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/modifyinfo_text"
                android:background="@null"
                android:hint="@string/please_input_change"
                android:maxLength="11"
                
                android:paddingBottom="13dp"
                android:paddingRight="13dp"
                android:paddingTop="13dp"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="@dimen/content_normal_textsize" >
            </com.inspur.emmcloud.widget.ClearEditText>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>