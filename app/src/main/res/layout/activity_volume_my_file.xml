<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height">

        <RelativeLayout
            android:id="@+id/common_header_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/header_bg">

            <RelativeLayout
                android:id="@+id/back_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:onClick="onClick"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:paddingRight="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_back_btn" />
            </RelativeLayout>

            <TextView
                android:id="@+id/header_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="100dp"
                android:paddingRight="100dp"
                android:textColor="@color/header_text"
                android:textSize="@dimen/header_textsize" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/new_forder_img"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="10dp"
                    android:paddingTop="14dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_volume_new_forder" />

                <ImageView
                    android:id="@+id/upload_img"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/new_forder_img"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="12dp"
                    android:paddingTop="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_volume_upload_file_white" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/batch_operation_header_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/header_bg"
            android:visibility="gone">

            <TextView
                android:id="@+id/batch_operation_cancel_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/cancel"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/batch_operation_header_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="100dp"
                android:paddingRight="100dp"
                android:text="已选择(2)"
                android:textColor="@color/header_text"
                android:textSize="@dimen/header_textsize" />


            <TextView
                android:id="@+id/batch_operation_select_all_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="全选"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/header_layout"
        android:background="@color/content_bg">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/batch_operation_bar_layout"
            android:scrollbars="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/operation_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fafafa">

                    <TextView
                        android:id="@+id/operation_sort_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_volume_menu_drop_down"
                        android:onClick="onClick"
                        android:padding="12dp"
                        android:text="时间排序"
                        android:textColor="#666666"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/operation_multiselect_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:onClick="onClick"
                        android:padding="12dp"
                        android:text="多选"
                        android:textColor="#666666"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/operation_filter_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:onClick="onClick"
                        android:padding="12dp"
                        android:text="分类筛选"
                        android:textColor="#666666"
                        android:textSize="15sp" />

                    <View
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/operation_sort_text"
                        android:background="@color/color_list_divider" />
                </RelativeLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/file_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/operation_layout"
                    android:background="@color/white"
                    android:divider="#00000000"
                    android:dividerHeight="0dp" />

                <LinearLayout
                    android:id="@+id/data_blank_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/content_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_volume_file_blak" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingBottom="50dp"
                        android:text="暂无文件"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                        android:id="@+id/upload_btn"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="150dp"
                        android:gravity="center"
                        android:onClick="onClick"
                        android:padding="10dp"
                        android:text="上传文件"
                        android:textColor="#2586CD"
                        app:qmui_borderColor="#2586CD"
                        app:qmui_borderWidth="0.6dp"
                        app:qmui_radius="4dp" />

                </LinearLayout>
            </RelativeLayout>

        </android.support.v4.widget.SwipeRefreshLayout>

        <RelativeLayout
            android:id="@+id/batch_operation_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/batch_operation_delete_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:padding="12dp"
                android:text="@string/delete"
                android:textColor="#fd3131"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/batch_operation_delete_text"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/batch_operation_copy_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:padding="13dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="10dp"
                    android:paddingTop="12dp"
                    android:text="复制"
                    android:textColor="#444444"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/batch_operation_move_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:paddingBottom="12dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:text="移动"
                    android:textColor="#444444"
                    android:textSize="15sp" />
            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>