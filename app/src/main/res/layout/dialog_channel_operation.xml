<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/set_top_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:padding="12dp"
        android:text="@string/channel_set_top"
        android:textColor="@color/text_black"
        android:textSize="@dimen/content_title_textsize" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/content_border" />

    <TextView
        android:id="@+id/hide_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="@string/channel_hide_chat"
         android:textColor="@color/text_black"
        android:textSize="@dimen/content_title_textsize" /> />

</LinearLayout>