<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf1f4"
    android:fitsSystemWindows="true" >

    <!-- android:background="@drawable/icon_work" -->

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_bg" >

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/office_head"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_textsize" />

        <LinearLayout
            android:id="@+id/meeting_common_office_create_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/meeting_common_office_order_img"
                android:layout_width="39dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:onClick="onClick"
                android:scaleType="fitXY"
                android:paddingLeft="12dp"
                android:paddingRight="7dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/icon_my_common_office_order" />

            <ImageView
                android:id="@+id/meeting_common_office_create_img"
                android:layout_width="39dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:onClick="onClick"
                android:scaleType="fitXY"
                android:paddingLeft="7dp"
                android:paddingRight="12dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/icon_add" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/meeting_common_office_confirm_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:visibility="gone"
            android:orientation="horizontal" >
            <TextView 
                android:id="@+id/meeting_common_office_confirm_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingRight="14dp"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:text="@string/confirm"/>
            </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout"
        android:background="@color/content_bg" >
        <com.inspur.emmcloud.widget.dragsortlistview.DragSortListView 
            android:id="@+id/meeting_my_common_office_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#33000000"
                android:listSelector="#00000000"/>
<!-- 
        <com.inspur.emmcloud.widget.pullableview.PullToRefreshLayout
            android:id="@+id/refresh_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <include layout="@layout/pull_refresh_head" />
            <com.inspur.emmcloud.widget.pullableview.PullableListView
                android:id="@+id/meeting_my_common_office_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#33000000"
                android:listSelector="#00000000" />
            <include layout="@layout/pull_load_more" />
        </com.inspur.emmcloud.widget.pullableview.PullToRefreshLayout>
    -->     
        <ImageView
            android:id="@+id/meeting_common_office_empty_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:src="@drawable/no_office_space"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>