

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/new_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="8dp"
        android:background="@drawable/text_layout_selector"
        android:paddingBottom="6dp"
        android:paddingTop="12dp" >
<!-- android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" -->
        <ImageView
            android:id="@+id/news_leftImg_img"
            android:layout_width="90dp"
            android:layout_height="71dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:id="@+id/news_middleText_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignTop="@id/news_leftImg_img"
            android:layout_toRightOf="@id/news_leftImg_img"
            android:orientation="vertical"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/news_middleUp_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingTop="1dp"
                android:maxLines="1"
                android:textColor="#203b4f"
                android:textSize="16sp"
                android:paddingBottom="2dp" />
            <TextView 
                android:id="@+id/news_middlemid_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#4f87a2"
                android:text="  2015-11-19"
                android:textSize="12sp"/>
            <!-- android:paddingBottom="2dp" -->

            <TextView
                android:id="@+id/news_middleDown_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:gravity="center_vertical"
                android:textColor="#4f87a2"
                android:textSize="14sp" />
            
        </LinearLayout>
    </RelativeLayout>

