<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ecf1f4"
    android:fitsSystemWindows="true" >

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true"
        android:background="@color/header_bg" >

        <TextView
            android:id="@+id/meetting_bookingcirform_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="20dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/header_textsize" />

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/place"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>



        <RelativeLayout
            android:id="@+id/meetting_booking_outlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_layout" >

            <RelativeLayout
                android:id="@+id/work_topic_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/text_layout_selector" >

                <!-- 点击变色android:background="@drawable/text_layout_selector" -->

                <TextView
                    android:id="@+id/meetting_topic_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="@string/meeting_room"
                    android:textColor="#203b4f"
                    android:textSize="@dimen/content_title_textsize" />

                <LinearLayout
                    android:id="@+id/meetting_content_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/loc_content_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/meetting_topic_text"
                        android:background="@null"
                        android:clickable="true"
                        android:text="N208"
                        android:textSize="@dimen/content_title_textsize" />
                </LinearLayout>

                <View
                    android:id="@+id/work_bottom_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="#33000000" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/location_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/work_topic_layout"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick" >

                <!-- 点击变色android:background="@drawable/text_layout_selector" -->

                <TextView
                    android:id="@+id/meetting_room_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="@string/building"
                    android:textColor="#203b4f"
                    android:textSize="@dimen/content_title_textsize" />

                <LinearLayout
                    android:id="@+id/meetting_room_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dp"
                    android:layout_toLeftOf="@id/meetting_room_text"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/loc_buildingname_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:background="@null"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:onClick="onClick"
                        android:textSize="@dimen/content_title_textsize" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/meetting_roomdetail_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/icon_arrow_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentBottom="true"
                    android:background="#33000000"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/meeting_location_name_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/location_layout"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick" >

                <!-- 点击变色android:background="@drawable/text_layout_selector" -->

                <TextView
                    android:id="@+id/meetting_loc_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#203b4f"
                    android:textSize="@dimen/content_title_textsize" />
                
                <ImageView
                    android:id="@+id/meetting_locdetail_img"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_below="@id/meetting_loc_text"
                    android:src="@drawable/icon_location" />

                <LinearLayout
                    android:id="@+id/meetting_loc_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/meetting_locdetail_img"
                    android:layout_below="@id/meetting_loc_text"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/meetting_locname_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:onClick="onClick"
                        android:textColor="#FFA5A5A5"
                         />
                </LinearLayout>

                

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="#33000000"
                    android:visibility="visible" />
            </RelativeLayout>
            
            <ImageView 
                android:id="@+id/meetting_loc_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_below="@id/meeting_location_name_layout"
                android:src="@drawable/icon_map_place"/>
        </RelativeLayout>


</RelativeLayout>