<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/posttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="#22000000"
        android:text=""
        android:textColor="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/posttime"
        android:paddingTop="5dp"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/enter_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_arrow_right" />

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/enter_img"
                android:paddingLeft="10dp"
                android:textSize="@dimen/content_normal_textsize" />

            <TextView
                android:id="@+id/time_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_below="@id/title_text"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/enter_img"
                android:textColor="#4f87a2"
                android:textSize="@dimen/content_smaller_textsize" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/time_text"
                android:padding="10dp"
                android:scaleType="fitXY"
                 >
            </ImageView>

            <TextView
                android:id="@+id/topTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/img"
                android:layout_alignRight="@id/img"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="215dp"
                android:background="#55000000"
                android:text="" />
        </RelativeLayout>

        <View
            android:id="@+id/group_item1_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/head"
            android:layout_marginTop="5dp"
            android:background="#33000000" />

        <LinearLayout
            android:id="@+id/groupinfo_item1_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_item1_line"
            android:background="@drawable/text_layout_selector"
            android:gravity="center_vertical"
            android:onClick="onLayoutClick"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/News_Title1"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="20dp"
                android:text=""
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/News_Pic1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                 />
        </LinearLayout>

        <View
            android:id="@+id/group_item2_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/groupinfo_item1_layout"
            android:background="#33000000" />

        <LinearLayout
            android:id="@+id/groupinfo_item2_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_item2_line"
            android:background="@drawable/text_layout_selector"
            android:gravity="center_vertical"
            android:onClick="onLayoutClick"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/News_Title2"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="20dp"
                android:text=""
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/News_Pic2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                 />
        </LinearLayout>

        <View
            android:id="@+id/group_item3_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/groupinfo_item2_layout"
            android:background="#33000000" />

        <LinearLayout
            android:id="@+id/groupinfo_item3_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_item3_line"
            android:background="@drawable/text_layout_selector"
            android:gravity="center_vertical"
            android:onClick="onLayoutClick"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/News_Title3"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="20dp"
                android:text=""
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/News_Pic3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                 />
        </LinearLayout>

        <View
            android:id="@+id/group_item4_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/groupinfo_item3_layout"
            android:background="#33000000" />

        <LinearLayout
            android:id="@+id/groupinfo_item4_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_item4_line"
            android:background="@drawable/text_layout_selector"
            android:gravity="center_vertical"
            android:onClick="onLayoutClick"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/News_Title4"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="20dp"
                android:text=""
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/News_Pic4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                 />
        </LinearLayout>

        <View
            android:id="@+id/group_item5_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/groupinfo_item4_layout"
            android:background="#33000000"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/groupinfo_item5_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_item5_line"
            android:background="@drawable/text_layout_selector"
            android:gravity="center_vertical"
            android:onClick="onLayoutClick"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/News_Title5"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="20dp"
                android:text=""
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/News_Pic5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>