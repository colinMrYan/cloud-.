<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.inspur.emmcloud"
    android:id="@+id/news_card_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"
    android:background="@drawable/shape_chat_msg_card_other">


    <com.inspur.emmcloud.widget.RoundAngleImageView
        android:id="@+id/news_card_content_img"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:roundHeight="5dp"
        app:roundWidth="5dp"
        app:roundleftdown="false"
        app:roundrightdown="false" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="9dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/news_card_content_img"
        android:background="@drawable/shape_linkdownround_layout" >

        <TextView
            android:id="@+id/news_card_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:maxLines="2"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/news_card_digest_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_card_title_text"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="3"
             android:textColor="@color/text_grey"
            android:textSize="13sp" />
    </RelativeLayout>

</RelativeLayout>