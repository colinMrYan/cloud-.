<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root_layout"
    android:background="#FAFAFA"
    android:orientation="vertical" >
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_line_color" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f7f7"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" >


        <ImageView
            android:id="@+id/add_img"
            android:layout_width="34dp"
            android:layout_height="32dp"
            android:layout_alignBottom="@+id/input_edit"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/selector_add_comment_btn" />

        <EditText
            android:id="@+id/input_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/send_msg_btn"
            android:layout_toRightOf="@id/add_img"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_corner_fill_white_no_border"
            android:completionThreshold="1"
            android:maxLines="5"
            android:paddingBottom="8dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="8dp"
            android:textSize="@dimen/content_normal_textsize" />

        <Button
            android:id="@+id/send_msg_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/input_edit"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_chat_input_send_btn_disable"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/send"
            android:textColor="#ffffff"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="9dp"
            android:textSize="@dimen/content_title_textsize"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="274dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="25dp"
        android:visibility="gone" >

        <GridView
            android:id="@+id/add_menu_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@android:color/transparent"
            android:numColumns="4"
            android:paddingTop="8dp"
            android:stretchMode="columnWidth" />
    </RelativeLayout>

</LinearLayout>