<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:paddingLeft="16dp" >
<View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dadadd" />
    <com.inspur.emmcloud.widget.CircleImageView
        android:id="@+id/user_photo_img"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        android:padding="0.5dp"
        android:src="@drawable/icon_org_structure" />

    <TextView
        android:id="@+id/user_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/user_photo_img"
        android:textSize="@dimen/content_normal_textsize" />

    <ImageView
        style="@style/arrow_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/icon_arrow_right" />

</RelativeLayout>