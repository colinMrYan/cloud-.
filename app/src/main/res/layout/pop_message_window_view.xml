<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/message_popwindow_list"
    android:orientation="vertical"
    android:paddingLeft="22dp"
    android:paddingRight="20dp">

    <RelativeLayout
        android:id="@+id/message_create_group_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/message_create_group_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_message_creat_group" />

        <TextView
            android:id="@+id/message_create_group_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/message_create_group_img"
            android:layout_marginLeft="12dp"
            android:paddingRight="3dp"
            android:background="@color/transparent"
            android:clickable="false"
            android:gravity="center"
            android:text="@string/message_create_group"
            android:textColor="#ffffff"
            android:textSize="@dimen/content_normal_textsize" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_alignLeft="@id/message_create_group_layout"
        android:layout_alignRight="@id/message_create_group_layout"
        android:layout_below="@id/message_create_group_layout"
        android:layout_centerHorizontal="true"
        android:background="#3895D9" />

    <RelativeLayout
        android:id="@+id/message_scan_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_create_group_layout"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="9dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/message_scan_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_message_scan" />

        <TextView
            android:id="@+id/message_scan_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/message_scan_img"
            android:layout_marginLeft="12dp"
            android:background="@color/transparent"
            android:clickable="false"
            android:gravity="center"
            android:text="@string/sweep"
            android:textColor="#ffffff"
            android:textSize="@dimen/content_normal_textsize" />
    </RelativeLayout>




</RelativeLayout>
