<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true" >

    <RelativeLayout
        android:id="@+id/header_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_bg" >

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
            <Button 
                android:id="@+id/imp_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/back"
                android:textColor="#ffffff"
                android:layout_toRightOf="@id/back_btn"
                android:background="@null"/>
            <Button 
                android:id="@+id/imp_close_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/close"
                android:textColor="#ffffff"
                android:paddingLeft="10dp"
                android:visibility="gone"
                android:layout_toRightOf="@id/imp_back_btn"
                android:background="@null"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="52dp"
            android:singleLine="true"
            android:ellipsize="middle"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/about_text"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

    <com.inspur.imp.engine.webview.ImpWebView
        android:layout_below="@id/header_layout"
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:id="@+id/progress_layout"
        android:layout_below="@id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000" >

        <com.inspur.emmcloud.widget.CircularProgress
            android:layout_width="45dp"
            android:layout_height="45dp"
           android:layout_centerInParent="true"
            app:borderWidth="3dp" />
    </RelativeLayout>

</RelativeLayout>