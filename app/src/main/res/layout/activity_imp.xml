<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_bg"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn"/>

            <Button
                android:id="@+id/imp_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/back_btn"
                android:background="@null"
                android:text="@string/back"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/imp_close_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/imp_back_btn"
                android:background="@null"
                android:paddingLeft="8dp"
                android:text="@string/close"
                android:textColor="#ffffff"
                android:visibility="gone"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/back_layout"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:text="@string/about_text"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_textsize"/>
    </RelativeLayout>

    <com.inspur.imp.engine.webview.ImpWebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout"/>

    <RelativeLayout
        android:id="@+id/progress_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout"
        android:background="#00000000">

        <com.inspur.emmcloud.widget.CircularProgress
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            app:borderWidth="3dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/load_error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/content_bg"
        android:gravity="center"
        android:visibility="gone"
        android:layout_below="@id/header_layout"
        android:orientation="vertical">
        <ImageView
            android:src="@drawable/imp_load_fail"
            android:layout_marginBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="16sp"
            android:textColor="#929292"
            android:text="@string/web_load_fail"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:textColor="#3299FE"
            android:textSize="15sp"
            android:text="@string/web_reload"
            android:id="@+id/refresh_text"
            android:layout_marginBottom="100dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:background="@drawable/imp_bg_webview_reload_btn"
            android:layout_width="wrap_content"
            android:layout_height="34dp"/>
    </LinearLayout>
</RelativeLayout>