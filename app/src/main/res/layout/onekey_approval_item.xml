<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:focusableInTouchMode="false" >

    <RelativeLayout
        android:id="@+id/new_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="9dp" >

        <LinearLayout
            android:id="@+id/onekey_head_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/onekey_head_img"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:id="@+id/onekey_headmiddle_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp" >

                <TextView
                    android:id="@+id/onekey_username_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123"
                    android:textColor="@color/onekey_username_textcolor"
                    android:textSize="@dimen/content_normal_textsize" />

                <TextView
                    android:id="@+id/onekey_timetitle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="abc"
                    android:textSize="@dimen/content_smaller_textsize" />
            </LinearLayout>

            <TextView
                android:id="@+id/onekey_moneynum_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="110dp"
                android:gravity="right"
                android:paddingRight="5dp"
                android:text="Â¥1136"
                android:textColor="@color/onekey_username_textcolor"
                android:textSize="@dimen/header_textsize" />
        </LinearLayout>

        <View
            android:id="@+id/onekey_headline_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/onekey_head_layout"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="8dp"
            android:background="@color/onekey_line_view" />

        <RelativeLayout
            android:id="@+id/onekey_middle_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/onekey_headline_view"
            android:paddingBottom="10dp" >

            <ImageView
                android:id="@+id/onekey_middle_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/onekey_middleup_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/onekey_middle_img"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:textSize="@dimen/content_normal_textsize" />

            <TextView
                android:id="@+id/onekey_middledown_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/onekey_middleup_text"
                android:layout_below="@+id/onekey_middle_img"
                android:layout_toRightOf="@+id/onekey_middle_img"
                android:paddingLeft="15dp"
                android:paddingTop="6dp"
                android:textColor="@color/onekey_content_text"
                android:textSize="15sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/onekey_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/onekey_middle_layout"
            android:paddingTop="5dp" >

            <LinearLayout
                android:id="@+id/onekey_pass_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="5dp" >

                <ImageView
                    android:id="@+id/onekey_pass_img"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />

                <TextView
                    android:id="@+id/onekey_pass_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textColor="@color/onekey_content_text" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:background="@color/onekey_line_view" />

            <LinearLayout
                android:id="@+id/onekey_unpass_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="5dp" >

                <ImageView
                    android:id="@+id/onekey_unpass_img"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />

                <TextView
                    android:id="@+id/onekey_unpass_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textColor="@color/onekey_content_text" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/onekey_floatimg_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingTop="4dp"
        android:visibility="gone" />

</RelativeLayout>