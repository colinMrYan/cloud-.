<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf1f4"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <!-- android:background="@drawable/icon_work" -->

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_bg" >

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/work_calendar_text"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_textsize" />

        <LinearLayout
            android:id="@+id/cal_choose_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/add_event_img"
                 android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="17dp"
                android:paddingBottom="17dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:onClick="onClick"
                android:src="@drawable/icon_add" />

            <ImageView
                android:id="@+id/cal_config_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:onClick="onClick"
                android:src="@drawable/btn_channel_info" />
        </LinearLayout>
    </RelativeLayout>

    <com.inspur.emmcloud.widget.pullableview.PullToRefreshLayout
        android:id="@+id/refresh_view"
        android:background="@color/content_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout" >

        <include layout="@layout/pull_refresh_head" />

        <com.inspur.emmcloud.widget.pullableview.PullableExpandableListView
            android:id="@+id/expandableListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#33000000"
            android:listSelector="#00000000" />

        <include layout="@layout/pull_load_more" />
    </com.inspur.emmcloud.widget.pullableview.PullToRefreshLayout>

</RelativeLayout>