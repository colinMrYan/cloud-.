<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:segmentcontrol="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true" >

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_bg" >

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/mession_detail"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_textsize" />

        <ImageView
            android:id="@+id/mession_settiing_txt"
            android:visibility="gone"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:onClick="onClick"
            android:src="@drawable/icon_mession_export" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mession_name_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/header_layout"
        android:background="@drawable/text_layout_selector" >

        <View
            android:id="@+id/mession_name_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33000000" />

        <EditText
            android:id="@+id/mession_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mession_name_line"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:text="@string/mession_name"
            android:textSize="@dimen/content_title_textsize" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mession_order_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/mession_name_layout"
        android:background="@drawable/text_layout_selector" >

        <View
            android:id="@+id/mession_order_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33000000" />

        <TextView
            android:id="@+id/mession_order_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mession_order_line"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/mession_priority"
            android:textSize="@dimen/content_title_textsize" />

        <LinearLayout
            android:id="@+id/mession_messionorder_layout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:orientation="horizontal" >

            <com.inspur.emmcloud.widget.SegmentControl
                android:id="@+id/segment_control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/header_layout"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                segmentcontrol:cornerRadius="5dip"
                segmentcontrol:direction="horizon"
                segmentcontrol:horizonGap="20dp"
                segmentcontrol:selectedBackgroundColors="#FF0F7BCA"
                segmentcontrol:selectedIndex="1"
                segmentcontrol:texts="@string/mession_level"
                segmentcontrol:verticalGap="8dip" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mession_type_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/mession_order_layout"
        android:background="@drawable/text_layout_selector"
        android:clickable="true"
        android:onClick="onClick" >

        <View
            android:id="@+id/mession_type_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33000000" />

        <TextView
            android:id="@+id/mession_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mession_type_line"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/mession_type"
            android:textSize="@dimen/content_title_textsize" />

        <LinearLayout
            android:id="@+id/mession_messiontype_layout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/mession_typecolor_img"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_mession_blue"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/mession_typecolor_img2"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_mession_blue"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/mession_typecolor_img3"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_mession_blue"
                android:visibility="gone" />

            <TextView
                android:id="@+id/mession_typetext_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textColor="#FF666666"
                android:visibility="gone"
                android:textSize="@dimen/content_title_textsize" />

            <ImageView
                android:id="@+id/mession_type_img"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/right_arrow" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mession_manager_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/mession_type_layout"
        android:background="@drawable/text_layout_selector"
        android:clickable="true"
        android:onClick="onClick" >

        <View
            android:id="@+id/mession_manager_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33000000" />

        <TextView
            android:id="@+id/mession_manager_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mession_manager_line"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/mession_charge_person"
            android:textSize="@dimen/content_title_textsize" />

        <LinearLayout
            android:id="@+id/mession_messionmanager_layout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mession_managerm_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#FF666666"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/mession_manager_img"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/right_arrow" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mession_members_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/mession_manager_layout"
        android:background="@drawable/text_layout_selector"
        android:clickable="true"
        android:onClick="onClick" >

        <View
            android:id="@+id/mession_members_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33000000" />

        <TextView
            android:id="@+id/mession_members_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mession_members_line"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/mession_members_person"
            android:textSize="@dimen/content_title_textsize" />

        <RelativeLayout
            android:id="@+id/mession_messionmembers_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/mession_members_text"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            >

            <com.inspur.emmcloud.widget.CircleImageView
                android:id="@+id/mession_memhead_img1"
                android:layout_width="33.5dp"
                android:layout_height="33.5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_launcher"
                android:visibility="gone" />

            <com.inspur.emmcloud.widget.CircleImageView
                android:id="@+id/mession_memhead_img2"
                android:layout_width="33.5dp"
                android:layout_height="33.5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_launcher"
                android:visibility="gone" />

            <com.inspur.emmcloud.widget.CircleImageView
                android:id="@+id/mession_memhead_img3"
                android:layout_width="33.5dp"
                android:layout_height="33.5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_launcher"
                android:visibility="gone" />

            <com.inspur.emmcloud.widget.CircleImageView
                android:id="@+id/mession_memhead_img4"
                android:layout_width="33.5dp"
                android:layout_height="33.5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_launcher"
                android:visibility="gone" />
            
            <ImageView
                android:id="@+id/mession_members_img"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right_arrow" />
            
             <TextView
                android:id="@+id/mession_allmembers_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/mession_members_img"
                android:singleLine="true"
                android:gravity="right"
                android:ellipsize="end"
                android:textColor="#FF666666"
                android:textSize="17sp" />
            
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mession_endtime_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/mession_members_layout"
        android:background="@drawable/text_layout_selector"
        android:clickable="true"
        android:onClick="onClick" >

        <View
            android:id="@+id/mession_endtime_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33000000" />

        <TextView
            android:id="@+id/mession_endtime_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mession_endtime_line"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/mession_ending_time"
            android:textSize="@dimen/content_title_textsize" />

        <LinearLayout
            android:id="@+id/mession_messionendtime_layout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mession_endtime_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#FF666666"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/mession_endtime_img"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/right_arrow" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mession_state_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/mession_endtime_layout"
        android:background="@drawable/text_layout_selector"
        android:clickable="true"
        android:onClick="onClick" >

        <View
            android:id="@+id/mession_state_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33000000" />

        <TextView
            android:id="@+id/mession_state_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mession_state_line"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/mession_state"
            android:textSize="@dimen/content_title_textsize" />

        <LinearLayout
            android:id="@+id/mession_messionstate_layout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mession_state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#FF44AEFF"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/mession_state_img"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:visibility="invisible"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/right_arrow" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mession_link_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/mession_state_layout"
        android:background="@drawable/text_layout_selector"
        android:clickable="true"
        android:onClick="onClick"
        android:visibility="gone" >

        <View
            android:id="@+id/mession_link_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33000000" />

        <TextView
            android:id="@+id/mession_link_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mession_link_line"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/mession_link"
            android:textSize="@dimen/content_title_textsize" />

        <LinearLayout
            android:id="@+id/mession_messionlink_layout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mession_linknum_text"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_cir"
                android:gravity="center"
                android:text="4"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/mession_link_img"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/right_arrow" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mession_file_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="123dp"
        android:layout_below="@id/mession_link_layout"
        android:background="@drawable/text_layout_selector" >

        <View
            android:id="@+id/mession_file_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33000000" />

        <TextView
            android:id="@+id/mession_file_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mession_file_line"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/mession_attachment"
            android:textSize="@dimen/content_title_textsize" />

                <!--
        <android.support.v4.view.ViewPager
            android:id="@+id/mession_file_viewpager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mession_file_text"
            android:clickable="true"
            android:focusable="true" />

        -->

        <GridView
            android:id="@+id/mession_file_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mession_file_text"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:numColumns="4"
            android:listSelector="@color/transparent"
            android:clickable="true"
            android:focusable="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mession_file_layout"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="100" >

        <Button
            android:id="@+id/save_btn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="90"
            android:background="@drawable/shape_login_btn_nor"
            android:onClick="onClick"
            android:text="@string/save"
            android:textColor="#ffffff"
            android:textSize="18sp" >
        </Button>
    </LinearLayout>

</RelativeLayout>