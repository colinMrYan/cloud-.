<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/file_select_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_volume_file_selct_no"
        />

    <ImageView
        android:id="@+id/file_type_img"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginBottom="16dp"
        android:layout_toRightOf="@id/file_select_img"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/file_operation_drop_down_img"
        android:layout_width="50dp"
        android:layout_height="76dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="20dp"
        android:paddingLeft="13dp"
        android:paddingRight="2dp"
        android:paddingTop="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_volume_file_operation_drop_down" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/file_operation_drop_down_img"
        android:layout_toRightOf="@id/file_type_img">

        <TextView
            android:id="@+id/file_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/file_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/file_name_text"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#8f8e94"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/file_size_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/file_name_text"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/file_time_text"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#8f8e94"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/file_type_img"
        android:layout_marginLeft="26dp"
        android:background="@color/color_list_divider" />
</RelativeLayout>