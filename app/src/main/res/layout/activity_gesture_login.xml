<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f6f6f6"
    android:orientation="vertical">

    <com.inspur.emmcloud.widget.CircleImageView
        android:id="@+id/gesture_login_user_head_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/gestrue_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textSize="@dimen/content_title_textsize" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <com.inspur.emmcloud.util.ninelock.LockPatternView
            android:id="@+id/lockPatternView"
            android:layout_width="@dimen/_270dp"
            android:layout_height="@dimen/_270dp"
            android:layout_gravity="center_horizontal" />


        <Button
            android:id="@+id/forget_gesture_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:textColor="@color/header_bg"
            android:padding="@dimen/_20dp"
            android:text="@string/forgetpwd"
            android:textSize="@dimen/_14sp" />


    </LinearLayout>
</LinearLayout>