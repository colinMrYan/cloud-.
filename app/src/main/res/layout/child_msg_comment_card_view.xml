<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/comment_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/comment_hallcomment_text"
        android:textColor="#8f8e94"
        android:textSize="@dimen/content_smaller_textsize" />

    <TextView
        android:id="@+id/comment_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_title_text"
        android:paddingTop="6dp"
        android:textColor="@color/black"
        android:textSize="@dimen/content_title_textsize" />

</RelativeLayout>