<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/root_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#e6000000"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layerType="software"
        android:background="@drawable/bg_line_dash"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:id="@+id/add_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/input_edit"
            android:clickable="true"
            android:onClick="onClick"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_add_comment_btn"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/input_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/send_msg_btn"
            android:layout_toRightOf="@id/add_img"
            android:hint="添加新评论"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:background="@null"
            android:paddingTop="12dp"
            android:completionThreshold="1"
            android:textColor="#ffffff"
            android:maxLines="5"
            android:paddingBottom="12dp"
            android:textSize="17sp"/>

        <Button
            android:id="@+id/send_msg_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/input_edit"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_chat_img_comment_send_btn"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/send"
            android:textColor="#ffffff"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/content_title_textsize">
        </Button>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="274dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginRight="15dp"
        android:paddingTop="25dp"
        android:visibility="gone">

        <GridView
            android:id="@+id/add_menu_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@android:color/transparent"
            android:numColumns="4"
            android:paddingTop="8dp"
            android:stretchMode="columnWidth"/>
    </RelativeLayout>

</LinearLayout>