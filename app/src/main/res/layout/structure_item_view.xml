<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:paddingLeft="16dp"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dadadd" />
    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:padding="2dp"
        android:layout_marginRight="1dp"
        android:layout_centerVertical="true"
        android:button="@drawable/selector_member_checkbox"
        android:focusable="false"
        android:visibility="gone"
        android:focusableInTouchMode="false"
         />
    
        <com.inspur.emmcloud.widget.CircleImageView
        android:id="@+id/user_photo_img"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_centerVertical="true"
         android:layout_toRightOf="@id/checkbox"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        android:padding="0.5dp"
        android:visibility="gone"
        android:src="@drawable/icon_org_structure" />

    <TextView
        android:id="@+id/structure_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/user_photo_img"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textSize="@dimen/content_normal_textsize" />

    <ImageView
        style="@style/arrow_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:src="@drawable/icon_arrow_right" />

</RelativeLayout>