<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/header_bg">

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <RelativeLayout
            android:id="@+id/work_header_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:background="@color/header_bg" >

            <ImageView
                android:id="@+id/work_config_img2"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:onClick="onClick"
                android:paddingLeft="12dp"
                android:paddingRight="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/btn_channel_info" />

            <TextView
                android:id="@+id/header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:text="@string/work"
                android:textColor="@color/header_text"
                android:textSize="@dimen/header_textsize" />
        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/calendar_layout"
            android:paddingBottom="14dp"
            android:paddingLeft="14dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/work_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:paddingLeft="2dp"
                android:textColor="@color/white"
                android:textSize="20sp" />


            <ImageView
                android:id="@+id/work_config_img"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:onClick="onClick"
                android:scaleType="fitXY"
                android:src="@drawable/btn_channel_info" />

            <TextView
                android:id="@+id/work_chinesedate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/work_date_text"
                android:clickable="true"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/work_festvaldate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/work_chinesedate_text"
                android:layout_alignParentRight="true"
                android:paddingRight="17dp"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </RelativeLayout>
    </RelativeLayout>

    <com.inspur.emmcloud.widget.pullableview.PullToRefreshLayout
        android:id="@+id/refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout">

        <include layout="@layout/pull_refresh_head" />

        <com.inspur.emmcloud.widget.pullableview.PullableListView
            android:id="@+id/list"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#00000000"
            android:dividerHeight="10dp"
            android:listSelector="#00000000"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <include layout="@layout/pull_load_more" />
    </com.inspur.emmcloud.widget.pullableview.PullToRefreshLayout>

</RelativeLayout>