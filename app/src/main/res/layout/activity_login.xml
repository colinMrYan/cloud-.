<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_page"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="65dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="100">

        <com.inspur.emmcloud.widget.SquareLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="22">

            <ImageView
                android:id="@+id/photo_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_login_logo"
                app:border_color="#d2e6f0"
                app:border_width="0dp"/>
        </com.inspur.emmcloud.widget.SquareLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/login_current_enterprise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#6FBDE1"
        android:textSize="13dp"
        android:layout_below="@id/photo_img"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="当前登录系统：中建电路桥"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#d9dddf" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="46dp">

            <ImageView
                android:id="@+id/username_img"
                android:layout_width="36dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:src="@drawable/icon_username" />

            <com.inspur.emmcloud.widget.ClearEditText
                android:id="@+id/username_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/username_img"
                android:background="@null"
                android:hint="@string/login_hint_text"
                android:paddingBottom="13dp"
                android:paddingLeft="15dp"
                android:paddingRight="20dp"
                android:paddingTop="13dp"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textSize="@dimen/content_normal_textsize" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#d9dddf" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="46dp">

            <ImageView
                android:id="@+id/password_img"
                android:layout_width="39dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:src="@drawable/icon_password" />

            <com.inspur.emmcloud.widget.ClearEditText
                android:id="@+id/password_edit"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/see_pw_img"
                android:layout_toRightOf="@id/password_img"
                android:background="@null"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingBottom="13dp"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:paddingTop="13dp"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textSize="@dimen/content_normal_textsize" />

            <ImageView
                android:id="@+id/see_pw_img"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/password_edit"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/password_edit"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingTop="4dp"
                android:src="@drawable/icon_no_see_pw" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#c8d3dc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="100">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="90">

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bg_login_btn_unable"
                android:enabled="false"
                android:onClick="onClick"
                android:text="@string/login"
                android:textColor="#ffffff"
                android:textSize="18sp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="100">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="90">

            <!-- 隐藏用户注册 -->
            <TextView
                android:id="@+id/forget_pwd_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"

                android:onClick="onClick"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="@string/forgetpwd"
                android:textColor="#38a4f0"
                android:textSize="@dimen/content_normal_textsize"
                android:visibility="visible" />

            <TextView
                android:id="@+id/register_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:onClick="onClick"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="@string/forgetpwd"
                android:textColor="#38a4f0"
                android:textSize="@dimen/content_normal_textsize"
                android:visibility="gone" />

            <TextView
                android:id="@+id/captchas_login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:onClick="onClick"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="@string/sms_login"
                android:textColor="#38a4f0"
                android:textSize="@dimen/content_normal_textsize" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/login_more_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:onClick="onClick"
            android:textSize="13sp"
            android:paddingTop="20dp"
            android:paddingBottom="16dp"
            android:textColor="#6FBDE1"
            android:layout_alignParentBottom="true"
            android:text="@string/more"/>
    </RelativeLayout>
</LinearLayout>
