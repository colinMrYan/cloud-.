<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/choose_expand_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/text_layout_selector"
     >

    <TextView
        android:id="@+id/building_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textColor="#FF444444"
        android:layout_toLeftOf="@+id/meeting_flag_img"
        android:textSize="@dimen/button_textsize" />


        <ImageView
            android:id="@+id/meeting_flag_img"
            android:layout_width="13dp"
            android:layout_height="10dp"
             android:layout_marginRight="14dp"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_mession_checkmark"
             />

    <View
        android:id="@+id/cal_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/building_textView"
        android:background="#33000000" />

</RelativeLayout>