<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_bg">

        <RelativeLayout
            android:id="@+id/appcenter_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:background="@drawable/bg_appcenter_btn"
            android:paddingBottom="4.5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4.5dp">

            <ImageView
                android:id="@+id/app_center_img"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/icon_app_store" />

            <TextView
                android:id="@+id/app_center_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/app_center_img"
                android:paddingLeft="5dp"
                android:text="@string/app_center"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/application"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_textsize" />

        <ImageView
            android:id="@+id/modify_app_btn"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:paddingLeft="12dp"
            android:paddingRight="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_before_edit_app_btn"
            android:visibility="gone"></ImageView>

        <ImageView
            android:id="@+id/app_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="13dp"
            android:paddingLeft="12dp"
            android:paddingRight="15dp"
            android:paddingTop="13dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_config" />

        <Button
            android:id="@+id/app_edit_finish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="15dp"
            android:text="@string/finish"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/content_normal_textsize"
            android:visibility="gone" />
    </RelativeLayout>


    <com.inspur.emmcloud.widget.MySwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout"
        android:background="@color/content_bg">

        <ListView
            android:id="@+id/my_app_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#efefef"
            android:dividerHeight="10dp"
            android:gravity="center"
            android:horizontalSpacing="25dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="4"
            android:scrollbars="none" />
    </com.inspur.emmcloud.widget.MySwipeRefreshLayout>
    <RelativeLayout
        android:id="@+id/my_app_recommend_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="@drawable/shape_recommend_widget_layout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_app_recommend_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            />
        <ImageView
            android:id="@+id/my_app_recommend_widget_img"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@id/my_app_recommend_recyclerview"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_recommend_close"/>
    </RelativeLayout>

</RelativeLayout>