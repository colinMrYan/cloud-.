<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true" >

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_bg" >

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="网盘"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_textsize" />



        <ImageView
            android:id="@+id/option_img"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_header_option" />



    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/header_layout"
        android:background="@color/content_bg"
        android:orientation="vertical" >
        <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/my_file_layout"
                android:onClick="onClick"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/my_file_img"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:scaleType="fitXY"
                    android:layout_marginRight="12dp"
                    android:src = "@drawable/ic_volume_my_file"
                    />
                <TextView
                    android:text="我的文件"
                    android:layout_toRightOf="@id/my_file_img"
                    android:layout_centerVertical="true"
                    android:textColor="#333333"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/volume_capacity_text"
                    android:text="678K / 2.0G"
                    android:textColor="#8f8e94"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:background="@color/color_list_divider">
            </View>
            <RelativeLayout
                android:id="@+id/share_volume_layout"
                android:padding="12dp"
                android:onClick="onClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/share_volume_img"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:scaleType="fitXY"
                    android:layout_marginRight="12dp"
                    android:src = "@drawable/ic_volume_share_volume"
                    />
                <TextView
                    android:text="共享网盘"
                    android:layout_toRightOf="@id/share_volume_img"
                    android:layout_centerVertical="true"
                    android:textColor="#333333"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:background="@color/color_list_divider">
            </View>
            <RelativeLayout
                android:id="@+id/enterprise_file_layout"
                android:padding="12dp"
                android:onClick="onClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/enterprise_file_img"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:scaleType="fitXY"
                    android:layout_marginRight="12dp"
                    android:src = "@drawable/ic_volume_enterprise_file"
                    />
                <TextView
                    android:text="企业文件"
                    android:layout_toRightOf="@id/enterprise_file_img"
                    android:layout_centerVertical="true"
                    android:textColor="#333333"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/volume_recent_use_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="最近使用"
                android:textColor="#666666"
                android:textSize="15sp"
                android:paddingLeft="20dp"
                android:paddingTop="14dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ListView
                android:id="@+id/volume_recent_use_list"
                android:background="@android:color/white"
                android:dividerHeight="0.5dp"
                android:paddingLeft="12dp"
                android:divider="@color/color_list_divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/upload_file_layout"
            android:layout_marginTop="35dp"
            android:visibility="gone"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:textSize="17sp"
                android:text="上传文件"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:drawablePadding="12dp"
                android:drawableLeft="@drawable/ic_volume_upload_file_blue"
                android:textColor="#2586CD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>