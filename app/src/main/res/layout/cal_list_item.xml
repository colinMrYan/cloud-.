<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cal_expand_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/text_layout_selector"
    android:clickable="true"
    tools:context=".MainActivity" >


    <com.inspur.emmcloud.widget.CircleTextImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/event_countdown_text"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        app:citv_text_color="@android:color/white"
        app:citv_text_size="@dimen/content_moresmaller_textsize" />

    <TextView
        android:id="@+id/cal_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/event_countdown_text"
        android:layout_toLeftOf="@+id/cal_time_text"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingRight="12dp"
        android:textColor="#203b4f"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/cal_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        android:textColor="#FF666666"
        android:textSize="14sp" />
<View
        android:id="@+id/cal_bottom_line"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="0.6dp"
        android:background="#33000000" />
</RelativeLayout>