<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_card_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_filedownround_layout"
    >

    <!-- android:padding="1dp" -->

    <com.inspur.emmcloud.widget.RoundAngleImageView
        android:id="@+id/news_card_content_img"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:adjustViewBounds="true"
         android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
        android:scaleType="centerCrop"
        app:roundHeight="5dp"
        app:roundWidth="5dp"
        app:roundleftdown="false"
        app:roundrightdown="false" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_card_content_img"
        android:background="@color/white" >

        <TextView
            android:id="@+id/news_card_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="9dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/news_card_digest_text"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_below="@+id/news_card_title_text"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:textColor="#999999"
            android:textSize="13sp" />
    </RelativeLayout>

</RelativeLayout>