<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ecf1f4"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_bg" >

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_back_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/meeting_list_title"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_textsize" />

        <LinearLayout
            android:id="@+id/operation_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/filte_img"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:onClick="onClick"
                android:paddingBottom="11dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="11dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_before_filte"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/meeting_room_office_img"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:paddingRight="14dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_common_office_set"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/ok_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="20dp"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="@dimen/header_textsize"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/content_bg"
        android:layout_below="@id/header_layout" >
        
        <com.inspur.emmcloud.widget.pullableview.PullToRefreshLayout
        android:id="@+id/meeting_room_list_expand_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <include layout="@layout/pull_refresh_head" />

        <com.inspur.emmcloud.widget.pullableview.PullableExpandableListView
            android:id="@+id/meeting_room_list_expandableListview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:listSelector="#00000000" />

        <include layout="@layout/pull_load_more" />
    </com.inspur.emmcloud.widget.pullableview.PullToRefreshLayout>
        
    </RelativeLayout>

</RelativeLayout>