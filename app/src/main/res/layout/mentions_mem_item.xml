<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list"
    android:focusable="false"
    android:focusableInTouchMode="false"
     >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dadadd" />

    <com.inspur.emmcloud.widget.CircleImageView
        android:id="@+id/photo_img"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="12dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        android:padding="0.5dp"
        android:src="@drawable/icon_org_structure"
         />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/photo_img"
        android:layout_toLeftOf="@+id/checkbox"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textSize="@dimen/content_normal_textsize" />
<!-- 
	<CheckBox
