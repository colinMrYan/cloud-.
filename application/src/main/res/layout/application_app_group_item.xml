<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:paddingTop="3dp">

    <ImageView
        android:id="@+id/img_group_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:src="@drawable/ic_app_default" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_group_icon"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:lines="2"
        android:paddingTop="4dp"
        android:textColor="?attr/text_color_e1"
        android:textSize="@dimen/content_smaller_textsize" />

    <TextView
        android:id="@+id/unhandled_badges_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dp"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:textColor="@color/color_text_Anti_White"
        android:textSize="10sp"
        android:visibility="gone" />

</RelativeLayout>