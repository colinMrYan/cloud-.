<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/text_ll_color_nor">

    <ImageView
        android:id="@+id/app_icon_img"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="9dp"
        android:scaleType="fitXY" />


    <TextView
        android:id="@+id/app_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/app_icon_img"
        android:layout_toRightOf="@id/app_icon_img"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="?attr/text_color_e1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_app_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/app_icon_img"
        android:layout_below="@id/app_name_text"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/app_icon_img"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="@color/color_text_common_level_two"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/app_group_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/app_icon_img"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/app_icon_img"
        android:background="@drawable/application_shape_appcenter_round_arrow"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="?attr/text_color_e1"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/app_icon_img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/app_name_text"
        android:background="@drawable/application_shape_appcenter_round_with_color"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="官方"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/arrow_img"
        style="@style/arrow_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_arrow_right" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/app_icon_img"
        android:layout_toRightOf="@id/app_icon_img"
        android:background="?attr/color_list_divider" />

</RelativeLayout>