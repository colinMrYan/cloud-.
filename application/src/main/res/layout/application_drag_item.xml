<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_bg_content_white">

    <TextView
        android:id="@+id/app_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="14dp"
        android:paddingTop="6dp"
        android:text="@string/work"
        android:textColor="@color/color_text_common_level_two" />

    <com.inspur.emmcloud.application.widget.DragGridView
        android:id="@+id/app_list_draggrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_title_text"
        android:layout_centerHorizontal="true"
        android:listSelector="@android:color/transparent"
        android:numColumns="4"
        android:paddingBottom="4dp"
        android:paddingTop="15dp"
        android:scrollbars="vertical"
        android:stretchMode="columnWidth"
        android:verticalSpacing="8dp" />

    <View
        android:id="@+id/v_applist_devid"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/app_list_draggrid"
        android:background="@color/color_bg_common" />
</RelativeLayout>