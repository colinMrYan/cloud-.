<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:paddingLeft="15dp">

    <ImageView
        android:id="@+id/app_center_categories_icon_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginBottom="9dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/application_app_center_categories" />

    <TextView
        android:id="@+id/app_center_categories_item_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/app_center_categories_icon_img"
        android:text="协同效率"
        android:textColor="#333333"
        android:textSize="17dp" />

    <ImageView
        android:layout_width="8dp"
        android:layout_height="13dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:src="@drawable/ic_arrow_right" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_below="@id/app_center_categories_icon_img"
        android:background="@color/color_list_divider" />

</RelativeLayout>