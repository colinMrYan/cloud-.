<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/text_ll_color_nor">

    <RelativeLayout
        android:id="@+id/app_center_recommand_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/app_center_recommand_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="13dp"
            android:text="热门推荐"
            android:textColor="?attr/text_color"
            android:textSize="@dimen/content_normal_textsize" />

        <TextView
            android:id="@+id/app_center_more_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="9dp"
            android:layout_marginTop="13dp"
            android:text="@string/application_app_center_more_apps"
            android:textColor="@color/color_text_common_level_two"
            android:textSize="@dimen/content_normal_textsize" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/app_center_recomand_recycleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_center_recommand_layout"
        android:layout_marginBottom="13dp"
        android:overScrollMode="never"
        android:scrollbars="none" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/app_center_recomand_recycleview"
        android:background="?attr/color_list_divider" />

</RelativeLayout>