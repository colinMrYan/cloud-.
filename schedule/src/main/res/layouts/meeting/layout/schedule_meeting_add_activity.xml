<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/tv_new_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/schedule_meeting_room_booking"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="15dp"
            android:text="@string/ok"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_function_textsize" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_header"
        android:background="?attr/content_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="?attr/text_ll_color_nor"
                android:gravity="top"
                android:hint="@string/schedule_meeting_add_content_hint"
                android:paddingBottom="15dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="15dp"
                android:textColor="?attr/text_color"
                android:textColorHint="@color/color_text_common_level_two"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginLeft="16dp"
                android:background="?attr/color_list_divider" />

            <LinearLayout
                android:id="@+id/ll_all_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_all_position_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/text_ll_color_nor"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_meeting_position_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:text="@string/schedule_location"
                        android:textColor="?attr/text_color"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_meeting_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/rl_position_select"
                        android:layout_toRightOf="@id/tv_meeting_position_title"
                        android:background="@null"
                        android:hint="@string/schedule_add_position"
                        android:paddingBottom="11dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="11dp"
                        android:singleLine="true"
                        android:textColor="?attr/text_color"
                        android:textColorHint="@color/color_text_common_level_two"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:id="@+id/rl_position_select"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:id="@+id/iv_meeting_position_enter"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:onClick="onClick"
                            android:paddingBottom="12dp"
                            android:paddingLeft="25dp"
                            android:paddingRight="12dp"
                            android:paddingTop="12dp"
                            android:src="@drawable/ic_arrow_right" />

                        <ImageView
                            android:id="@+id/iv_meeting_position_del"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:onClick="onClick"
                            android:paddingBottom="11dp"
                            android:paddingLeft="25dp"
                            android:paddingRight="11dp"
                            android:paddingTop="11dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/app_edittext_clear" />
                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginLeft="16dp"
                    android:background="?attr/color_list_divider" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_all_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_schedule_input_content"
                android:layout_marginTop="10dp"
                android:background="?attr/text_ll_color_nor"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="@string/all_day"
                    android:textColor="?attr/text_color"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switch_all_day"
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"></Switch>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginLeft="16dp"
                android:background="?attr/color_list_divider" />

            <LinearLayout
                android:id="@+id/ll_meeting_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/text_ll_color_nor"
                android:orientation="horizontal"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:id="@+id/ll_start_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/begin"
                        android:textColor="@color/color_text_common_level_two"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:textColor="@color/color_text_common_level_two"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/text_color"
                        android:textSize="17sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="41dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_schedule_big_arrow" />

                <LinearLayout
                    android:id="@+id/ll_end_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/end"
                        android:textColor="@color/color_text_common_level_two"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:textColor="@color/color_text_common_level_two"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/text_color"
                        android:textSize="17sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginLeft="16dp"
                android:background="?attr/color_list_divider" />


            <LinearLayout
                android:id="@+id/ll_all_participants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_add_attendee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/text_ll_color_nor"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_attendee_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="11dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="11dp"
                        android:text="@string/schedule_meeting_add_attendee_title"
                        android:textColor="?attr/text_color"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/ll_attendee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"></LinearLayout>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_recorder_liaison"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5px"
                        android:layout_marginLeft="16dp"
                        android:background="?attr/color_list_divider" />

                    <LinearLayout
                        android:id="@+id/ll_add_recorder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/text_ll_color_nor"
                        android:gravity="center_vertical"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_recorder_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="11dp"
                            android:paddingLeft="16dp"
                            android:paddingTop="11dp"
                            android:text="@string/schedule_meeting_add_record_holder_title"
                            android:textColor="?attr/text_color"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:id="@+id/ll_recorder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"></LinearLayout>

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/ic_arrow_right" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5px"
                        android:layout_marginLeft="16dp"
                        android:background="?attr/color_list_divider" />

                    <LinearLayout
                        android:id="@+id/ll_add_liaison"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/text_ll_color_nor"
                        android:gravity="center_vertical"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_liaison_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="11dp"
                            android:paddingLeft="16dp"
                            android:paddingTop="11dp"
                            android:text="@string/schedule_meeting_add_conference_title"
                            android:textColor="?attr/text_color"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:id="@+id/ll_liaison"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"></LinearLayout>

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/ic_arrow_right" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginLeft="16dp"
                    android:background="?attr/color_list_divider" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/text_ll_color_nor">

                <TextView
                    android:id="@+id/tv_notes_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="11dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="11dp"
                    android:text="@string/schedule_meeting_add_note"
                    android:textColor="?attr/text_color"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_notes_tips"
                    android:background="@null"
                    android:minHeight="41dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="?attr/text_color"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginLeft="16dp"
                android:background="?attr/color_list_divider" />

            <LinearLayout
                android:id="@+id/ll_reminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="?attr/text_ll_color_nor"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_reminder_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="11dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="11dp"
                    android:text="@string/schedule_meeting_add_alert_time"
                    android:textColor="?attr/text_color"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_reminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="11dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="11dp"
                    android:textColor="@color/color_text_common_level_two"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginLeft="16dp"
                android:background="?attr/color_list_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_calendar_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/text_ll_color_nor"
                    android:onClick="onClick">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:paddingBottom="11dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="11dp"
                        android:text="@string/schedule_account_type"
                        android:textColor="?attr/text_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_event_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="33dp"
                        android:paddingBottom="11dp"
                        android:paddingTop="11dp"
                        android:text="日程"
                        android:textColor="@color/color_text_common_level_two"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_enter"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/ic_arrow_right" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginLeft="16dp"
                android:background="?attr/color_list_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_sync_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/text_ll_color_nor"
                    android:onClick="onClick">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:paddingBottom="11dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="11dp"
                        android:text="@string/schedule_sync_sys_calendar"
                        android:textColor="?attr/text_color"
                        android:textSize="16sp" />


                    <Switch
                        android:id="@+id/switch_sync_calendar"
                        android:layout_width="wrap_content"
                        android:layout_height="51dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:checked="false" />


                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginBottom="51dp"
                android:layout_marginLeft="16dp"
                android:background="?attr/color_list_divider" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>