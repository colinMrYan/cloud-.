<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_group_summary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="?attr/text_ll_color_nor"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="8dp"
                android:textColor="?attr/text_color_e1"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/rl_meeting_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_time"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="14dp">

                <TextView
                    android:id="@+id/tv_owner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:textColor="@color/color_text_common_level_two"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_owner"
                    android:paddingTop="4dp">

                    <ImageView
                        android:id="@+id/iv_point"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/schedule_meeting_point_grey_ic" />
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/iv_point"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="?attr/text_color_e1"
                        android:textSize="16sp" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_meeting_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_time"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="11dp"
                android:paddingLeft="15dp"
                android:paddingTop="6dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/icon_add_blue"
                    android:tint="@color/color_text_link" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="@string/meeting_click_to_book"
                    android:textColor="@color/color_text_link"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/v_flag"
            android:layout_width="4dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rl_content"
            android:layout_alignTop="@id/rl_content"
            android:background="@color/color_text_link"></View>
    </RelativeLayout>

</androidx.cardview.widget.CardView>