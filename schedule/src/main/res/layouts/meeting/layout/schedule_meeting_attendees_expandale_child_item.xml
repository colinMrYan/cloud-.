<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_bg_content_white">

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_attendee_head"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/tv_attendee_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="63dp"
            android:paddingBottom="11dp"
            android:paddingTop="11dp"
            android:text="姓名"
            android:textColor="@color/color_text_common_level_one"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_attendee_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16px"
            android:textColor="@color/color_text_common_level_two"
            android:textSize="16sp"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_below="@id/rl_content"
        android:layout_marginLeft="63dp"
        android:background="@color/color_divider" />

</RelativeLayout>