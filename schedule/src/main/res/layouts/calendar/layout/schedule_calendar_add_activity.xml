<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_common"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/schedule_calendar_create"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="15dp"
            android:text="@string/ok"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_function_textsize" />

        <ImageView
            android:id="@+id/iv_calendar_detail_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:onClick="onClick"
            android:paddingBottom="17dp"
            android:paddingLeft="13dp"
            android:paddingRight="16dp"
            android:paddingTop="17dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_header_option"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_schedule_input_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header">

        <EditText
            android:id="@+id/et_input_title"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#FFFFFF"
            android:gravity="top|left"
            android:hint="@string/schedule_calendar_input_content_hint"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="14dp"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_all_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_schedule_input_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="11dp"
            android:paddingTop="11dp"
            android:text="@string/all_day"
            android:textColor="@color/color_text_common_level_one"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/switch_all_day"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"></Switch>
    </RelativeLayout>

    <View
        android:id="@+id/v_all_day_after_line"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_below="@id/rl_all_day"
        android:layout_marginLeft="16dp"
        android:background="@color/color_divider" />

    <RelativeLayout
        android:id="@+id/rl_start_end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_all_day_after_line"
        android:background="@color/color_bg_content_white"
        android:paddingBottom="15dp">

        <View
            android:id="@+id/v_center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:id="@+id/ll_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@id/v_center"
            android:onClick="onClick"
            android:paddingLeft="16dp"
            android:paddingTop="14dp">

            <TextView
                android:id="@+id/tv_start_time_data_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:text="@string/begin"
                android:textColor="@color/color_text_help"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_start_time_data_title"
                android:paddingBottom="5dp"
                android:text="2018-9-21"
                android:textColor="@color/color_text_help"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_start_date"
                android:text="08:00"
                android:textColor="@color/color_text_common_level_one"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_end_and_big_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/v_center"
            android:layout_alignParentRight="true"
            android:paddingTop="14dp">

            <RelativeLayout
                android:id="@+id/rl_end_big_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ll_end_time">

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_schedule_big_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/rl_end_big_arrow"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/tv_end_date_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3dp"
                    android:text="@string/end"
                    android:textColor="@color/color_text_common_level_two" />

                <TextView
                    android:id="@+id/tv_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_end_date_time_title"
                    android:paddingBottom="5dp"
                    android:text="2018-10-10"
                    android:textColor="@color/color_text_common_level_two"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_end_date"
                    android:text="20:00"
                    android:textColor="@color/color_text_common_level_one"
                    android:textSize="16dp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_calendar_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_start_end_time"
        android:layout_marginTop="10dp"
        android:background="@color/cardview_light_background"
        android:onClick="onClick"
        android:paddingBottom="11dp"
        android:paddingLeft="14dp"
        android:paddingRight="15dp"
        android:paddingTop="11dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/schedule_calendar"
            android:textColor="@color/color_text_common_level_one"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/rl_calendar_type_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_calendar_enter"
            android:layout_toStartOf="@+id/iv_calendar_enter"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_calendar_type_flag"
                android:layout_width="24dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:paddingRight="10dp"
                android:src="@drawable/icon_blue_circle" />

            <TextView
                android:id="@+id/tv_calendar_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_calendar_type_flag"
                android:text="@string/schedule_calendar_company"
                android:textColor="@color/color_text_common_level_two"
                android:textSize="16sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_calendar_enter"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:src="@drawable/ic_arrow_right" />
    </RelativeLayout>

    <View
        android:id="@+id/v_alert_time_top_line"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_below="@id/rl_calendar_type"
        android:layout_marginLeft="16dp"
        android:background="@color/color_divider" />

    <RelativeLayout
        android:id="@+id/rl_alert_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_alert_time_top_line"
        android:layout_marginTop="10dp"
        android:background="@color/color_bg_content_white"
        android:onClick="onClick"
        android:paddingLeft="14dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_alert_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/schedule_event_alert"
            android:textColor="@color/color_text_common_level_one"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_alert_time_arrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:src="@drawable/ic_arrow_right" />

        <TextView
            android:id="@+id/tv_alert_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@id/iv_alert_time_arrow"
            android:layout_toRightOf="@id/tv_alert_title"
            android:gravity="right"
            android:paddingBottom="10dp"
            android:paddingRight="1dp"
            android:paddingTop="8dp"
            android:text="@string/schedule_calendar_no_alert"
            android:textColor="@color/color_text_common_level_two"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/v_repeat_top_line"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_below="@id/rl_alert_time"
        android:layout_marginLeft="16dp"
        android:background="@color/color_divider" />

    <RelativeLayout
        android:id="@+id/rl_repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_alert_time"
        android:layout_marginTop="10dp"
        android:background="@color/color_bg_content_white"
        android:onClick="onClick"
        android:paddingLeft="14dp"
        android:paddingRight="15dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_repeat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/repeat"
            android:textColor="@color/color_text_common_level_one"
            android:textSize="@dimen/content_title_textsize" />

        <ImageView
            android:id="@+id/iv_repeat_arrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:src="@drawable/ic_arrow_right" />

        <TextView
            android:id="@+id/tv_repeat_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@id/iv_repeat_arrow"
            android:layout_toRightOf="@id/tv_repeat_title"
            android:gravity="right"
            android:paddingBottom="10dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp"
            android:text="@string/never"
            android:textColor="@color/color_text_common_level_one"
            android:textSize="@dimen/content_title_textsize" />
    </RelativeLayout>

</RelativeLayout>