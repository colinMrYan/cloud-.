<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_calendar_item_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:background="?attr/text_ll_color_nor">

    <ImageView
        android:id="@+id/iv_calendar_color"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_calendar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/iv_calendar_color"
        android:textColor="?attr/text_color_e1"
        android:textSize="16sp" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_view_calendar_state"
        android:layout_width="51dp"
        android:layout_height="31dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp"
        app:track="@drawable/selector_switch_track"
        app:thumbTint="@color/white"
        android:checked="true" />
</RelativeLayout>