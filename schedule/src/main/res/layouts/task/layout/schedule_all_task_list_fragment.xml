<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded,HardcodedText,RtlSymmetry,SmallSp">

    <RelativeLayout
        android:id="@+id/rl_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#F8F9FB">

        <RelativeLayout
            android:id="@+id/rl_all_task"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_schedule_all"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/schedule_task_all"
                android:textStyle="bold" />

            <View
                android:id="@+id/v_all_task"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_alignLeft="@id/tv_schedule_all"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@id/tv_schedule_all"
                android:background="#36A5F6" />
        </RelativeLayout>


        <View
            android:id="@+id/v_schedule_line"
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/rl_all_task"
            android:background="#333333"
            android:visibility="gone" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_schedule_task"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/v_schedule_line"
            app:tabGravity="fill"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="#333333"
            app:tabTextAppearance="@style/ScheduleTaskTabLayoutTextStyle"
            app:tabTextColor="#333333" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_tab_layout"
        android:layout_centerVertical="true"
        android:background="#F2F2F2"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_task_search"
            android:padding="6dp">

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="6dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_task_search" />

            <com.inspur.emmcloud.baselib.widget.ClearEditText
                android:id="@+id/ev_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_search"
                android:background="@null"
                android:hint="@string/search"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="13sp">

                <requestFocus />
            </com.inspur.emmcloud.baselib.widget.ClearEditText>
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_search_layout">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_calendar_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never" />


    </RelativeLayout>

</RelativeLayout>
