<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/work_expand_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/text_layout_selector">

    <View
        android:id="@+id/v_head_line"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_marginLeft="16dp"
        android:background="?attr/color_list_divider" />

    <TextView
        android:id="@+id/tv_task_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:textSize="@dimen/button_textsize" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_selected"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/task_selected_ic"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>