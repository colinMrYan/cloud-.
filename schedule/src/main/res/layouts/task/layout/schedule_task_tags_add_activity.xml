<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/schedule_task_label"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="15dp"
            android:text="@string/save"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_function_textsize" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_tag_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:hint="@string/schedule_task_label_add_hint"
                android:paddingBottom="11dp"
                android:paddingLeft="16dp"
                android:paddingTop="11dp"
                android:textColorHint="@color/color_text_common_level_two"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/schedule_task_label_color"
                android:textColor="@color/color_text_common_level_two"
                android:textSize="13sp" />

            <com.inspur.emmcloud.baselib.widget.ScrollViewWithListView
                android:id="@+id/lv_tag_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_bg_content_white"
                android:paddingLeft="16dp"></com.inspur.emmcloud.baselib.widget.ScrollViewWithListView>

            <TextView
                android:id="@+id/tv_delecte_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_bg_content_white"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingBottom="11dp"
                android:paddingTop="11dp"
                android:text="@string/schedule_task_delete_the_tag"
                android:textColor="#FF4242"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>