<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/text_ll_color_nor"
    android:fitsSystemWindows="true">

    <ImageButton
        android:id="@+id/ibt_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@null"
        android:onClick="onClick"
        android:padding="11dp"
        android:scaleType="fitXY"
        android:src="?attr/ic_back_btn" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="27dp"
                android:paddingRight="30dp"
                android:text="@string/login_captchas_login"
                android:textColor="?attr/text_color_e1"
                android:textSize="26sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="55dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="27dp"
                android:paddingRight="30dp">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_input_layout_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/color_text_tip">

                    <com.inspur.emmcloud.baselib.widget.ClearEditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/app_edittext_clear"
                        android:gravity="center_vertical"
                        android:hint="@string/login_please_input_phone_num"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:paddingTop="17dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="17dp"
                        android:singleLine="true"
                        android:textColor="?attr/text_color_e1"
                        android:textColorHint="@color/color_text_tip"
                        android:textSize="15sp"
                        android:theme="@style/MyEditText" />

                </android.support.design.widget.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.inspur.emmcloud.baselib.widget.ClearEditText
                        android:id="@+id/et_captcha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:hint="@string/login_please_input_captchas"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:paddingTop="7dp"
                        android:paddingRight="120dp"
                        android:paddingBottom="17dp"
                        android:singleLine="true"
                        android:textColor="?attr/text_color_e1"
                        android:textColorHint="@color/color_text_tip"
                        android:textSize="15sp"
                        android:theme="@style/MyEditText" />

                    <Button
                        android:id="@+id/bt_get_captcha"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/et_captcha"
                        android:layout_alignBottom="@id/et_captcha"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:minWidth="0dp"
                        android:onClick="onClick"
                        android:paddingTop="7dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="17dp"
                        android:text="@string/login_get_captchas_code"
                        android:textAllCaps="false"
                        android:textColor="#36A5F6"
                        android:textSize="13sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_login_by_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:paddingLeft="4dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="15dp"
                    android:text="@string/login_by_account"
                    android:textColor="#36A5F6"
                    android:textSize="13sp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/bt_login"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/bg_login_btn_unable"
                    android:enabled="false"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="@string/login"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>


