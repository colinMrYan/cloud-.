<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inspur.emmcloud.mail">

    <application
        android:name=".runalone.application.MailApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- Mail-->
        <activity
            android:name=".ui.MailHomeActivity"
            android:resizeableActivity="true"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".ui.MailDetailActivity"
            android:resizeableActivity="true"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".ui.MailLoginActivity"
            android:resizeableActivity="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.MailCertificateInstallActivity"
            android:resizeableActivity="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.MailSendActivity"
            android:resizeableActivity="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.MailSettingActivity"
            android:resizeableActivity="true"
            android:screenOrientation="portrait" />
    </application>
</manifest>
