<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.inspur.emmcloud.mail.widget.sildemenu.LeftDrawerLayout
        android:id="@+id/ldl_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_height"
                android:background="?attr/header_bg">

                <ImageButton
                    android:id="@+id/ibt_back"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:onClick="onClick"
                    android:padding="11dp"
                    android:scaleType="fitXY"
                    android:src="?attr/ic_back_btn" />

                <ImageButton
                    android:id="@+id/ibt_setting"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="11dp"
                    android:layout_toRightOf="@id/ibt_back"
                    android:background="@null"
                    android:onClick="onClick"
                    android:scaleType="fitXY"
                    android:src="@drawable/mail_option_ic"
                    android:tint="?attr/header_text_color" />

                <TextView
                    android:id="@+id/tv_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="?attr/header_text_color"
                    android:textSize="@dimen/header_textsize" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true">

                    <ImageButton
                        android:id="@+id/ibt_mail_add"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:onClick="onClick"
                        android:src="@drawable/mail_write_ic"
                        android:tint="?attr/header_text_color" />

                    <ImageButton
                        android:id="@+id/ibt_mail_setting"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/ibt_mail_add"
                        android:background="@null"
                        android:onClick="onClick"
                        android:src="@drawable/mail_setting_ic"
                        android:tint="?attr/header_text_color" />
                </RelativeLayout>
            </RelativeLayout>

            <com.inspur.emmcloud.baselib.widget.MySwipeRefreshLayout
                android:id="@+id/srl_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/rl_mail_operation"
                android:layout_below="@id/rl_header"
                android:background="@color/content_bg">

                <ListView
                    android:id="@+id/lv_mail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:dividerHeight="0dp" />
            </com.inspur.emmcloud.baselib.widget.MySwipeRefreshLayout>

            <RelativeLayout
                android:id="@+id/rl_mail_operation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#F9F9F9"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:onClick="onClick">

                    <ImageView
                        android:id="@+id/iv_delete"
                        android:layout_width="30dp"
                        android:layout_height="34dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/mail_delete_black_ic"
                        android:paddingTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_delete"
                        android:layout_marginBottom="4dp"
                        android:text="删除"
                        android:textColor="#333333"
                        android:textSize="12sp" />
                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/v_shadow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/rl_header"
                android:onClick="onClick"
                android:visibility="gone"></View>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fm_container_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>
    </com.inspur.emmcloud.mail.widget.sildemenu.LeftDrawerLayout>
</RelativeLayout>

