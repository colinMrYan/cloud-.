    <RelativeLayout
        android:id="@+id/rl_meeting_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_task_search"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="6dp">

        <com.inspur.emmcloud.baselib.widget.ClearEditText
            android:id="@+id/ev_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_schedule_search"
            android:gravity="center"
            android:hint="@string/mvp_demo_meeting_search"
            android:imeOptions="actionSearch"
            android:paddingBottom="6dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="6dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="13sp">

            <requestFocus />
        </com.inspur.emmcloud.baselib.widget.ClearEditText>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_meeting_search"
        android:background="@color/content_bg">

        <com.inspur.emmcloud.baselib.widget.MySwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/lv_view_meeting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null" />
        </com.inspur.emmcloud.baselib.widget.MySwipeRefreshLayout>

        <LinearLayout
            android:id="@+id/rl_meeting_list_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_meeting_list_view_default"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_meeting_default" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_meeting_list_view_default"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:singleLine="true"
                android:text="@string/mvp_demo_schedule_meeting_no_meeting_today"
                android:textColor="#999999"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>