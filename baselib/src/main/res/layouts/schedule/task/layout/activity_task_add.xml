<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/schedule_task_create"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="15dp"
            android:text="@string/ok"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_function_textsize" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_input_title"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="#FFFFFF"
                android:gravity="top|left"
                android:hint="@string/schedule_task_content_hint"
                android:paddingLeft="16dp"
                android:paddingTop="14dp"
                android:paddingRight="16dp"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16sp"
                    android:text="@string/schedule_task_priority"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <cn.carbs.android.segmentcontrolview.library.SegmentControlView
                    android:id="@+id/v_priority"
                    android:layout_width="210dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginBottom="10dp"
                    app:scv_BackgroundSelectedColor="#36A5F6"
                    app:scv_FrameColor="#36A5F6"
                    app:scv_FrameCornerRadius="2dp"
                    app:scv_FrameWidth="0.5dp"
                    app:scv_Gradient="true"
                    app:scv_SegmentPaddingVertical="5dp"
                    app:scv_SelectedIndex="1"
                    app:scv_TextArray="@array/segment_control_items"
                    app:scv_TextNormalColor="#36A5F6"
                    app:scv_TextSize="13sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginLeft="15dp"
                android:background="@color/color_list_divider" />

            <RelativeLayout
                android:id="@+id/rl_task_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:onClick="onClick"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/tv_task_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:paddingTop="11dp"
                    android:paddingBottom="11dp"
                    android:text="@string/schedule_task_category"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/ll_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_task_type_arrow"
                    android:orientation="horizontal"
                    android:visibility="gone"></LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_single_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_task_type_arrow"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_task_type_tap"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center_vertical"
                        android:layout_toLeftOf="@+id/tv_task_type_name"
                        android:src="@drawable/icon_blue_circle" />

                    <TextView
                        android:id="@+id/tv_task_type_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:maxWidth="200dp"
                        android:singleLine="true"
                        android:text="@string/schedule_task_category_no"
                        android:textColor="#888888"
                        android:textSize="16sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_task_type_arrow"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/ic_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginLeft="15dp"
                android:background="@color/color_list_divider" />

            <RelativeLayout
                android:id="@+id/rl_task_manager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_task_type"
                android:background="#FFFFFF"
                android:onClick="onClick"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/tv_task_manager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="11dp"
                    android:paddingBottom="11dp"
                    android:text="@string/schedule_task_manager"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_manager_head"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/tv_manager_num"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_manager_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_task_manager_arrow"
                    android:text="@string/schedule_task_manager_num_0"
                    android:textColor="#888888"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_task_manager_arrow"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/ic_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginLeft="15dp"
                android:background="@color/color_list_divider" />

            <RelativeLayout
                android:id="@+id/rl_task_participant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:onClick="onClick"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/tv_task_participant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="11dp"
                    android:paddingBottom="11dp"
                    android:text="@string/schedule_task_participant"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_participant_head_three"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/iv_participant_head_two"
                    android:src="@drawable/default_image"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_participant_head_two"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/iv_participant_head_one"
                    android:src="@drawable/default_image"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_participant_head_one"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/tv_participant_num"
                    android:src="@drawable/default_image"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_participant_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_task_participant_arrow"
                    android:text="@string/schedule_task_participant_num_0"
                    android:textColor="#888888"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_task_participant_arrow"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/ic_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginLeft="15dp"
                android:background="@color/color_list_divider" />

            <RelativeLayout
                android:id="@+id/rl_deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:onClick="onClick"
                android:paddingLeft="16dp"
                android:paddingTop="11dp"
                android:paddingRight="16dp"
                android:paddingBottom="11dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/schedule_task_deadline"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_deadline_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_deadline_select_enter"
                    android:text=""
                    android:textColor="#888888"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_deadline_select_enter"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/ic_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_below="@id/rl_deadline"
                android:layout_marginLeft="15dp"
                android:background="@color/color_list_divider" />

            <RelativeLayout
                android:id="@+id/rl_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingLeft="16dp"
                android:paddingTop="11dp"
                android:paddingRight="16dp"
                android:paddingBottom="11dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/schedule_task_state"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_state_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_state_enter"
                    android:text="@string/schedule_task_state_active"
                    android:textColor="#36A5F6"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_state_enter"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/ic_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_below="@id/rl_deadline"
                android:layout_marginLeft="15dp"
                android:background="@color/color_list_divider" />

            <RelativeLayout
                android:id="@+id/rl_task_end_alert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:onClick="onClick"
                android:paddingLeft="16dp"
                android:paddingTop="11dp"
                android:paddingRight="16dp"
                android:paddingBottom="11dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/schedule_task_stop_alert"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_end_task_alert_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_task_end_alert_enter"
                    android:text="@string/calendar_no_alert"
                    android:textColor="#888888"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_task_end_alert_enter"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/ic_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_below="@id/rl_state"
                android:layout_marginLeft="15dp"
                android:background="@color/color_list_divider" />

            <RelativeLayout
                android:id="@+id/rl_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:onClick="onClick"
                android:paddingLeft="16dp"
                android:paddingTop="11dp"
                android:paddingRight="16dp"
                android:paddingBottom="11dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/schedule_task_more"
                    android:textColor="#333333"
                    android:textSize="16sp" />


                <ImageView
                    android:id="@+id/iv_more"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_schedule_down" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_more_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/color_list_divider" />

                <RelativeLayout
                    android:id="@+id/rl_attachments_pictures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:onClick="onClick"
                    android:paddingLeft="16dp"
                    android:paddingTop="11dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="11dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="图片"
                        android:textColor="#333333"
                        android:textSize="16sp" />


                    <ImageView
                        android:id="@+id/iv_attachemnt_picture_add"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_schedule_add" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/color_list_divider" />

                <com.inspur.emmcloud.baselib.widget.ScrollViewWithListView
                    android:id="@+id/lv_attachment_abstract_picture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_attachments_pictures"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/rl_attachments_others"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:onClick="onClick"
                    android:paddingLeft="16dp"
                    android:paddingTop="11dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="11dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/schedule_task_attachment"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_attachment_add"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_schedule_add" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:layout_below="@id/rl_deadline"
                    android:layout_marginLeft="15dp"
                    android:background="@color/color_list_divider" />

                <com.inspur.emmcloud.baselib.widget.ScrollViewWithListView
                    android:id="@+id/lv_attachment_abstract_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_attachments_others"
                    android:background="#FFFFFF"
                    android:dividerHeight="0.5px"></com.inspur.emmcloud.baselib.widget.ScrollViewWithListView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>