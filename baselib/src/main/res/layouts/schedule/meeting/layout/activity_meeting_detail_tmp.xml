<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/content_bg"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/schedule_meeting_booking_detail"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

        <ImageView
            android:id="@+id/iv_meeting_detail_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="17dp"
            android:paddingLeft="13dp"
            android:paddingRight="16dp"
            android:paddingTop="17dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_header_option" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_meeting_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/iv_title_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_schedule_event_meeting_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_title_icon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_meeting_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/meeting_distribution_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_meeting_distribution"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#339EEC"
                            android:textSize="12sp"
                            android:visibility="visible" />

                        <View
                            android:layout_width="1px"
                            android:layout_height="12dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#D8D8D8"
                            android:visibility="visible" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_meeting_create"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#999999"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <!--会议时间-->
        <TextView
            android:id="@+id/tv_meeting_time"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_schedule_meeting_time"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="16sp" />

        <View
            style="@style/divide_style"
            android:layout_marginLeft="46dp" />

        <!--会议提醒-->
        <TextView
            android:id="@+id/tv_meeting_remind"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:drawableLeft="@drawable/ic_schedule_meeting_remind"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="16sp" />

        <View
            style="@style/divide_style"
            android:layout_marginLeft="46dp" />

        <!--会议地点-->
        <RelativeLayout
            android:id="@+id/rl_meeting_location"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:onClick="onClick">

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/ic_schedule_meeting_location"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:textSize="16sp" />

            <View
                style="@style/divide_style"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="46dp" />
        </RelativeLayout>

        <!--邀請人-->
        <RelativeLayout
            android:id="@+id/rl_meeting_invite"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:onClick="onClick">

            <TextView
                android:id="@+id/tv_meeting_invite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/ic_schedule_meeting_attendee"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_arrow_right" />

            <View
                style="@style/divide_style"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="46dp" />
        </RelativeLayout>

        <!--参会人-->
        <RelativeLayout
            android:id="@+id/rl_meeting_attendee"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:onClick="onClick">

            <TextView
                android:id="@+id/tv_attendee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/ic_schedule_meeting_attendee"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_arrow_right" />

            <View
                style="@style/divide_style"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="46dp" />
        </RelativeLayout>

        <!--记录人-->
        <RelativeLayout
            android:id="@+id/rl_meeting_record_holder"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:onClick="onClick"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_meeting_record_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/ic_schedule_meeting_recorder"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_arrow_right" />

            <View
                style="@style/divide_style"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="46dp" />
        </RelativeLayout>

        <!--联络人-->
        <RelativeLayout
            android:id="@+id/rl_meeting_conference"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:onClick="onClick"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_meeting_conference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/ic_schedule_meeting_liaison"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_arrow_right" />

            <View
                style="@style/divide_style"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="46dp" />
        </RelativeLayout>

        <!--会议note-->
        <RelativeLayout
            android:id="@+id/rl_meeting_note"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <ImageView
                android:id="@+id/iv_note_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_schedule_meeting_note" />

            <TextView
                android:id="@+id/tv_meeting_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_note_icon"
                android:textColor="#333333"
                android:textSize="16sp" />

            <View
                style="@style/divide_style"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="46dp" />
        </RelativeLayout>

        <!--日历-->
        <RelativeLayout
            android:id="@+id/rl_meeting_calendar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:onClick="onClick">

            <TextView
                android:id="@+id/tv_meeting_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/ic_schedule_meeting_calendar"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:text="@string/calendar"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_meeting_calendar_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:drawableLeft="@drawable/shape_meeting_calendar"
                android:drawablePadding="@dimen/common_margin_10"
                android:text="Exchange"
                android:textColor="#333333"
                android:textSize="16sp" />

            <View
                style="@style/divide_style"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="46dp" />
        </RelativeLayout>

        <!--是否参会-->
        <RelativeLayout
            android:id="@+id/rl_meeting_attend_status"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:onClick="onClick">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/ic_schedule_meeting_attend_status"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:text="@string/schedule_meeting_attend_or_not"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_meeting_attend_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_arrow_right"
                android:textColor="#888888"
                android:text="@string/schedule_meeting_attend_status_default"
                android:textSize="16sp" />

            <View
                style="@style/divide_style"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="46dp" />
        </RelativeLayout>

        <!--发起群聊-->
        <TextView
            android:id="@+id/tv_meeting_create_group_chat"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/ic_send_message"
            android:drawablePadding="7dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/message_create_group"
            android:textColor="#36A5F6"
            android:textSize="16sp"
            android:visibility="gone" />


    </LinearLayout>

</RelativeLayout>