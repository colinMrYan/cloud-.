<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/content_bg"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/schedule_meeting_booking_detail"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

        <ImageView
            android:id="@+id/iv_meeting_detail_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="17dp"
            android:paddingLeft="13dp"
            android:paddingRight="16dp"
            android:paddingTop="17dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_header_option" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_meeting_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/iv_title_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_schedule_event_meeing" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_title_icon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_meeting_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_meeting_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#333333"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_meeting_remind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="#333333"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_meeting_distribution"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#339EEC"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#D8D8D8"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_meeting_create"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_meeting_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_meeting_title"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:onClick="onClick">

            <ImageView
                android:id="@+id/iv_location_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_schedule_meeting_location" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@+id/iv_location_icon" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_arrow_right"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_alignLeft="@id/tv_location"
                android:layout_below="@id/tv_location"
                android:background="#DDDDDD" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_meeting_attendee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_meeting_location"
            android:gravity="center_vertical"
            android:onClick="onClick">

            <ImageView
                android:id="@+id/iv_attendee_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_schedule_meeting_attendee" />

            <TextView
                android:id="@+id/tv_attendee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@+id/iv_attendee_icon" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_arrow_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_alignLeft="@id/tv_attendee"
                android:layout_below="@id/tv_attendee"
                android:background="#DDDDDD" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_meeting_record_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_meeting_attendee"
            android:onClick="onClick">

            <ImageView
                android:id="@+id/iv_record_holder_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_schedule_meeting_recorder" />

            <TextView
                android:id="@+id/tv_meeting_record_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@+id/iv_record_holder_icon" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_arrow_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_alignLeft="@id/tv_meeting_record_holder"
                android:layout_below="@id/tv_meeting_record_holder"
                android:background="#DDDDDD" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_meeting_conference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_meeting_record_holder"
            android:onClick="onClick">

            <ImageView
                android:id="@+id/iv_conference_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_schedule_meeting_liaison" />

            <TextView
                android:id="@+id/tv_meeting_conference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@+id/iv_conference_icon" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_arrow_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_alignLeft="@id/tv_meeting_conference"
                android:layout_below="@id/tv_meeting_conference"
                android:background="#DDDDDD" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_meeting_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_meeting_conference">

            <ImageView
                android:id="@+id/iv_note_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignTop="@+id/tv_meeting_note"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_schedule_meeting_note" />

            <TextView
                android:id="@+id/tv_meeting_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/iv_note_icon" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_below="@id/tv_meeting_note"
                android:layout_marginLeft="16dp"
                android:background="#DDDDDD" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_meeting_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_meeting_note"
            android:onClick="onClick"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_sign_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_schedule_meeting_location" />

            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@+id/iv_sign_icon"
                android:text="@string/meeting_detail_sign" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_arrow_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_alignLeft="@id/tv_sign"
                android:layout_below="@id/tv_sign"
                android:background="#DDDDDD" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_meeting_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_meeting_sign"
            android:onClick="onClick"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="15dp"
                android:text="@string/meeting_detail_summary"
                android:textColor="#37A3F3"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>