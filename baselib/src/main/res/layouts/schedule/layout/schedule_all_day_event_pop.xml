<com.inspur.emmcloud.widget.bubble.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bubble_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:bl_arrowDirection="top"
    app:bl_arrowHeight="0dp"
    app:bl_arrowWidth="14dp"
    app:bl_bubbleColor="@color/white"
    app:bl_cornersRadius="6dp"
    app:bl_strokeColor="#AAAAAA"
    app:bl_strokeWidth="1px">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="right"
        android:padding="7dp"
        android:src="@drawable/ic_recommend_close" />

    <com.inspur.emmcloud.baselib.widget.MaxHeightListView
        android:id="@+id/lv_all_day_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:divider="#00000000"
        android:dividerHeight="0dp"
        android:fadeScrollbars="false"
        android:focusable="true"
        android:paddingBottom="5dp"
        android:scrollbarSize="4dp"
        android:scrollbarStyle="insideInset"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
        android:scrollbars="vertical">

    </com.inspur.emmcloud.baselib.widget.MaxHeightListView>
</com.inspur.emmcloud.widget.bubble.BubbleLayout>
