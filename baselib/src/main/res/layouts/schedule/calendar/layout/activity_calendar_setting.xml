<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/content_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/settings"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

    </RelativeLayout>


    <ScrollView
        android:id="@+id/sv_view_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_calendar_list_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:text="@string/calendar"
                android:textColor="#999999"
                android:textSize="13sp" />

            <RelativeLayout
                android:id="@+id/rl_holiday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                android:paddingLeft="16dp">

                <ImageView
                    android:id="@+id/iv_holiday_color"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/schedule_calendar_type_brown" />

                <TextView
                    android:id="@+id/tv_holiday_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/iv_holiday_color"
                    android:text="法定节假日"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_view_holiday_state"
                    android:layout_width="51dp"
                    android:layout_height="31dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="7dp"
                    android:checked="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:divider="@color/color_list_divider" />
            </RelativeLayout>
            <com.inspur.emmcloud.baselib.widget.ScrollViewWithListView
                android:id="@+id/listview_list_calendars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:divider="@color/color_list_divider"
                android:dividerHeight="0.5px"
                android:paddingLeft="16dp"></com.inspur.emmcloud.baselib.widget.ScrollViewWithListView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginLeft="16dp"
                android:background="@color/color_list_divider" />

            <LinearLayout
                android:id="@+id/ll_add_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="16dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/schedule_ic_add_calendar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="@string/calendar_add_calendar"
                    android:textColor="#36A5F6"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginLeft="16dp"
                android:background="@color/color_list_divider" />

            <TextView
                android:id="@+id/tv_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:text="@string/schedule_setting_view"
                android:textColor="#999999"
                android:textSize="13sp" />

            <RelativeLayout
                android:id="@+id/rl_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:onClick="onClick"
                android:paddingLeft="16dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="10dp"
                    android:paddingTop="12dp"
                    android:text="@string/schedule_setting_list_view"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_list_view_select"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_select_yes" />
            </RelativeLayout>

            <View
                android:id="@+id/v_after_list_view"
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginLeft="16dp"
                android:background="#DDDDDD" />

            <RelativeLayout
                android:id="@+id/rl_day_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:onClick="onClick"
                android:paddingLeft="16dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="10dp"
                    android:paddingTop="12dp"
                    android:text="@string/schedule_setting_day_view"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_day_view_select"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_select_yes" />
            </RelativeLayout>

            <View
                android:id="@+id/v_after_day_view"
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginLeft="16dp"
                android:background="#DDDDDD" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>