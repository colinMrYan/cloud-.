        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:focusable="false"
        android:src="@drawable/design3_selector_tab_unknown_btn" />

    <TextView
