<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true">

    <ImageButton
        android:id="@+id/ibt_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:onClick="onClick"
        android:padding="11dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back_btn_white" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:paddingLeft="27dp"
        android:paddingRight="30dp"
        android:text="@string/login_captchas_login"
        android:textColor="#FF333333"
        android:textSize="26sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="155dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="27dp"
        android:paddingRight="30dp">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <com.inspur.emmcloud.widget.ClearEditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/app_edittext_clear"
                android:gravity="center_vertical"
                android:hint="@string/login_please_input_phone_num"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:paddingBottom="17dp"
                android:paddingRight="12dp"
                android:paddingTop="17dp"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="15sp"
                android:theme="@style/MyEditText" />

        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.inspur.emmcloud.widget.ClearEditText
                android:id="@+id/et_captcha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:hint="@string/login_please_input_captchas"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:paddingBottom="17dp"
                android:paddingRight="120dp"
                android:paddingTop="7dp"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="15sp"
                android:theme="@style/MyEditText" />

            <Button
                android:id="@+id/bt_get_captcha"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/et_captcha"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/et_captcha"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:minWidth="0dp"
                android:onClick="onClick"
                android:paddingBottom="17dp"
                android:paddingRight="5dp"
                android:paddingTop="7dp"
                android:text="@string/login_get_captchas_code"
                android:textColor="#36A5F6"
                android:textSize="13sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_login_by_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="15dp"
            android:paddingLeft="4dp"
            android:paddingTop="8dp"
            android:text="@string/login_by_account"
            android:textColor="#36A5F6"
            android:textSize="13sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/bg_login_btn_unable"
            android:enabled="false"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </LinearLayout>
</RelativeLayout>


