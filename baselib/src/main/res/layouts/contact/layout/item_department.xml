<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_depart"
        android:textColor="#999999"
        android:textSize="@dimen/content_small_textsize" />

    <TextView
        android:id="@+id/tv_user_department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_department"
        android:paddingBottom="7dp"
        android:textColor="?attr/text_color"
        android:textIsSelectable="true"
        android:textSize="@dimen/button_textsize" />

    <ImageView
        android:id="@+id/iv_user_depart_detail"
        android:layout_width="38dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="24dp"
        android:src="@drawable/iocn_organizational_structure_detail" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5px"
        android:visibility="gone"
        android:layout_below="@id/tv_user_department"
        android:background="?attr/color_list_divider" />
</RelativeLayout>