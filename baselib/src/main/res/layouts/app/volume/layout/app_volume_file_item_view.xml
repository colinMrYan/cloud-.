<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_file_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_line"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="5dp"
        android:textColor="#999999"
        android:textSize="13sp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_file_month"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/file_operation_drop_down_img"
            android:layout_width="40dp"
            android:layout_height="76dp"
            android:layout_centerVertical="true"
            android:paddingLeft="3dp"
            android:paddingTop="20dp"
            android:paddingRight="2dp"
            android:paddingBottom="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_volume_file_operation_drop_down"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/file_select_img"
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:layout_below="@+id/tv_file_month"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="34dp"
        android:paddingTop="27dp"
        android:paddingRight="15dp"
        android:paddingBottom="27dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_select_no"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_file_month"
        android:layout_toLeftOf="@id/right_layout"
        android:paddingRight="8dp">

        <ImageView
            android:id="@+id/file_type_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/file_type_img"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tv_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="2dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="#333333"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/file_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_file_name"
                android:layout_marginBottom="0dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/file_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#8f8e94"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_file_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="55dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#8f8e94"
                    android:textSize="13sp" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <View
        style="@style/divide_style"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp" />
</RelativeLayout>