<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/volume_file_transfer_empty_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无数据"
                android:textColor="#333333"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/operation_total_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#F8F9FB"
                android:visibility="gone">

                <TextView
                    android:id="@+id/load_count_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:text="正在下载...(5)"
                    android:textColor="#888888"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/operation_total_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/bg_volume_transfer_operation"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:text="全部暂停"
                    android:textColor="@color/bg_my_card"
                    android:textSize="13sp" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/volume_file_transfer_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/content_bg"
                android:scrollbars="none" />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/batch_operation_header_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/header_bg"
        android:visibility="gone">

        <TextView
            android:id="@+id/batch_operation_cancel_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/cancel"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_function_textsize" />

        <TextView
            android:id="@+id/batch_operation_header_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

        <TextView
            android:id="@+id/batch_operation_select_all_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/select_all"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_function_textsize" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom_all_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff">

        <com.inspur.emmcloud.baselib.widget.VolumeActionLayout
            android:id="@+id/ll_volume_action"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="#ffffff"
            android:paddingBottom="10dp"
            android:paddingTop="8dp"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>