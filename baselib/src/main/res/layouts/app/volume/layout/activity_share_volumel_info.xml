<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />


        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/clouddriver_volume_info"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sl_header_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_header"
        android:background="@color/content_bg"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.inspur.emmcloud.baselib.widget.NoScrollGridView
                android:id="@+id/gv_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:horizontalSpacing="18dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="5"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="19dp"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp"></com.inspur.emmcloud.baselib.widget.NoScrollGridView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_list_divider" />

            <RelativeLayout
                android:id="@+id/volume_member_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick"
                android:paddingLeft="15dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/volume_member_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/content_title_textsize" />

                <ImageView
                    style="@style/arrow_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_list_divider" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_list_divider" />

            <RelativeLayout
                android:id="@+id/volume_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_layout_selector"
                android:onClick="onClick"
                android:paddingLeft="15dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/volume_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/clouddriver_volume_name"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/content_title_textsize" />

                <TextView
                    android:id="@+id/volume_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_toLeftOf="@+id/img_volume_name_arrow"
                    android:layout_toRightOf="@id/volume_name_title"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:singleLine="true"
                    android:textColor="#FF8F8E94"
                    android:textSize="@dimen/content_title_textsize" />

                <ImageView
                    android:id="@+id/img_volume_name_arrow"
                    style="@style/arrow_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_list_divider" />

            <LinearLayout
                android:id="@+id/ll_write_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:text="@string/clouddriver_upload_permission"
                    android:textColor="#666666"
                    android:textSize="15sp" />


                <com.inspur.emmcloud.baselib.widget.ScrollViewWithListView
                    android:id="@+id/slv_write_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:divider="@null"
                    android:dividerHeight="0dp"></com.inspur.emmcloud.baselib.widget.ScrollViewWithListView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_group_watch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:text="@string/clouddriver_watch_permission"
                    android:textColor="#666666"
                    android:textSize="15sp" />


                <com.inspur.emmcloud.baselib.widget.ScrollViewWithListView
                    android:id="@+id/slv_read_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:divider="@null"
                    android:dividerHeight="0dp"></com.inspur.emmcloud.baselib.widget.ScrollViewWithListView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>