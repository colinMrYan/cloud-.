<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="5dp">

    <LinearLayout
        android:id="@+id/app_imp_crm_font_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/app_news_dialog_day_background"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/app_imp_crm_help_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/icon_help_img" />


            <Button
                android:id="@+id/app_news_share_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/app_news_dialog_day_button"
                android:drawablePadding="11dp"
                android:onClick="onClick"
                android:text="@string/help"
                android:textAllCaps="false"
                android:textColor="?attr/text_color"
                android:textSize="@dimen/content_title_textsize"
                android:visibility="visible" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <TextView
            android:id="@+id/app_imp_crm_font_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="@string/news_font_name_text"
            android:textColor="@color/color_text_tip"
            android:textSize="@dimen/content_smaller_textsize"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/app_imp_crm_font_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/app_imp_crm_font_normal_btn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/app_news_dialog_day_button"
                android:text="@string/news_font_normal"
                android:textAllCaps="false"
                android:textColor="@color/color_text_common_level_two"
                android:textSize="@dimen/content_title_textsize" />

            <Button
                android:id="@+id/app_imp_crm_font_middle_btn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/app_news_dialog_day_button"
                android:text="@string/news_font_middle"
                android:textAllCaps="false"
                android:textColor="?attr/text_color"
                android:textSize="@dimen/content_title_textsize" />

            <Button
                android:id="@+id/app_imp_crm_font_big_btn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/app_news_dialog_day_button"
                android:text="@string/news_font_big_text"
                android:textAllCaps="false"
                android:textColor="?attr/text_color"
                android:textSize="@dimen/content_title_textsize" />

            <Button
                android:id="@+id/app_imp_crm_font_biggest_btn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/app_news_dialog_day_button"
                android:text="@string/news_font_biggest_text"
                android:textAllCaps="false"
                android:textColor="?attr/text_color"
                android:textSize="@dimen/content_title_textsize" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>