<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/content_bg"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg_1c">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@id/iv_search"
            android:layout_toRightOf="@id/ibt_back"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="?attr/header_text_color_e1"
            android:textSize="@dimen/header_textsize"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_toLeftOf="@+id/header_service_state"
            android:scaleType="centerInside"
            android:src="?attr/ic_config"
            android:tint="?attr/header_text_color_e1" />

        <TextView
            android:id="@+id/header_service_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:gravity="center"
            android:onClick="onClick"
            android:singleLine="true"
            android:textColor="?attr/header_text_color_e1"
            android:textSize="@dimen/header_textsize"
            android:visibility="visible" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_service_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_header" />

</RelativeLayout>