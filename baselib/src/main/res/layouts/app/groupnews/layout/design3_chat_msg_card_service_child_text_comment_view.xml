<?xml version="1.0" encoding="utf-8"?>
<com.inspur.emmcloud.basemodule.widget.bubble.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bl_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:bl_arrowDirection="right"
    app:bl_arrowHeight="10dp"
    app:bl_arrowPosition="@dimen/design3_chat_arrow_position_height"
    app:bl_arrowWidth="5dp"
    app:bl_cornersRadius="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:paddingRight="12dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/comment_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:minWidth="60dp"
            android:text="@string/comment_hallcomment_text"
            android:textAppearance="@style/TextAppearance.M3.Fs09"
            android:textColor="?attr/design3_color_te02" />

        <View
            android:id="@+id/divider_view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/comment_title_text"
            android:layout_marginTop="8dp"
            android:background="?attr/design3_color_ne05" />

        <com.inspur.emmcloud.widget.TextViewWithSpan
            android:id="@+id/comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider_view"
            android:layout_marginTop="8dp"
            android:lineSpacingMultiplier="1.2"
            android:minWidth="60dp"
            android:textAppearance="@style/TextAppearance.M3.Fs04"
            android:textColor="?attr/design3_color_te01" />
    </RelativeLayout>
</com.inspur.emmcloud.basemodule.widget.bubble.BubbleLayout>