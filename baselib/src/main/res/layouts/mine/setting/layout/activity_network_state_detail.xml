<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/net_diagnosis_title"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_header"
        android:background="@color/content_bg">

        <RelativeLayout
            android:id="@+id/rl_checking_hard_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick">

            <RelativeLayout
                android:id="@+id/rl_checking_hard_logs"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/iv_hard_device_log"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/ic_netchecking_hard_device" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/rl_checking_hard_logs">

                <TextView
                    android:id="@+id/tv_checking_hard_title"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="30dp"
                    android:text="@string/net_diagnosis_hard_link_title"
                    android:textColor="#FF333333"
                    android:textSize="17dp"></TextView>

                <TextView
                    android:id="@+id/tv_checking_hard_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_checking_hard_title"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="14dp"
                    android:text="@string/net_diagnosis_hard_link_conent"
                    android:textColor="#666666"
                    android:textSize="15dp"></TextView>

                <RelativeLayout
                    android:id="@+id/rl_net_error_fix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_checking_hard_content"
                    android:onClick="onClick">

                    <RelativeLayout
                        android:id="@+id/rl_hard_loading_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <com.inspur.emmcloud.baselib.widget.CustomLoadingView
                            android:id="@+id/qv_checking_hard_loading"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="11dp"
                            app:loading_color="@color/grey_a5a5a5" />

                        <ImageView
                            android:id="@+id/iv_hard_state_log"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="11dp"
                            android:background="@drawable/ic_netchecking_ok"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_to_fix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/rl_hard_loading_img"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_fix_left_arrow"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="14dp"
                            android:background="@drawable/ic_fix_left_arrow"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:id="@+id/tv_fix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="11dp"
                            android:layout_toRightOf="@id/iv_fix_left_arrow"
                            android:text="@string/net_diagnosis_hard_to_fix"
                            android:textColor="#FFF54949"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="16dp"
                            android:layout_toRightOf="@id/tv_fix"
                            android:background="@drawable/ic_fix_right_arrow"
                            android:scaleType="fitCenter" />
                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/rl_net_error_fix"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="13dp"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_checking_portal_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_checking_hard_state">

            <RelativeLayout
                android:id="@+id/rl_checking_portal_logs"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/iv_portal_device_log"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/ic_netchecking_route" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/rl_checking_portal_logs">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="30dp"
                    android:text="@string/net_diagnosis_wifi_link_title"
                    android:textColor="#FF333333"
                    android:textSize="17dp"></TextView>

                <TextView
                    android:id="@+id/tv_checking_portal_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="64dp"
                    android:layout_marginRight="14dp"
                    android:text="@string/net_diagnosis_wifi_link_conent"
                    android:textColor="#666666"
                    android:textSize="15dp"></TextView>

                <RelativeLayout
                    android:id="@+id/rl_wifi_checking_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_checking_portal_content">

                    <ImageView
                        android:id="@+id/iv_portal_state_log"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="11dp"
                        android:background="@drawable/ic_netchecking_ok"
                        android:scaleType="centerCrop"
                        android:visibility="gone" />

                    <com.inspur.emmcloud.baselib.widget.CustomLoadingView
                        android:id="@+id/qv_checking_portal_loading"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="11dp"
                        app:loading_color="@color/grey_a5a5a5" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_portal_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_checking_portal_content"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/rl_wifi_checking_img"
                    android:onClick="onClick">

                    <TextView
                        android:id="@+id/tv_portal_click_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="@string/net_diagnosis_portal_to_set"
                        android:textColor="#FFF54949"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@id/tv_portal_click_tip"
                        android:src="@drawable/ic_fix_right_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/rl_wifi_checking_img"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="13dp"
                    android:background="@color/color_list_divider" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_checking_dns_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_checking_portal_state"
            android:onClick="onClick">

            <RelativeLayout
                android:id="@+id/rl_checking_dns_logs"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/iv_dns_device_log"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/ic_netchecking_dns_sever" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/rl_checking_dns_logs">

                <TextView
                    android:id="@+id/tv_checking_dns_title"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="30dp"
                    android:text="@string/net_diagnosis_dns_link_title"
                    android:textColor="#FF333333"
                    android:textSize="17dp"></TextView>

                <RelativeLayout
                    android:id="@+id/rl_checking_inspur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_checking_dns_title"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_inspur_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/net_ping_url_inspur"
                        android:textColor="#0F7BCA"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_ping_inspur_state"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/tv_inspur_content"
                        android:background="@drawable/ic_netchecking_ok"
                        android:visibility="gone" />

                    <com.inspur.emmcloud.baselib.widget.CustomLoadingView
                        android:id="@+id/qv_ping_inspur_loading"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/tv_inspur_content"
                        app:loading_color="@color/grey_a5a5a5" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_checking_baidu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_checking_inspur"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/tv_baidu_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/net_ping_url_baidu"
                        android:textColor="#0F7BCA"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_ping_baidu_state"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/tv_baidu_content"
                        android:background="@drawable/ic_netchecking_ok"
                        android:visibility="gone" />

                    <com.inspur.emmcloud.baselib.widget.CustomLoadingView
                        android:id="@+id/qv_ping_baidu_loading"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/tv_baidu_content"
                        app:loading_color="@color/grey_a5a5a5" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_checking_ali"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_checking_baidu"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/tv_ali_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/net_ping_url_ali"
                        android:textColor="#0F7BCA"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_ping_ali_state"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/tv_ali_content"
                        android:background="@drawable/ic_netchecking_ok"
                        android:visibility="gone" />

                    <com.inspur.emmcloud.baselib.widget.CustomLoadingView
                        android:id="@+id/qv_ping_ali_loading"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/tv_ali_content"
                        app:loading_color="@color/grey_a5a5a5" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_checking_cloudpluse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_checking_ali"
                    android:layout_marginTop="5dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_cloudpluse_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/net_ping_url_cloud"
                        android:textColor="#0F7BCA"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_ping_cloudpluse_state"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/tv_cloudpluse_content"
                        android:background="@drawable/ic_netchecking_ok"
                        android:visibility="gone" />

                    <com.inspur.emmcloud.baselib.widget.CustomLoadingView
                        android:id="@+id/qv_ping_cloudpluse_loading"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/tv_cloudpluse_content"
                        app:loading_color="@color/grey_a5a5a5" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>