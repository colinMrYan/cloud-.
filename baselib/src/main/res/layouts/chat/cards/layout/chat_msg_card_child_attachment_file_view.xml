<?xml version="1.0" encoding="utf-8"?>
<com.inspur.emmcloud.widget.bubble.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bl_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:bl_arrowDirection="right"
    app:bl_arrowHeight="10dp"
    app:bl_arrowPosition="16dp"
    app:bl_arrowWidth="4.5dp"
    app:bl_cornersRadius="8dp"
    app:bl_strokeColor="#AAAAAA"
    app:bl_strokeWidth="0.5px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/iv_file_icon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_file_icon">

            <TextView
                android:id="@+id/tv_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.1"
                android:maxLines="3"
                android:textColor="?attr/text_color_e1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_file_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_file_name"
                android:layout_marginTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/color_text_common_level_two"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>
</com.inspur.emmcloud.widget.bubble.BubbleLayout>