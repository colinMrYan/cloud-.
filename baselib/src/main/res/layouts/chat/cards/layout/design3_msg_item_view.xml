<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/design3_selector_list">

    <com.inspur.emmcloud.baselib.widget.ImageViewRound
        android:id="@+id/msg_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp" />

    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/design3_icon_top"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/msg_new_layout"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@+id/ll_content"
        android:minWidth="18dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/msg_new_text"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:background="@drawable/design3_bg_unread"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minWidth="18dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textAppearance="@style/TextAppearance.M3.Fs09"
            android:textColor="?attr/design3_color_te06" />

        <ImageView
            android:id="@+id/msg_new_icon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerInParent="true"
            android:background="@drawable/design3_bg_unread"
            android:gravity="center"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/msg_img"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/msg_img"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:textAppearance="@style/TextAppearance.M3.Fs09"
                android:textColor="?attr/design3_color_te05" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/time_text"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.M3.Fs04"
                android:textColor="?attr/design3_color_te01" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <ImageView
                android:id="@+id/img_sending_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/msg_dnd_img"
                android:layout_toRightOf="@+id/img_sending_status"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.M3.Fs08"
                android:textColor="?attr/design3_color_te04" />

            <ImageView
                android:id="@+id/msg_dnd_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="?attr/design3_icon_mute"
                android:visibility="gone" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/msg_img"
        android:layout_toRightOf="@id/msg_img"
        android:background="?attr/design3_color_ne06" />

</RelativeLayout>