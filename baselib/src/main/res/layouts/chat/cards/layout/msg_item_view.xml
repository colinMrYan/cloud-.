<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list"
    android:paddingLeft="10dp">

    <com.inspur.emmcloud.baselib.widget.CircleTextImageView
        android:id="@+id/msg_img"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="9dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="9dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/msg_img"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/color_text_common_level_two"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/time_text"
                android:ellipsize="end"
                android:paddingRight="20dp"
                android:singleLine="true"
                android:textColor="@color/color_text_common_level_one"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <ImageView
                android:id="@+id/img_sending_status"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/right_layout"
                android:layout_toRightOf="@+id/img_sending_status"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color_text_common_level_two"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/right_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp">

                <ImageView
                    android:id="@+id/msg_dnd_img"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignRight="@+id/msg_new_layout"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_mute_notifactions"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/msg_new_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="2dp">

                    <TextView
                        android:id="@+id/msg_new_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_tips_new_message"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:textColor="@color/color_text_Anti_White"
                        android:textSize="@dimen/content_moresmaller_textsize" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/msg_img"
        android:layout_marginLeft="50dp"
        android:background="@color/color_divider" />

</RelativeLayout>