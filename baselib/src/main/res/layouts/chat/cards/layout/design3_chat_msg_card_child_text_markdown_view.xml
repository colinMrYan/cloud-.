<?xml version="1.0" encoding="utf-8"?>
<com.inspur.emmcloud.basemodule.widget.bubble.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bl_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:bl_arrowDirection="right"
    app:bl_arrowHeight="10dp"
    app:bl_arrowPosition="@dimen/design3_chat_arrow_position_height"
    app:bl_arrowWidth="5dp"
    app:bl_cornersRadius="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:lineSpacingMultiplier="1.2"
            android:minWidth="40dp"
            android:textColor="?attr/text_color_e1"
            android:textIsSelectable="false"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_tips"
            android:lineSpacingMultiplier="1.2"
            android:minWidth="40dp"
            android:textColor="?attr/text_color_e1"
            android:textIsSelectable="false"
            android:textSize="15sp" />

    </RelativeLayout>
</com.inspur.emmcloud.basemodule.widget.bubble.BubbleLayout>
