<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="7dp"
    android:paddingBottom="7dp">

    <ImageView
        android:id="@+id/chat_msg_checkbox"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/chat_msg_send_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/design3_dark_icon_chat_check"
        android:visibility="visible" />

    <TextView
        android:id="@+id/send_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.M3.Fs09"
        android:textColor="?attr/design3_color_te04" />

    <RelativeLayout
        android:id="@+id/chat_msg_send_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_time_text"
        android:layout_toRightOf="@id/chat_msg_checkbox"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <com.inspur.emmcloud.baselib.widget.ImageViewRound
            android:id="@+id/iv_sender_photo_left"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <com.inspur.emmcloud.baselib.widget.ImageViewRound
            android:id="@+id/iv_sender_photo_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_sender_photo_right"
            android:layout_toRightOf="@id/iv_sender_photo_left">

            <TextView
                android:id="@+id/sender_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textAppearance="@style/TextAppearance.M3.Fs09"
                android:textColor="?attr/design3_color_te03" />

            <RelativeLayout
                android:id="@+id/card_parent_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sender_name_text">

                <RelativeLayout
                    android:id="@+id/rl_send_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp">

                    <ImageView
                        android:id="@+id/iv_send_fail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="?attr/design3_icon_send_fail"
                        android:visibility="gone" />

                    <com.inspur.emmcloud.baselib.widget.CustomLoadingView
                        android:id="@+id/qlv_sending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        app:cus_loading_view_size="18dp"
                        app:loading_color="@color/color_text_tip" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bll_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/rl_send_status" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_type_info_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_msg_send_content"
        android:layout_alignLeft="@+id/chat_msg_send_content"
        android:layout_alignRight="@+id/chat_msg_send_content"
        android:layout_marginLeft="63dp"
        android:layout_marginRight="63dp">

        <TextView
            android:id="@+id/chat_msg_bottom_text_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_corner_whisper_r10"
            android:drawableLeft="@drawable/icon_chat_whisper"
            android:drawablePadding="2dp"
            android:paddingStart="4dp"
            android:paddingTop="2dp"
            android:paddingEnd="6dp"
            android:paddingBottom="2dp"
            android:text="@string/chat_whisper_static"
            android:textColor="@color/color_whisper_text"
            android:textSize="11sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/chat_msg_bottom_text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_corner_whisper_r10"
            android:drawableLeft="@drawable/icon_chat_whisper"
            android:drawablePadding="2dp"
            android:paddingStart="4dp"
            android:paddingTop="2dp"
            android:paddingEnd="6dp"
            android:paddingBottom="2dp"
            android:text="@string/chat_whisper_static"
            android:textColor="@color/color_whisper_text"
            android:textSize="11sp"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/chat_msg_unread_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_msg_send_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:layout_marginRight="63dp"
        android:text="已读"
        android:textSize="11sp"
        android:visibility="gone" />


</RelativeLayout>