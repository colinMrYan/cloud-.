<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="7dp"
    android:paddingTop="7dp">

    <TextView
        android:id="@+id/send_time_text"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="12dp"
        android:background="@color/transparent"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:textColor="#97A3B4"
        android:textSize="@dimen/content_mini_textsize" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_time_text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <com.inspur.emmcloud.widget.CircleTextImageView
            android:id="@+id/iv_sender_photo_left"
            android:layout_width="43dp"
            android:layout_height="43dp" />

        <com.inspur.emmcloud.widget.CircleTextImageView
            android:id="@+id/iv_sender_photo_right"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_alignParentRight="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_sender_photo_right"
            android:layout_toRightOf="@id/iv_sender_photo_left">

            <TextView
                android:id="@+id/sender_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#666666"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/card_parent_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sender_name_text">

                <RelativeLayout
                    android:id="@+id/rl_send_status"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/iv_send_fail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_chat_msg_send_fail"
                        android:visibility="gone" />

                    <com.inspur.emmcloud.widget.CustomLoadingView
                        android:id="@+id/qlv_sending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:color="#666666"
                        android:visibility="gone"
                        app:cus_loading_view_size="18dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bll_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/rl_send_status"></RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>