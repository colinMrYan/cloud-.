<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_error"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFDEDE"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_error"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_netchecking_error_log"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_error_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_error"
        android:paddingLeft="12dp"
        android:paddingTop="9dp"
        android:paddingRight="11dp"
        android:paddingBottom="10dp"
        android:text="@string/net_connected_error"
        android:textColor="@color/color_text_tip"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="11dp"
        android:background="@drawable/ic_arrow_right"
        android:scaleType="centerCrop" />
</RelativeLayout>