<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/commment_content_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/comment_background_color">

        <RelativeLayout
            android:id="@+id/msg_display_header_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_fileupround_layout"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp">

            <com.inspur.emmcloud.baselib.widget.CircleTextImageView
                android:id="@+id/sender_photo_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/sender_name_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/sender_photo_img"
                android:paddingRight="6dp"
                android:singleLine="true"
                android:textColor="@color/header_bg_blue"
                android:textSize="@dimen/content_normal_textsize" />

            <TextView
                android:id="@+id/msg_send_time_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/sender_photo_img"
                android:layout_toRightOf="@id/sender_photo_img"
                android:paddingRight="6dp"
                android:singleLine="true"
                android:textColor="#6a7d84"
                android:textSize="@dimen/content_small_textsize" />
        </RelativeLayout>

        <View
            android:id="@+id/line_view"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_below="@id/msg_display_header_layout"
            android:background="@color/color_list_divider" />

        <RelativeLayout
            android:id="@+id/msg_display_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_view"></RelativeLayout>
    </RelativeLayout>

    <com.inspur.emmcloud.baselib.widget.ScrollViewWithListView
        android:id="@+id/comment_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:divider="@color/content_bg"
        android:dividerHeight="0dp" />

</LinearLayout>