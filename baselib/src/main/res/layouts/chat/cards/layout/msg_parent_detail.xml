<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/commment_content_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/content_bg_level_two">

        <RelativeLayout
            android:id="@+id/msg_display_header_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?attr/text_ll_color_nor"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp">

            <com.inspur.emmcloud.baselib.widget.CircleTextImageView
                android:id="@+id/sender_photo_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/sender_name_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/sender_photo_img"
                android:paddingRight="6dp"
                android:singleLine="true"
                android:textColor="@color/color_80"
                android:textSize="@dimen/content_normal_textsize" />

            <TextView
                android:id="@+id/msg_send_time_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sender_name_text"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/sender_photo_img"
                android:paddingRight="6dp"
                android:singleLine="true"
                android:textColor="?attr/color_4d_b3"
                android:textSize="@dimen/content_moresmaller_textsize" />
        </RelativeLayout>

        <View
            android:id="@+id/line_view"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_below="@id/msg_display_header_layout"
            android:background="?attr/color_list_divider" />

        <RelativeLayout
            android:id="@+id/msg_display_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_view"
            android:background="?attr/text_ll_color_nor"
            android:paddingLeft="15dp"
            android:paddingTop="7dp"
            android:paddingRight="15dp"
            android:paddingBottom="12dp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/text_ll_color_nor"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:paddingBottom="5dp"
            android:textColor="?attr/color_e6_1a"
            android:textSize="@dimen/header_function_textsize"
            android:visibility="gone" />

        <com.inspur.emmcloud.baselib.widget.ScrollViewWithListView
            android:id="@+id/comment_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="?attr/color_bg_common"
            android:dividerHeight="0dp" />
    </LinearLayout>

</LinearLayout>