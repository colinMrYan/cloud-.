<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/design3_color_ne13"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingTop="10dp"
    android:paddingRight="16dp">

    <com.inspur.emmcloud.baselib.widget.ImageViewRound
        android:id="@+id/msg_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="12dp"
        android:focusable="false" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/commentdetail_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="12dp"
                android:textAppearance="@style/TextAppearance.M3.Fs09"
                android:textColor="?attr/design3_color_te05" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/commentdetail_time_text"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.M3.Fs09"
                android:textColor="?attr/design3_color_te03" />
        </RelativeLayout>

        <TextView
            android:id="@+id/comment_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout"
            android:layout_marginTop="2dp"
            android:textColor="?attr/design3_color_te01"
            android:textAppearance="@style/TextAppearance.M3.Fs06" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/comment_text"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="0.5px"
            android:background="?attr/design3_color_ne06" />
    </RelativeLayout>

</LinearLayout>