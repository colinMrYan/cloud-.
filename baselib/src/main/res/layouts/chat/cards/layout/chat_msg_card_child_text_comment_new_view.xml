<?xml version="1.0" encoding="utf-8"?>
<com.inspur.emmcloud.basemodule.widget.bubble.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bl_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:bl_arrowDirection="right"
    app:bl_arrowHeight="10dp"
    app:bl_arrowPosition="16dp"
    app:bl_arrowWidth="4.5dp"
    app:bl_cornersRadius="8dp"
    app:bl_strokeColor="?attr/color_stroke_46_aa"
    app:bl_strokeWidth="0.5px">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/color_99_66"
            android:textSize="@dimen/content_moresmaller_textsize" />

        <RelativeLayout
            android:id="@+id/rl_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tv_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="?attr/color_99_66"
                android:textSize="@dimen/content_moresmaller_textsize"
                android:visibility="gone" />

            <com.itheima.roundedimageview.RoundedImageView
                android:id="@+id/iv_origin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="?attr/bg_chat_img"
                android:visibility="gone"
                app:riv_corner_radius="4dp"
                app:riv_oval="false" />

            <RelativeLayout
                android:id="@+id/rl_video"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="gone">

                <com.itheima.roundedimageview.RoundedImageView
                    android:id="@+id/iv_video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="?attr/bg_chat_img"
                    app:riv_corner_radius="4dp"
                    app:riv_oval="false" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_vod_play_normal" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/rl_origin"
            android:layout_marginTop="8dp"
            android:background="@color/color_divider_38" />

        <com.inspur.emmcloud.widget.TextViewWithSpan
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_divider"
            android:lineSpacingMultiplier="1.2"
            android:paddingTop="8dp"
            android:textColor="?attr/text_color_e1"
            android:textSize="@dimen/header_function_textsize" />
    </RelativeLayout>
</com.inspur.emmcloud.basemodule.widget.bubble.BubbleLayout>