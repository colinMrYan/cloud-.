<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/channel_group_qrcode"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

    <com.inspur.emmcloud.baselib.widget.CircleTextImageView
        android:id="@+id/iv_group_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/rl_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:elevation="6dp"
        android:src="@drawable/icon_channel_group_default" />

    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_group_image"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:ellipsize="middle"
        android:singleLine="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:elevation="6dp"
        android:textColor="#333333" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/rl_header"
        android:layout_marginTop="43dp"
        android:background="@color/white"
        android:elevation="5dp">

        <ImageView
            android:id="@+id/iv_group_qrcode"
            android:layout_width="312dp"
            android:layout_height="312dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp" />

        <Button
            android:id="@+id/btn_share_group_qrcode"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_group_qrcode"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:drawableLeft="@drawable/ic_group_share"
            android:text="@string/chat_group_qr_code_share"
            android:textColor="#36A5F6"
            android:textSize="13sp" />
    </RelativeLayout>

</RelativeLayout>