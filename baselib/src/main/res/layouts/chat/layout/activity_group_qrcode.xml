<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/content_bg"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/channel_group_qrcode_card"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

    <com.inspur.emmcloud.baselib.widget.CircleTextImageView
        android:id="@+id/iv_group_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/rl_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:elevation="6dp"
        android:src="@drawable/icon_channel_group_default" />

    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_group_image"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:ellipsize="middle"
        android:singleLine="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:elevation="6dp"
        android:textColor="?attr/text_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_below="@id/rl_header"
        android:layout_marginTop="43dp"
        android:background="?attr/text_ll_color_nor"
        android:elevation="5dp">

        <ImageView
            android:id="@+id/iv_group_qrcode"
            android:layout_width="295dp"
            android:layout_height="295dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp" />

        <Button
            android:id="@+id/btn_share_group_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/iv_group_qrcode"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:drawableLeft="@drawable/ic_group_share"
            android:drawablePadding="5dp"
            android:text="@string/chat_group_qr_code_share"
            android:textColor="@color/color_text_link"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_valid_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_share_group_qrcode"
            android:gravity="center"
            android:textColor="@color/color_text_common_level_two"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="13sp" />
    </RelativeLayout>

</RelativeLayout>