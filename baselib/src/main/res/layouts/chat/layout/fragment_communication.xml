<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/design3_color_ne13">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/design3_color_theme">

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"
            android:text="@string/communicate"
            android:textAppearance="@style/TextAppearance.M3.Fs02"
            android:textColor="?attr/design3_color_te09" />

        <ImageView
            android:id="@+id/contact_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/header_text"
            android:layout_alignBottom="@+id/header_text"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/more_function_list_img"
            android:clickable="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="?attr/design3_icon_contact" />

        <ImageView
            android:id="@+id/more_function_list_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/header_text"
            android:layout_alignBottom="@+id/header_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:clickable="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="?attr/design3_icon_add" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_search_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_header"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/design3_bg_search_contact"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:src="?attr/design3_icon_search" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:text="@string/communication_search"
            android:textAppearance="@style/TextAppearance.M3.Fs05"
            android:textColor="?attr/design3_color_te04" />
    </LinearLayout>

