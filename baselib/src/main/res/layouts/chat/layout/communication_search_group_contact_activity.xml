<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/design3_color_ne13"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/search_header_height"
        android:background="?attr/design3_color_ne13">

        <TextView
            android:id="@+id/tv_cancel"
            style="@style/TextAppearance.M3.Fs05"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/cancel"
            android:textColor="?attr/design3_color_te01" />

        <RelativeLayout
            android:id="@+id/search_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toLeftOf="@id/tv_cancel"
            android:background="@drawable/design3_bg_search_contact">

            <ImageView
                android:id="@+id/iv_search_members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="?attr/design3_icon_search" />

            <com.inspur.emmcloud.baselib.widget.ClearEditText
                android:id="@+id/ev_search_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/iv_search_members"
                android:background="@drawable/design3_bg_search_contact"
                android:drawableRight="?attr/design3_icon_clean"
                android:freezesText="true"
                android:gravity="center_vertical"
                android:hint="@string/communication_search"
                android:imeOptions="actionSearch"
                android:paddingTop="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="6dp"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.M3.Fs04"
                android:textColor="?attr/design3_color_te01"
                android:textColorHint="?attr/design3_color_te04" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="?attr/color_bg_common">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_all_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/text_ll_color_nor"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_contacts_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="2dp"
                    android:text="@string/find_search_contacts"
                    android:textColor="@color/color_text_common_level_two"
                    android:textSize="13sp" />

                <com.inspur.emmcloud.baselib.widget.ScrollViewWithListView
                    android:id="@+id/lv_search_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null" />

                <RelativeLayout
                    android:id="@+id/rl_search_more_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:paddingLeft="16dp">

                    <ImageView
                        android:id="@+id/iv_search_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_task_search"
                        android:tint="@color/color_text_link" />

                    <TextView
                        android:id="@+id/tv_search_more_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_search_contact"
                        android:paddingLeft="6dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:text="@string/chat_more_contacts"
                        android:textColor="@color/color_text_link"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="25dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:src="@drawable/ic_arrow_right" />

                    <View
                        style="@style/divide_style"
                        android:layout_below="@+id/tv_search_more_contact" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_all_private_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="?attr/text_ll_color_nor"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_private_chat_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="2dp"
                    android:text="@string/chat_private_chat"
                    android:textColor="@color/color_text_common_level_two"
                    android:textSize="13sp" />

                <com.inspur.emmcloud.baselib.widget.ScrollViewWithListView
                    android:id="@+id/lv_search_private_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null" />

                <RelativeLayout
                    android:id="@+id/rl_search_more_private_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:paddingLeft="16dp">

                    <ImageView
                        android:id="@+id/iv_search_private_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_task_search"
                        android:tint="@color/color_text_link" />

                    <TextView
                        android:id="@+id/tv_search_more_private_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_search_private_chat"
                        android:paddingLeft="6dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:text="@string/chat_more_private_chat"
                        android:textColor="@color/color_text_link"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="25dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:src="@drawable/ic_arrow_right" />

                    <View
                        style="@style/divide_style"
                        android:layout_below="@+id/tv_search_more_private_chat" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_all_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="?attr/text_ll_color_nor"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_group_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="2dp"
                    android:text="@string/chat_search_group_chats"
                    android:textColor="@color/color_text_common_level_two"
                    android:textSize="13sp" />

                <com.inspur.emmcloud.baselib.widget.ScrollViewWithListView
                    android:id="@+id/lv_search_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null" />

                <RelativeLayout
                    android:id="@+id/rl_search_more_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:paddingLeft="16dp">

                    <ImageView
                        android:id="@+id/iv_search_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_task_search"
                        android:tint="@color/color_text_link" />

                    <TextView
                        android:id="@+id/tv_search_more_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_search_group"
                        android:paddingLeft="6dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:text="@string/chat_more_groups"
                        android:textColor="@color/color_text_link"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="25dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:src="@drawable/ic_arrow_right" />

                    <View
                        style="@style/divide_style"
                        android:layout_below="@+id/tv_search_more_group" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_all_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="?attr/text_ll_color_nor"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_chat_content_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="2dp"
                    android:text="@string/find_search_chat_history"
                    android:textColor="@color/color_text_common_level_two"
                    android:textSize="13sp" />

                <com.inspur.emmcloud.baselib.widget.ScrollViewWithListView
                    android:id="@+id/lv_search_contact_from_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null" />

                <RelativeLayout
                    android:id="@+id/rl_search_more_contact_from_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:paddingLeft="16dp">

                    <ImageView
                        android:id="@+id/iv_search_more_contact_from_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_task_search"
                        android:tint="@color/color_text_link" />

                    <TextView
                        android:id="@+id/tv_search_more_contact_from_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_search_more_contact_from_chat"
                        android:drawablePadding="3dp"
                        android:paddingLeft="6dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:text="@string/chat_more_content"
                        android:textColor="@color/color_text_link"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="25dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:src="@drawable/ic_arrow_right" />

                    <View
                        style="@style/divide_style"
                        android:layout_below="@+id/tv_search_more_contact_from_chat" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_no_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="?attr/design3_icon_search_empty" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_no_chat"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="@string/no_search_content"
            android:textAppearance="@style/TextAppearance.M3.Fs05"
            android:textColor="?attr/design3_color_te02" />
    </RelativeLayout>

</LinearLayout>