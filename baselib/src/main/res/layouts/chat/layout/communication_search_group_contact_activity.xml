<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/header_height"
        android:background="#F2F2F2">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="4dp"
            android:paddingRight="15dp"
            android:text="@string/cancel"
            android:textColor="#000000"
            android:textSize="@dimen/header_function_textsize" />

        <RelativeLayout
            android:id="@+id/search_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_cancel"
            android:background="@drawable/bg_search_contact_edit">

            <ImageView
                android:id="@+id/iv_search_members"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ic_search_members" />

            <com.inspur.emmcloud.baselib.widget.ClearEditText
                android:id="@+id/ev_search_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/iv_search_members"
                android:background="@color/white"
                android:drawableRight="@drawable/ic_edit_text_delbtn"
                android:freezesText="true"
                android:gravity="center_vertical"
                android:hint="@string/communication_search"
                android:imeOptions="actionSearch"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#CDCDCD"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/content_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_contacts_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:text="联系人"
                    android:textColor="#999999"
                    android:textSize="13sp" />

                <com.inspur.emmcloud.baselib.widget.ScrollViewWithListView
                    android:id="@+id/lv_search_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"></com.inspur.emmcloud.baselib.widget.ScrollViewWithListView>

                <RelativeLayout
                    android:id="@+id/rl_search_more_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp">

                    <ImageView
                        android:id="@+id/iv_search_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_task_search"
                        android:tint="#36A5F6" />

                    <TextView
                        android:id="@+id/tv_search_more_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_search_contact"
                        android:paddingBottom="13dp"
                        android:paddingLeft="6dp"
                        android:paddingTop="13dp"
                        android:text="更多联系人"
                        android:textColor="#36A5F6"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:onClick="onClick"
                        android:paddingBottom="12dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="12dp"
                        android:paddingTop="12dp"
                        android:src="@drawable/ic_arrow_right" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5px"
                        android:layout_below="@+id/tv_search_more_contact"
                        android:background="#DDDDDD" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_group_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:text="群组"
                    android:textColor="#999999"
                    android:textSize="13sp" />

                <com.inspur.emmcloud.baselib.widget.ScrollViewWithListView
                    android:id="@+id/lv_search_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:divider="@null"></com.inspur.emmcloud.baselib.widget.ScrollViewWithListView>

                <RelativeLayout
                    android:id="@+id/rl_search_more_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:paddingLeft="16dp">

                    <ImageView
                        android:id="@+id/iv_search_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_task_search"
                        android:tint="#36A5F6" />

                    <TextView
                        android:id="@+id/tv_search_more_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_search_group"
                        android:paddingBottom="13dp"
                        android:paddingLeft="6dp"
                        android:paddingTop="13dp"
                        android:text="更多群组"
                        android:textColor="#36A5F6"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:onClick="onClick"
                        android:paddingBottom="12dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="12dp"
                        android:paddingTop="12dp"
                        android:src="@drawable/ic_arrow_right" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5px"
                        android:layout_below="@+id/tv_search_more_group"
                        android:background="#DDDDDD" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>