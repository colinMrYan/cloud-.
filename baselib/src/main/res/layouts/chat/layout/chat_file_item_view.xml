<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selector_list"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/file_select_img"
            android:layout_width="65dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="34dp"
            android:paddingTop="27dp"
            android:paddingRight="15dp"
            android:paddingBottom="27dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_select_no"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/item_file_load_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="gone">

            <com.inspur.emmcloud.baselib.widget.progressbar.CircleProgressBar
                android:id="@+id/item_file_load_progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateDrawable="@null"
                android:max="100"
                android:padding="8dp"
                android:progress="1"
                app:circle_progress_radius="12dp"
                app:circle_progress_reached_color="#36a5f6" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/file_type_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/file_type_img"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tv_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="2dp"
                android:textAppearance="@style/TextAppearance.M3.Fs05"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="?attr/design3_color_te01" />

            <RelativeLayout
                android:id="@+id/file_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_file_name"
                android:layout_marginBottom="0dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/file_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="?attr/design3_color_te04"
                    android:textAppearance="@style/TextAppearance.M3.Fs09" />

                <TextView
                    android:id="@+id/tv_file_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="16dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="?attr/design3_color_te04"
                    android:textAppearance="@style/TextAppearance.M3.Fs09"
                     />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <View
        style="@style/divide_style"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="62dp" />
</RelativeLayout>