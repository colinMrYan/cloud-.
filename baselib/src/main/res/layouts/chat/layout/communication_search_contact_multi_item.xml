<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.inspur.emmcloud.baselib.widget.CircleTextImageView
        android:id="@+id/iv_contact_head"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp" />

    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/selected_img"
        android:layout_toRightOf="@id/iv_contact_head">

        <TextView
            android:id="@+id/tv_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="测试名称"
            android:textColor="?attr/text_color_e1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_contact_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_contact_name"
            android:ellipsize="end"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@color/color_text_common_level_two"
            android:textSize="13sp"
            android:visibility="visible" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/selected_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_select_yes"
        android:visibility="visible" />

    <View
        android:id="@+id/v_line_mid_group"
        style="@style/divide_style"
        android:layout_below="@id/iv_contact_head"
        android:layout_marginLeft="16dp" />
</RelativeLayout>