<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/design3_color_ne10"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="52dp"
            android:background="@drawable/shape_corner_eb_33"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_toLeftOf="@+id/iv_reply_close"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="?attr/design3_color_te02"
                android:textSize="@dimen/content_moresmaller_textsize" />

            <ImageView
                android:id="@+id/iv_reply_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:onClick="onClick"
                android:paddingLeft="8dp"
                android:paddingTop="2dp"
                android:paddingRight="8dp"
                android:paddingBottom="2dp"
                android:src="?attr/ic_chat_close_reply" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/design3_color_ne10"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageButton
                android:id="@+id/voice_btn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:background="@null"
                android:src="?attr/design3_icon_chat_voice_input" />

            <LinearLayout
                android:id="@+id/right_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/voice_btn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/emotion_btn"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="12dp"
                    android:background="@null"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:src="?attr/design3_icon_chat_button_emotion" />

                <Button
                    android:id="@+id/send_msg_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/bg_chat_input_send_btn_disable"
                    android:gravity="center"
                    android:minWidth="0dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/send"
                    android:textAllCaps="false"
                    android:textColor="@color/color_text_Anti_White"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/add_btn"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="12dp"
                    android:background="@null"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:src="?attr/design3_icon_chat_button_add" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toLeftOf="@id/right_layout"
                android:layout_toRightOf="@id/voice_btn">

                <com.inspur.emmcloud.widget.ChatInputEdit
                    android:id="@+id/input_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/design3_bg_corner_ne15_6dp"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:maxLines="5"
                    android:padding="8dp"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01" />

                <com.inspur.emmcloud.widget.audiorecord.AudioRecordButton
                    android:id="@+id/bt_audio_record"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/design3_bg_corner_ne15_6dp"
                    android:minHeight="0dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:stateListAnimator="@null"
                    android:text="@string/hold_to_talk"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/add_menu_layout"
                android:layout_width="match_parent"
                android:layout_height="274dp"
                android:background="?attr/design3_color_ne10"
                android:visibility="gone"
                tools:visibility="visible">

                <com.inspur.emmcloud.widget.Design3ECMChatInputMenuViewpageLayout
                    android:id="@+id/design3_viewpager_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp" />

                <include layout="@layout/emotion_grid" />
            </RelativeLayout>
        </FrameLayout>

    </LinearLayout>

    <include layout="@layout/include_voice_input_layout" />

</RelativeLayout>