<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View style="@style/divide_style" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/text_ll_color_nor"
            android:paddingTop="6dp"
            android:paddingBottom="7dp">

            <ImageButton
                android:id="@+id/voice_btn"
                android:layout_width="42dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_chat_input_voice" />

            <LinearLayout
                android:id="@+id/right_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/voice_btn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/emotion_btn"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:background="@null"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_chat_btn_emotion" />

                <Button
                    android:id="@+id/send_msg_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_chat_input_send_btn_disable"
                    android:gravity="center"
                    android:minWidth="0dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/send"
                    android:textAllCaps="false"
                    android:textColor="@color/color_text_Anti_White"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/add_btn"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:background="@null"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_chat_btn_add" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/right_layout"
                android:layout_toRightOf="@id/voice_btn">

                <com.inspur.emmcloud.widget.ChatInputEdit
                    android:id="@+id/input_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/bg_corner_fill_white_no_border_chat_30"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:maxLines="5"
                    android:textColor="?attr/text_color"
                    android:padding="7.5dp"
                    android:textSize="16sp" />

                <com.inspur.emmcloud.widget.audiorecord.AudioRecordButton
                    android:id="@+id/bt_audio_record"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/bg_record_btn_normal"
                    android:minHeight="0dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:stateListAnimator="@null"
                    android:text="@string/hold_to_talk"
                    android:textAllCaps="false"
                    android:textColor="@color/color_text_tip"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/add_menu_layout"
                android:layout_width="match_parent"
                android:layout_height="274dp"
                android:background="?attr/color_bg_common"
                android:visibility="gone">

                <com.inspur.emmcloud.widget.ECMChatInputMenuViewpageLayout
                    android:id="@+id/viewpager_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="20dp" />

                <include layout="@layout/emotion_grid" />
            </RelativeLayout>
        </FrameLayout>

    </LinearLayout>

    <include layout="@layout/include_voice_input_layout" />

</RelativeLayout>