<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="16dp"
    android:paddingRight="10dp">

    <com.inspur.emmcloud.baselib.widget.SquareLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="48dp"
        android:layout_height="48dp">

        <com.inspur.emmcloud.baselib.widget.ImageViewRound
            android:id="@+id/iv_chat_members_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_chat_members_owner"
            android:layout_width="48dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/icon_chat_owner"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_chat_members_administrator"
            android:layout_width="48dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_chat_administrator_tag"
            android:visibility="gone" />
    </com.inspur.emmcloud.baselib.widget.SquareLayout>

    <TextView
        android:id="@+id/tv_chat_members_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:maxWidth="55dp"
        android:layout_marginTop="4dp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.M3.Fs09"
        android:textColor="?attr/design3_color_te03" />
</LinearLayout>