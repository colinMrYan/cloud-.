<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?attr/home_common_bg"
    android:orientation="vertical">

    <include layout="@layout/include_common_header_layout" />

    <RelativeLayout
        android:id="@+id/rl_search_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/text_ll_color_nor">

        <TextView
            android:id="@+id/tv_search_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/bg_search_contact"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/communication_search"
            android:textColor="@color/color_text_common_level_two" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_conversation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/content_bg"
        android:divider="@null"
        android:dividerHeight="0dp" />

</LinearLayout>