<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/voice_input_layout"
    android:layout_width="match_parent"
    android:layout_height="334dp"
    android:background="@color/white"
    android:visibility="gone">

    <EditText
        android:id="@+id/voice_input_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@null"
        android:maxHeight="180dp"
        android:textColor="@color/voice_communication_function_default"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/voice_input_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:drawableRight="@drawable/plugin_ic_header_title_drop_down_white"
        android:drawablePadding="4dp"
        android:text="@string/voice_input_language_mandarin"
        android:textColor="@color/voice_communication_function_default"
        android:textSize="16sp" />

    <com.inspur.emmcloud.widget.waveprogress.WaterWaveProgress
        android:id="@+id/wave_progress_input"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:maxProgress="10"
        app:progress="10"
        app:waterWaveBgColor="#28A0DF"
        app:waterWaveColor="#ffffff" />

    <RelativeLayout
        android:id="@+id/volume_level_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/voice_input_close_img"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp">

        <ImageView
            android:id="@+id/volume_level_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_chat_input_add_voice_level_0" />

        <com.inspur.emmcloud.widget.waveprogress.VoiceCompleteView
            android:id="@+id/volume_level_img_complete"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            app:circleColor="@color/transparent"
            app:radius="35dp"
            app:ringBgColor="@color/transparent"
            app:ringColor="@color/footer_tab_text_sel_blue"
            app:strokeWidth="2dp" />

        <com.itheima.roundedimageview.RoundedImageView
            android:id="@+id/volume_level_img_shade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:minWidth="70dp"
            android:minHeight="70dp"
            android:src="#8436A5F6"
            app:riv_corner_radius="35dp"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/voice_input_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="63dp"
            android:layout_toLeftOf="@id/volume_level_img"
            android:text="清空"
            android:textColor="@color/voice_communication_function_default"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/voice_input_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="63dp"
            android:layout_toRightOf="@+id/volume_level_img"
            android:text="@string/send"
            android:textColor="@color/voice_communication_function_default"
            android:textSize="16sp" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/voice_input_close_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_arrow_down" />

</RelativeLayout>