<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="10dp"
    android:paddingStart="10dp">

    <com.inspur.emmcloud.basemodule.widget.bubble.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/message_menu_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bl_arrowDirection="right"
        app:bl_arrowHeight="6dp"
        app:bl_arrowWidth="14dp"
        app:bl_bubbleColor="#404040"
        app:bl_cornersRadius="8dp"
        app:bl_strokeColor="?attr/color_stroke_46_aa"
        app:bl_strokeWidth="0.5px">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/pop_menu_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


    </com.inspur.emmcloud.basemodule.widget.bubble.BubbleLayout>


</LinearLayout>