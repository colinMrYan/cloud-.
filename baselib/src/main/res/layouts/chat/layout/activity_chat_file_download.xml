<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_bg_common"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true"
        android:background="?attr/header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />


        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/clouddriver_file_detail"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="15dp"
            android:text="@string/share_2_qq_wechat"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_function_textsize"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_header"
        android:background="@color/color_bg_content_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <ImageView
                android:id="@+id/iv_file_type_file_preview"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/baselib_file_type_img" />

            <ImageView
                android:id="@+id/iv_file_type_img_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:scaleType="fitCenter"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:ellipsize="middle"
            android:gravity="center"
            android:maxWidth="300dp"
            android:maxLines="5"
            android:scaleType="fitXY"
            android:textColor="@color/color_text_common_level_one"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:scaleType="fitXY"
            android:textColor="@color/color_text_common_level_two"
            android:textSize="15sp" />

        <Button
            android:id="@+id/download_btn"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/shape_volume_file_download_btn"
            android:gravity="center"
            android:onClick="onClick"
            android:padding="10dp"
            android:textColor="@color/color_text_Anti_White"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_file_open_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="35dp"
            android:gravity="center_horizontal"
            android:textColor="@color/color_text_common_level_two"
            android:textSize="14sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/download_status_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/file_download_close_img"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:onClick="onClick"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_file_download_close" />

                <ProgressBar
                    android:id="@+id/download_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="48dp"
                    android:layout_toLeftOf="@id/file_download_close_img"
                    android:max="100"
                    android:progressDrawable="@drawable/bg_volume_file_download_progressbar" />
            </RelativeLayout>

            <TextView
                android:id="@+id/progress_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:textColor="@color/color_text_common_level_two"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>