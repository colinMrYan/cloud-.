<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?attr/home_common_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg_1c">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <ImageView
            android:id="@+id/iv_config"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="5dp"
            android:paddingRight="16dp"
            android:scaleType="centerInside"
            android:src="?attr/ic_config" />

        <TextView
            android:id="@+id/cancel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:onClick="onClick"
            android:text="@string/cancel"
            android:textColor="?attr/header_text_color_e1"
            android:textSize="17sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="?attr/header_text_color_e1"
            android:textSize="@dimen/header_textsize"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/robot_photo_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:visibility="gone" />
    </RelativeLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?attr/content_bg"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.inspur.emmcloud.baselib.widget.roundbutton.CustomRoundButton
                android:id="@+id/btn_conversation_unread"
                android:layout_width="104dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="14dp"
                android:elevation="1dp"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/color_text_Anti_White"
                android:textSize="14sp"
                android:visibility="gone"
                app:cus_backgroundColor="#7f36A5F6"
                app:cus_borderWidth="0dp"
                app:cus_isRadiusAdjustBounds="true" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.inspur.emmcloud.basemodule.widget.ConversationWatermarkView
                    android:id="@+id/conversation_watermark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <com.inspur.emmcloud.widget.RecycleViewForSizeChange
                    android:id="@+id/msg_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:descendantFocusability="beforeDescendants"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:listSelector="@android:color/transparent"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="none" />


            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/members_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/color_ff_1c"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:visibility="gone" />
            </RelativeLayout>

        </RelativeLayout>


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:id="@+id/mention_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?attr/color_ec_1c"
        android:paddingLeft="15dp"
        android:paddingRight="6dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/mention_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/close_icon"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="?attr/color_ff_33"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/close_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_normal_close" />

    </RelativeLayout>

    <com.inspur.emmcloud.widget.ECMChatInputMenu
        android:id="@+id/chat_input_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/text_ll_color_nor" />

    <LinearLayout
        android:id="@+id/silent_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/text_ll_color_nor"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/member_manager_forbidden_speak"
            android:textColor="?attr/text_color"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dissolve_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/text_ll_color_nor"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:text="@string/dissolve_tip"
            android:textColor="?attr/text_color"
            android:textSize="14sp" />
    </LinearLayout>

    <!--    后续单独封装通用布局-->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/text_ll_color_nor"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/multi_transfer_single_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7.5dp"
                android:src="?attr/multi_transfer_single_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="@string/multi_transfer_single"
                android:textColor="?attr/text_color" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:background="#e6e6e6" />


        <LinearLayout
            android:id="@+id/multi_transfer_all_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7.5dp"
                android:src="?attr/multi_transfer_all_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="@string/multi_transfer_all"
                android:textColor="?attr/text_color" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>