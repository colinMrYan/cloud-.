<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.inspur.emmcloud.baselib.widget.CircleTextImageView
        android:id="@+id/iv_contact_head"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="11dp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_contact_head">
        <TextView
            android:id="@+id/tv_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="测试名称"
            android:textColor="#333333"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_contact_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_contact_name"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#888888"
            android:textSize="13sp"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/v_line_mid_group"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_below="@id/iv_contact_head"
        android:layout_marginLeft="16dp"
        android:background="@color/color_list_divider" />
</RelativeLayout>