<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/home_common_bg"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg_1c">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/file"
            android:textColor="?attr/header_text_color_e1"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_order_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header"
        android:background="?attr/text_ll_color_nor">

        <TextView
            android:id="@+id/tv_order_by_name_asc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_menu_drop_down"
            android:onClick="onClick"
            android:padding="12dp"
            android:text="@string/sort_by_name_asc"
            android:textColor="@color/color_text_tip"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_filter_by_file_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:onClick="onClick"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:text="@string/file_filter"
            android:textColor="@color/color_text_tip"
            android:textSize="15sp" />

        <View
            android:id="@+id/v_line"
            style="@style/divide_style"
            android:layout_below="@id/tv_order_by_name_asc" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:layout_above="@+id/rl_bottom_all_action"
        android:layout_below="@id/rl_order_by"
        android:background="?attr/content_bg">

        <ListView
            android:id="@+id/lv_file"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_no_channel_file"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_order_by"
        android:layout_centerInParent="true"
        android:background="?attr/content_bg"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_no_channel_file"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_no_channel_file" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_no_channel_file"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="30dp"
            android:text="@string/no_channel_file"
            android:textColor="@color/color_text_common_level_two"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom_all_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?attr/text_ll_color_nor">

        <com.inspur.emmcloud.baselib.widget.FileActionLayout
            android:id="@+id/ll_file_action"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="?attr/text_ll_color_nor"
            android:paddingTop="8dp"
            android:paddingBottom="10dp"
            android:visibility="gone" />

        <View
            style="@style/divide_style"
            android:layout_below="@+id/ll_file_action" />
    </RelativeLayout>
</RelativeLayout>