<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_group_message_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="12dp">

        <com.inspur.emmcloud.baselib.widget.CircleTextImageView
            android:id="@+id/iv_group_message_search_head"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_group_message_search_head"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_group_message_search_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text_common_level_two"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_group_message_search_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="12dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="?attr/text_color_e1"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_group_message_search_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:textColor="@color/color_text_common_level_two"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        style="@style/divide_style"
        android:layout_marginLeft="59dp" />

</LinearLayout>