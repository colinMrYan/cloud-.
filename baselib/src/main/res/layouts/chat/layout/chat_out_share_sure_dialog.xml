<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/dialog_common_bg_36"
    android:orientation="vertical"
    android:paddingTop="22dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:text="@string/baselib_share_send_to"
        android:textColor="?attr/text_color"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="22dp">

        <com.inspur.emmcloud.baselib.widget.CircleTextImageView
            android:id="@+id/iv_share_user_head"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv_share_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_share_user_head"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingRight="16dp"
            android:textColor="?attr/text_color"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_share_file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="30dp"
        android:background="?attr/content_bg_30"
        android:textColor="?attr/text_color"
        android:gravity="left"
        android:maxLines="3"
        android:padding="5dp" />

    <View style="@style/divide_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/color_text_link"
            android:textSize="@dimen/header_function_textsize" />

        <View
            android:layout_width="1px"
            android:layout_height="40dp"
            android:background="?attr/color_list_divider" />

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/ok"
            android:textAllCaps="false"
            android:textColor="@color/color_text_link"
            android:textSize="@dimen/header_function_textsize" />
    </LinearLayout>
</LinearLayout>