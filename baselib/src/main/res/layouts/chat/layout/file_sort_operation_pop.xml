<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/content_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/sort_by_name_up_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="onClick">

        <TextView
            android:id="@+id/sort_by_name_up_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:text="@string/sort_by_name_asc"
            android:textColor="@color/color_text_tip"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/sort_by_name_up_select_img"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_select_yes">

        </ImageView>
    </RelativeLayout>

    <View style="@style/divide_style" />

    <RelativeLayout
        android:id="@+id/sort_by_name_down_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="onClick">

        <TextView
            android:id="@+id/sort_by_name_down_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:text="@string/sort_by_name_dasc"
            android:textColor="@color/color_text_tip"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/sort_by_name_down_select_img"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_select_yes">

        </ImageView>
    </RelativeLayout>

    <View style="@style/divide_style" />

    <RelativeLayout
        android:id="@+id/sort_by_time_up_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="onClick">

        <TextView
            android:id="@+id/sort_by_time_up_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:text="@string/sort_by_time_asc"
            android:textColor="@color/color_text_tip"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/sort_by_time_up_select_img"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_select_yes">

        </ImageView>
    </RelativeLayout>

    <View style="@style/divide_style" />

    <RelativeLayout
        android:id="@+id/sort_by_time_down_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="onClick">

        <TextView
            android:id="@+id/sort_by_time_down_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:text="@string/sort_by_time_dasc"
            android:textColor="@color/color_text_tip"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/sort_by_time_down_select_img"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_select_yes">

        </ImageView>
    </RelativeLayout>

</LinearLayout>