<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.inspur.emmcloud.baselib.widget.CircleTextImageView
        android:id="@+id/img_voice_communication_member_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_app_default" />

    <TextView
        android:id="@+id/tv_invite_voice_communication_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_voice_communication_member_head"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textSize="12sp" />

    <com.inspur.emmcloud.baselib.widget.CircleTextImageView
        android:id="@+id/img_voice_signal"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignBottom="@id/img_voice_communication_member_head"
        android:layout_alignRight="@id/img_voice_communication_member_head" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi_voice_communication"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        app:indicatorColor="?attr/text_ll_color_nor"
        app:indicatorName="BallPulseIndicator" />
</RelativeLayout>