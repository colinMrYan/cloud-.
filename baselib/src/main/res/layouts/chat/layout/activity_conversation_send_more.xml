<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/home_common_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg_1c">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="52dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="?attr/header_text_color_e1"
            android:textSize="@dimen/header_textsize"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_more_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/chat_contact_more_select"
            android:textColor="?attr/header_text_color_e1"
            android:textSize="@dimen/header_function_textsize" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/ok_number"
            android:textColor="?attr/header_text_color_e1"
            android:textSize="@dimen/header_function_textsize"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_search_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/text_ll_color_nor">

        <TextView
            android:id="@+id/tv_search_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/bg_search_contact"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/communication_search"
            android:textColor="@color/color_text_common_level_two" />
    </RelativeLayout>

    <androidx.appcompat.widget.RecyclerView
        android:id="@+id/rv_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/text_ll_color_nor"
        android:divider="@null"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="7dp"
        android:visibility="gone" />

    <androidx.appcompat.widget.RecyclerView
        android:id="@+id/rcv_conversation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/content_bg"
        android:divider="@null"
        android:dividerHeight="0dp" />
</LinearLayout>