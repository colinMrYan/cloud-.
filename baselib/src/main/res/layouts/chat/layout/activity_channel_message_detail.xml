<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/design3_color_ne16"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.inspur.emmcloud.baselib.widget.common.CommonHeaderView
        android:id="@+id/hv_common"
        android:layout_width="match_parent"
        android:layout_height="@dimen/design3_common_header_height" />

    <com.inspur.emmcloud.baselib.widget.MySwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?attr/design3_color_ne16">

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:horizontalSpacing="16dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="4"
            android:paddingTop="8dp"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="3dp" />

    </com.inspur.emmcloud.baselib.widget.MySwipeRefreshLayout>

    <com.inspur.emmcloud.widget.ECMChatInputMenu
        android:id="@+id/chat_input_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>