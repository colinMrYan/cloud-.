<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/starred_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.inspur.emmcloud.baselib.widget.SquareLayout
        android:id="@+id/square_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <com.inspur.emmcloud.baselib.widget.CircleTextImageView
            android:id="@+id/member_head_img"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </com.inspur.emmcloud.baselib.widget.SquareLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/square_layout"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textColor="?attr/text_color_e1"
        android:textSize="@dimen/content_smaller_textsize"
        android:visibility="gone" />

</RelativeLayout>