<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/content_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg_1c">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="?attr/header_text_color_e1"
            android:textSize="@dimen/header_textsize" />

        <ImageView
            android:id="@+id/iv_calendar_detail_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:onClick="onClick"
            android:paddingLeft="13dp"
            android:paddingTop="17dp"
            android:paddingRight="16dp"
            android:paddingBottom="17dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_header_option"
            android:visibility="gone" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">

                <com.inspur.emmcloud.baselib.widget.NoScrollGridView
                    android:id="@+id/rv_conversation_members_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/text_ll_color_nor"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="5"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:paddingBottom="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_more_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/text_ll_color_nor"
                android:onClick="onClick"
                android:paddingTop="15dp"
                android:paddingBottom="25dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/channel_search_more_group_members"
                        android:textColor="@color/color_text_common_level_two"
                        android:textSize="15sp" />
                </LinearLayout>
            </RelativeLayout>

            <View
                style="@style/divide_style"
                android:layout_marginLeft="16dp" />

            <RelativeLayout
                android:id="@+id/rl_conversation_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="?attr/text_ll_color_nor"
                android:onClick="onClick"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/tv_conversation_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingTop="11dp"
                    android:paddingBottom="11dp"
                    android:singleLine="true"
                    android:text="@string/channel_group_name"
                    android:textColor="?attr/text_color_e1"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_conversation_name_arrow"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_arrow_right" />

                <TextView
                    android:id="@+id/tv_conversation_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toLeftOf="@id/iv_conversation_name_arrow"
                    android:layout_toRightOf="@id/tv_conversation_title"
                    android:gravity="right"
                    android:paddingTop="8dp"
                    android:paddingRight="1dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textColor="@color/color_text_common_level_two"
                    android:textSize="16sp" />

                <View
                    style="@style/divide_style"
                    android:layout_below="@id/tv_conversation_title" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_conversation_qr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/text_ll_color_nor"
                android:onClick="onClick"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/tv_conversation_qr_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingTop="11dp"
                    android:paddingBottom="11dp"
                    android:text="@string/channel_group_qrcode"
                    android:textColor="?attr/text_color_e1"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_conversation_qr_arrow"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_arrow_right" />

                <View
                    style="@style/divide_style"
                    android:layout_below="@id/tv_conversation_qr_title" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_conversation_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="?attr/text_ll_color_nor"
                android:onClick="onClick"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/tv_conversation_images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingTop="11dp"
                    android:paddingBottom="11dp"
                    android:text="@string/channel_group_image"
                    android:textColor="?attr/text_color_e1"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_conversation_search_images"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_arrow_right" />

                <View
                    style="@style/divide_style"
                    android:layout_below="@id/tv_conversation_images" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_conversation_files"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/text_ll_color_nor"
                android:onClick="onClick"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/tv_conversation_files_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingTop="11dp"
                    android:paddingBottom="11dp"
                    android:text="@string/channel_group_file"
                    android:textColor="?attr/text_color_e1"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_conversation_files_arrow"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_arrow_right" />

                <View
                    style="@style/divide_style"
                    android:layout_below="@id/tv_conversation_files_title" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_conversation_search_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/text_ll_color_nor"
                android:onClick="onClick"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/tv_conversation_search_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingTop="11dp"
                    android:paddingBottom="11dp"
                    android:text="@string/chat_group_message_search"
                    android:textColor="?attr/text_color_e1"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_conversation_search_record"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_arrow_right" />

                <View
                    style="@style/divide_style"
                    android:layout_below="@id/tv_conversation_search_record" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_channel_search_record_have_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="?attr/text_ll_color_nor"
                android:onClick="onClick"
                android:paddingLeft="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_channel_search_record_have_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingTop="11dp"
                    android:paddingBottom="11dp"
                    android:text="@string/chat_group_message_search"
                    android:textColor="?attr/text_color_e1"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_channel_search_record_have_margin"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_arrow_right" />

                <View
                    style="@style/divide_style"
                    android:layout_below="@id/tv_channel_search_record_have_margin" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_conversation_sticky"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="?attr/text_ll_color_nor"
                android:onClick="onClick"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/tv_conversation_sticky_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingTop="11dp"
                    android:paddingBottom="11dp"
                    android:text="@string/channel_set_sticky"
                    android:textColor="?attr/text_color_e1"
                    android:textSize="16sp" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_conversation_sticky"
                    android:layout_width="51dp"
                    android:layout_height="31dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_arrow_right"
                    app:thumbTint="@color/white"
                    app:track="@drawable/selector_switch_track" />

                <View
                    style="@style/divide_style"
                    android:layout_below="@id/tv_conversation_sticky_title" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_conversation_mute_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/text_ll_color_nor"
                android:onClick="onClick"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/tv_conversation_mute_notification_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingTop="11dp"
                    android:paddingBottom="11dp"
                    android:text="@string/message_without_interruption"
                    android:textColor="?attr/text_color_e1"
                    android:textSize="16sp" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_conversation_mute_notification"
                    android:layout_width="51dp"
                    android:layout_height="31dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_arrow_right"
                    app:thumbTint="@color/white"
                    app:track="@drawable/selector_switch_track" />

                <View
                    style="@style/divide_style"
                    android:layout_below="@id/tv_conversation_mute_notification_title" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_conversation_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="?attr/text_ll_color_nor"
                android:onClick="onClick"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/tv_conversation_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingTop="11dp"
                    android:paddingBottom="11dp"
                    android:text="@string/channel_report"
                    android:textColor="?attr/text_color_e1"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_arrow_right" />

                <View
                    style="@style/divide_style"
                    android:layout_below="@id/tv_conversation_report" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_conversation_quit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="34dp"
                android:background="?attr/text_ll_color_nor"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/tv_conversation_quit_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingTop="11dp"
                    android:paddingBottom="11dp"
                    android:text="@string/quit_dismiss_group"
                    android:textColor="@color/color_text_red"
                    android:textSize="16sp" />

                <View
                    style="@style/divide_style"
                    android:layout_below="@id/tv_conversation_quit_title"
                    android:layout_marginLeft="16dp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>