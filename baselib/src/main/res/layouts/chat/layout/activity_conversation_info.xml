<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/content_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.inspur.emmcloud.baselib.widget.common.CommonHeaderView
        android:id="@+id/hv_common"
        android:layout_width="match_parent"
        android:layout_height="@dimen/design3_common_header_height"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">

                <com.inspur.emmcloud.baselib.widget.NoScrollGridView
                    android:id="@+id/rv_conversation_members_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/design3_color_ne13"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="5"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:paddingBottom="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_more_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/design3_color_ne13"
                android:onClick="onClick"
                android:paddingTop="6dp"
                android:paddingBottom="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/channel_search_more_group_members"
                        android:textColor="?attr/design3_color_te02"
                        android:textAppearance="@style/TextAppearance.M3.Fs08"/>
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="5dp"
                        android:src="?attr/design3_icon_arrow" />

                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_conversation_name"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="?attr/design3_selector_list"
                android:onClick="onClick">

                <TextView
                    android:paddingStart="16dp"
                    android:id="@+id/tv_conversation_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01"
                    android:text="@string/channel_group_name"
                    />

                <TextView
                    android:id="@+id/tv_conversation_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te02"
                    android:layout_toLeftOf="@id/iv_conversation_name_arrow"
                    android:layout_toRightOf="@id/tv_conversation_title"
                    />

                <ImageView
                    android:id="@+id/iv_conversation_name_arrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="4dp"
                    android:src="?attr/design3_icon_arrow"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="16dp"
                    android:background="?attr/design3_color_ne06" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_person_name"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/design3_selector_list"
                android:paddingStart="16dp"
                android:onClick="onClick"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_person_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01"
                    android:text="@string/channel_person_name"
                    />

                <ImageView
                    android:id="@+id/iv_person_name_arrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="4dp"
                    android:src="?attr/design3_icon_arrow" />

                <TextView
                    android:id="@+id/tv_person_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te02"
                    android:layout_toLeftOf="@id/iv_person_name_arrow"
                    android:layout_toRightOf="@id/tv_person_title"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="?attr/design3_color_ne06" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_conversation_qr"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/design3_selector_list"
                android:paddingStart="16dp"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/tv_conversation_qr_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01"
                    android:text="@string/channel_group_qrcode" />

                <ImageView
                    android:id="@+id/iv_conversation_qr_arrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="4dp"
                    android:src="?attr/design3_icon_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_conversation_member_manager"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingStart="16dp"
                android:background="?attr/design3_selector_list"
                android:onClick="onClick">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentTop="true"
                    android:background="?attr/design3_color_ne06" />

                <TextView
                    android:id="@+id/tv_member_manager_title_transfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01"
                    android:text="@string/channel_group_member_manager" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="4dp"
                    android:src="?attr/design3_icon_arrow"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="8dp"
                android:id="@+id/rl_conversation_images"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/design3_selector_list"
                android:paddingStart="16dp"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/tv_conversation_images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01"
                    android:text="@string/channel_group_image"
                    />

                <ImageView
                    android:id="@+id/iv_conversation_search_images"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="4dp"
                    android:src="?attr/design3_icon_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="?attr/design3_color_ne06"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_conversation_files"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/design3_selector_list"
                android:paddingStart="16dp"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/tv_conversation_files_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01"
                    android:text="@string/channel_group_file" />

                <ImageView
                    android:id="@+id/iv_conversation_files_arrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="4dp"
                    android:src="?attr/design3_icon_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="?attr/design3_color_ne06" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_conversation_search_record"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/design3_selector_list"
                android:paddingStart="16dp"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/tv_conversation_search_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01"
                    android:text="@string/chat_group_message_search" />

                <ImageView
                    android:id="@+id/iv_conversation_search_record"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="4dp"
                    android:src="?attr/design3_icon_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_channel_search_record_have_margin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/design3_selector_list"
                android:paddingStart="16dp"
                android:onClick="onClick"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_channel_search_record_have_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01"
                    android:text="@string/chat_group_message_search"
                    />

                <ImageView
                    android:id="@+id/iv_channel_search_record_have_margin"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="4dp"
                    android:src="?attr/design3_icon_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="8dp"
                android:id="@+id/rl_conversation_sticky"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/design3_selector_list"
                android:paddingStart="16dp"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/tv_conversation_sticky_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01"
                    android:text="@string/channel_set_sticky" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_conversation_sticky"
                    android:layout_width="51dp"
                    android:layout_height="31dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_arrow_right"
                    app:thumbTint="@color/white"
                    app:track="@drawable/selector_switch_track" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="?attr/design3_color_ne06" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_conversation_mute_notification"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingStart="16dp"
                android:background="?attr/design3_selector_list"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/tv_conversation_mute_notification_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01"
                    android:text="@string/message_without_interruption"
                    />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_conversation_mute_notification"
                    android:layout_width="51dp"
                    android:layout_height="31dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_arrow_right"
                    app:thumbTint="@color/white"
                    app:track="@drawable/selector_switch_track" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_conversation_show"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/design3_selector_list"
                android:paddingStart="16dp"
                android:onClick="onClick"
                android:visibility="gone">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentTop="true"
                    android:background="?attr/design3_color_ne06" />

                <TextView
                    android:id="@+id/tv_conversation_show_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01"
                    android:text="@string/channel_hide" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_conversation_show"
                    android:layout_width="51dp"
                    android:layout_height="31dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="16dp"
                    android:checked="true"
                    android:src="@drawable/ic_arrow_right"
                    app:thumbTint="@color/white"
                    app:track="@drawable/selector_switch_track" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="8dp"
                android:id="@+id/rl_conversation_report"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/design3_selector_list"
                android:onClick="onClick">

                <TextView
                    android:id="@+id/tv_conversation_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:textColor="?attr/design3_color_te01"
                    android:paddingStart="16dp"
                    android:text="@string/channel_report" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="4dp"
                    android:src="?attr/design3_icon_arrow" />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_conversation_quit"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/design3_selector_list"
                android:onClick="onClick"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="34dp"
                >

                <TextView
                    android:id="@+id/tv_conversation_quit_title"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.M3.Fs04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingTop="11dp"
                    android:paddingBottom="11dp"
                    android:text="@string/quit_dismiss_group"
                    android:textColor="@color/color_text_red"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>