<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_multi_item_content">

    <RelativeLayout
        android:id="@+id/iv_video_cover"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/bg_multi_item_linked_icon">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:src="@drawable/multi_item_video"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_video_cover">

        <TextView
            android:id="@+id/tv_video_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:lineSpacingMultiplier="1.1"
            android:textColor="?attr/text_color_e1"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/tv_video_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_video_name"
            android:layout_marginTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/color_text_common_level_two"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>



