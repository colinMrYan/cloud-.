<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/design3_color_ne13"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/unread_detail_no_data_image"
            android:layout_width="96dp"
            android:gravity="center_horizontal"
            android:layout_height="80dp" />

        <TextView
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:id="@+id/unread_detail_no_data_text"
            android:layout_width="96dp"
            android:layout_height="80dp"
            android:textAppearance="@style/TextAppearance.M3.Fs07"
            android:textColor="?attr/design3_color_te02"/>
    </LinearLayout>
</RelativeLayout>