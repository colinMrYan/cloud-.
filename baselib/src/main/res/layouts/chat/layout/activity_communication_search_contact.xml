<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/header_height"
        android:background="?attr/content_bg_level_two">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="15dp"
            android:text="@string/cancel"
            android:textColor="?attr/text_color_e1"
            android:textSize="@dimen/header_function_textsize" />

        <RelativeLayout
            android:id="@+id/search_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_cancel"
            android:background="@drawable/bg_search_contact_edit">

            <ImageView
                android:id="@+id/iv_search_members"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ic_search_members" />

            <com.inspur.emmcloud.baselib.widget.ClearEditText
                android:id="@+id/ev_search_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/iv_search_members"
                android:background="?attr/text_ll_color_nor"
                android:drawableRight="@drawable/ic_edit_text_delbtn"
                android:freezesText="true"
                android:gravity="center_vertical"
                android:hint="@string/communication_search"
                android:imeOptions="actionSearch"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:textColor="?attr/text_color_e1"
                android:textColorHint="@color/color_text_common_level_two"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_header"
        android:background="?attr/color_bg_common">

        <TextView
            android:id="@+id/tv_group_name_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/pop_second_group_more_text"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="群组"
            android:textColor="@color/color_text_common_level_two"
            android:textSize="13sp"
            android:visibility="gone" />

        <View
            android:id="@+id/v_line_mid_group"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/tv_group_name_hint"
            android:background="?attr/color_list_divider"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/v_line_mid_group">

            <ListView
                android:id="@+id/lv_search_group_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/text_ll_color_nor"
                android:dividerHeight="0dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lv_search_group_show"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_search_group_hint"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="2dp"
                    android:tint="@color/color_text_link" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@id/iv_search_group_hint"
                    android:background="?attr/text_ll_color_nor"
                    android:gravity="center_vertical"
                    android:text="更多群聊"
                    android:textColor="@color/color_text_link"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_arrow_right" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>