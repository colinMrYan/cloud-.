<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_member_slidebar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/content_bg"
        android:paddingBottom="1dp"
        android:paddingLeft="12dp"
        android:paddingTop="1dp"
        android:textColor="#666666"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="fill_parent"
        android:layout_height="62dp"
        android:background="@color/white">

        <com.inspur.emmcloud.baselib.widget.CircleTextImageView
            android:id="@+id/iv_user_head"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/icon_org_structure" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_member_selected"
            android:layout_toRightOf="@id/iv_user_head">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_user_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_user_name"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#888888"
                android:textSize="13sp"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_member_selected"
            android:layout_width="39dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:padding="9dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="61dp"
            android:background="@color/color_list_divider" />
    </RelativeLayout>

</LinearLayout>