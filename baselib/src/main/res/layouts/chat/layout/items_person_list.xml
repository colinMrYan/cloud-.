<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_member_slidebar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?attr/color_bg_common"
        android:paddingLeft="12dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:textColor="@color/color_text_tip"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="fill_parent"
        android:layout_height="62dp"
        android:background="?attr/text_ll_color_nor">

        <com.inspur.emmcloud.baselib.widget.ImageViewRound
            android:id="@+id/iv_user_head"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="4dp"
            app:ivr_radius="6dp"
            app:ivr_type="1" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_member_selected"
            android:layout_toRightOf="@id/iv_user_head">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="?attr/text_color_e1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/chat_member_list_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_toRightOf="@id/tv_user_name"
                android:text="@string/chat_owner"
                android:textColor="?attr/design3_color_te07"
                android:textAppearance="@style/TextAppearance.M3.Fs10"
                android:background="@drawable/design3_bg_corner_inner_tag"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_user_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_user_name"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color_text_common_level_two"
                android:textSize="13sp"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_member_selected"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp" />

        <View
            style="@style/divide_style"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="61dp" />
    </RelativeLayout>

</LinearLayout>