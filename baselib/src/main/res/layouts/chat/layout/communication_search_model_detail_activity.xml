<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/design3_color_ne13"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/search_header_height"
        android:background="?attr/design3_color_ne13">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/cancel"
            android:textColor="?attr/design3_color_te01"
            style="@style/TextAppearance.M3.Fs05" />

        <RelativeLayout
            android:id="@+id/search_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toLeftOf="@id/tv_cancel"
            android:background="@drawable/design3_bg_search_contact">

            <ImageView
                android:id="@+id/iv_search_members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="?attr/design3_icon_search" />

            <com.inspur.emmcloud.baselib.widget.ClearEditText
                android:id="@+id/ev_search_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/iv_search_members"
                android:background="@drawable/design3_bg_search_contact"
                android:drawableRight="?attr/design3_icon_clean"
                android:freezesText="true"
                android:gravity="center_vertical"
                android:hint="@string/communication_search"
                android:imeOptions="actionSearch"
                android:layout_marginLeft="8dp"
                android:paddingTop="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="6dp"
                android:singleLine="true"
                android:textColor="?attr/design3_color_te01"
                android:textColorHint="?attr/design3_color_te04"
                android:textAppearance="@style/TextAppearance.M3.Fs05" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/color_bg_common">

        <TextView
            android:id="@+id/tv_group_name_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/pop_second_group_more_text"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="群组"
            android:textColor="@color/color_text_common_level_two"
            android:textSize="13sp"
            android:visibility="gone" />

        <View
            android:id="@+id/v_line_mid_group"
            style="@style/divide_style"
            android:layout_below="@id/tv_group_name_hint"
            android:visibility="gone" />

        <com.inspur.emmcloud.baselib.widget.MySwipeRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/v_line_mid_group">

            <ListView
                android:id="@+id/lv_search_group_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/text_ll_color_nor"
                android:divider="@null" />
        </com.inspur.emmcloud.baselib.widget.MySwipeRefreshLayout>
    </RelativeLayout>

</LinearLayout>