<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/content_bg_level_two"
        android:orientation="vertical">

        <View style="@style/divide_style" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/text_ll_color_nor"
            android:paddingTop="7dp"
            android:paddingBottom="5dp">

            <ImageButton
                android:id="@+id/voice_btn"
                android:layout_width="43dp"
                android:layout_height="31dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingLeft="10dp"
                android:paddingRight="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_chat_input_voice" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/right_layout"
                android:layout_toRightOf="@id/voice_btn">

                <com.inspur.emmcloud.widget.ChatInputEdit
                    android:id="@+id/input_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/bg_corner_fill_white_no_border_chat"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:maxLines="5"
                    android:padding="7.5dp"
                    android:textSize="16sp" />

                <com.inspur.emmcloud.widget.audiorecord.AudioRecordButton
                    android:id="@+id/bt_audio_record"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/bg_record_btn_normal"
                    android:minHeight="0dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:stateListAnimator="@null"
                    android:text="@string/hold_to_talk"
                    android:textColor="@color/color_text_tip"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/right_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="7dp">

                <Button
                    android:id="@+id/send_msg_btn"
                    android:layout_width="41dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_chat_input_send_btn_disable"
                    android:gravity="center"
                    android:text="@string/send"
                    android:textColor="@color/color_text_Anti_White"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/add_btn"
                    android:layout_width="41dp"
                    android:layout_height="31dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:paddingLeft="4dp"
                    android:paddingRight="6dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_chat_btn_add" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/add_menu_layout"
            android:layout_width="match_parent"
            android:layout_height="274dp"
            android:background="?attr/content_bg_level_two"
            android:paddingLeft="20dp"
            android:paddingTop="25dp"
            android:paddingRight="20dp"
            android:visibility="gone">

            <com.inspur.emmcloud.widget.ECMChatInputMenuViewpageLayout
                android:id="@+id/viewpager_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/voice_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/color_bg_common"
        android:paddingTop="60dp"
        android:paddingBottom="20dp"
        android:visibility="gone">

        <com.inspur.emmcloud.widget.waveprogress.WaterWaveProgress
            android:id="@+id/wave_progress_input"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="10dp"
            app:maxProgress="10"
            app:progress="10"
            app:waterWaveBgColor="#28A0DF"
            app:waterWaveColor="?attr/text_ll_color_nor" />

        <ImageView
            android:id="@+id/voice_level_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_chat_input_add_voice_level_0" />

        <ImageView
            android:id="@+id/voice_input_close_img"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_below="@id/voice_level_img"
            android:layout_centerHorizontal="true"
            android:padding="25dp"
            android:src="@drawable/ic_arrow_down" />
    </RelativeLayout>

</RelativeLayout>