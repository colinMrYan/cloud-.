        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/communicate"
            android:textColor="?attr/header_text_color_e1"
            android:textSize="@dimen/header_textsize_big" />

        <ImageView
            android:id="@+id/contact_img"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/more_function_list_img"
            android:clickable="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_message_header_contact"
            android:tint="?attr/header_text_color_e1" />

        <ImageView
            android:id="@+id/more_function_list_img"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:clickable="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="?attr/ic_add"
            android:tint="?attr/header_text_color_e1" />
