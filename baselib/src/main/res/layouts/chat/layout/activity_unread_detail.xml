<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?attr/content_bg"
    android:orientation="vertical">

    <include layout="@layout/include_common_header_layout" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/unread_detail_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="?attr/text_ll_color_nor"
        app:tabBackground="@color/transparent"
        app:tabRippleColor="@color/transparent"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabIndicator="@drawable/xylink_main_indicator"
        app:tabIndicatorColor="@color/color_text_link"
        app:tabIndicatorHeight="3dp"
        app:tabSelectedTextColor="@color/color_text_link"
        app:tabTextAppearance="@style/XYLinkTabLayoutTextStyle"
        app:tabTextColor="?attr/text_color_e1" >

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.tabs.TabLayout>

    <View
        style="@style/divide_style"
        android:layout_marginBottom="5dp"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/unread_detail_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/color_bg_common"
        android:overScrollMode="never" />

</LinearLayout>