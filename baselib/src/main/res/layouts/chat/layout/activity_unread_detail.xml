<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?attr/design3_color_ne16"
    android:orientation="vertical">

    <com.inspur.emmcloud.baselib.widget.common.CommonHeaderView
        android:id="@+id/hv_common"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/unread_detail_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="?attr/design3_color_ne13"
        app:tabBackground="@color/transparent"
        app:tabRippleColor="@color/transparent"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabIndicator="@drawable/xylink_main_indicator"
        app:tabIndicatorColor="?attr/design3_color_th01"
        app:tabIndicatorHeight="3dp"
        app:tabSelectedTextColor="?attr/design3_color_th01"
        app:tabTextAppearance="@style/TextAppearance.M3.Fs07"
        app:tabTextColor="?attr/design3_color_te02" >

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.tabs.TabLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="8dp"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/unread_detail_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />

</LinearLayout>