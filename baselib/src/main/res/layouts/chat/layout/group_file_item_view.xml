<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_bg_content_white">

    <View
        android:id="@id/v_line"
        style="@style/divide_style"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/tv_file_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_line"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/color_text_common_level_two"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_file_month"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/file_img"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_file_word" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18.5dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/file_img"
            android:orientation="vertical"
            android:paddingTop="13dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/tv_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color_text_common_level_one"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <TextView
                    android:id="@+id/tv_file_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:textColor="@color/color_text_common_level_two"
                    android:textSize="@dimen/content_small_textsize" />

                <TextView
                    android:id="@+id/file_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_file_size"
                    android:textColor="@color/color_text_common_level_two"
                    android:textSize="@dimen/content_small_textsize" />
            </RelativeLayout>
        </LinearLayout>

        <com.inspur.emmcloud.widget.HorizontalProgressBarWithNumber
            android:id="@+id/file_download_progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp" />
    </RelativeLayout>

</RelativeLayout>