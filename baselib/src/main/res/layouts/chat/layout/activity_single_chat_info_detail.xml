<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/chat_single_info_detail_title"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="15dp"
            android:text="@string/ok"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_function_textsize" />

        <ImageView
            android:id="@+id/iv_calendar_detail_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:onClick="onClick"
            android:paddingBottom="17dp"
            android:paddingLeft="13dp"
            android:paddingRight="16dp"
            android:paddingTop="17dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_header_option"
            android:visibility="gone" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_group_members_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/rl_single_chat_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:onClick="onClick"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/tv_single_chat_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="11dp"
            android:paddingTop="11dp"
            android:text="@string/channel_single_chat_images"
            android:textColor="#FF333333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_single_chat_images_enter"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_arrow_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_below="@id/tv_single_chat_images"
            android:background="@color/color_list_divider" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_single_chat_files"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:onClick="onClick"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/tv_single_chat_files_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="11dp"
            android:paddingTop="11dp"
            android:text="@string/channel_single_chat_files"
            android:textColor="#FF333333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_single_chat_files_arrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_arrow_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_below="@id/tv_single_chat_files_title"
            android:background="@color/color_list_divider" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_single_chat_search_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:onClick="onClick"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/tv_single_chat_search_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="11dp"
            android:paddingTop="11dp"
            android:text="@string/chat_group_message_search"
            android:textColor="#FF333333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_single_chat_search_record"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_arrow_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_below="@id/tv_single_chat_search_record"
            android:background="@color/color_list_divider" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_single_chat_sticky"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:onClick="onClick"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/tv_single_chat_sticky_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="11dp"
            android:paddingTop="11dp"
            android:text="@string/channel_set_sticky"
            android:textColor="#FF333333"
            android:textSize="16sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_single_chat_sticky"
            android:layout_width="51dp"
            android:layout_height="31dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_arrow_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_below="@id/tv_single_chat_sticky_title"
            android:background="@color/color_list_divider" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_single_chat_mute_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:onClick="onClick"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/tv_single_chat_mute_notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="11dp"
            android:paddingTop="11dp"
            android:text="@string/message_without_interruption"
            android:textColor="#FF333333"
            android:textSize="16sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_single_chat_mute_notification"
            android:layout_width="51dp"
            android:layout_height="31dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_arrow_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_below="@id/tv_single_chat_mute_notification_title"
            android:background="@color/color_list_divider" />
    </RelativeLayout>
</LinearLayout>