<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/text_ll_color_nor"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ibt_back_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/header_bg_1c">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:elevation="15dp"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/tv_add_system_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="15dp"
            android:text="@string/contact_add_system"
            android:textColor="@color/app_font_color"
            android:textSize="@dimen/content_normal_textsize" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_employee_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ibt_back_layout"
        android:layout_marginBottom="50dp"
        android:background="?attr/text_ll_color_nor"
        android:fadeScrollbars="false"
        android:gravity="center"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:paddingTop="10dp"
        android:scrollbarSize="4dp"
        android:scrollbarStyle="insideInset"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb">

        <LinearLayout
            android:id="@+id/ll_employee_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="?attr/text_ll_color_nor"
            android:orientation="vertical"
            android:paddingLeft="32dp"
            android:paddingBottom="38dp">

            <androidx.appcompat.widget.CardView
                android:id="@+id/card_view_user_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingBottom="5dp"
                app:cardBackgroundColor="?attr/text_ll_color_nor"
                app:cardCornerRadius="8dp"
                app:cardElevation="1.5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <com.inspur.emmcloud.baselib.widget.CircleTextImageView
                        android:id="@+id/iv_user_photo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:elevation="10dp"
                        android:onClick="onClick"
                        android:src="@drawable/icon_photo_default" />

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:elevation="10dp"
                        android:maxWidth="300dp"
                        android:textColor="?attr/text_color_e1"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_user_duty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:elevation="10dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="?attr/text_color_e1"
                        android:textSize="15sp"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.appcompat.widget.CardView>

            <com.inspur.emmcloud.baselib.widget.ScrollViewWithListView
                android:id="@+id/lv_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="1px" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5px"
                android:background="?attr/color_list_divider" />

            <LinearLayout
                android:id="@+id/ll_user_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/tv_department"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/user_depart"
                        android:textColor="#999999"
                        android:textSize="@dimen/content_small_textsize" />

                    <TextView
                        android:id="@+id/tv_user_department"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_department"
                        android:paddingBottom="7dp"
                        android:textColor="?attr/text_color_e1"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/button_textsize" />

                    <ImageView
                        android:id="@+id/iv_user_depart_detail"
                        android:layout_width="38dp"
                        android:layout_height="44dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:onClick="onClick"
                        android:paddingRight="24dp"
                        android:src="@drawable/iocn_organizational_structure_detail" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5px"
                        android:layout_below="@id/tv_user_department"
                        android:background="?attr/color_list_divider" />
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_user_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/tv_position"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/user_info_title"
                        android:textColor="#999999"
                        android:textSize="@dimen/content_normal_textsize" />

                    <TextView
                        android:id="@+id/tv_user_position"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_position"
                        android:ellipsize="end"
                        android:paddingRight="24dp"
                        android:paddingBottom="7dp"
                        android:singleLine="true"
                        android:textColor="?attr/text_color_e1"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/content_title_textsize" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5px"
                        android:layout_below="@id/tv_user_position"
                        android:background="?attr/color_list_divider" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_user_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/tv_mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/mail"
                        android:textColor="#999999"
                        android:textSize="@dimen/content_normal_textsize" />

                    <TextView
                        android:id="@+id/tv_user_mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_mail"
                        android:paddingBottom="7dp"
                        android:textColor="@color/app_font_color"
                        android:textSize="@dimen/content_title_textsize" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5px"
                        android:layout_below="@id/tv_user_mail"
                        android:background="?attr/color_list_divider" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_user_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:orientation="vertical"
                android:visibility="gone">


                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/user_info_phone_number"
                    android:textColor="#999999"
                    android:textSize="@dimen/content_normal_textsize" />

                <TextView
                    android:id="@+id/tv_user_phone_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_phone"
                    android:paddingBottom="7dp"
                    android:textColor="@color/app_font_color"
                    android:textSize="@dimen/content_title_textsize" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5px"
                    android:layout_below="@+id/tv_user_phone_num"
                    android:background="?attr/color_list_divider" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ll_user_telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/tv_telephone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/user_telephone"
                        android:textColor="#999999"
                        android:textSize="@dimen/content_normal_textsize" />

                    <TextView
                        android:id="@+id/tv_user_telephone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_telephone"
                        android:paddingBottom="7dp"
                        android:textColor="@color/app_font_color"
                        android:textSize="@dimen/content_title_textsize" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5px"
                        android:layout_below="@id/tv_user_telephone"
                        android:background="?attr/color_list_divider" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_contact_way"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:background="?attr/text_ll_color_nor">

        <RelativeLayout
            android:id="@+id/rl_start_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/iv_start_chat"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/bg_user_new_chat"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/user_new_chat"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_mobile_contact_info"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_mobile_chat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_send_message" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/user_send_message"
                    android:textColor="#36A5F6"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_mobile_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_user_phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/phone_number"
                    android:textColor="#36A5F6"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mobile_sms"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_user_sms" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/phone_sms"
                    android:textColor="#36A5F6"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_mobile_email"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_user_phone_email" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/phone_email"
                    android:textColor="#36A5F6"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>