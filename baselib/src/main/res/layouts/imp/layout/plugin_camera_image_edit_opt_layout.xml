<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/plugin_camera_image_bg_top">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:onClick="onClick"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/web_ali_scan_back" />


    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/layout_op_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="invisible"
        tools:visibility="visible">

        <ViewSwitcher
            android:id="@+id/vs_op_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:measureAllChildren="true">

            <com.inspur.emmcloud.basemodule.util.imageedit.view.IMGColorGroup
                android:id="@+id/cg_colors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:checkedButton="@+id/cr_red"
                android:gravity="center"
                android:orientation="horizontal">

                <com.inspur.emmcloud.basemodule.util.imageedit.view.IMGColorRadio
                    android:id="@+id/cr_red"
                    android:layout_width="@dimen/image_color"
                    android:layout_height="@dimen/image_color"
                    android:layout_margin="@dimen/image_color_margin"
                    android:button="@null"
                    app:image_color="@color/image_color_red" />

                <com.inspur.emmcloud.basemodule.util.imageedit.view.IMGColorRadio
                    android:layout_width="@dimen/image_color"
                    android:layout_height="@dimen/image_color"
                    android:layout_margin="@dimen/image_color_margin"
                    app:image_color="@color/image_color_black" />

                <com.inspur.emmcloud.basemodule.util.imageedit.view.IMGColorRadio
                    android:layout_width="@dimen/image_color"
                    android:layout_height="@dimen/image_color"
                    android:layout_margin="@dimen/image_color_margin"

                    app:image_color="@color/image_color_white" />

                <com.inspur.emmcloud.basemodule.util.imageedit.view.IMGColorRadio
                    android:layout_width="@dimen/image_color"
                    android:layout_height="@dimen/image_color"
                    android:layout_margin="@dimen/image_color_margin"
                    app:image_color="@color/image_color_cyan" />

                <com.inspur.emmcloud.basemodule.util.imageedit.view.IMGColorRadio
                    android:layout_width="@dimen/image_color"
                    android:layout_height="@dimen/image_color"
                    android:layout_margin="@dimen/image_color_margin"
                    app:image_color="@color/image_color_yellow" />

                <com.inspur.emmcloud.basemodule.util.imageedit.view.IMGColorRadio
                    android:layout_width="@dimen/image_color"
                    android:layout_height="@dimen/image_color"
                    android:layout_margin="@dimen/image_color_margin"
                    app:image_color="@color/image_color_blue" />

            </com.inspur.emmcloud.basemodule.util.imageedit.view.IMGColorGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/image_mosaic_tip"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </ViewSwitcher>

        <ImageButton
            android:id="@+id/btn_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@string/image_undo"
            android:onClick="onClick"
            android:padding="10dp"
            android:src="@drawable/plugin_camera_image_btn_undo" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/plugin_camera_image_bg_bottom"
        android:paddingBottom="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/rg_modes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Space
                    android:layout_width="25dp"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/rb_doodle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/plugin_camera_image_btn_doodle"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:textColor="#FFF" />

                <Space
                    android:layout_width="25dp"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/btn_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:contentDescription="@string/image_text"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:padding="10dp"
                    android:src="@drawable/plugin_camera_image_btn_text"
                    android:textColor="#FFF" />

                <Space
                    android:layout_width="25dp"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/rb_mosaic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/plugin_camera_image_btn_mosaic"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:textColor="#FFF" />

                <Space
                    android:layout_width="25dp"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/btn_clip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:contentDescription="@string/image_clip"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:padding="10dp"
                    android:src="@drawable/plugin_camera_image_btn_clip"
                    android:textColor="#FFF" />

            </RadioGroup>


            <com.inspur.emmcloud.baselib.widget.roundbutton.CustomRoundButton
                android:id="@+id/bt_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:text="@string/image_done"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                app:cus_backgroundColor="#36A5F6"
                app:cus_radius="3dp" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>