<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_content_black"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/top_bar"
        layout="@layout/include_top_bar" />

    <!--zyj TODO-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_image_grid_header">

        <GridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:horizontalSpacing="2dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="4"
            android:paddingBottom="50dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="2dp" />

        <!--zyj TODO-->
        <RelativeLayout
            android:id="@+id/footer_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="#DC22292C"
            android:clickable="true">

            <Button
                android:id="@+id/btn_dir"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@null"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/text_indicator"
                android:ellipsize="end"
                android:onClick="onClick"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:singleLine="true"
                android:text="@string/all_images"
                android:textAllCaps="false"
                android:textColor="@color/color_text_Anti_White"
                android:textSize="16sp" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/cb_origin"
                style="@style/SuperCheckboxTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:drawablePadding="4dp"
                android:includeFontPadding="true"
                android:paddingLeft="8dp"
                android:text="@string/origin"
                android:textColor="@color/color_text_Anti_White"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_preview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:onClick="onClick"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/preview"
                android:textAllCaps="false"
                android:textColor="@color/color_text_Anti_White"
                android:textSize="16sp" />

            <!--zyj TODO-->
            <View
                style="@style/divide_style"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:background="#cc111111" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
