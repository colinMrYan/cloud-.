<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--zyj TODO-->
    <com.inspur.emmcloud.basemodule.util.mycamera.cameralibrary.CropView
        android:id="@+id/crop_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:visibility="visible"
        app:focus_frame_can_change="true"
        app:focus_frame_color="@android:color/transparent"
        app:focus_frame_stroke_weight="0dp"
        app:focus_guide_color="@android:color/holo_green_dark"
        app:focus_guide_show_mode="not_show"
        app:focus_guide_stroke_weight="1dp"
        app:focus_handle_color="@android:color/white"
        app:focus_handle_show_mode="show_always"
        app:focus_handle_size="5dp"
        app:focus_initial_frame_scale="0.8"
        app:focus_min_frame_size="50dp"
        app:focus_overlay_color="#86000000"
        app:focus_touch_padding="8dp">

    </com.inspur.emmcloud.basemodule.util.mycamera.cameralibrary.CropView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140dp"
        android:paddingLeft="10dp"
        android:scrollbars="none"
        android:visibility="gone" />
</RelativeLayout>