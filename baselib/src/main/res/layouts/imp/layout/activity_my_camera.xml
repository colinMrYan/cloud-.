<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <RelativeLayout
        android:id="@+id/rl_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">

        <SurfaceView
            android:id="@+id/surface_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:visibility="visible" />

        <com.inspur.emmcloud.basemodule.util.mycamera.CameraCropView
            android:id="@+id/camera_crop_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"></com.inspur.emmcloud.basemodule.util.mycamera.CameraCropView>

        <ImageButton
            android:id="@+id/switch_camera_btn"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:onClick="onClick"
            android:padding="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/plugin_cemera_btn_camera_switch" />

        <com.inspur.emmcloud.basemodule.util.mycamera.FocusView
            android:id="@+id/focus_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible"></com.inspur.emmcloud.basemodule.util.mycamera.FocusView>

        <RelativeLayout
            android:id="@+id/rl_capture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp">

            <Button
                android:id="@+id/take_bt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/plugin_camera_take_picture_btn"
                android:onClick="onClick" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_retry"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/plugin_camera_take_picture_preview_back"
                    android:onClick="onClick" />

                <Button
                    android:id="@+id/btn_edit"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/plugin_camera_take_picture_preview_edit"
                    android:onClick="onClick" />

                <Button
                    android:id="@+id/btn_complete"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/plugin_camera_take_picture_preview_complete"
                    android:onClick="onClick" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>