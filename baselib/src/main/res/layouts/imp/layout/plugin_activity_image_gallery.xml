<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_content_black">

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingBottom="30dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:onClick="onClick"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_chat_enter_channel_imgs"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:onClick="onClick"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_chat_img_display_close" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_footer"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_alignParentBottom="true"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingTop="30dp"
            android:paddingBottom="7dp">

            <RelativeLayout
                android:id="@+id/rl_write_comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:paddingLeft="19dp"
                android:paddingRight="65dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_chat_img_comment_input"
                    android:drawableLeft="@drawable/ic_chat_img_comment_edit_logo"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="9dp"
                    android:text="@string/join_discuss"
                    android:textColor="#e0ffffff"
                    android:textSize="16sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="24dp"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_chat_img_display_comment"
                android:drawablePadding="9dp"
                android:gravity="center"
                android:onClick="onClick"
                android:padding="5dp"
                android:textColor="@color/color_text_Anti_White"
                android:textSize="16sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_download"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="24dp"
                android:adjustViewBounds="true"
                android:onClick="onClick"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_chat_img_display_download" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>

