<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="#FFFFFF"
    android:orientation="vertical">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_update_content"
        android:layout_width="wrap_content"
        android:layout_height="227dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:paddingTop="32dp"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_update_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本次更新"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_update_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="@drawable/ic_version_code_subscript"
            android:text="4.0.1"
            android:textColor="#FFFFFF"
            android:textSize="11sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_update_content_data"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:minLines="2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="支持手势创建、修改日程时间"
        android:textColor="#888888"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <com.inspur.emmcloud.baselib.widget.CommonCircleIndicator.CircleIndicator
            android:id="@+id/cc_index"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_centerHorizontal="true"
            app:ci_drawable="@drawable/ic_update_select_index"
            app:ci_drawable_unselected="@drawable/ic_update_unselect_index"
            app:ci_height="8dp"
            app:ci_width="8dp"></com.inspur.emmcloud.baselib.widget.CommonCircleIndicator.CircleIndicator>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_update"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/bg_update_btn_sure"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_update_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="18dp"
        android:clickable="true"
        android:onClick="onClick"
        android:text="下次安装"
        android:textColor="#36A5F6"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_wifi_download_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="20dp"
        android:text="WIFI下已自动下载安装包"
        android:textColor="#999999"
        android:textSize="16sp" />

</LinearLayout>