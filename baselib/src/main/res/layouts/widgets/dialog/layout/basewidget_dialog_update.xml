<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_update_content"
        android:layout_width="wrap_content"
        android:layout_height="248dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:paddingTop="32dp"></android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/tv_update_content_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="4dp"
        android:text="支持手势创建、修改日程时间"
        android:textColor="#888888"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <com.inspur.emmcloud.baselib.widget.CommonCircleIndicator
            android:id="@+id/cc_index"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_centerHorizontal="true"></com.inspur.emmcloud.baselib.widget.CommonCircleIndicator>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_update"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/bg_update_btn_sure"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_update_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:clickable="true"
        android:onClick="onClick"
        android:text="下次安装"
        android:textColor="#36A5F6"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_wifi_download_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp"
        android:paddingBottom="20dp"
        android:text="WIFI下已自动下载安装包"
        android:textColor="#999999"
        android:textSize="16sp" />
</LinearLayout>