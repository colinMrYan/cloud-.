<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_tip_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:textColor="@color/color_text_common_level_one"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/cb_ishide"
        style="@style/CustomCheckboxTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="5dp"
        android:scaleX="0.85"
        android:scaleY="0.85"
        android:text="@string/battery_tip_ishide"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_toset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:background="@color/color_bg_content_white"
            android:paddingLeft="10dp"
            android:text="@string/battery_tip_toset"
            android:textColor="@color/color_text_link"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@id/tv_toset"
            android:background="@color/color_bg_content_white"
            android:paddingLeft="30dp"
            android:paddingRight="20dp"
            android:text="@string/battery_tip_cancel"
            android:textColor="@color/color_text_link"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>