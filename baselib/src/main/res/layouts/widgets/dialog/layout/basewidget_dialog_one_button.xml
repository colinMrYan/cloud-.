<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_upgrade_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/show_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:background="@color/color_bg_content_white"
        android:padding="12dp"
        android:textColor="@color/color_text_common_level_one"
        android:textSize="17sp" />


    <Button
        android:id="@+id/ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/show_text"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:padding="12dp"
        android:text="@string/ok"
        android:textColor="@color/color_text_link"
        android:textSize="16sp" />

</RelativeLayout>