<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_version_update_page_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:src="@drawable/version_update_find_new" />

        <LinearLayout
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:background="@drawable/version_update_middle_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_version_update_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/color_text_tip"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_new_version_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/update_2_new_cloud_plus_help"
                android:paddingLeft="20dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/color_text_link"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_version_update_download"
                android:layout_width="198dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="23dp"
                android:background="#127CD2"
                android:gravity="center"
                android:text="立即下载"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_version_update_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:src="@drawable/version_update_close" />
    </LinearLayout>


</LinearLayout>