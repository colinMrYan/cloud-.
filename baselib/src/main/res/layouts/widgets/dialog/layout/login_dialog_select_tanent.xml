<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/dialog_common_bg_40"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:paddingTop="22dp"
        android:paddingBottom="8dp"
        android:text="@string/select_enterprise"
        android:textColor="?attr/text_color"
        android:textSize="17sp" />

    <com.inspur.emmcloud.baselib.widget.MaxHeightListView
        android:id="@+id/enterprise_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#00000000"
        android:dividerHeight="0dp"
        android:fadeScrollbars="false"
        android:focusable="true"
        android:listSelector="#00000000"
        android:scrollbarSize="4dp"
        android:scrollbarStyle="insideInset"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
        android:scrollbars="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="?attr/color_list_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="36dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/auto_select_enterprise"
            android:textColor="?attr/text_color"
            android:textSize="16sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/auto_select_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:thumbTint="@color/white"
            app:track="@drawable/selector_switch_track" />

    </RelativeLayout>
</LinearLayout>