<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_bg_content_white"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:id="@+id/show_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_content_white"
        android:paddingTop="10dp"
        android:text="@string/downloading_package"
        android:textColor="@color/color_text_common_level_one"
        android:textSize="@dimen/header_textsize" />

    <TextView
        android:id="@+id/ratio_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="14dp"
        android:paddingTop="14dp"
        android:textColor="@color/color_text_common_level_one"
        android:textSize="@dimen/header_textsize" />

    <ProgressBar
        android:id="@+id/update_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:visibility="gone" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider" />

    <Button
        android:id="@+id/cancel_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center_horizontal"
        android:padding="14dp"
        android:text="@string/cancel"
        android:textColor="@color/color_text_link"
        android:textSize="@dimen/header_function_textsize" />

</LinearLayout>