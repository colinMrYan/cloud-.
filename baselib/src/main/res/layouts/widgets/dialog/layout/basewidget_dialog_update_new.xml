<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_upgrade_dialog_new"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon_aircraft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:src="?attr/icon_upgrade" />

    <TextView
        android:id="@+id/app_update_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-24dp"
        android:gravity="center_horizontal"
        android:textColor="?attr/color_00_ff"
        android:textSize="@dimen/header_textsize" />

    <TextView
        android:id="@+id/app_update_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center_horizontal"
        android:textColor="?attr/color_66_cc"
        android:textSize="@dimen/content_small_textsize" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:adjustViewBounds="true"
        android:fadeScrollbars="false"
        android:lineSpacingMultiplier="1.1"
        android:maxHeight="310dp"
        android:paddingRight="18dp"
        android:scrollbarSize="4dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
        android:scrollbars="vertical"
        android:textColor="?attr/color_00_ff"
        android:textSize="@dimen/content_small_textsize" />

    <TextView
        android:id="@+id/ok_btn"
        style="?android:borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_button_99"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:text="@string/ok"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/header_function_textsize" />

    <TextView
        android:id="@+id/cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:textColor="?attr/color_66_cc"
        android:textSize="@dimen/header_function_textsize" />

</LinearLayout>