<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_update_content"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_update_default" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/tv_update_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/setting_update_this_time_hint"
            android:textColor="?attr/text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_update_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/tv_update_sub_title"
            android:background="@drawable/ic_version_code_subscript"
            android:text="4.0.1"
            android:textColor="@color/white"
            android:textSize="11sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_update_content_data"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/color_text_common_level_two"
        android:textSize="13sp" />

</LinearLayout>