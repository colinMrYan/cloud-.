<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="?attr/bubble_bg_color"
    android:orientation="vertical">

    <DatePicker
        android:id="@+id/datePicker_no_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:calendarViewShown="false"
        android:padding="0dp"
        android:theme="@style/DateTimePickerDateTheme" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="?attr/color_list_divider" />

    <RelativeLayout
        android:id="@+id/rl_select_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="35dp"
            android:text="24:00"
            android:textColor="?attr/text_color"
            android:textSize="@dimen/header_function_textsize" />

        <ImageView
            android:id="@+id/iv_time"
            android:layout_width="40dp"
            android:layout_height="54dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="23dp"
            android:paddingBottom="17dp"
            android:paddingRight="20dp"
            android:paddingTop="17dp"
            android:src="@drawable/ic_mail_arrow" />

        <View
            android:id="@+id/v_time_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/iv_time"
            android:background="?attr/color_list_divider" />
    </RelativeLayout>
</LinearLayout>
