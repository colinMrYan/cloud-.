<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_upgrade_dialog"
            android:orientation="vertical">

            <TextView
                android:id="@+id/app_update_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="23dp"
                android:textColor="@color/color_text_tip"
                android:textSize="@dimen/bigger_textsize" />

            <TextView
                android:id="@+id/app_update_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="17dp"
                android:textColor="@color/color_text_title_yellow"
                android:textSize="@dimen/content_title_textsize" />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="12dp"
                android:adjustViewBounds="true"
                android:fadeScrollbars="false"
                android:lineSpacingMultiplier="1.1"
                android:maxHeight="310dp"
                android:paddingRight="15dp"
                android:scrollbarSize="4dp"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
                android:scrollbars="vertical"
                android:textColor="@color/color_text_tip"
                android:textSize="@dimen/header_textsize" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="?attr/color_list_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <Button
                    android:id="@+id/cancel_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/color_text_tip"
                    android:textSize="@dimen/header_function_textsize" />

                <View
                    android:layout_width="1px"
                    android:layout_height="38dp"
                    android:layout_gravity="center_vertical"
                    android:background="?attr/color_list_divider" />

                <Button
                    android:id="@+id/ok_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/ok"
                    android:textAllCaps="false"
                    android:textColor="@color/color_text_link"
                    android:textSize="@dimen/header_function_textsize" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/icon_aircraft"
            android:layout_width="67dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/icon_aircraft" />
    </RelativeLayout>

</LinearLayout>