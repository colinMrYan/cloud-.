<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/text_ll_color_nor"
        android:elevation="5dp">

        <TextView
            android:id="@+id/tv_permission_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:text="@string/permission_open_cloud_plus"
            android:textColor="?attr/text_color_e1"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_permission_dialog_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_permission_dialog_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:maxWidth="236dp"
            android:text="@string/permission_necessary_permission"
            android:textColor="?attr/text_color_e1"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_permission_necessary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_permission_dialog_summary"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_permission_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_permission_dialog_phone"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/icon_permission_phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="11dp"
                    android:text="@string/permission_phone_permission"
                    android:textColor="?attr/text_color_e1"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_permission_storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_permission_dialog_storage"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/icon_permission_storage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="11dp"
                    android:text="@string/permission_storage_permission"
                    android:textColor="?attr/text_color_e1"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_next_step"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/ll_permission_necessary"
            android:layout_centerInParent="true"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="31dp"
            android:background="@drawable/bg_half_circle"
            android:elevation="4dp"
            android:gravity="center"
            android:text="@string/permission_next"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </RelativeLayout>


</LinearLayout>