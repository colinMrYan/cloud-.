<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_time_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/tv_drag_view_start_time"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingRight="6dp"
            android:text="1"
            android:textColor="@color/color_text_link"
            android:textSize="13sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_drag_view_end_time"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingRight="6dp"
            android:text="2"
            android:textColor="@color/color_text_link"
            android:textSize="13sp"
            android:visibility="gone" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rl_time"
        android:layout_alignTop="@+id/rl_time"
        android:layout_marginLeft="50dp" />

    <RelativeLayout
        android:id="@+id/tl_current_time_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_point"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_schedule_event_time_circel" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_point"
            android:background="@color/color_text_link" />
    </RelativeLayout>
</RelativeLayout>