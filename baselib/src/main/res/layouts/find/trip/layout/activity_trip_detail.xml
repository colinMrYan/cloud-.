<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="?attr/header_bg">

        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="onClick"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="?attr/ic_back_btn" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/trip_detail"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_textsize" />

        <TextView
            android:id="@+id/save_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/save"
            android:textColor="?attr/header_text_color"
            android:textSize="@dimen/header_function_textsize" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_header"
        android:background="@color/content_bg"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/trip_date_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/trip_date"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/trip_date"
                        android:textColor="#FF8F8E94"
                        android:textSize="@dimen/content_title_textsize" />

                    <TextView
                        android:id="@+id/trip_date_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/trip_date_title"
                        android:background="@null"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:singleLine="true"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/content_title_textsize" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#FFCDCDCD" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/trip_from_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/trip_date"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/start_station"
                        android:textColor="#FF8F8E94"
                        android:textSize="@dimen/content_title_textsize" />

                    <EditText
                        android:id="@+id/trip_from_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/trip_from_title"
                        android:background="@null"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:singleLine="true"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/content_title_textsize" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#FFCDCDCD" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/trip_from_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/trip_date"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/start_city"
                        android:textColor="#FF8F8E94"
                        android:textSize="@dimen/content_title_textsize" />

                    <EditText
                        android:id="@+id/trip_from_city_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/trip_from_city"
                        android:background="@null"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:singleLine="true"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/content_title_textsize" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#FFCDCDCD" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/trip_destination_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/trip_date"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/terminus"
                        android:textColor="#FF8F8E94"
                        android:textSize="@dimen/content_title_textsize" />

                    <EditText
                        android:id="@+id/trip_destination_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/trip_destination_title"
                        android:background="@null"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:singleLine="true"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/content_title_textsize" />
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#FFCDCDCD" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/trip_destination_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/trip_date"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/arrive_city"
                        android:textColor="#FF8F8E94"
                        android:textSize="@dimen/content_title_textsize" />

                    <EditText
                        android:id="@+id/trip_destination_city_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/trip_destination_city"
                        android:background="@null"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:singleLine="true"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/content_title_textsize" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#FFCDCDCD" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/trip_start_time_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/trip_date"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/meeting_start_time"
                        android:textColor="#FF8F8E94"
                        android:textSize="@dimen/content_title_textsize" />

                    <TextView
                        android:id="@+id/trip_start_time_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/trip_start_time_title"
                        android:background="@null"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:singleLine="true"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/content_title_textsize" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#FFCDCDCD" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/trip_arrive_date_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/trip_date"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/arrive_date"
                        android:textColor="#FF8F8E94"
                        android:textSize="@dimen/content_title_textsize" />

                    <TextView
                        android:id="@+id/trip_arrive_date_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/trip_arrive_date_title"
                        android:background="@null"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:singleLine="true"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/content_title_textsize" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#FFCDCDCD" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/trip_arrive_time_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/trip_date"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/arrive_time"
                        android:textColor="#FF8F8E94"
                        android:textSize="@dimen/content_title_textsize" />

                    <TextView
                        android:id="@+id/trip_arrive_time_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/trip_arrive_time_title"
                        android:background="@null"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:singleLine="true"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/content_title_textsize" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#FFCDCDCD" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/trip_train_id_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/trip_date"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/train_num"
                        android:textColor="#FF8F8E94"
                        android:textSize="@dimen/content_title_textsize" />

                    <EditText
                        android:id="@+id/trip_train_id_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/trip_train_id_title"
                        android:background="@null"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:singleLine="true"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/content_title_textsize" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#FFCDCDCD" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/trip_seat_id_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/trip_date"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/seat_num"
                        android:textColor="#FF8F8E94"
                        android:textSize="@dimen/content_title_textsize" />

                    <EditText
                        android:id="@+id/trip_seat_id_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/trip_seat_id_title"
                        android:background="@null"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:singleLine="true"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/content_title_textsize" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/trip_rider_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/trip_date"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/triper"
                        android:textColor="#FF8F8E94"
                        android:textSize="@dimen/content_title_textsize" />

                    <TextView
                        android:id="@+id/trip_rider_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/trip_rider_title"
                        android:background="@null"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:singleLine="true"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/content_title_textsize" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#FFCDCDCD" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/trip_order_num_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/trip_date"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/order_num"
                        android:textColor="#FF8F8E94"
                        android:textSize="@dimen/content_title_textsize" />

                    <EditText
                        android:id="@+id/trip_order_num_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/trip_order_num_title"
                        android:background="@null"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:singleLine="true"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/content_title_textsize" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#FFCDCDCD" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/trip_cost_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/trip_date"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/ticket_cost"
                        android:textColor="#FF8F8E94"
                        android:textSize="@dimen/content_title_textsize" />

                    <EditText
                        android:id="@+id/trip_cost_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/trip_cost_title"
                        android:background="@null"
                        android:numeric="decimal"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:singleLine="true"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/content_title_textsize" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>