<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="59dp"
    android:background="?attr/text_ll_color_nor">

    <com.inspur.emmcloud.baselib.widget.CircleTextImageView
        android:id="@+id/img_photo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/icon_person_default" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/img_photo">

        <TextView
            android:id="@+id/tv_name_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:textColor="?attr/text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_tips"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_text_tip"
            android:textSize="13sp" />

    </RelativeLayout>


    <View
        android:id="@+id/line_view"
        style="@style/divide_style"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="59dp" />

</RelativeLayout>